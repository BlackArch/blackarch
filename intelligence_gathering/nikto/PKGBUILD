# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=nikto
pkgver=2.1.4
pkgrel=1
pkgdesc="a web server scanner which performs comprehensive tests against web servers for multiple items"
arch=('i686' 'x86_64')
url="http://cirt.net/nikto2/"
license=('GPL')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('perl' 'perl-io-socket-ssl')
md5sums=('
	8b9df0b08bbbcdf25b5ddec9e30b2633
	cb6ca115152d8c71d82b5e960efe55d9
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/nikto
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/nikto
}
