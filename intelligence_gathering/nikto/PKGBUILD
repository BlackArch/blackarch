# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=nikto
pkgver=2.1.5
pkgrel=1
pkgdesc="a web server scanner which performs comprehensive tests against web servers for multiple items"
arch=("$CARCH")
url=('http://cirt.net/nikto2/')
license=('GPL')
source=('http://cirt.net/nikto/nikto-2.1.5.tar.gz')
depends=('perl' 'perl-io-socket-ssl')
md5sums=('efcc98a918becb77471ee9a5df0a7b1e')

_rootpath=('blackarch')
_category=('intelligence_gathering')

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
