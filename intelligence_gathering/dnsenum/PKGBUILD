# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=dnsenum
pkgver=1.2.2
pkgrel=1
pkgdesc="enumerate dns information about domains"
arch=("$CARCH")
groups=('blackarch-intel' 'blackarch-all')
url="http://code.google.com/p/dnsenum"
license=('GPL2')
depends=('perl' 'perl-net-ip' 'perl-net-dns' 'perl-xml-writer')
md5sums=('')

_svntrunk=('http://dnsenum.googlecode.com/svn/trunk/')
_rootpath=('blackarch')
_category=('intelligence_gathering')

package() {
  # missing depends: cpan -i Net::Netmask
  svn co ${_svntrunk} ${pkgname}

  cd "${srcdir}"/${pkgname}
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
