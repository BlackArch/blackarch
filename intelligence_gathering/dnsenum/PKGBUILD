# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=dnsenum
pkgver=1.2.2
pkgrel=1
pkgdesc="enumerate dns information about domains"
arch=('i686' 'x86_64')
url="http://code.google.com/p/dnsenum"
license=('GPL2')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('perl' 'perl-net-ip' 'perl-net-dns' 'perl-xml-writer')
md5sums=('
	cdd269ed1b20a9b69688d5be395dd6a7
	65306e3cdef6a861d59ebabf38de2cfd
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/dnsenum
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/dnsenum
}
