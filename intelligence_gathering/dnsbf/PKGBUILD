# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=dnsbf
pkgver=0.2
pkgrel=1
pkgdesc="search for available domain names in an IP range"
arch=("$CARCH")
url=('http://code.google.com/p/dnsbf')
license=('BSD 3 clause')
makedepends=('subversion')
depends=('python2')
md5sums=('')

_svntrunk=('http://dnsbf.googlecode.com/svn/trunk/')
_rootpath=('blackarch')
_category=('intelligence_gathering')

package() {
  svn co ${_svntrunk} ${pkgname}

  cd "${srcdir}"/${pkgname}
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
