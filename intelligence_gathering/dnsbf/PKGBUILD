# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=dnsbf
pkgver=0.3
pkgrel=1
pkgdesc="search for available domain names in an IP range"
arch=('i686' 'x86_64')
url="http://code.google.com/p/dnsbf"
license=('BSD 3 clause')
source=(
	"http://www.blackarch.org/pub/packages/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/pub/desktops/blackarch-$pkgname.desktop"
)
md5sums=('
	e586acc27f439e383f4d02de50cc77dd
	72ec82c12dede91408922d89c0e25d31
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/dnsbf
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/dnsbf
}
