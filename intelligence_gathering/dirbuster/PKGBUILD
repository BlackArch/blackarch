# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=dirbuster
pkgver=1.0RC1
pkgrel=1
pkgdesc="a multi threaded java application designed to brute force directories and files names on web/application servers"
arch=('i686' 'x86_64')
url="https://www.owasp.org/index.php/Category:OWASP_DirBuster_Project"
license=('GPL')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('python2')
md5sums=('
	ee3e54985e05cb6e18cbdd2d81f4c249
	81dbfa7b3514c29bc91eb19be5695399
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/dirbuster
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/dirbuster
}
