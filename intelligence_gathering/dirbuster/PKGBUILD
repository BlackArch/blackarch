# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=dirbuster
pkgver=1.0RC1
pkgrel=1
pkgdesc="a multi threaded java application designed to brute force directories and files names on web/application servers"
arch=("$CARCH")
url=('https://www.owasp.org/index.php/Category:OWASP_DirBuster_Project')
license=('LGPL')
source=('http://sourceforge.net/projects/dirbuster/files/DirBuster%20%28jar%20%2B%20lists%29/1.0-RC1/DirBuster-1.0-RC1.zip')
depends=('jre7-openjdk')
md5sums=('c777986249dccb9285fb85015e28f146')

_rootpath=('blackarch')
_category=('intelligence_gathering')

package() {
  cd "${srcdir}"/DirBuster-1.0-RC1
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
