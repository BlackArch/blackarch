# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=hashid
pkgver=1.1
pkgrel=1
pkgdesc="software to identify the different types of hashes used to encrypt data and especially passwords"
arch=('i686' 'x86_64')
url="http://code.google.com/p/hash-identifier/"
license=('GPL3')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-${pkgname}.desktop"
)
depends=('python2')
md5sums=('
	92e2bfeec5668c1af9d38b169ca20dc2
	15a511c5f92a36cb440af3e7a80d7978
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/hashid
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/hashid
}