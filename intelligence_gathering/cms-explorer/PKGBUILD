# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=cms-explorer
pkgver=1.0
pkgrel=1
pkgdesc="cms-explorer is designed to reveal the specific modules, plugins, components and themes that various cms driven websites are running"
arch=("$CARCH")
url=('http://code.google.com/p/cms-explorer')
license=('GPL3')
makedepends=('subversion')
depends=('perl')
md5sums=('')
conflicts=("${pkgname}")
provides=("${pkgname}")

_svntrunk=('http://cms-explorer.googlecode.com/svn/trunk/')
_rootpath=('blackarch')
_category=('intelligence_gathering')

package() {
  svn co ${_svntrunk} ${pkgname}

  cd ${srcdir}/${pkgname}
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
