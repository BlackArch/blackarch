# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=cms-explorer
pkgver=1.0
pkgrel=1
pkgdesc="cms-explorer is designed to reveal the specific modules, plugins, components and themes that various cms driven websites are running"
arch=('i686' 'x86_64')
url="http://code.google.com/p/cms-explorer"
license=('GPL3')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('perl')
md5sums=('
	968d80011c7fef7b2871fa363c5fc0d2
	295b5e73b6d87f3b7a1f90cdc8c13dd0
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/cms-explorer
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/cms-explorer
}
