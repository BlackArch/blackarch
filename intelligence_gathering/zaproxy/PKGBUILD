# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=zaproxy
pkgver=1.4.0.1
pkgrel=1
pkgdesc="an easy to use integrated penetration testing tool for finding vulnerabilities in web applications"
arch=('i686' 'x86_64')
url="http://code.google.com/p/zaproxy"
license=('GPL')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('jre7-openjdk')
md5sums=('
	bbaea30d6f7ba73d6f3d3c82b75430f7
	6bff5d1d1567637f8ec060ef3b7a7749
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/zaproxy
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/zaproxy
}
