# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=theharvester
pkgver=2.2
pkgrel=1
pkgdesc="a tool for gathering e-mail accounts, user names, and hostnames/subdomains from different public sources"
arch=('i686' 'x86_64')
url="http://www.edge-security.com/theHarvester.php"
license=('GPL2')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('python2')
md5sums=('
	06a01b323c5e6084f78b582745eb42fe
	5e0478d084e537f45d6717dbd8e161d5
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/theharvester
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/theharvester
}
