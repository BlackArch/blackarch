# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=theharvester
pkgver=2.2a
pkgrel=1
pkgdesc="a tool for gathering e-mail accounts, user names, and hostnames/subdomains from different public sources"
arch=("$CARCH")
url=('https://code.google.com/p/theharvester/')
license=('GPL2')
makedepends=('subversion')
depends=('python2')
md5sums=('')

_svntrunk=('http://theharvester.googlecode.com/svn/trunk/')
_rootpath=('blackarch')
_category=('intelligence_gathering')

package() {
  svn co ${_svntrunk} ${pkgname}

  cd "${srcdir}"/${pkgname}
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
