# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=dnsmap
pkgver=0.30
pkgrel=1
pkgdesc="passive dns network mapper (subdomains bruteforcer)"
arch=("$CARCH")
groups=('blackarch-intel' 'blackarch-all')
url=('http://code.google.com/p/dnsmap')
license=('GPL2')
makedepends=('subversion')
md5sums=('')

_svntrunk=('http://dnsmap.googlecode.com/svn/trunk/')
_rootpath=('usr/bin/blackarch')
_category=('intelligence_gathering')


build() {
  svn co ${_svntrunk} ${pkgname}

  cd "${srcdir}"/${pkgname}
  make
}

package() {
cd "${srcdir}"/${pkgname}
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}