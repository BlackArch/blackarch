# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=burpsuite
pkgver=1.4.01
pkgrel=1
pkgdesc="an integrated platform for performing security testing of web applications"
arch=('i686' 'x86_64')
url="http://portswigger.net/burp/"
license=('GPL')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('perl')
md5sums=('
	aa466fcd2ab8a0b1149d898c580fd1dc
    cd2fbe56f9cd174bf25c544c1be5a97f
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/intelligence_gathering/burpsuite
  cp --preserve=mode -r * ${pkgdir}/blackarch/intelligence_gathering/burpsuite
}
