# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=burpsuite
pkgver=1.5
pkgrel=1
pkgdesc="an integrated platform for performing security testing of web applications"
arch=("$CARCH")
url=('http://portswigger.net/burp/')
license=('EULA')
source=("http://portswigger.net/burp/${pkgname}_free_v${pkgver}.jar")
depends=('jre7-openjdk')
md5sums=('2d1af3b6bd7842977747984b7c37b190')
noextract=("${pkgname}_free_v${pkgver}.jar")

_rootpath=('blackarch')
_category=('intelligence_gathering')

package() {
  cd "${srcdir}"
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
