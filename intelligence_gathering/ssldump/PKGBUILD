# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=ssldump
pkgver=0.9b3
pkgrel=1
pkgdesc="ssldump is an SSLv3/TLS network protocol analyzer"
arch=('i686' 'x86_64')
url="http://www.rtfm.com/ssldump"
license=('Unknown')
source=(
	"http://www.blackarch.org/pub/packages/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/pub/desktops/blackarch-$pkgname.desktop"
	"http://www.blackarch.org/pub/patches/ssldump-0.9b3-1.patch"
)
depends=('libpcap' 'openssl')
md5sums=('
  ac8c28fe87508d6bfb06344ec496b1dd
  7c56a8ebd76075eb18b71a1ea38be863
  193be370f1b61f9d26d924e93ee64ea6
')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np0 -i $srcdir/ssldump-0.9b3-1.patch

  sed -in 's/libpcap.a/libpcap.so/g' configure

  ./configure --prefix=$pkgdir/blackarch/intelligence_gathering/ssldump --build=i686-pc-linux-gnu --host=i686-pc-linux-gnu
  make
}

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  make install
}
