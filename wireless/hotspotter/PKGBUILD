# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=hotspotter
pkgver=0.4
pkgrel=1
pkgdesc="Hotspotter passively monitors the network for probe request frames to identify the preferred networks of Windows XP clients, and will compare it to a supplied list of common hotspot network names."
url="http://www.remote-exploit.org/codes_hotspotter.html"
groups=('archpwn' 'archpwn-wireless')
license=('GPL')
makedepends=('gcc' 'make')
arch=(i686 x86_64)
source=(http://www.remote-exploit.org/codes/$pkgname/${pkgname}-${pkgver}.tar.gz)
md5sums=('1fa7f4822732c8798832f8ce2f4fb703')

build() {
  cd "$srcdir/$pkgname-$pkgver/src"
  make || return 1
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname || return 1
  cd ..
  install -Dm644 README $pkgdir/usr/share/$pkgname/README || return 1
  install -Dm644 HOTSPOTLIST $pkgdir/usr/share/$pkgname/HOTSPOTLIST || return 1
}

# vim:set ts=2 sw=2 et:
