# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=magescan
pkgver=319.080de7b
pkgrel=1
pkgdesc='Scan a Magento site for information.'
groups=('blackarch' 'blackarch-webapp' 'blackarch-scanner')
arch=('any')
url='https://github.com/steverobbins/magescan'
license=('CCAI4')
depends=('php')
makedepends=('git')
source=('git+https://github.com/steverobbins/magescan.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 644 magescan.phar "$pkgdir/usr/share/$pkgname/magescan.phar"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
exec php /usr/share/$pkgname/magescan.phar "\${@}"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

