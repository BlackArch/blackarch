pkgname=python2-libtaxii
pkgver=1.1.111
pkgrel=3
pkgdesc='TAXII Library.'
url='http://taxii.mitre.org/'
depends=('python2-lxml')
makedepends=('python2' 'python2-distribute')
license=('custom')
arch=('any')
source=("https://files.pythonhosted.org/packages/fb/1f/a1732a66679316147bb3e3ebb57e1c7904190bbd06b3c59258061814d103/libtaxii-$pkgver-py2.py3-none-any.whl")
sha512sums=('e5cae06a7fe72c124872283ebb4707f2cf22a670fe8bb4df68942bbfdcf62ff86d25a25276cb215b5e626121644ad0dba52f7c5f148784c7aa797631256f91ff')

build() {
  cd "libtaxii-$pkgver"

  python2 setup.py build
}

package() {
  cd "libtaxii-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1

  install -Dm644 LICENSE.txt \
    "$pkgdir/usr/share/licenses/python2-libtaxii/LICENSE.txt"
}
