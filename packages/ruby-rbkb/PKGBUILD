# See COPYING for license details.
pkgname='ruby-rbkb'
_gemname='rbkb'
pkgver='0.7.2'
pkgrel=3
pkgdesc="Rbkb is a collection of ruby-based pen-testing and reversing tools"
arch=('any')
url='http://emonti.github.com/rbkb'
license=("MIT")
depends=('ruby')
makedepends=(git)
options=('!emptydirs')
source=('git+https://github.com/lsfxz/rbkb.git')
sha1sums=('SKIP')

build() {
  cd "$srcdir/$_gemname"

  gem build $_gemname.gemspec
}


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.bnsignore,.gitignore,.rspec,Gemfile,Gemfile.lock,History.txt,LICENSE.txt,README.rdoc,Rakefile,cli_usage.rdoc,doctor-bag.jpg,experimental,lib_usage.rdoc,rbkb.gemspec,reference,spec,tasks,test}
}
