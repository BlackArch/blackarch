pkgname=hotspotter
pkgver=0.5
pkgrel=1
pkgdesc='Passively monitor the network for probe request frames to identify the preferred networks of Windows XP clients, and compare it to a supplied list of common hotspot network names.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-wireless')
url='http://www.remote-exploit.org/?page_id=418'
license=('GPL-2.0-or-later')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('47f3272c1c2da09cc6e4a3c44badd3e3903d2ae7809c4d88ea33b3ab19f9cc630b8c6246ffacb90968d237d636148b34280156ea3bd69704d6c177e4f1649b20')

build() {
  cd "$pkgname-$pkgver"

  make
}

package(){
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install

  install -Dm 644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm 644 HOTSPOTLIST "$pkgdir/usr/share/$pkgname/HOTSPOTLIST"
}

