# See COPYING for license details.
_gemname=sinatra
pkgname=ruby-$_gemname
pkgver=1.4.7
pkgrel=1
pkgdesc=Classy\ web-development\ dressed\ in\ a\ DSL
arch=(any)
url=http://www.sinatrarb.com/
license=(MIT)
depends=(ruby ruby-rack-1 ruby-rack-protection ruby-tilt)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('1c7f1ad8af670f4990373ebddb4d9fecd8f3c7d1'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.yardopts,AUTHORS.md,CHANGELOG.md,CONTRIBUTING.md,Gemfile,LICENSE,README.de.md,README.es.md,README.fr.md,README.hu.md,README.ja.md,README.ko.md,README.md,README.pt-br.md,README.pt-pt.md,README.ru.md,README.zh.md,Rakefile,examples,sinatra.gemspec,test}
}
