pkgname=python2-otxv2
pkgver=1.5.1
pkgrel=1
epoch=1
pkgdesc='AlienVault OTX API.'
arch=('any')
url='https://pypi.python.org/pypi/OTXv2/'
license=('Apache2')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/dc/8d/3f0940f78d53a8f18e025f41912c630cea5b5f4935c6e03b0a62331faa26/OTXv2-1.5.1.tar.gz")
sha512sums=('9f4930e8040a7e3678374cd68b81767a3e6635cf45e1a2615e03fb0d227e1fb1fb950fe077187fb6be5ea9f1679317f87cb84a9335dfccc2c358d194e768c245')

build() {
  cd "OTXv2-$pkgver"

  python2 setup.py build
}

package() {
  cd "OTXv2-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

