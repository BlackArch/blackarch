pkgname=python2-otxv2
pkgver=1.41
pkgrel=1
pkgdesc='AlienVault OTX API.'
arch=('any')
url='https://pypi.python.org/pypi/OTXv2/'
license=('Apache2')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/c4/85/2d9b264c93547c096b2097e064e3c46cc0dc98a64ef773a82a117b79e9f7/OTXv2-1.41.tar.gz")
sha512sums=('ca579ff0bcb9fb0f83a08d876cd50a15a23b642e59773ddc6fa8ddff9266fa457cde51c8dab32e432e29ec96e945044b222fd188b46aa44d8ac7f2a5e92d9873')

build() {
  cd "OTXv2-$pkgver"

  python2 setup.py build
}

package() {
  cd "OTXv2-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

