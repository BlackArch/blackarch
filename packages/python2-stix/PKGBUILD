# See COPYING for license details.

pkgname=python2-stix
pkgver=1535.cf0ea68
pkgrel=1
pkgdesc='An API for parsing and generating STIX content.'
url='https://pypi.org/project/stix/#files'
depends=('python2' 'python2-setuptools')
makedepends=('python2-setuptools')
license=('custom')
arch=('any')
source=('git+https://github.com/STIXProject/python-stix.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "stix"

  python2 setup.py build
}

package() {
  cd "stix"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build

  install -Dm 644 LICENSE.txt \
    "$pkgdir/usr/share/licenses/python2-stix/LICENSE.txt"
}

