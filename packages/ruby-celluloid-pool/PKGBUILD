pkgname='ruby-celluloid-pool'
_gemname='celluloid-pool'
pkgver='0.20.5'
pkgrel=2
pkgdesc="An implementation of an actor pool, based on the Celluloid concurrent object framework."
arch=('any')
url='http://github.com/celluloid/celluloid-pool'
license=("MIT")
depends=('ruby' 'ruby-timers')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('ed7b233814cdf35d9520633683660c29a05115f8' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.env-ci,.env-dev,.gitignore,.gitmodules,.rspec,.rubocop.yml,.travis.yml,CHANGES.md,Gemfile,LICENSE.txt,README.md,Rakefile,celluloid-pool.gemspec,tasks}
}
