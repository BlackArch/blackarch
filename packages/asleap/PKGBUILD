pkgname=asleap
pkgver=2.3
pkgrel=1
groups=('blackarch' 'blackarch-cracker')
pkgdesc='Actively recover LEAP/PPTP passwords.'
arch=('x86_64' 'aarch64')
license=('GPL-2.0-or-later')
url='https://www.willhackforsushi.com/?page_id=41'
depends=('libpcap')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('4cfe094c706397704da8811614d841975f1ce9217704aeb19f961793dd09a0960ea769345c92e27017791ec9bcbf93b8655fb0bfede521c25841e7e1f76c1c56')

build() {
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 -t "$pkgdir/usr/bin/" $pkgname genkeys
}

