pkgname=python2-claripy
pkgver=8.18.10.5
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python2' 'z3')
source=("https://files.pythonhosted.org/packages/73/2d/7a6ae4c9e7ef4d109253e792a4843633c17b634551ddb6125a8182f5bccc/claripy-$pkgver.tar.gz")
sha512sums=('0e77003e65717a45a6683f3c571125d120bb5b427cc2b00c3cbefb3193ee7de1e6b2118d5d0b47b68d278a197e22075142982581a3258a978920446822feb799')

build() {
  cd "claripy-$pkgver"

  python2 setup.py build
}

package() {
  cd "claripy-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

