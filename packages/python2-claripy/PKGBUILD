pkgname='python2-claripy'
pkgver='5.6.10.12'
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='http://pypi.python.org/pypi/claripy'
license=('custom:unknown')
depends=('python2')
source=("https://pypi.python.org/packages/d1/a3/12a2b380445a63b3feca4295d06165e83c6fd2388682923b0b6819cdbd3a/claripy-${pkgver}.tar.gz")
sha1sums=('43237f9e659fe283f52eb9c023cf59388b9ee38a')

build() {
  cd "$srcdir/claripy-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/claripy-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}
