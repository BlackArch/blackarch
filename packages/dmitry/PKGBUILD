pkgname=dmitry
_pkgname=DMitry
pkgver=1.3a
pkgrel=6
groups=('blackarch' 'blackarch-scanner')
pkgdesc='Deepmagic Information Gathering Tool.'
arch=('x86_64' 'aarch64')
url='http://www.mor-pah.net/'
license=('GPL')
source=("https://dl.packetstormsecurity.net/UNIX/misc/$_pkgname-$pkgver.tar.gz")
DLAGENTS=("https::/usr/bin/curl -k -o %o %u")
sha512sums=('8818a442db2308c798bb8c57edc11630ec7bc1d633a68fdec2f9333198d3c48037603890770e97364b18ad789a8352ec76c2bba1ecec465080a4bcffd75480eb')

build() {
  cd "$_pkgname-$pkgver"

  export CFLAGS="-fcommon"

  ./configure --prefix=/usr --sysconfdir=/etc

  make
}

package() {
  cd "$_pkgname-$pkgver"

  install -dm 755 "$pkgdir/usr/share/man"

  make DESTDIR=$pkgdir install

  mv "$pkgdir/usr/man" "$pkgdir/usr/share/man"
}

