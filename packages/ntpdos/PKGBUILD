# See COPYING for license details.

pkgname=ntpdos
pkgver=0.2
pkgrel=1
epoch=1
pkgdesc='PoC for distributed NTP reflection DoS (CVE-2013-5211)'
groups=('blackarch' 'blackarch-dos')
arch=('x86_64' 'aarch64')
url='https://github.com/sepehrdaddev/ntpdos'
license=('GPL3')
depends=()
makedepends=('git' 'gcc' 'make')
source=("https://github.com/sepehrdaddev/$pkgname/archive/v$pkgver.tar.gz")
sha512sums=('242893d2fea8a715919615462656167927d073beb2c6699f121c6247df36eae678f1b5d7d0da783b925e95d8f9d5a8465db345f47ccefaaca6694480795abf3a')

build() {
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  DESTDIR="$pkgdir" make install

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 LICENSE.md "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

