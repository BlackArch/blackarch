pkgname='python2-magic'
pkgver='5.28'
pkgrel=3
pkgdesc='Python bindings to allow you to access the libmagic api.'
arch=('any')
url='http://darwinsys.com/file/'
license=('custom')
depends=('python2')
source=("ftp://ftp.astron.com/pub/file/file-${pkgver}.tar.gz")
sha512sums=('42136505e21b14396e3af4e0d3f349687176cf0771d2dc9fed3599a30c7bab59184459f1e51033bce2d6ee0e292eba034bdfda727decca1219c1b3419e6bbfdc')

package() {
  cd "$srcdir/file-$pkgver/python"

  python2 setup.py install --root="$pkgdir" --optimize=1

  install -Dm644 "$srcdir/file-$pkgver/COPYING" \
    "$pkgdir/usr/share/licenses/python2-magic/COPYING"
}
