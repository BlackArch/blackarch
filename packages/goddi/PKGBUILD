# See COPYING for license details.

pkgname=goddi
pkgver=18.6621070
pkgrel=1
groups=('blackarch' 'blackarch-recon' 'blackarch-windows')
pkgdesc='Dumps Active Directory domain information.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://github.com/NetSPI/goddi'
license=('BSD')
depends=('go')
makedepends=('git')
source=('git+https://github.com/NetSPI/goddi.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 755 goddi-linux-amd64 "$pkgdir/opt/$pkgname/goddi-linux-amd64"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
exec /opt/$pkgname/goddi-linux-amd64 "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

