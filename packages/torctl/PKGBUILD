pkgname=torctl
pkgver=0.2
pkgrel=1
epoch=1
groups=('blackarch' 'blackarch-automation')
pkgdesc='Script to redirect all traffic through tor network.'
arch=('any')
url='https://github.com/BlackArch/torctl'
license=('GPL3')
depends=('tor' 'systemd' 'wget')
source=("https://github.com/BlackArch/torctl/archive/v$pkgver.tar.gz")
sha512sums=('737f7f4db9f562d50d8612b61c0be2e6bc0049a2821fb61736324bc5503951c6c847787d364a96f256c211912851c9530b0a21e048ceeb946ebcc951ed9e247e')

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

