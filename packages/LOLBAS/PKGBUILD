pkgname='LOLBAS'
pkgver=156.f549508
pkgrel=1
pkgdesc='Living Off The Land Binaries And Scripts - (LOLBins and LOLScripts)'
groups=('blackarch' 'blackarch-windows' )
arch=('any')
url='https://github.com/api0cradle/LOLBAS'
depends=()
source=('git+https://github.com/api0cradle/LOLBAS.git')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir/$pkgname"
  mkdir -p "$pkgdir/usr/share/windows/$pkgname/"
  cp -r ./* "$pkgdir/usr/share/windows/$pkgname/"
}
