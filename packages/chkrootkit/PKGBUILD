pkgname=chkrootkit
pkgver=0.59
pkgrel=1
groups=('blackarch' 'blackarch-defensive' 'blackarch-forensic')
pkgdesc='Checks for rootkits on a system.'
url='http://www.chkrootkit.org/'
arch=('any')
license=('GPL2')
source=("ftp://ftp.chkrootkit.org/pub/seg/pac/$pkgname.tar.gz")
sha512sums=('b67b726e60e58d1486bae171f6de0ba6422f71822aa62cb14bc9fcc30edbb6e00d84673a58a9cb8cf21da18d41355d0ee14135b848eafb69045315f519ac33e4')

build(){
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

