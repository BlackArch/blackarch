pkgname=python2-utils
_pkgname=python-utils
pkgver=0.9.0
pkgrel=1
pkgdesc='A module with some convenient utilities not included with the standard Python install.'
url='https://github.com/WoLpH/python-utils'
license=('BSD')
arch=('any')
depends=('python2' 'python2-six')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/07/49/42c86388fed58455e7e18d3821d7687f4921e47a40cb312e69b82f75c660/$_pkgname-$pkgver.tar.gz")
sha512sums=('494aae3269a2f9d3009288a0b436e465a062c1e8c9c58829ef7980a45c9cd689228cf99be218cb58d3e8827a6659ebfa7b91b8ffb8362de65f5bf52b2659be3e')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

