post_install() {
  set -e
  cd /usr/share/angr-management
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root="/usr/share/angr-management" --prefix='venv' .
}

post_upgrade() {
  post_install "$@"
}

post_remove() {
  # /usr/share/angr-management/venv
  rm -r /usr/share/angr-management
}
