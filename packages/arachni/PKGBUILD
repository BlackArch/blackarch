pkgname=arachni
_gemname=${pkgname#ruby-}
pkgver=0.4.2
pkgrel=2
pkgdesc="Web Application Security Scanner Framework"
arch=('any')
url="http://www.arachni-scanner.com/"
license=('GPL')
groups=(blackarch blackarch-web)
conflicts=('arachni-git')
