# See COPYING for license details.

pkgname=msf-mpc
pkgver=33.2acb87f
pkgrel=1
groups=('blackarch' 'blackarch-automation' 'blackarch-backdoor'
        'blackarch-malware')
pkgdesc='Msfvenom payload creator.'
arch=('any')
url='https://github.com/g0tmi1k/mpc'
license=('MIT')
depends=('metasploit')
makedepends=('git')
source=("$pkgname::git+https://github.com/g0tmi1k/mpc.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 755 msfpc.sh "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

