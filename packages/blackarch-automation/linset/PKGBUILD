# See COPYING for license details.

pkgname=linset
pkgver=9.8746b1f
pkgrel=4
pkgdesc='Evil Twin Attack Bash script - An automated WPA/WPA2 hacker.'
groups=('blackarch' 'blackarch-automation' 'blackarch-wireless'
        'blackarch-cracker')
arch=('any')
url='https://github.com/vk496/linset'
license=('GPL3')
depends=('aircrack-ng' 'gawk' 'curl' 'dhcp' 'hostapd' 'wireless_tools'
         'lighttpd' 'macchanger' 'mdk3' 'php-cgi' 'pyrit' 'python' 'unzip'
         'xterm')
makedepends=('git')
source=("git+https://github.com/vk496/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

