pkgname=sakis3g
pkgver=0.2.0e
pkgrel=8
groups=('blackarch' 'blackarch-automation' 'blackarch-misc')
pkgdesc='An all-in-one script for connecting with 3G.'
arch=('any')
url='http://www.sakis3g.org/'
license=('GPL2')
depends=('ppp' 'net-tools')
optdepends=('usb_modeswitch: for switching USB modems')
source=("http://downloads.sourceforge.net/project/vim-n4n0/$pkgname.tar.gz"
        "$pkgname-rc")
sha512sums=('89d6230289ad716c3b28e24b455bea013de493c63e7f3d438e725daff1adfebea24d3129508e24077912673167b1ede86ffb7cfec70437a77fea1f20d1d0fdbc'
            '0f5817d201630ce1103c8eef42a15a4c9c5665daab38a57ff78e364b2362543c89e88a4bdf05819486e6c4c2c41b863cc6e7c232d4aa902f0f7717ee08918c13')

package() {
  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/etc/rc.d"

  install -m 755 "$srcdir/$pkgname" "$pkgdir/usr/bin"
  # TODO: make a systemd unit file.
  install -m 644 "$srcdir/$pkgname-rc" "$pkgdir/etc/rc.d/$pkgname"
}

