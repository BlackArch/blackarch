pkgname=valhalla
pkgver=31.7c7ce58
pkgrel=1
pkgdesc='Short description without using the package name itself.'
arch=('any')
groups=('blackarch' 'blackarch-automation' 'blackarch-misc')
url='https://github.com/swimlane/pyattck'
license=('MIT')
depends=('python' 'python-requests')
makedepends=('python-setuptools' 'git')
source=("git+https://github.com/swimlane/$pkgname.git")
sha512sums=('SKIP')

build() {
  cd $pkgname

  python setup.py build
}

package() {
  cd $pkgname

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

