pkgname=cpyrit-opencl
pkgver=0.4.0
pkgrel=3
pkgdesc='Pyrit support for Nvidia-CUDA.'
url='http://code.google.com/p/pyrit/'
license=('GPL-3.0-or-later')
arch=('x86_64')
depends=('python2' 'openssl' 'zlib' 'libcl' 'nvidia' 'pyrit' 'opencl-headers')
makedepends=('gcc' 'python2' 'cuda-toolkit')
source=("https://web.archive.org/web/20150416013224/https://pyrit.googlecode.com/files/$pkgname-$pkgver.tar.gz")
sha512sums=('105c735089c23850f46fc349d4393bc038ca676ed9437545af7d23d98786e52a6ed88a09eeb9b7e2ef3654eaa71e0172a64478f8a37177714b3060ad3af49e5a')

build() {
  cd "$pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --skip-build
}

