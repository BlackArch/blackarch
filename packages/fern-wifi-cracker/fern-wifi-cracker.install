# Fix for FileNotFoundError: [Errno 2] No such file or directory: b'liblibc.a'
# The issue was caused because the library name was renamed in latest glibc
# versions.
post_install() {
  echo "Creating liblibc.a symlink for fern-wifi-cracker..."
  ln -sf /usr/lib/libc.a /usr/lib/liblibc.a
}

# also for upgrades
post_upgrade() {
  post_install "$@"
}

# Remove symlink created
post_remove() {
  echo "Deleting liblibc.a symlink for fern-wifi-cracker..."
  rm -f /usr/lib/liblibc.a
}
