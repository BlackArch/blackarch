# See COPYING for license details.

pkgname='mboxgrep'
pkgver='0.7.9'
pkgrel=5
pkgdesc='A small, non-interactive utility that scans mail folders for messages matching regular expressions. It does matching against basic and extended POSIX regular expressions, and reads and writes a variety of mailbox formats.'
url="http://mboxgrep.sourceforge.net"
groups=('blackarch' 'blackarch-forensic')
license=('GPL')
depends=('pcre' 'bzip2' 'zlib')
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
source=("http://downloads.sourceforge.net/mboxgrep/mboxgrep-${pkgver}.tar.gz")
sha1sums=('dc6dcaee5fc22bf606328b378883da34600be11a')

build() {
  cd "$srcdir/mboxgrep-$pkgver"

  ./configure --prefix=/usr --mandir=$pkgdir/usr/share/man \
    --infodir=$pkgdir/usr/share/info

  make
}
package(){
  cd "$srcdir/mboxgrep-$pkgver/src"

  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/share/mboxgrep"

  cp -aR mboxgrep "$pkgdir/usr/share/mboxgrep/"

  ln -s /usr/share/mboxgrep/mboxgrep "$pkgdir/usr/bin/"
}
