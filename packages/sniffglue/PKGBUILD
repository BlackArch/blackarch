# See COPYING for license details.

pkgname=sniffglue
pkgver=201.1e5ecae
pkgrel=1
pkgdesc='Secure multithreaded packet sniffer.'
arch=('any')
groups=('blackarch' 'blackarch-sniffer')
url='https://github.com/kpcyrd/sniffglue'
license=('GPL3')
makedepends=('git' 'cargo')
source=("git+https://github.com/kpcyrd/$pkgname.git")
options=(!strip)
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  cargo build --release
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/$pkgname"

  install -Dm 755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 "docs/$pkgname.1" "$pkgdir/usr/share/man/man1/$pkgname.1"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md docs/*
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  rm -rf target LICENSE README.md docs

  cp -a * "$pkgdir/usr/share/$pkgname/"
}

