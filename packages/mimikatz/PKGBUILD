pkgname=mimikatz
pkgver=2.2.0_20200308
pkgrel=1
pkgdesc='A little tool to play with Windows security.'
url='https://github.com/gentilkiwi/mimikatz'
groups=('blackarch' 'blackarch-windows' 'blackarch-cracker')
license=('custom:unknown')
arch=('any')
source=("https://github.com/gentilkiwi/$pkgname/releases/download/${pkgver//_/-}/${pkgname}_trunk.zip")
sha512sums=('d467de671eb9c2f2579cddf6e68f64186e8a607fd54f5bfa546518681fc473702f4253a05c9d7116012385ece0277e6cff2c8968ee34e0d4a0a6afaedc534fe0')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm mimikatz_trunk.zip

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

