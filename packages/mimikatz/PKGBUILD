pkgname=mimikatz
pkgver=2.2.0_20210518
pkgrel=1
pkgdesc='A little tool to play with Windows security.'
url='https://github.com/gentilkiwi/mimikatz'
groups=('blackarch' 'blackarch-windows' 'blackarch-cracker')
license=('custom:unknown')
arch=('any')
source=("https://github.com/gentilkiwi/mimikatz/releases/download/${pkgver//_/-}/${pkgname}_trunk.zip")
sha512sums=('8236e4436136984fa14bd327884f5573c7e025a20d05543c891d49537275a3b0e4a57d4ebd444785c0953198209795a95635c9698855d388d8260685ceef1597')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm mimikatz_trunk.zip

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

