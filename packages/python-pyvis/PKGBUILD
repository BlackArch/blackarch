pkgname=python-pyvis
_pkgname=pyvis
pkgver=0.3.0
pkgrel=1
pkgdesc='A Python network visualization library.'
arch=('any')
url='https://pypi.org/project/pyvis/#files'
license=('BSD')
depends=('python' 'python-jinja' 'python-networkx' 'python-jsonpickle'
         'ipython')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('2b1229c01731f12d91bacfe9d678bbc95c907621ca069c046a59a2bf0fa941ac5e640104b6cf18f7470f42e96388c7b4eabd4a2689af317a92594ce7b0e84b76')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

