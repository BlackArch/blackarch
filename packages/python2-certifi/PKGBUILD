pkgname=python2-certifi
_pkgname=certifi
pkgver=2019.9.11
pkgrel=1
pkgdesc="Python package for providing Mozilla's CA Bundle."
url='https://pypi.org/project/certifi/#files'
arch=('any')
license=('MPL')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/62/85/7585750fd65599e88df0fed59c74f5075d4ea2fe611deceb95dd1c2fb25b/$_pkgname-$pkgver.tar.gz")
sha512sums=('aab5734bf65cbad12772bb120153b0325a5c3226339e0a03fdf4c3413303feb930b6d53d1d9dab93bd4f3cf00d2bfbe86419c4c462570340f1a4aa143a31373c')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

