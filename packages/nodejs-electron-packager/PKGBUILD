_npmname='electron-packager'
pkgname="nodejs-$_npmname"
pkgver="8.5.2"
pkgrel=1
pkgdesc="Customize and package your Electron app with OS-specific bundles (.app, .exe etc) via JS or CL."
arch=('any')
url="http://npm.im/electron-packager"
license=('custom')
depends=('nodejs' 'npm')
sha256sums=('833b336cf3018127f538ed949616efa6e518a500e221056bf08620c7293f3743')
source=("http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz")
noextract=("$_npmname-$pkgver.tgz")

package() {
  cd "$srcdir"
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p "$_npmdir"
  cd "$_npmdir"
  npm install -g --prefix "$pkgdir/usr" "$_npmname@$pkgver"
}

