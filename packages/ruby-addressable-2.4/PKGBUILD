# See COPYING for license details.
pkgname='ruby-addressable-2.4'
_gemname='addressable'
pkgver='2.4.0'
pkgrel=3
pkgdesc="URI Implementation"
arch=('any')
url='https://github.com/sporkmonger/addressable'
license=("Apache-2.0")
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('ae0f7b8474c274e0e563ce7a18168b0d1c5d692a' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{CHANGELOG.md,Gemfile,LICENSE.txt,README.md,Rakefile,addressable.gemspec,spec,tasks}
}
