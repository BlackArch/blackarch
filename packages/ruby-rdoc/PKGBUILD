# Maintainer: lsfxz (https://github.com/lsfxz/quarry)
# Many thanks to anatol for quarry and gem2arch!
# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=rdoc
pkgname=ruby-$_gemname
pkgver=5.0.0
pkgrel=3
pkgdesc=RDoc\ produces\ HTML\ and\ command-line\ documentation\ for\ Ruby\ projects
arch=(any)
url=https://rdoc.github.io/rdoc
license=(Ruby)
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('e950a1158524c3b408cb5a411f9b7649b912514f'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.rdoc" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.rdoc"
  # non-HEAD version should not install any files in /usr/bin
  rm -r "$pkgdir"/usr/bin/
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.document,.gitignore,.travis.yml,CONTRIBUTING.rdoc,CVE-2013-0256.rdoc,ExampleMarkdown.md,ExampleRDoc.rdoc,Gemfile,History.rdoc,LEGAL.rdoc,LICENSE.rdoc,README.rdoc,RI.rdoc,Rakefile,TODO.rdoc,bin,rdoc.gemspec,exe}
}
