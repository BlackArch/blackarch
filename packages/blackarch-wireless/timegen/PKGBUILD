pkgname=timegen
pkgver=0.4
pkgrel=2
groups=('blackarch' 'blackarch-wireless')
pkgdesc='This program generates a *.wav file to "send" an own time signal to DCF77 compatible devices.'
arch=('x86_64' 'aarch64')
url='http://bastianborn.de/radio-clock-hack/'
license=('custom:unknown')
source=("http://bastianborn.de/static/dl/$pkgname-$pkgver-src.zip")
sha512sums=('976798b2e73c218b26b2d581669eda429a8585685cb3fd2ae04b255a3427c97c7e8e8e932132fb650f5c1836ca31b8d8871bad60a9dbbc2b822757a074210a97')

build() {
  make
}

package() {
  install -Dm 744 $pkgname "$pkgdir/usr/bin/$pkgname"
}

