pkgname=python-azure-mgmt-resource
_pkgname=azure-mgmt-resource
pkgver=8.0.0
pkgrel=1
pkgdesc='Microsoft Azure Resource Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-resource/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/9d/4c/fec747aa384d52deb17c549e56df7c67169b2a8af20e365e78c5e6092c5e/$_pkgname-$pkgver.zip")
sha512sums=('61601a609aa954745f592f082d8032ee32bb795b5ea67379ef24669313a58d7d63b7a43cf6e99fcc21a07ea53f99ece2783e6bf3a87d082f0410ec7b2977ae0f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

