pkgdesc='Microsoft Azure Resource Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-resource/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/f9/13/fd2d6c3a5080c4baf4798bf2ad0af31d19e7cf495afa7b04962c343f6837/$_pkgname-$pkgver.zip")
sha512sums=('f3e46ef3c671267bc4dd7a2678c7662f2e75bd932c7530924ccbfa799db957a737309c6b1385210ac4d0b1ec0b9c2f8e4d11d4686baea9205061d8b73a4fb862')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

