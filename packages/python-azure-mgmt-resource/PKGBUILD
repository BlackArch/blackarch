pkgname=python-azure-mgmt-resource
pkgver=2.1.0
pkgrel=1
pkgdesc='Microsoft Azure Resource Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-resource/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/05/10/063973e5b4eb4c1ff65ac89c1ec04796c213c9957b38d59814b93201969d/azure-mgmt-resource-2.1.0.zip")
sha512sums=('3bbbc4cd5259dbbde24c697b6813efe38efc2f8ee9234d09ba26c5e74b7ffb0c4d66b996167aef1aec1cde190c864c0f7c8a2e07f8df84130714674a5e3572d8')

build() {
  cd "azure-mgmt-resource-$pkgver"

  python setup.py build
}

package() {
  cd "azure-mgmt-resource-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

