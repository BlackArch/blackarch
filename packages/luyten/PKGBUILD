# See COPYING for license details.

pkgname=luyten
pkgver=132.ba68ee1
pkgrel=1
groups=('blackarch' 'blackarch-decompiler' 'blackarch-misc')
pkgdesc='An Open Source Java Decompiler Gui for Procyon.'
arch=('any')
url='https://github.com/deathmarine/Luyten'
license=('Apache2')
depends=('java-environment')
makedepends=('git')
noextract=("luyten.jar")
source=('git+https://github.com/deathmarine/Luyten.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir"

  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 644 "luyten.jar" \
    "$pkgdir/usr/share/$pkgname/$pkgname.jar"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
exec java -jar /usr/share/$pkgname/$pkgname.jar "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

