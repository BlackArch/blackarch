pkgname=android-udev-rules
pkgver=20200613
pkgrel=1
epoch=1
pkgdesc='Android udev rules.'
groups=('blackarch' 'blackarch-mobile')
arch=('any')
url='https://github.com/bbqlinux/android-udev-rules'
license=('GPL')
source=("https://github.com/M0Rf30/android-udev-rules/archive/$pkgver.tar.gz")
sha512sums=('75e4bfec4cb5edc488a698807cc7dec8aa3c0c22495d5e613636a16dc746a78d548ce164e7899f4228f1e515bc61efa61fb0b5c85e59da695c3976aa3781567c')

package() {
  cd $pkgname-$pkgver

  install -Dm 755 51-android.rules "$pkgdir/etc/udev/rules.d/51-android.rules"
}

