# See COPYING for license details.

pkgname=ftp-fuzz
pkgver=81.2fbcbc0
pkgrel=1
epoch=1
groups=('blackarch' 'blackarch-fuzzer')
pkgdesc='The master of all master fuzzing scripts specifically targeted towards FTP server sofware.'
url='http://nullsecurity.net/tools/fuzzer.html'
arch=('any')
license=('custom')
source=('git+https://github.com/nullsecuritynet/tools.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  sed -i 's|env python|env python2|' ftp-fuzz.py
}

package() {
  install -Dm 755 ftp-fuzz.py "$pkgdir/usr/bin/$pkgname"
}

