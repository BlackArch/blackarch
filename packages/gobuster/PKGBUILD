# See COPYING for license details.

pkgname=gobuster
pkgver=278.d054740
pkgrel=1
epoch=1
pkgdesc='Directory/file & DNS busting tool written in Go.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://github.com/OJ/gobuster'
groups=('blackarch' 'blackarch-webapp' 'blackarch-scanner')
license=('APACHE')
depends=('glibc')
makedepends=('git' 'go')
source=('git+https://github.com/OJ/gobuster.git')
sha512sums=('SKIP')
_url='github.com/OJ/gobuster'

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go get -d -t $_url
}

package() {
  cd $pkgname

  GOPATH="$srcdir" go build -v $_url

  install -Dm 755 gobuster "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md THANKS
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

