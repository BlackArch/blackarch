daemon_name=darkstat
daemon_chroot=var/darkstat

post_install() {
  if [ ! -d "$daemon_chroot" ]; then
    install -d "$daemon_chroot"
    touch "$daemon_chroot/darkstat.dat"
  fi
  useradd \
    --system \
    --home /"$daemon_chroot" \
    --shell /bin/false \
    --no-user-group \
    --gid nobody "$daemon_name"
  chown -R "$daemon_name":nobody "/$daemon_chroot"
}

post_remove() {
  userdel "$daemon_name"
}
