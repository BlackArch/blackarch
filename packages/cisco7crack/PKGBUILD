# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=cisco7crack
pkgver=2.f1c21dd
pkgrel=2
groups=('blackarch' 'blackarch-cracker' 'blackarch-crypto')
pkgdesc='Crypt and decrypt the cisco enable 7 passwords.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://github.com/madrisan/cisco7crack'
license=('GPL2')
makedepends=('git')
source=('git+https://github.com/madrisan/cisco7crack.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  gcc cisco7crack.c -o cisco7crack
}

package() {
  cd $pkgname

  install -Dm 755 cisco7crack "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
}

