_pkgname=aiowinreg
pkgver=0.0.7
pkgrel=1
pkgdesc='Windows registry reader.'
arch=('any')
url='https://pypi.org/project/aiowinreg/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/91/46/d2677902ca1d9672adaf774356f2bda6c2c11e8672b54e35b4f5c488915e/$_pkgname-$pkgver.tar.gz")
sha512sums=('1c249b122c4e15ac98703aa7832885d5a8f41162c9ee2989733a4a6c26dc26e022b451b6bdb612670d778ea0a9318672ad3f9e1b610f5f3bd646e8847b771b20')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

