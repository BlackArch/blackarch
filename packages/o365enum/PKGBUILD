# See COPYING for license details.

pkgname=o365enum
pkgver=17.2d4f99c
pkgrel=1
pkgdesc='Username enumeration and password enuming tool aimed at Microsoft O365.'
groups=('blackarch' 'blackarch-cracker' 'blackarch-recon' 'blackarch-windows')
arch=('any')
url='https://github.com/gremwell/o365enum'
license=('custom:unknown')
depends=('python' 'python-requests')
makedepends=('git')
source=("git+https://github.com/gremwell/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -Dm 755 "$pkgname.py" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

