pkgname=kismet2earth
pkgver=2.0
pkgrel=2
pkgdesc='A set of utilities that convert from Kismet logs to Google Earth .kml format.'
arch=('any')
groups=('blackarch' 'blackarch-wireless')
url='https://code.google.com/archive/p/kismet2earth'
license=('GPL-2.0-or-later')
depends=('python' 'sqlite')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('5198b6a553ae37d92464aaa86d89cb6ea23acc63ce69c7ba7fd4358773de841a700ab03e398e4c5d5b9f2f14ba7d0badd74412d100a8bc34507ff66ba2d3988b')

package(){
  cd "$pkgname-$pkgver"

  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  cp -a * "$pkgdir/usr/share/$pkgname/"

  chmod +x "$pkgdir/usr/share/$pkgname/"{db2ge,k2db}.py

  ln -s "/usr/share/$pkgname/db2ge.py" "$pkgdir/usr/bin/db2ge"
  ln -s "/usr/share/$pkgname/k2db.py" "$pkgdir/usr/bin/k2db"
}

