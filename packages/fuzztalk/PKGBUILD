pkgname=fuzztalk
pkgver=1.0.0.0
pkgrel=3
groups=('blackarch' 'blackarch-windows' 'blackarch-fuzzer')
pkgdesc='An XML driven fuzz testing framework that emphasizes easy extensibility and reusability.'
url='https://code.google.com/p/fuzztalk'
arch=('any')
license=('custom:unknown')
source=("https://web.archive.org/web/20220114092810/https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/fuzztalk/FuzzTalk$pkgver.zip")
sha512sums=('9c00da720f35fd99976813af93a92f8e3f1399ad605b555091c70cf20779af292eecc2840021a9f8d02ea93200739f56968915d0b9677c4e4c420ea920f11f8b')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "FuzzTalk$pkgver.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

