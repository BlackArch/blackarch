pkgname=python-django-tables2
_pkgname=django-tables2
pkgver=2.5.1
pkgrel=1
pkgdesc='A module for rendering Django data sets as HTML tables.'
arch=('any')
url='https://pypi.org/project/django-tables2/'
license=('MIT')
options=(!emptydirs)
depends=('python-django')
makedepends=('python-setuptools')
optdepends=('python-tablib: to export table data as CSV, XLS, etc.')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('61f6f601486110ba3b78f0a7f05f55d1c12fe1e3e706c68514a972b1e425d04a5080ebbed1b66c561958f66d2ca672072633214efd921fd91d9eea7c8b45976a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

