pkgname=sprayhound
pkgver=0.0.3
pkgrel=3
pkgdesc='Password spraying tool and Bloodhound integration.'
arch=('any')
groups=('blackarch' 'blackarch-networking' 'blackarch-scanner')
url='https://github.com/Hackndo/sprayhound'
license=('MIT')
depends=('python' 'python-ldap' 'python-neo4j-driver')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${pkgname::1}/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('a822957cbadff1a08f526c05ec160aec71ef3649ac44d23b9875924f8055ec096bb4ac0280b2a37cd79e8806f5093bddbcca88202fe7de2fca782523b9fdb3a4')

build() {
  cd "$pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

