
# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=phonesploit
pkgver=1.2
pkgrel=1
pkgdesc='Adb exploiting tools.'
arch=('x86_64')
groups=('blackarch' 'blackarch-mobile')
url='https://github.com/metachar/PhoneSploit'
license=('custom:unknown')
depends=('python2')
makedepends=('git' 'android-tools' 'python2-colorama')
source=("git+https://github.com/metachar/$pkgname.git")
sha512sums=('SKIP')

prepare() {
  cd $pkgname
  rm adb.rar
  rm -r install
  mv main_linux.py $pkgname.py
  find .  -not -name "$pkgname.py" -delete
}

package() {
    cd $pkgname

  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  cp -a * "$pkgdir/usr/share/$pkgname/"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
cd /usr/share/$pkgname
exec python2 $pkgname.py "\$@"
EOF
  chmod +x "$pkgdir/usr/bin/$pkgname"
} 
