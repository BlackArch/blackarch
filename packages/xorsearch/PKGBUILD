pkgname=xorsearch
pkgver=1.11.4
pkgrel=1
groups=('blackarch' 'blackarch-crypto')
pkgdesc='Program to search for a given string in an XOR, ROL or ROT encoded binary file.'
arch=('x86_64' 'aarch64')
url='http://blog.didierstevens.com/programs/xorsearch/'
license=('custom:public domain')
source=("https://github.com/DidierStevens/FalsePositives/raw/master/XORSearch_V${pkgver//./_}.zip")
sha512sums=('efb0b5e887381bee572228a92b90eac47b236df364dd29001a1783ecc0b305c3fe43e0de55a4891edde5d717abd0115c0f1d8306e706b8177cbe717ffe83d01d')

build() {
  gcc -o $pkgname XORSearch.c
}

package() {
  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

