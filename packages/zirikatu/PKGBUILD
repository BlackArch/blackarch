pkgname=zirikatu
pkgver=7.afe1d9c
pkgrel=1
pkgdesc='Fud Payload generator script.'
groups=('blackarch' 'blackarch-exploitation' 'blackarch-automation')
arch=('any')
url='https://github.com/pasahitz/zirikatu'
license=('custom:unknown')
depends=('bash' 'metasploit')
makedepends=('git')
source=("git+https://github.com/pasahitz/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -Dm 755 "$pkgname.sh" "$pkgdir/usr/bin/$pkgname"
}

