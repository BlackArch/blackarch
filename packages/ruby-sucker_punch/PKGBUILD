# Many thanks to anatol for quarry and gem2arch!
# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=sucker_punch
pkgname=ruby-$_gemname
pkgver=2.0.2
pkgrel=1
pkgdesc=Sucker\ Punch\ is\ a\ Ruby\ asynchronous\ processing\ using\ Celluloid,\ heavily\ influenced\ by\ Sidekiq\ and\ girl_friday.
arch=(any)
url=https://github.com/brandonhilkert/sucker_punch
license=(MIT)
depends=(ruby ruby-concurrent-ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('8e194c7258582f30ab902cb3be61781685f8215b'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.travis.yml,CHANGES.md,Gemfile,LICENSE.txt,README.md,Rakefile,sucker_punch.gemspec,test}
}
