# See COPYING for license details.

pkgname='awsbucketdump'
pkgver=54.c0a30d4
pkgrel=1
pkgdesc='AWSBucketDump is a tool to quickly enumerate AWS S3 buckets to look for loot.'
groups=('blackarch' 'blackarch-automation' 'blackarch-scanner')
arch=('any')
url='https://github.com/jordanpotti/AWSBucketDump'
license=('MIT')
depends=('python-xmltodict' 'python-requests' 'python-argparse' 'python')
makedepends=('git')
source=('git+https://github.com/jordanpotti/AWSBucketDump.git')
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/AWSBucketDump"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  mkdir -p "${pkgdir}/usr/share/wordlists/awsbucketdump/"    

  cd "${srcdir}/AWSBucketDump"

  install -Dm755 "AWSBucketDump.py" "$pkgdir/usr/bin/awsbucketdump"
  install -Dm644 "BucketNames.txt" "${pkgdir}/usr/share/wordlists/awsbucketdump/bucketnames.txt"
  install -Dm644 "interesting_Keywords.txt" "${pkgdir}/usr/share/wordlists/awsbucketdump/keywords.txt"
}
