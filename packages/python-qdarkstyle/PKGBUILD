pkgbase=python-qdarkstyle
pkgname=('python2-qdarkstyle' 'python-qdarkstyle')
pkgver=2.6.6
pkgrel=1
pkgdesc='Dark stylesheet for pyside/pyqt applications.'
url='https://github.com/ColinDuquesnoy/QDarkStyleSheet'
arch=('any')
license=('MIT')
makedepends=('python-setuptools' 'python2-setuptools')
source=("https://files.pythonhosted.org/packages/fa/c6/041d7bdd29b3a3ee95a8094cf673ff3f704a713c7100fff9e15d840d07cc/QDarkStyle-2.6.6.tar.gz")
sha512sums=('c9d8834e1d9aa4ed42aa7237c81936c3cbea206a5687a4e65da0afbac388ff16e47b7f0c6a7ff2751fea5406835f50996ac642d3b27749cbf1c1bcadac0a43c8')

package_python2-qdarkstyle() {
  depends=('python2')

  cd "QDarkStyle-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1

  mv "$pkgdir/usr/bin/qdarkstyle" "$pkgdir/usr/bin/qdarkstyle2"
}

package_python-qdarkstyle() {
  depends=('python')

  cd "QDarkStyle-$pkgver"

  python setup.py install --root="$pkgdir" --optimize=1
}

