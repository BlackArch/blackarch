pkgname='python-pyyaml'
pkgver='3.12'
pkgrel=1
pkgdesc='YAML parser and emitter for Python.'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
depends=('libyaml' 'python')
makedepends=('python-setuptools')
url='http://pyyaml.org/wiki/PyYAML/'
license=('MIT')
options=(!emptydirs)
source=("https://pypi.python.org/packages/4a/85/db5a2df477072b2902b0eb892feb37d88ac635d36245a72a6a69b23b383a/PyYAML-${pkgver}.tar.gz")
sha1sums=('cb7fd3e58c129494ee86e41baedfec69eb7dafbe')

build() {
  cd "$srcdir/PyYAML-$pkgver"

  python setup.py build
}

package() {
  cd "$srcdir/PyYAML-$pkgver"

  python setup.py install --root="$pkgdir" --optimize=1
}
