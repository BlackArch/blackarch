pkgname=python-vulners
_pkgname=vulners
pkgver=1.5.12
pkgrel=1
pkgdesc='Python library and command-line utility for Vulners (https://vulners.com).'
arch=('any')
url='https://pypi.org/project/vulners/#files'
depends=('python-requests' 'python-six')
makedepends=('python-setuptools')
license=('GPL3')
source=("https://files.pythonhosted.org/packages/75/96/c0a53e65ed2b779e546d681fc306c4d0d2b1e58a57012014a1933906d9f0/$_pkgname-$pkgver.tar.gz")
sha512sums=('fc434806ce5d736d6f750fda847a9d24284b98ec00d8115af4f2d5a01f05faccaa8f970f508eb266e8e7cabafc11d0e4907e7cd5f9ac712ba5fa5012d930108a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

