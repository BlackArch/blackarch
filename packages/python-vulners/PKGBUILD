pkgname=python-vulners
_pkgname=${pkgname#python-}
pkgver=3.1.5
pkgrel=1
pkgdesc='Python library and command-line utility for Vulners (https://vulners.com).'
arch=('any')
url='https://pypi.org/project/vulners/#files'
license=('GPL-3.0-or-later')
depends=('python' 'python-requests' 'python-six' 'python-httpx' 'python-orjson'
         'python-pydantic')
makedepends=('python-build' 'python-installer' 'python-setuptools'
             'python-wheel' 'python-poetry')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('4a5009fd88b635340f58f51f22b2e865e8a52bb5238532ad4cc5721c8d297b2b02622a46d6bbdcbf610087522268860cf50c54575408fbbada623ca66cfe906a')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --no-isolation
}

package() {
  cd "$_pkgname-$pkgver"

  python -m installer --destdir="$pkgdir" dist/*.whl
}

