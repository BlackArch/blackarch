pkgname=python-vulners
_pkgname=vulners
pkgver=2.2.0
pkgrel=1
pkgdesc='Python library and command-line utility for Vulners (https://vulners.com).'
arch=('any')
url='https://pypi.org/project/vulners/#files'
depends=('python-requests' 'python-six')
makedepends=('python-setuptools')
license=('GPL3')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('22195dca80e030b1641426f553d423117de3d1fa4b4e2e285680930f6da0422efdf2530e748722774004ae76a91d8f6c75130c7cf5b36c66c3e87896db623dd6')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

