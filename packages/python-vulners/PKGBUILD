pkgname=python-vulners
_pkgname=vulners
pkgver=2.0.5
pkgrel=1
pkgdesc='Python library and command-line utility for Vulners (https://vulners.com).'
arch=('any')
url='https://pypi.org/project/vulners/#files'
depends=('python-requests' 'python-six')
makedepends=('python-setuptools')
license=('GPL3')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('56f26a6972765d5dbc326447b09c7f1fe9144baa60925860e4932a0c603248b3a0db69ee565dfae42e175218f1d6163ed5e98e1301c113785e5101d3b3d07d22')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

