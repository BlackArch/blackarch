pkgname=python-vulners
_pkgname=vulners
pkgver=2.0.8
pkgrel=1
pkgdesc='Python library and command-line utility for Vulners (https://vulners.com).'
arch=('any')
url='https://pypi.org/project/vulners/#files'
depends=('python-requests' 'python-six')
makedepends=('python-setuptools')
license=('GPL3')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('251c0d4ef9b87a00b5d5bb4bc954da248b6ba0225f9e284921ff4dff925c7319655ed63e4eea74f623bee8a225bb62b838069f03d1e8339eb2505a015e477a50')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

