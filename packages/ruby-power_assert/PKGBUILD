# See COPYING for license details.
pkgname='ruby-power_assert'
_gemname='power_assert'
pkgver='0.4.1'
pkgrel=2
pkgdesc="Power Assert for Ruby"
arch=('any')
url='https://github.com/k-tsj/power_assert'
license=("2-clause BSDL', 'Ruby's")
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('98bee4b02f58361fdb62ed6f77499d17133ca498' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/COPYING" "$pkgdir/usr/share/licenses/$pkgname/COPYING"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.travis.yml,BSDL,COPYING,Gemfile,LEGAL,README.rdoc,Rakefile,benchmarks,power_assert.gemspec,test}
}
