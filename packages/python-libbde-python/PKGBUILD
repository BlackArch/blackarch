pkgbase=python-libbde-python
pkgname=('python2-libbde-python' 'python-libbde-python')
pkgver=20190312
pkgrel=1
pkgdesc='Library and tools to access the BitLocker Drive Encryption (BDE) encrypted volumes.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://pypi.org/project/libbde-python/#files'
license=('LGPL3')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/33/55/478ce30cbc52855ef06853ecc2355e1b628d1b8ab6923e1f905f5114db60/libbde-python-20190312.tar.gz")
sha512sums=('829da8c9a6c0cb66da0c3006f293e9c07580c91890862f1016d517be12bdb1fe93d05456e5e86f59f3d4b8d25f6b01017a9378046d4ef3e21216ccafa4820c6e')

package_python2-libbde-python() {
  depends=('python2')

  cd "libbde-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

package_python-libbde-python() {
  depends=('python')

  cd "libbde-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

