pkgname=python2-pyexecjs
pkgver=1.5.1
pkgrel=2
pkgdesc='Run JavaScript code from Python.'
arch=('any')
url='https://pypi.org/project/PyExecJS/#files'
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/ba/8e/aedef81641c8dca6fd0fb7294de5bed9c45f3397d67fddf755c1042c2642/PyExecJS-$pkgver.tar.gz")
sha512sums=('df6eb89e038dfedab70d43ab76e08b12ac6d701f97be31f36ef92da747c03de5f6c7d477f6841788d849da36659d4e7ec8eb8a63c8ddda9d0b3c3acf0cf76853')

build() {
  cd "PyExecJS-$pkgver"

  python2 setup.py build
}

package() {
  cd "PyExecJS-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

