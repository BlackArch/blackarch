post_install() {
  set -e
  echo
  echo ">>      !! GitHub tokens REQUIRED !!"
  echo ">>"
  echo ">>      Add optional tokens & webhooks for notifications:"
  echo ">>"
  echo ">>      - Discord"
  echo ">>      - Slack"
  echo ">>      - Telegram"
  echo ">>"
  echo ">>      Add tokens/webhooks to /usr/share/gitrobber/config.py"
  echo
}

post_upgrade() {
  post_install "$@"
}
