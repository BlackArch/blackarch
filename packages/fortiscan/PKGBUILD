# See COPYING for license details.

pkgname=fortiscan
pkgver=0.7.r7.gd54faa0
pkgrel=1
pkgdesc='A high performance FortiGate SSL-VPN vulnerability scanning and exploitation tool.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-scanner' 'blackarch-exploitation')
url='https://github.com/anasbousselham/fortiscan'
license=('custom:unknown')
depends=('glibc')
makedepends=('git' 'go')
source=("git+https://github.com/anasbousselham/$pkgname.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod init go.mod
  GOPATH="$srcdir" go mod tidy
  GOPATH="$srcdir" go mod download
  cd scan
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .

}

package() {
  cd $pkgname

  install -Dm 755 "scan/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

