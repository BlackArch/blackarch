post_install() {
  set -e
  cd /usr/share/polyswarm
  python -m virtualenv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/polyswarm --prefix=venv \
      polyswarm
}

post_upgrade() {
  set -e
  cd /usr/share/polyswarm
  python -m virtualenv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/polyswarm --prefix=venv \
      polyswarm -U
}

post_remove() {
  rm -rf /usr/share/polyswarm
}

