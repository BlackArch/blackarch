# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=ipscan
pkgver=1208.0408b2c
pkgrel=1
groups=('blackarch' 'blackarch-scanner')
pkgdesc='A very fast IP address and port scanner.'
arch=('x86_64')
license=('GPL2')
url='http://angryip.org'
depends=('java-environment')
source=('git+https://github.com/angryip/ipscan.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 644 "ipscan-linux64.jar" \
    "$pkgdir/usr/share/$pkgname/$pkgname-linux.jar"

  cat > "$pkgdir/usr/bin/ipscan" << EOF
#!/bin/sh
exec java -jar /usr/share/$pkgname/ipscan-linux.jar
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

