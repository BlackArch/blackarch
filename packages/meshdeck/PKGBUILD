pkgname=meshdeck
pkgver=2.04
groups=('blackarch-drone' 'blackarch-meta-thedeck' 'blackarch-plug')
pkgrel=1
pkgdesc="An addon to The Deck which allows multiple devices running The Deck to communicate via 802.15.4 Xbee and/or ZigBee mesh networking.  This allows coordinated attacks to be performed. A centralized command console is used to coordinate with the drones."
arch=('armv6h' 'armv7h')
url='https://github.com/adminempire/meshdeck/'
license=('creative-commons')
depends=('python-xbee')
source=("meshdeck::git+https://github.com/adminempire/meshdeck.git")
md5sums=('SKIP')

package() {
  cd "$srcdir/meshdeck/code"

  install -Dm744 meshdeck.py "$pkgdir/usr/bin/meshdeck.py"
  install -Dm644 meshdeckd.service "$pkgdir/usr/lib/systemd/system/meshdeckd.service"
}
