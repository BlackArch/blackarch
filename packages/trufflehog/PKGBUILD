# See COPYING for license details.

pkgname=trufflehog
pkgver=v3.86.1.r7.ge932ea929
pkgrel=1
epoch=2
pkgdesc='Searches through git repositories for high entropy strings, digging deep into commit history.'
groups=('blackarch' 'blackarch-code-audit' 'blackarch-recon')
arch=('x86_64' 'aarch64')
url='https://github.com/dxa4481/truffleHog'
license=('GPL2')
depends=('glibc')
makedepends=('git' 'go')
source=("git+https://github.com/dxa4481/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

