# See COPYING for license details.

pkgname=barmie
pkgver=6.41f2f0b
pkgrel=1
pkgdesc='Java RMI enumeration and attack tool.'
groups=('blackarch' 'blackarch-scanner')
arch=('any')
url='https://github.com/NickstaDB/BaRMIe'
license=('MIT')
depends=('java-environment')
makedepends=('git')
noextract=("BaRMIe_v${pkgver}.jar")
source=('git+https://github.com/NickstaDB/BaRMIe.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  cp -a * "$pkgdir/usr/share/$pkgname/"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
exec java -jar /usr/share/$pkgname/BaRMIe_v$pkgver.jar "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

