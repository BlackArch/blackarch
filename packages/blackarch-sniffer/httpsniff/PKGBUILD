pkgname=httpsniff
pkgver=0.4
pkgrel=2
groups=('blackarch' 'blackarch-sniffer')
pkgdesc='Tool to sniff HTTP responses from TCP/IP based networks and save contained files locally for later review.'
arch=('x86_64' 'aarch64')
url='http://www.sump.org/projects/httpsniff/'
license=('GPL')
depends=('glib2' 'libpcap' 'libnids' 'libnet')
source=("http://www.sump.org/projects/$pkgname/downloads/$pkgname-src-$pkgver.tar.bz2")
sha512sums=('006adb2a4bb29c25aa9588139f01b79652f4225617d965fa59bd0a1b2053add183d604f44a55eace237d0b1e6c8abff3c6bd4a1c1c00294808c4d9c7a8baebd8')

build() {
  make
}

package() {
  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

