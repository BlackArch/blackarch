# See COPYING for license details.

pkgname=dexpatcher
pkgver=352.b1a3d5f
pkgrel=1
pkgdesc='Modify Android DEX/APK files at source-level using Java.'
groups=('blackarch' 'blackarch-mobile' 'blackarch-binary')
arch=('any')
url='https://github.com/DexPatcher/dexpatcher-tool'
license=('GPL3')
depends=('java-environment')
makedepends=('git')
noextract=("dexpatch.jar")
source=('git+https://github.com/DexPatcher/dexpatcher-tool.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {

  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 644 "dexpatcher.jar" \
    "$pkgdir/usr/share/dexpatcher/dexpatcher.jar"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
exec java -jar /usr/share/$pkgname/$pkgname.jar "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

