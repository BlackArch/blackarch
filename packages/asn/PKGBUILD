pkgname=asn
pkgver=0.78.0
pkgrel=1
pkgdesc='ASN, RPKI validity, BGP stats, IPv4v6, Prefix, URL, ASPath, Organization, IP reputation, IP geolocation, IP fingerprinting, Network recon, lookup API server, Web traceroute server.'
arch=('any')
groups=('blackarch' 'blackarch-recon')
url='https://github.com/nitefood/asn'
license=('MIT')
depends=('curl' 'whois' 'bind' 'mtr' 'jq' 'ipcalc' 'grepcidr' 'nmap' 'openbsd-netcat' 'aha')
makedepends=('git')
source=("https://github.com/nitefood/$pkgname/archive/refs/tags/v$pkgver.zip")
sha512sums=('9330e9f3902a675f1e350ec74c16e5a1618b1530ad6ab2d636b13b0da8d751f13dac84aa269f248ae7fe74fc1f62e1da6f7f186493fdab4daa9f5e309ef5dffc')

package() {
  cd "$pkgname-$pkgver"

  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 755 asn "$pkgdir/usr/bin/"

  chmod a+x "$pkgdir/usr/bin/$pkgname"
}

