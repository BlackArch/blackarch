pkgname=create_ap
pkgver=264.1e7eb32
pkgrel=1
pkgdesc='A shell script to create a NATed/Bridged Software Access Point.'
groups=('blackarch' 'blackarch-wireless')
arch=('any')
url='https://github.com/oblique/create_ap'
license=('BSD')
depends=('bash' 'hostapd' 'iproute2' 'iw' 'dnsmasq' 'iptables' 'util-linux'
         'procps-ng' 'which')
makedepends=('git')
optdepends=('haveged: boost low entropy')
backup=('etc/create_ap.conf')
source=("git+https://github.com/oblique/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  make -C "$pkgname" DESTDIR="$pkgdir" install

  install -Dm 644 "$pkgname/LICENSE" \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

