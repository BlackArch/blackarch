pkgname=python-libvhdi-python
_pkgname=libvhdi
__pkgname=libvhdi-python
pkgver=20251119
pkgrel=2
pkgdesc='Library and tools to access the Virtual Hard Disk (VHD) image format.'
url='https://pypi.org/project/libvhdi-python/'
arch=('x86_64' 'aarch64')
license=('LGPL3')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$__pkgname/$__pkgname-20210425.tar.gz")
sha512sums=('9cdbd8e57c07da5f62d1ce51e13e2e8a614662a72a3ef0049861f99a9415a50c486a510bd83e87ff1d432293bf7676f62baa2b2267143b8e0d9dca3aae2e4b1e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

