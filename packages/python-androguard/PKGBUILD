pkgname=python-androguard
pkgver=3.2.1
pkgrel=1
pkgdesc='Androguard is a full python tool to play with Android files.'
arch=('any')
url='https://pypi.org/project/androguard'
license=('MIT')
depends=(''python' 'ipython' 'python-future' 'python-networkx' 'python-pygments'
         'python-lxml' 'python-colorama' 'python-matplotlib' 'python-asn1crypto'
         'python-click')
         'iptyhon')
makedepends=('python-setuptools')
optdepends=('python-pyperclip'
            'python-pyqt5'
            'python-magic'
            'python-filemagic'
            'python-sphinx'
            'python-sphinx_rtd_theme'
            'python-pydot')
checkdepends=('python-mock' 'python-nose' 'python-codecov' 'python-coverage')
             'python-nose'
             'python-codecov'
             'python-coverage')
source=("https://files.pythonhosted.org/packages/0a/88/b8abb49b310dfea6f27dd5141fcb75ca266f750a94285ca7e99e3f584e0c/androguard-$pkgver.tar.gz")
sha512sums=('d6975abc501c9f87d9f62cbf3b13270e3a52934debd519d2aa678e7939d9f984fe547dfd87b41c81ce5606bd04edf6ea43194781771cc352ee8238a049bd01b3')

build() {
  cd "androguard-$pkgver"

  python setup.py build
}

package() {
  cd "androguard-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

