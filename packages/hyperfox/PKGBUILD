# See COPYING for license details.

pkgname=hyperfox
pkgver=121.1a8c26f
pkgrel=2
groups=('blackarch' 'blackarch-networking' 'blackarch-proxy' 'blackarch-webapp')
pkgdesc='A security tool for proxying and recording HTTP and HTTPs traffic.'
arch=('x86_64' 'aarch64')
url='https://github.com/xiam/hyperfox'
license=('custom:unknown')
depends=('sqlite')
makedepends=('git' 'go')
source=("git+https://github.com/xiam/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

