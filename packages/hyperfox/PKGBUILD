# See COPYING for license details.

pkgname=hyperfox
pkgver=121.1a8c26f
pkgrel=1
groups=('blackarch' 'blackarch-networking' 'blackarch-proxy' 'blackarch-webapp')
pkgdesc='A security tool for proxying and recording HTTP and HTTPs traffic.'
arch=('x86_64' 'aarch64')
url='https://github.com/xiam/hyperfox'
license=('custom:unknown')
depends=('glibc')
makedepends=('git' 'go-pie')
source=("git+https://github.com/xiam/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go get -d -t .
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/bin"

  GOPATH="$srcdir" go build -v .

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

