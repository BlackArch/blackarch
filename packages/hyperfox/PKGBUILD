# See COPYING for license details.

pkgname=hyperfox
pkgver=66.3256937
pkgrel=2
groups=('blackarch' 'blackarch-networking' 'blackarch-proxy' 'blackarch-webapp')
pkgdesc='A security tool for proxying and recording HTTP and HTTPs traffic.'
arch=('x86_64' 'aarch64')
url='https://github.com/xiam/hyperfox'
license=('custom:unknown')
depends=('glibc')
makedepends=('git' 'go-pie')
source=("git+https://github.com/xiam/$pkgname.git")
sha512sums=('SKIP')
_url="github.com/xiam/$pkgname"

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  mkdir -p "src/$_url" && rm -rf "src/$_url" && mv $pkgname "src/$_url" &&
    cd "src/$_url"

  GOPATH="$srcdir" go get -d -t $_url
}

package() {
  install -dm 755 "$pkgdir/usr/bin"

  GOPATH="$srcdir" go build -v $_url

  install -Dm 755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/README.md" \
    "src/$_url/README.md"
  install -Dm 644 "src/$_url/LICENSE" \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

