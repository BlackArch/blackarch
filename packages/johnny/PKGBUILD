pkgname='johnny'
pkgver=20120424
pkgrel=3
pkgdesc='GUI for John the Ripper'
groups=(blackarch blackarch-password-attacks)
url="http://openwall.info/wiki/john/johnny"
arch=('any')
license=('GPL')
depends=('qt4>=4.7.0' 'john')
makedepends=('git')
source=('git://github.com/AlekseyCherepanov/johnny.git'
        'johnny-128.png'
        'johnny.desktop')
md5sums=('SKIP'
         '24db229679d72a303ad1c9dd8c238cab'
         '1650c897ad0fa04aebc29d9ab5a1a879')

build() {
  cd "$srcdir/$pkgname"
  /usr/lib/qt4/bin/qmake
  make
}

package() {
  cd "$srcdir/$pkgname"

  # Make base directories.
  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/applications"

  # Install bin.
  install -m755 $srcdir/$pkgname/$pkgname "$pkgdir/usr/bin"

  # Install desktop file.
  install -m644 "$srcdir/johnny.desktop" "$pkgdir/usr/share/applications/johnny.desktop"
}
