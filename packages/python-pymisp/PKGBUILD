pkgbase=python-pymisp
pkgname=('python-pymisp')
_pkgname=pymisp
pkgver=2.4.151
pkgrel=1
pkgdesc='Python API for MISP.'
arch=('any')
url='https://pypi.org/project/pymisp/#files'
license=('BSD')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/1d/d6/257ed55fcac1bed05a2b2453f0a103d758d444c80e09e544df219a9dd4ec/$_pkgname-$pkgver.tar.gz")
sha512sums=('07331426a88e643df2925e6eb2c566c5ac70d784a4554ca910212dac4bd1b6f9127daa9058509958afcc44c127d48ef3ecfb79c159b1a95e728c4d35a6cdc95c')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  python setup.py build
}

package_python-pymisp() {
  depends=('python' 'python-six' 'python-dateutil' 'python-jsonschema'
           'python-requests' 'python-deprecated')
  optdepends=('python-virustotal-api: VirusTotal support')

  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

