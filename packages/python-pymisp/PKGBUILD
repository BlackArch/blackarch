pkgbase=python-pymisp
pkgname=('python-pymisp')
_pkgname=pymisp
pkgver=2.4.155.1
pkgrel=1
pkgdesc='Python API for MISP.'
arch=('any')
url='https://pypi.org/project/pymisp/#files'
license=('BSD')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/dd/36/c46293817457f8b04e58e6c0620931ae084bc05e43db2af797430685b7cd/$_pkgname-$pkgver.tar.gz")
sha512sums=('3e38aee17a52f8ef4cb186cfb6f0a64eed2f14809022fcd1a1447ac268b0e1fe0765e487612821eaff58b44dde4747d63a9e3ecc47f1b81b17926f5625882978')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  python setup.py build
}

package_python-pymisp() {
  depends=('python' 'python-six' 'python-dateutil' 'python-jsonschema'
           'python-requests' 'python-deprecated')
  optdepends=('python-virustotal-api: VirusTotal support')

  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

