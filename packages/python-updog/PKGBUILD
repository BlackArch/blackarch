pkgname=python-updog
_pkgname=updog
pkgver=2.0.1
pkgrel=2
pkgdesc="A replacement for Python's SimpleHTTPServer."
arch=('any')
url='https://pypi.org/project/updog/#files'
license=('MIT')
depends=('python' 'python-colorama' 'python-flask' 'python-flask-httpauth'
         'python-werkzeug' 'python-pyopenssl')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('a1ace685d84db820d9c6278ae1d9be1470bbdbc5fd58261df005d351e6dd3d016cc76b41797cf8a911c6ca076417677cff1bcfa67f8ada7c518a9c144f8f3cdb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

