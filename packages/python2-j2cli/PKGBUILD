pkgname=python2-j2cli
pkgver=0.3.7
pkgrel=1
pkgdesc='Command-line interface to Jinja2 for templating in shell scripts.'
url='https://github.com/kolypto/j2cli'
license=('BSD')
arch=('any')
depends=('python2')
makedepends=('python2' 'python2-setuptools')
source=("https://files.pythonhosted.org/packages/4e/77/c7bb1fd06f33d2b43d8cbd4044c98cab872db720dccd9d858148d35e2754/j2cli-0.3.7.tar.gz")
sha512sums=('cf819c3abdc240a788f705015a964aa23b2a77a3e0f135824f11e6e077deaea1ed81b2e6e7b385c0bb0a4d0db0c1b1c1e65f98c56703c58df59b9e7e6749bb09')

build() {
  cd "j2cli-$pkgver"

  python2 setup.py build
}

package() {
  cd "j2cli-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

