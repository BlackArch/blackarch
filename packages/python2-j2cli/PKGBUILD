pkgname=python2-j2cli
pkgver=0.3.6
pkgrel=1
pkgdesc='Command-line interface to Jinja2 for templating in shell scripts.'
url='https://github.com/kolypto/j2cli'
license=('BSD')
arch=('any')
depends=('python2')
makedepends=('python2' 'python2-setuptools')
source=("https://files.pythonhosted.org/packages/16/25/1b54ea154fd6d5f29e4d030799c11db61f828745227185b10e6fcbf9905b/j2cli-0.3.6.tar.gz")
sha512sums=('4647e98008eff5bee0d40a3070b5bb67f6c716615e151123346653926c9bd8fa82737716109d2eabf238d61441889805ffd43dc55dc924c89179c73e3267511b')

build() {
  cd "j2cli-$pkgver-0"

  python2 setup.py build
}

package() {
  cd "j2cli-$pkgver-0"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

