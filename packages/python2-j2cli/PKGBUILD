pkgname=python2-j2cli
pkgver=0.3.9
pkgrel=1
pkgdesc='Command-line interface to Jinja2 for templating in shell scripts.'
url='https://github.com/kolypto/j2cli'
license=('BSD')
arch=('any')
depends=('python2')
makedepends=('python2' 'python2-setuptools')
source=("https://files.pythonhosted.org/packages/cd/7f/bdc8a34dfef0aa7bef2f8253bcd4ca4998916b1b3af20c9472f6e01b544c/j2cli-0.3.9.tar.gz")
sha512sums=('a22c68c6d91a72973d268da3d4257193b3c85af7dadd1904e8dcd3750c1a26a01079366ad83a21325c096efca96f61995fb624ae034a9a1daad6a4871da3429b')

build() {
  cd "j2cli-$pkgver"

  python2 setup.py build
}

package() {
  cd "j2cli-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

