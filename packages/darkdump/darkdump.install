post_install() {
  set -e
  cd /usr/share/darkdump
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root="/usr/share/darkdump" --prefix='venv' \
      -r requirements.txt
}

post_upgrade() {
  post_install "$@"
}

post_remove() {
  # /usr/share/darkdump/venv
  rm -r /usr/share/darkdump
}

