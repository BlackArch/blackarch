# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=beroot
pkgver=1.0.1.r101.gc1ce228
pkgrel=1
pkgdesc='A post exploitation tool to check common misconfigurations to find a way to escalate our privilege.'
arch=('any')
groups=('blackarch' 'blackarch-exploitation')
url='https://github.com/AlessandroZ/BeRoot'
license=('custom:unkown')
source=("git+https://github.com/AlessandroZ/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/$pkgname"

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname" *.md

  rm *.md

  cp -a * "$pkgdir/usr/share/$pkgname" 
}
