pkgname=drupwn
pkgver=1.0.1
pkgrel=1
epoch=1
pkgdesc='Drupal enumeration & exploitation tool.'
groups=('blackarch' 'blackarch-webapp' 'blackarch-exploitation' 'blackarch-scanner')
arch=('any')
url='https://github.com/immunIT/drupwn'
license=('GPL3')
depends=('python' 'python-argparse' 'python-requests' 'python-prompt_toolkit'
         'python-veryprettytable' 'python-pysocks')
source=("https://github.com/immunIT/drupwn/archive/$pkgver.tar.gz")
sha512sums=('0e66c89b1ef4295a40bdb893abc0b465caf2f34aacedcb6904e0dacd9e1a1001c4c65cd04584ee5d12f1c8f352777ea37ccf00888c8acc514432170c0f8a1851')

build() {
  cd "$pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

