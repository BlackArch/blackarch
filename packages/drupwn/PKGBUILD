pkgname=drupwn
pkgver=1.0.2
pkgrel=1
epoch=1
pkgdesc='Drupal enumeration & exploitation tool.'
groups=('blackarch' 'blackarch-webapp' 'blackarch-exploitation' 'blackarch-scanner')
arch=('any')
url='https://github.com/immunIT/drupwn'
license=('GPL3')
depends=('python' 'python-argparse' 'python-requests' 'python-prompt_toolkit'
         'python-veryprettytable' 'python-pysocks')
source=("https://github.com/immunIT/drupwn/archive/$pkgver.tar.gz")
sha512sums=('b7ee78ab6de82ecb6b3666445b0ecfaca20ec12c4e29b5737fcc756eaec4fd9ef4546919ca764c23ebbace0655ddf0288503c4e23352681897673adf5e13f843')

build() {
  cd "$pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

