pkgname=python-stix2-patterns
_pkgname=stix2-patterns
pkgver=1.3.2
pkgrel=1
pkgdesc='A software tool for checking the syntax of the Cyber Threat Intelligence (CTI) STIX Pattern expressions.'
arch=('any')
url='https://pypi.org/project/stix2-patterns/'
license=('BSD')
depends=('python' 'python-six' 'python-antlr4-python3-runtime')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('5f40f68b32c1fb939db7d3eca9546586f9b85591f8f878df992bbd199dbd92f1537d70e1f0d357684fc207392deb5153219d934d7f650d384e0817d830c80f15')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
