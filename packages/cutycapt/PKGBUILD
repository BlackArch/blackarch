pkgname=cutycapt
_pkgname=CutyCapt
pkgver=11.0
pkgrel=1
epoch=3
groups=('blackarch' 'blackarch-recon')
pkgdesc="A Qt and WebEngine-based command-line utility that captures a web page's rendered output."
arch=('x86_64' 'aarch64')
url='https://cutycapt.sourceforge.net/'
license=('GPL-3.0-or-later')
depends=('qt6-base' 'qt6-webengine' 'qt6-webchannel' 'qt6-svg')
makedepends=('cmake' 'ninja')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('a50b52626c6caba48ec593dff2d4a5395e34c098359adadf92b82ca0e34085cc5c0f8fb2a0c64b5730f7f4475d0c154ac057ce5f94588c8bf01b3cdc571c5362')


build() {
  cd "$_pkgname-$pkgver"

  cmake -S . -B build -GNinja
  ninja -C build
}

package() {
  cd "$_pkgname-$pkgver"

  install -Dm 755 build/$pkgname "$pkgdir/usr/bin/$pkgname"
}

