pkgname=sagan-rules
pkgver=2.0.2
pkgrel=1
epoch=1
pkgdesc='Rules package for Sagan.'
arch=('any')
url='https://github.com/quadrantsec/sagan-rules/'
license=('GPL')
source=("https://github.com/quadrantsec/sagan-rules/archive/refs/tags/v$pkgver.tar.gz")
sha512sums=('d0ef412ee32feafbb9a5b1f2c4b50e535fdd9e19798a06196beb07b2bafab9fdee7a563edf4b9e18f545a99f062c69e5f86ab02fff9ab941ab94b54a4d3c2813')

package() {
  cd "$pkgname-$pkgver"

  install -Dm 644 -t "$pkgdir/usr/share/sagan/rules" *.rules
}

