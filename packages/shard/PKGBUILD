# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=shard
pkgver=64.3e581fd
pkgrel=1
pkgdesc='A command line tool to detect shared passwords.'
groups=('blackarch' 'blackarch-recon')
arch=('any')
url='https://github.com/philwantsfish/shard'
license=('MIT')
depends=('java-environment')
makedepends=('git')
source=('git+https://github.com/philwantsfish/shard.git')
noextract=("shard.jar")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 644 -t "$pkgdir/usr/$pkgname/$pkgname/" "shard.jar"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
exec java -jar /usr/share/$pkgname/shard.jar "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

