pkgname=python-viv-utils
_pkgname=viv_utils
pkgver=0.6.11
pkgrel=1
pkgdesc='Utilities for binary analysis using vivisect.'
arch=('any')
url='https://pypi.org/project/viv-utils/#files'
license=('custom:unknown')
depends=('python' 'python-funcy' 'python-argparse' 'python-pefile' 'vivisect'
         'python-intervaltree' 'python-python-flirt')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/63/2e/a3b3f6c9249e07da489d5efc91d1f9fab5895ce16e371752e488ddd4de83/viv_utils-$pkgver.tar.gz")
sha512sums=('447daadc48c32d4c11eec26606c88b95f180c3d705dc581dc6fa43e7ffff6c4a6e13bb914cc1dce16bf08b30716cc9a756f0d9189fbaed8dfdbcb2382790e486')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

