license=(LGPL2.1)
depends=(ruby pango ruby-cairo gobject-introspection ruby-cairo-gobject=$pkgver ruby-gobject-introspection=$pkgver)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
