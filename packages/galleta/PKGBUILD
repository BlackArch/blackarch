pkgname=galleta
pkgver=20040505_1
pkgrel=7
pkgdesc="Examine the contents of the IE's cookie files for forensic purposes."
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-forensic')
url='https://www.jonesdykstra.com/'
license=('GPL-2.0-or-later')
source=("https://sourceforge.net/projects/fast/files/Galleta/Galleta%20v$pkgver/galleta_$pkgver.tar.gz/download"
        "fix-build.patch")
sha512sums=('7c420a413371cd9d7d818941026bc6981c8a749b8d3c97a9f0fc867116f9e642a06ad2832ded6de08780ed24885c2de7e8b655400569cb7ae56844161308dc3d'
            '97d71ed03385f74300da54c7c0878ae41a0c95a61d6a1fe8e91116787b145bd7595831a7da5a353ac1902cfea453d1d9c40c75c4b6a5c469231268b463897b8b')

prepare() {
  cd "galleta_$pkgver"

  patch -p1 < ../fix-build.patch 
}

package() {
  cd "galleta_$pkgver/src"

  make install

  install -dm 755 "$pkgdir/usr"

  mv -v ../bin "$pkgdir/usr"
}

