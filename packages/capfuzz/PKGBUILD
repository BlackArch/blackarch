pkgname=capfuzz
_pkgname=CapFuzz
pkgver=34.97ac312
pkgrel=1
pkgdesc='Capture, fuzz and intercept web traffic.'
arch=('any')
url='git+https://github.com/MobSF/CapFuzz'
license=('GPL3')
depends=('python' 'mitmproxy')
makedepends=('git')
source=("git+https://github.com/MobSF/CapFuzz.git")
sha512sums=('SKIP')

prepare() {
  cd $_pkgname

  #Fix version dependency
  sed -i 's/mitmproxy==3.0.2/mitmproxy/g' setup.py
}

package() {
  cd $_pkgname

  python setup.py install --root="$pkgdir" --optimize=1
}

