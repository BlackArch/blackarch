pkgname=orakelcrackert
pkgver=5.e16f430
pkgrel=1
pkgdesc="This tool can crack passwords which are encrypted using Oracle's latest SHA1 based password protection algorithm."
url='https://github.com/vanhauser-thc/THC-Archive/blob/master/Tools/thc-orakelcrackert11g.tar.gz'
groups=('blackarch' 'blackarch-windows' 'blackarch-cracker')
license=('custom')
arch=('any')
source=('git+https://github.com/vanhauser-thc/THC-Archive.git')
#DLAGENTS=("https::/usr/bin/curl -k -o %o %u")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  rm thc-orakelcrackert11g.tar.gz

  cp -a * "$pkgdir/usr/share/$pkgname/"
}

