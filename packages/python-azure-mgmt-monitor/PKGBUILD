pkgname=python-azure-mgmt-monitor
_pkgname=azure-mgmt-monitor
pkgver=5.0.1
pkgrel=2
pkgdesc='Microsoft Azure Monitor Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-monitor/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.zip")
sha512sums=('0e705866ac774e96b168debc4706ddbe5984ff91752b8e08b9942a73b350918d2b90ae12217fb9a9cafdb4ff0dbe16ee23e03da41ece9c2169cd7ead068426dd')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

