pkgname=python-splunk-sdk
_pkgname=splunk-sdk
pkgver=1.7.1
pkgrel=1
pkgdesc='The Splunk Software Development Kit for Python.'
arch=('any')
url='https://pypi.org/project/splunk-sdk/#files'
depends=('python')
makedepends=('python-setuptools')
license=('Apache')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/17/46/8a9555c4dc914e7a9d2db2ad3e3120e81f258b2ff5b04f37746ec0776002/$_pkgname-$pkgver.tar.gz")
sha512sums=('ee5e0a3f609dfd8eda04d75341a6f8ac475f9ce93e90dbc91259cd345b8ee12a5f24d2a75aa252f789ab79be40ff2cdf729f01ad1703609ccbe97aae3bed44b0')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

