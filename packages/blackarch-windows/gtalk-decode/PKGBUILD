pkgname=gtalk-decode
pkgver=0.1
pkgrel=7
groups=('blackarch' 'blackarch-windows' 'blackarch-crypto' 'blackarch-cracker')
pkgdesc='Google Talk decoder tool that demonstrates recovering passwords from accounts.'
arch=('any')
url='http://packetstormsecurity.com/files/119154/Google-Talk-Decoder.html'
license=('custom:unknown')
makedepends=('unzip')
source=('https://dl.packetstormsecurity.net/Win/gtalk_decode.zip')
sha512sums=('226e0c9bed74533e2e8a054ef41239a0e4b68ead0645047d9a7ad82b2ce936a06817eddfee72a64f36744bf8e9eebcf509bac1b7ac8059e74cdbbac6f7a7aadb')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm gtalk_decode.zip

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

