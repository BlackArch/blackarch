pkgname=regreport
pkgver=1.6
pkgrel=1
pkgdesc='Windows registry forensic analysis tool.'
groups=('blackarch' 'blackarch-windows' 'blackarch-forensic')
arch=('any')
makedepends=('p7zip' 'curl')
url='https://www.gaijin.at/dlregreport.php'
source=("$pkgname.7z::https://www.gaijin.at/getit?id=registryreport&vk=49hi8h_8dxyIR&ld=1")
DLAGENTS=("https::/usr/bin/curl -A 'Mozilla' -fLC - --retry 3 --retry-delay 3 -o %o %u")
sha512sums=('258028c957b0c133a05d69b29b607337a8a58840678ba428701ebb84e03c76045f35d9d88eda80ecb529b95f78ede91676f5eb35255b4554135f487f83ce6696')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname/"

  7z e -y "$pkgname.7z"

  rm -rf "$pkgname.7z"

  cp -a * "$pkgdir/usr/share/windows/$pkgname/"
}

