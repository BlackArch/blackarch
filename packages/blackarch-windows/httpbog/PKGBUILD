pkgname=httpbog
pkgver=1.0.0.0
pkgrel=5
groups=('blackarch' 'blackarch-windows' 'blackarch-dos')
pkgdesc='A slow HTTP denial-of-service tool that works similarly to other attacks, but rather than leveraging request headers or POST data Bog consumes sockets by slowly reading responses. '
url='http://sourceforge.net/projects/httpbog/'
arch=('any')
license=('custom:unknown')
source=("$pkgname.zip::http://downloads.sourceforge.net/project/httpbog/HTTPBog$pkgver.zip")
sha512sums=('cf5933226f4d74dbe16583d1591470efaba9977dc71d6817882bdc47eabec905ca18aa61fa146c96e8c0fe4c56c8b173bac4509e84750cc6f481cfd8a60268b0')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

