pkgname=pkgcheck-arch
_pkgname=pkgcheck_arch
pkgver=0.1.5
pkgrel=1
pkgdesc="A bashate fork for Arch Linux's PKGBUILDs."
arch=('any')
url='https://github.com/FFY00/pkgcheck'
license=('Apache-2.0')
depends=('python-pbr')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${pkgname::1}/$pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('73ce790d058c4bdb3ffb885ba704e6b27d578a47a31ddc08856717632f064f002108a21a0e7ad7242d1bf09779cdeb8eb894535a28fb3f22c02f7b2804c6c5ab')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

