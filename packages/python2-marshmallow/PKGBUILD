pkgname=python2-marshmallow
_pkgname=marshmallow
pkgver=2.20.1
pkgrel=4
pkgdesc='A lightweight library for converting complex datatypes to and from native Python datatypes.'
url='https://pypi.org/project/marshmallow/#files'
arch=('any')
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://github.com/marshmallow-code/marshmallow/archive/$pkgver.tar.gz")
sha512sums=('f4d09a8cfc99403b80390e78d27f52d425d01a9bd91da5984d1cc437659984ca7fac1c9badb0e6aca533243184ceaa02be56acd3b210b10c800ba2031a15577e')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

