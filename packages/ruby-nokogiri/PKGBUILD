_gemname=nokogiri
pkgname=ruby-$_gemname
pkgver=1.6.8.1
pkgrel=2
pkgdesc=Nokogiri\ \(\é‹¸\)\ is\ an\ HTML,\ XML,\ SAX,\ and\ Reader\ parser
arch=(i686 x86_64)
url=http://nokogiri.org
license=(MIT)
depends=(ruby ruby-mini_portile2)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('63111f6eda5a7cbe442e2b6ec6c492250da9fa39'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.autotest,.cross_rubies,.editorconfig,.gemtest,.travis.yml,CHANGELOG.rdoc,CONTRIBUTING.md,C_CODING_STYLE.rdoc,Gemfile,LICENSE.txt,Manifest.txt,README.md,ROADMAP.md,Rakefile,STANDARD_RESPONSES.md,Y_U_NO_GEMSPEC.md,appveyor.yml,build_all,dependencies.yml,ext,patches,ports,suppressions,tasks,test,test_all}
}
