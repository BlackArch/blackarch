pkgname=ruby-nokogiri
_gemname='nokogiri'
pkgver=1.10.0
pkgrel=1
pkgdesc='An HTML, XML, SAX, and Reader parser.'
arch=('any')
license=('')
depends=('ruby-mini_portile2')
makedepends=('ruby-rdoc')
options=('!distcc')
url='http://nokogiri.org'
source=("https://rubygems.org/gems/nokogiri-$pkgver.gem")
sha512sums=('00a9307e5073a2246d51df4ad0567e503ed6064d45a125eedb09803012c7ff77c2068429a549fe42088f0155f711cd1a13081e4b9170ddfb24176ea8ae5d1544')
noextract=("nokogiri-$pkgver.gem")

package() {
  _gemdir=$(ruby -e 'puts Gem.default_dir')

  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri \
      -i "$pkgdir$_gemdir" nokogiri-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
      nokogiri-$pkgver.gem
  fi
}

