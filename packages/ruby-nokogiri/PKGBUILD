# Many thanks to anatol for quarry and gem2arch!
# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
pkgname='ruby-nokogiri'
_gemname='nokogiri'
pkgver='1.7.0.1'
pkgrel=1
pkgdesc="Nokogiri (é‹¸) is an HTML, XML, SAX, and Reader parser"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://nokogiri.org'
license=("MIT")
depends=('ruby' 'ruby-mini_portile2')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('0b1e17d544ea710c9efe1988f28885d9084e9779' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.autotest,.cross_rubies,.editorconfig,.gemtest,.travis.yml,CHANGELOG.md,CONTRIBUTING.md,C_CODING_STYLE.rdoc,Gemfile,LICENSE.txt,Manifest.txt,README.md,ROADMAP.md,Rakefile,STANDARD_RESPONSES.md,Y_U_NO_GEMSPEC.md,appveyor.yml,build_all,dependencies.yml,ext,patches,ports,suppressions,tasks,test,test_all}
  mkdir -p "$pkgdir$_gemdir/extensions/$CARCH/$(ruby -rubygems -e puts Gem.extension_api_version)/$_gemname-$pkgver/"
  touch "$pkgdir$_gemdir/extensions/$CARCH/$(ruby -rubygems -e puts Gem.extension_api_version)/$_gemname-$pkgver/gem.build_complete"
}
