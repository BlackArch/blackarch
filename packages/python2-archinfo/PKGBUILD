pkgname=python2-archinfo
pkgver=8.18.10.5
pkgrel=1
pkgdesc='UNKNOWN'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('custom:unknown')
depends=('python2' 'capstone' 'python2-pyelftools')
source=("https://files.pythonhosted.org/packages/c9/c0/890fcb5c33fcb32ed5af41e820dc1351357879278d7298e7472a934f5397/archinfo-$pkgver.tar.gz")
sha512sums=('64c7465c412225ed954a41d00a7037ed51389d950eca413757dea33f99367c4c8c02ce09e74a7dc74f573bea07bc77dbaacf2892b2c0dc61da5ec1c6f24c1765')

build() {
  cd "archinfo-$pkgver"

  python2 setup.py build
}

package() {
  cd "archinfo-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

