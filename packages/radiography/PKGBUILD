pkgname='radiography'
pkgver='2'
pkgrel=3
groups=('blackarch' 'blackarch-windows')
pkgdesc='A forensic tool which grabs as much information as possible from a Windows system.'
arch=('any')
url='http://www.security-projects.com/?RadioGraPhy'
license=('GPL')
source=("http://sbdtools.googlecode.com/files/RadioGraPhyV${pkgver}.zip")
sha1sums=('27b2c76742e32a949ddaf35073ced00fa5fd2930')

package() {
  cd "$srcdir"

  mkdir -p "$pkgdir/usr/share/windows/radiography"

  cp -a * "$pkgdir/usr/share/windows/radiography/"
}
