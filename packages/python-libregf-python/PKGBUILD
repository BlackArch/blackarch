pkgbase=python-libregf-python
pkgname=('python2-libregf-python' 'python-libregf-python')
pkgver=20190802
pkgrel=1
pkgdesc='Python bindings module for libregf.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://pypi.python.org/pypi/libregf-python/'
license=('LGPL3')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/72/b0/5d028dd8be3713c4a8cc05fdb4e31e62ef20c87e28355d6f9ac580694ced/$_pkgname-$pkgver.tar.gz")
sha512sums=('bcbe975d986be0a6ca3d755506d34bf5abeff2d9d7702386f24625fab3baeccd41d6d784be6c429278d2b8383807fcaa4e8cad2af7d2f4249f1b958afacb3c12')

package_python2-libregf-python() {
  depends=('python2')

  cd "libregf-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

package_python-libregf-python() {
  depends=('python')

  cd "libregf-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

