pkgname=pathod
pkgver=0.9.2
pkgrel=1
pkgdesc="Crafted malice for tormenting HTTP clients and servers"
arch=('i686' 'x86_64')
url="http://pathod.net/"
license=('custom')
depends=('python2' 'python2-flask')
source=("http://mitmproxy.org/download/pathod-$pkgver.tar.gz")
md5sums=('2280f543b923ebf65c5a951826e31593')

build() {
  cd "$srcdir/pathod-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/pathod-$pkgver"

  # Base directories
  install -dm755 "$pkgdir/usr/share/licenses/pathod"
 
  # Docs
  install -m644 LICENSE "$pkgdir/usr/share/licenses/pathod"

  #installing pathod and pathoc
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

