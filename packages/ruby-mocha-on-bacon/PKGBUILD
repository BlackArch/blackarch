pkgname=ruby-mocha-on-bacon
_gemname=${pkgname#ruby-}
pkgver=0.2.2
pkgrel=0
pkgdesc="A Mocha adapter for Bacon"
arch=('any')
license=('custom')
depends=('ruby' 'ruby-mocha>=0.13.0')
url='https://github.com/alloy/mocha-on-bacon'
source=("http://rubygems.org/downloads/mocha-on-bacon-$pkgver.gem")
md5sums=('d7111b853d9a1797c009be0e71e0b53c')
noextract=("mocha-on-bacon-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" mocha-on-bacon-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" mocha-on-bacon-$pkgver.gem
  fi
}
