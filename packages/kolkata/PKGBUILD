pkgname=kolkata
pkgver=3.0
pkgrel=10
pkgdesc='A web application fingerprinting engine written in Perl that combines cryptography with IDS evasion.'
arch=('any')
groups=('blackarch' 'blackarch-fingerprint' 'blackarch-webapp')
url='https://www.blackhatlibrary.net/Kolkata'
license=('GPL-2.0-or-later')
depends=('perl' 'perl-libwhisker2' 'perl-yaml-libyaml' 'perl-yaml')
source=("https://web.archive.org/web/20130901155342if_/http://www.blackhatlibrary.net/releases/$pkgname.tgz")
sha512sums=('edbb4582c642ace1367be6367ce38d44354e91e28d7490b80f7499f9c5edd2ab6358eb3a480c8951f1864469495491bd3264c6b06de94e991163039ceef9475a')

package() {
  cd $pkgname

  install -Dm 755 "$pkgname.pl" "$pkgdir/usr/bin/$pkgname"
}

