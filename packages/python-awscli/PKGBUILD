pkgname=python-awscli
_pkgname=awscli
pkgver=1.20.3
pkgrel=1
pkgdesc='This package provides a unified command line interface to Amazon Web Services.'
arch=('any')
url='https://pypi.org/project/awscli/'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('e2910153b55d2e2053e317b1f22fb2248f329b3ca6e98464a359aa7267a9d99f0828bc2b7a80ad34ebc19c46a55df015be3fb1f60d4b815de7e2d6d236f25f96')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

