pkgname=python-ebooklib
_pkgname=EbookLib
pkgver=0.20
pkgrel=2
pkgdesc='Ebook library which can handle EPUB2/EPUB3 and Kindle format.'
url='https://pypi.org/project/EbookLib/#files'
arch=('any')
license=('AGPL')
depends=('python' 'python-lxml' 'python-six')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('c8ce1a67832fc5ae7c235c79c918d55208a51a10beef81151118323919a86df5b84f9fba5783d7f8f6153f0b8451e3797eb2c63a9a58fa8f388a8dfb986ad246')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

