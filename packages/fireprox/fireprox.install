post_install() {
  set -e
  cd /usr/share/fireprox
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/fireprox --prefix=venv \
      -r requirements.txt
}

post_upgrade() {
  set -e
  cd /usr/share/fireprox
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/fireprox --prefix=venv \
      -r requirements.txt -U
}

post_remove() {
  rm -rf /usr/share/fireprox
}
