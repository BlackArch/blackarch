pkgname=netstumbler
pkgver=0.4.0
pkgrel=2
pkgdesc='Well-known wireless AP scanner and sniffer.'
url='http://www.netstumbler.com/downloads/'
groups=('blackarch' 'blackarch-windows' 'blackarch-wireless')
license=('custom:unknown')
arch=('any')
source=("http://downloads.netstumbler.com/downloads/netstumblerinstaller_${pkgver//./_}.exe")
noextract=("netstumblerinstaller_${pkgver//./_}.exe")
sha512sums=('01980eb9c871506f7ef3db721275053fbf859b52656939df3d8a2efe44b7ea3d230cd6e54fb18f9d325bc0063ced6e0918099fc0682913aefcda6f80baa050d8')

package() {
  install -Dm 644 netstumblerinstaller_${pkgver//./_}.exe \
    "$pkgdir/usr/share/windows/$pkgname/netstumblerinstaller_${pkgver//./_}.exe"
}

