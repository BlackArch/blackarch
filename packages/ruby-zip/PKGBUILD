# See COPYING for license details.
pkgname='ruby-zip'
_gemname='zip'
pkgver='2.0.2'
pkgrel=5
pkgdesc="zip is a Ruby library for reading and writing Zip files"
arch=('any')
url='http://github.com/postmodern/rubyzip2'
license=("")
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('6fabc32da123f7013b2db804273df428a50bc6a4' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{ChangeLog.txt,NEWS.txt,README,Rakefile,TODO.txt,samples,test}
}
