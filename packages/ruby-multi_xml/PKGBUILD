pkgname=ruby-multi_xml
_pkgname=multi_xml
pkgver=0.8.1
pkgrel=1
pkgdesc='Provides swappable XML backends utilizing LibXML, Nokogiri, Ox, or REXML.'
arch=('any')
url='https://rubygems.org/gems/multi_xml'
license=('MIT')
depends=('ruby' 'ruby-bundler')
makedepends=('ruby-rdoc')
source=("https://rubygems.org/gems/$_pkgname-$pkgver.gem")
sha512sums=('cafead0e9dac7a31a054889507a39585be069b403e6593be6e01d48174b8dac97396d91e15d8907b3bf336ce377300c508adc0f67972039aa88065d65122d00c')
noextract=("$_pkgname-$pkgver.gem")

package() {
  _gemdir="$(ruby -e 'puts Gem.default_dir')"

  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri \
      -i "$pkgdir$_gemdir" "$_pkgname-$pkgver.gem"
  else
    gem install --ignore-dependencies --no-user-install -i "$pkgdir/$_gemdir" \
      -n "$pkgdir/usr/bin" "$_pkgname-$pkgver.gem"
  fi
}

