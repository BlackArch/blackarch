# See COPYING for license details.

pkgname=sipshock
pkgver=7.6ab5591
pkgrel=7
groups=('blackarch' 'blackarch-scanner' 'blackarch-voip')
pkgdesc='A scanner for SIP proxies vulnerable to Shellshock.'
arch=('x86_64' 'aarch64')
url='https://github.com/zaf/sipshock'
license=('GPL3')
makedepends=('git' 'go')
source=("git+https://github.com/zaf/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod init go.mod
  GOPATH="$srcdir" go mod tidy
  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" Readme.md
}

