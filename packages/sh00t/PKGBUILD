# See COPYING for license details.

pkgname=sh00t
pkgver=149.6106946
pkgrel=1
pkgdesc='A Testing Environment for Manual Security Testers.'
arch=('any')
url='https://github.com/pavanw3b/sh00t'
license=('MIT')
depends=('python' 'python-django-rest-framework' 'python-pytz' 'python-django-tables2')
makedepends=('git')
source=("git+https://github.com/pavanw3b/$pkgname.git"
        "sh00t.install")
sha512sums=('SKIP'
            '3f93d0799f3ccaaf85fef58daf636bef931b363c5d2b3948bc768a86c8d5d0b50aebc6c96cb946e5f225d456a17b6d0eaf7c5fc00f016ead0039fa0f5c549502')
install="$pkgname.install"

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/bin/"
  install -dm 755 "$pkgdir/usr/share/$pkgname/"

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm 644 README.md "$pkgdir/usr/share/doc/$pkgname/README"
  cp -a --no-preserve=ownership * "$pkgdir/usr/share/$pkgname"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
cd /usr/share/$pkgname
exec python manage.py "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

