pkgname=python-pymemcache
_pkgname=pymemcache
pkgver=3.5.1
pkgrel=1
pkgdesc='A comprehensive, fast, pure-Python memcached client.'
arch=('any')
url='https://pypi.org/project/pymemcache/'
license=('Apache')
depends=('python' 'python-six')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/08/7f/ada57782302075b17f66192883379889a50df9b44635e33f19b687ab73e5/$_pkgname-$pkgver.tar.gz")
sha512sums=('da69189e7fadc8417395075d033ed3cb72a485d4f2c4ec4deb5e2ec3cb43a34ee5558111903399f27b70f618be771f8c686513c7334d2ef507a0db959c4aa27b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
