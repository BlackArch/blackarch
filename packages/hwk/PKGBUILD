pkgname=hwk
pkgver=0.4
pkgrel=1
pkgdesc="collection of packet crafting and wireless network flooding tools"
arch=('i686' 'x86_64')
url="http://www.nullsecurity.net/"
license=('GPLv2')
depends=('libpcap')
makedepends=()
source=("http://nullsecurity.net/tools/wireless/hwk-0.4.tar.gz")
md5sums=('e6966ea245e44d2ba33e57da24e1c00c')

build() {
  cd "$srcdir/hwk-0.4"
  make
}

package() {
  cd "$srcdir/hwk-0.4"

  install -D -m755 "bin/hawk" "$pkgdir/usr/bin/hawk"
  install -D -m755 "bin/eagle" "$pkgdir/usr/bin/eagle"
  install -D -m644 "doc/COPYING" "$pkgdir/usr/share/licenses/hwk/LICENSE"
}
