pkgname=python2-cfscrape
pkgver=2.0.3
pkgrel=1
epoch=1
pkgdesc="A small Python module to bypass Cloudflare's anti-bot page, using Requests."
arch=('any')
url='https://pypi.org/project/cfscrape/#files'
license=('MIT')
depends=('python2' 'python2-requests' 'python2-js2py')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/a2/38/92772d302670566f5b7045f5407cc7bbc3b74314e50c8a10737d5bdcdc3a/cfscrape-2.0.3.tar.gz")
sha512sums=('fbc04c03dc53ed02b5f31d3c33c8d5e8de2a7dffa021f1794f94c2c03717cd1a6503e8537499ccfbd2c06cf9dcf9986b1f0a245c36490ae3d7124afacbbf60f2')

build() {
  cd "cfscrape-$pkgver"

  python2 setup.py build
}

package() {
  cd "cfscrape-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

