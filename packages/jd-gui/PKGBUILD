# See COPYING for license details.

pkgname=jd-gui
pkgver=149.acd511f
pkgrel=1
groups=('blackarch' 'blackarch-decompiler' 'blackarch-reversing')
pkgdesc='A standalone graphical utility that displays Java source codes of .class files.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://java.decompiler.free.fr/?q=jdgui'
license=('custom')
depends=('gtk2')
depends=('lib32-gtk2' 'lib32-libsm' 'lib32-libxxf86vm')
options=('!strip')
source=('git+https://github.com/java-decompiler/jd-gui.git')
noextract=("jd-gui.jar")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 644 "jd-gui.jar" \
    "$pkgdir/usr/share/$pkgname/$pkgname.jar"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
exec java -jar /usr/share/$pkgname/$pkgname.jar "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

