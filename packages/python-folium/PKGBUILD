pkgname=python-folium
_pkgname=folium
pkgver=0.20.0
pkgrel=2
pkgdesc='Make beautiful maps with Leaflet.js & Python.'
arch=('any')
url='https://pypi.org/project/folium/#files'
license=('MIT')
depends=('python' 'python-branca' 'python-jinja' 'python-numpy'
         'python-requests' 'python-xyzservices')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('1611919a6614d06ee53db5b42f5abc095427cf7543e3a2ebc75189b2469c57f53229ee5dbfd81efa71bcfb012584822e7136d38f5fc5ef5feb257867933feb5e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

