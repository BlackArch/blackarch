# Mainrainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=simple_oauth
pkgname=ruby-$_gemname
pkgver=0.2.0
pkgrel=2
pkgdesc="Simply builds and verifies OAuth headers"
arch=('any')
url="https://github.com/laserlemon/simple_oauth"
license=('MIT')
depends=('ruby')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('667c3f24f101ad072ef80f91774c7c82')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
