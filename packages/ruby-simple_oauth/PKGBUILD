# See COPYING for license details.
pkgname='ruby-simple_oauth'
_gemname='simple_oauth'
pkgver='0.3.1'
pkgrel=1
pkgdesc="Simply builds and verifies OAuth headers"
arch=('any')
url='https://github.com/laserlemon/simple_oauth'
license=("MIT")
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('21b0dbe1cd8a145d1f7b7b0c08c372f8a620b076' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.md" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.rspec,.rubocop.yml,.travis.yml,.yardopts,CONTRIBUTING.md,Gemfile,LICENSE.md,README.md,Rakefile,simple_oauth.gemspec}
}
