pkgbase='spf'
pkgname='python-spf'
_pkgname=pyspf
pkgver=2.0.14
pkgrel=1
pkgdesc='email sender validation.'
arch=('any')
url='https://pypi.org/project/pyspf/'
license=('PSF')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/p/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('ca801a899a80c18cd2c6bb8c125817c29898189805040cce8d29ace7a5aa34b43b9d10545150a1f39abd7bc49cd8da4fe753a04ac9b911e7bb9d77473753eeee')

prepare() {
  cp -a "$_pkgname-$pkgver"{,-2}
}

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package_python-spf() {
  depends=('python-dnspython')

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

