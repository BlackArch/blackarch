pkgname=python-azure-mgmt-storage
_pkgname=azure-mgmt-storage
pkgver=5.0.0
pkgrel=1
pkgdesc='Microsoft Azure Storage Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-storage/#files'
license=('MIT')
depends=('python' 'python-azure-common' 'python-msrestazure' 'python-msrest')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c4/9f/aea6c2350818ada490fa6ed82e385711aa5fbdcfb67d74bc700b3ed215ae/$_pkgname-$pkgver.zip")
sha512sums=('7cb9508665bd39824c79f1cc79c18b5ca1595bf5217d2deb3e58930d91910ca5b98d0851736a8d9778ed129227b8ebffe34e814aa0e9b146b9ac15c6cf9f629a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

