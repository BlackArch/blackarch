pkgname=python-azure-mgmt-storage
pkgver=4.1.0
pkgrel=1
pkgdesc='Microsoft Azure Storage Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-storage/#files'
license=('MIT')
depends=('python' 'python-azure-common' 'python-msrestazure' 'python-msrest')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c2/9d/96cbce74d6d6544ae282c3a008a08794de38d7ab208b993d07af5c932219/$_pkgname-$pkgver.zip")
sha512sums=('37d20ddde816b4c5dedffbc683ff20568245cf3cf549090a6d2a2731270568fce96c226dfbf51f28c6c4fa2abe1af78c2e1701d9357da74f5fb31ad69a39d98e')

build() {
  cd "azure-mgmt-storage-$pkgver"

  python setup.py build
}

package() {
  cd "azure-mgmt-storage-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

