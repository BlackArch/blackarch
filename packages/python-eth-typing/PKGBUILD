pkgname=python-eth-typing
_pkgname=eth-typing
pkgver=5.0.0
pkgrel=2
pkgdesc='Common type annotations for ethereum python packages.'
url='https://pypi.org/project/eth-typing/#files'
arch=('any')
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('2be1b3ced9718882123d743c60f49dfb28d306bcb46a6774ae4bd3168c3762d663a0234cf1345620e95391c7b8498d86275ee4c2289cf522833f51a193fbf09b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

