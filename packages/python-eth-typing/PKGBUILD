pkgname=python-eth-typing
_pkgname=eth-typing
pkgver=4.2.3
pkgrel=1
pkgdesc='Common type annotations for ethereum python packages.'
url='https://pypi.org/project/eth-typing/#files'
arch=('any')
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('4677998bb9b66b2362dc84ef9e7a71631c5c482a7114cc09febf2b009d7d64a41f156f28ae83d71aa07fef9dcf33fbb2bdebc9ed643dffc20b30d7f16d923907')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

