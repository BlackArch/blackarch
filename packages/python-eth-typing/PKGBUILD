pkgname=python-eth-typing
_pkgname=eth-typing
pkgver=3.2.0
pkgrel=1
pkgdesc='Common type annotations for ethereum python packages.'
url='https://pypi.org/project/eth-typing/#files'
arch=('any')
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('edbb3df28ad77eab7633b36bb383e237571726c4c8f691bb3fe3e2832a2c7733bb236f2ae2cf57c9cd051f33541ec307c912d193dcf863a4756913e67ba116b7')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

