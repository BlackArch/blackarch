pkgname='streamfinder'
pkgver=1.2
pkgrel=1
pkgdesc='Searches for Alternate Data Streams (ADS).'
groups=('blackarch' 'blackarch-windows')
arch=('any')
makedepends=('unrar' 'curl')
url='https://www.gaijin.at/en/dlstreamfind.php'

pkgver() {
  ver=$(curl -H 'User-Agent: Mozilla' https://www.gaijin.at/en/dlstreamfind.php | grep -P 'download_value' | grep -m1 -o -P '\d+\.\d+')

  echo "${ver}"
}

package() {
  targetDir="$pkgdir/usr/share/windows/streamfinder/"

  mkdir -p "${targetDir}"

  cd "${targetDir}"

  curl -L -H 'User-Agent: Mozilla' 'https://www.gaijin.at/getit.php?id=streamfind' -o './r.rar'

  unrar e './r.rar'

  rm -rf './r.rar'
}
