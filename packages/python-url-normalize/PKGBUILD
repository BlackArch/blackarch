pkgname=python-url-normalize
_pkgname=url-normalize
pkgver=1.4.1
pkgrel=1
pkgdesc='URL normalization for Python.'
arch=('any')
url='https://pypi.org/project/url-normalize/#files'
license=('custom:unknown')
depends=('python' 'python-six')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/34/e7/868caed68203c6930ca6ddfe382319cefcee52774da717e544b9e9530a1c/$_pkgname-$pkgver.tar.gz")
sha512sums=('4e29c4986cfe390f2fce67f3b1bb6fbc915e51c6a3b047d745951af5401596ef0e175e368eb8c1e2f8843d4c4d51470fda707f205fd99f08aaa07627698f4c5f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

