pkgname=ohrwurm
pkgver=0.1
pkgrel=2
pkgdesc="A small and simple RTP fuzzer"
url='http://mazzoo.de/'
arch=('i686' 'x86_64')
depends=('glibc')
license=('GPL')
groups=('blackarch' 'blackarch-analysis')
source=("git+https://github.com/mazzoo/ohrwurm")
md5sums=('SKIP')

prepare() {
  cd "$srcdir/ohrwurm"
  sed -i "s|-Wall|$CFLAGS|g" Makefile
}

build() {
  cd "$srcdir/ohrwurm"
  make
}

package() {
  cd "$srcdir/ohrwurm"
  install -Dm755 ohrwurm "$pkgdir/usr/bin/ohrwurm"
  install -Dm644 README "$pkgdir/usr/share/doc/ohrwurm/README"
}
