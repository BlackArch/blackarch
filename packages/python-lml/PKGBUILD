pkgname=python-lml
_pkgname=lml
pkgver=0.2.0
pkgrel=2
pkgdesc='Load me later. A lazy loading plugin management system.'
arch=('any')
url='https://github.com/chfw/lml/releases'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('e3a4298082d0072360942c52314143c463f0d0999b20db2d6b8aeab555e23e196a5687bfd4ac58b46f21b4924d1474ab01f09cb532a3dbf28c78eb5a58d99d20')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

