pkgname=python-censys
_pkgname=censys
pkgver=2.2.19
pkgrel=1
epoch=1
pkgdesc='Python library for interacting with Censys Search Engine (censys.io).'
arch=('any')
url='https://pypi.org/project/censys/#files'
license=('Apache-2.0')
depends=('python' 'python-requests' 'python-netaddr' 'python-backoff'
         'python-rich' 'python-urllib3' 'python-argcomplete')
makedepends=('python-build' 'python-installer' 'python-setuptools'
             'python-wheel' 'python-poetry')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('d70e4070c6e4f4b708ca65ebb1eb378cc1ad1a6745100efc664453cc3d454eb26a6adb4ffc988b943279f10c59d0a962a86f25666613f624c5263d6c8f595ab0')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --no-isolation
}

package() {
  cd "$_pkgname-$pkgver"

  python -m installer --destdir="$pkgdir" dist/*.whl
}

