# See COPYING for license details.

pkgname=mylg
pkgver=656.616fd53
pkgrel=2
groups=('blackarch' 'blackarch-networking' 'blackarch-recon'
        'blackarch-sniffer')
pkgdesc='Network Diagnostic Tool.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://github.com/mehrdadrad/mylg'
license=('MIT')
depends=('glibc' 'libpcap')
makedepends=('git' 'go-pie')
source=('git+https://github.com/mehrdadrad/mylg.git')
sha512sums=('SKIP')
_url='github.com/mehrdadrad/mylg'

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  install -dm 755 src/$_url && rm -rf src/$_url && mv mylg src/$_url &&
    cd src/$_url

  GOPATH="$srcdir" go get -d -t $_url
}

package() {
  install -dm 755 "$pkgdir/usr/bin"

  GOPATH="$srcdir" go build -v $_url

  install -Dm 755 "$srcdir/mylg" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 src/$url/README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm 644 src/$url/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

