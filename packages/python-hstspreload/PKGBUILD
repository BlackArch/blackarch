pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.6.23
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c8/14/4f39e45448f9c3f63f9e2f48fd550424440f914463d2c11927b657bfdd11/$_pkgname-$pkgver.tar.gz")
sha512sums=('4af66c228490e4a6defb32d114e6a63145caa2b5f9d03c03852a95cf2cc3fd6ee8d0c66d9c82e099433c2c5d4c9f16b48de32abd3ed8c8a5c13a5172c6f29f0e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

