pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.5.27
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/79/3d/ad353619f2486fc4df2c6fa0e51c8f5eb45650891616bdeedd1ae9c2c483/$_pkgname-$pkgver.tar.gz")
sha512sums=('fb61522978e32e24c3c603767e8e9885fbd6e093774b7aa8bdb1f982f49c61c80129a6222cdb91ab547ca121abfd645215ed7d23025be2b4759e9a0e281d919f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

