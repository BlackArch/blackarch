pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.7.7
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/a7/fc/f92b0edeaa70e4a88c48da597d8d456c21fa1a034de0f161fa5e304163e0/$_pkgname-$pkgver.tar.gz")
sha512sums=('6d35ab04556ef4a3bfac3686d7dff5bf6327f4afe723bcdc72894206a09c0b727bba7456f9b05b58b61f9c35975c9b897e28f09df0397bd676b8ac03fe712860')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

