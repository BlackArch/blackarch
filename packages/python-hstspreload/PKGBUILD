pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.3.31
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/09/49/eae1cf00ce07a525a969b3be55ac580c4207713eb4bae4096b691e8a3e5a/$_pkgname-$pkgver.tar.gz")
sha512sums=('64c66fa9c299f9ef810643088650c671e7e81f0d409a851294996600a13d4e7647f331cf996b063727a9069542425f1ea53ffc70918416fc962ec60135998791')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

