pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.7.22
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/17/17/5e558a8b1fbf6cf6b59a7bc13dce6402722f350091fc48944bd3c1947301/$_pkgname-$pkgver.tar.gz")
sha512sums=('d1a4da43bec4b7f147b173c2fbcc15096e0cb5d629f18c6ef0264e2cad5c5b1691749c2e57f8ef3c6acb3a62cf0d93fd40bd02975c1a9114ca5959b3c81fff8f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

