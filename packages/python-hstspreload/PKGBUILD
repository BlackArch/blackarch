pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.8.25
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ad/b5/fbb882167f842d34639e6070717b3b5be047bb462a6c426dafaf4a4e2957/$_pkgname-$pkgver.tar.gz")
sha512sums=('dfecce9ffd566948f97b0b87c87ba0f36d7c2dda66c44b3361b76bf5230ccb1cdff2a216a1fd50a2df00327bb4d60b7ab53d723caf4b4b85deb06d99fd4f6e79')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

