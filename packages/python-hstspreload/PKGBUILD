pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.8.12
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/16/69/b5254f29a7136dd8edb837ee6d1e5916fe91db389f386799bf18827ae98f/$_pkgname-$pkgver.tar.gz")
sha512sums=('131e0e3c81440cf09d65f79b65c4315182370eec95162ded3b17976b6b02450daddd8ea1c2e6cbd110e0a996d2c1e43d89d43e4f92645407d40514a70ea07bf1')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

