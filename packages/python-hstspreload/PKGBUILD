pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.7.14
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/e8/fc/a240ea012310205554f733bf3b3e4d0c9a0abd6d38f7db0888479e04dccf/$_pkgname-$pkgver.tar.gz")
sha512sums=('b97aec1ad15a25026bf51d931e6630d61ebfaf19bae424d027aee683c10bd63dbd09a678897fe211e8495d52959b0b7fd6766b3d5a3117ecc40a8256b29ae708')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

