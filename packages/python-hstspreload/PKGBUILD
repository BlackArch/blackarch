pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.4.23
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/93/bb/d2236343ee733654480659652dde7365ab0ec6b5d44fa4ef0bff240e5e2b/$_pkgname-$pkgver.tar.gz")
sha512sums=('4be7ff72a413c54e5a44f0cbacdb19b3571aacd986dec1e5f8c82657fe47615611b21aca23ea48d0f207691dc5b2ba98dbab53abf54c61f3d79d801880384e66')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

