pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.5.19
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/b4/11/8cea140e2d75406556c1568db66fe23ab7e4835746b52040f0e525d00938/$_pkgname-$pkgver.tar.gz")
sha512sums=('9e95ef0c49f739a3bb6b3dc48164ccc594eb0d2666a3c7eb3df0a971b0d334b8d9de66f3dace70870083df0826fb544fd4f297f7ab4cfaea46c029a6c63a4017')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

