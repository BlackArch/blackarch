pkgname=python-hstspreload
_pkgname=hstspreload
pkgver=2020.8.5
pkgrel=1
pkgdesc='Chromium HSTS Preload list as a Python package and updated daily.'
arch=('any')
url='https://pypi.org/project/hstspreload/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/5b/28/da6c8e4d1836623945c675bf7a52e30f47c8b9cf062eae3f56138d695767/$_pkgname-$pkgver.tar.gz")
sha512sums=('6dac414da7b4d90abbe3ba3f4e3d1db2e05df53310bda231c1a31013dc4c4632379ec45b9594a15040734dc48f773af424f2c3bd72bef61ddc4556c75cb9e038')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

