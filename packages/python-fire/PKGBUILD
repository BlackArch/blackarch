pkgname=python-fire
_pkgname=fire
pkgver=0.7.1
pkgrel=1
pkgdesc='A library for automatically generating command line interfaces.'
arch=('any')
url='https://pypi.org/project/fire/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('0cce927e14552fb9bdbfab73e32f7ef4665ff4bc9b134ee1b80f9c5b8752ab7db9f0353ebea92934288a273f7ab8be4188dc8b6e8922cb05e4b9d6997586e293')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

