# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=python-speechrecognition
pkgver=336.f89256b
pkgrel=1
pkgdesc='Library for performing speech recognition, with support for several engines and APIs, online and offline.'
arch=('any')
url='https://github.com/Uberi/speech_recognition'
license=('BSD')
depends=('python' 'python-pyaudio' 'pocketsphinx' 'flac' 'python-monotonic')
makedepends=('python-setuptools')
source=('git+https://github.com/Uberi/speech_recognition.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "speech_recognition"

  python setup.py build
}

package() {
  cd "speech_recognition"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

