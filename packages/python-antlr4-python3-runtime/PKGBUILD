pkgname=python-antlr4-python3-runtime
_pkgname=antlr4-python3-runtime
pkgver=4.9.3
pkgrel=1
pkgdesc='ANTLR 4.9.3 runtime for Python 3.6.3.'
arch=('any')
url='https://pypi.org/project/antlr4-python3-runtime/#files'
license=('BSD')
depends=('python' 'python-typing')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/3e/38/7859ff46355f76f8d19459005ca000b6e7012f2f1ca597746cbcd1fbfe5e/$_pkgname-$pkgver.tar.gz")
sha512sums=('234652e566a477328500a66be6c0e85c3f25b7255fea186e7121c8f2a75c9df10b73a79a05eae88cd29e73b73dfe96af096bd7130617cc634fb80aaa3f8fa63e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

