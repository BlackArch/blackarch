pkgname=python-pywavelets
_pkgname=PyWavelets
pkgver=1.4.1
pkgrel=2
pkgdesc='PyWavelets, wavelet transform module.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/PyWavelets/#files'
license=('MIT')
depends=('python' 'python-numpy')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/PyWavelets-$pkgver.tar.gz")
sha512sums=('6a37a717537f3c62c1ee3b1a8017a7ed1f2a231d05b20cbcfaaadbad0f20e6d6b7f24749d00b5a4ae04d7efac49943e1aa8d431eedf641c6b45b6cb99390c1f9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

