# See COPYING for license details.

pkgname=starkiller
pkgver=v1.10.0.r0.g16d4e2f
pkgrel=1
pkgdesc='A frontend for PowerShell Empire.'
arch=('x86_64')
groups=('blackarch' 'blackarch-exploitation' 'blackarch-backdoor'
        'blackarch-binary')
url='https://github.com/BC-SECURITY/Starkiller'
license=('MIT')
depends=('nodejs')
makedepends=('git' 'yarn' 'npm')
options=(!strip)
source=("git+https://github.com/BC-SECURITY/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {
  cd $pkgname

  _npmdir="$pkgdir/usr/lib/node_modules/"

  install -dm 755 "$_npmdir"

  cd "$_npmdir"

  npm install --user root -g --prefix "$pkgdir/usr" "$pkgname@"

  cd "$srcdir/$pkgname"

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" doc/* *.md

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

