pkgname=python2-nassl
pkgver=2.1.1
pkgrel=2
pkgdesc='Experimental OpenSSL wrapper for Python 2.7 and SSLyze.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://pypi.python.org/pypi/nassl'
license=('BSD')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/32/c9/d221fb22cb3e7914d8bf3aca00c31f2ec89c7840cabb0e384d499faa62b8/nassl-$pkgver-cp37-cp37m-win_amd64.whl")
sha512sums=('9c5db1c7aa807f7e111b3abeb3e0dd4a3ab5a9cb2dc2686b9777eac8110746f38fb7009e8aa5a513041f6401346e3501f3cc0de50d17341118ebb4736ae332ce')

build() {
  cd "$srcdir/nassl-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/nassl-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}
