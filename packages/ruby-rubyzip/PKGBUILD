# See COPYING for license details.

pkgname=ruby-rubyzip
_gemname=rubyzip
pkgver=3.2.2
pkgrel=1
pkgdesc='A ruby module for reading and writing zip files.'
arch=('any')
url='http://rubyzip.sourceforge.net/'
license=('BSD')
depends=('ruby')
makedepends=('rubygems' 'ruby-rdoc')
source=("https://rubygems.org/gems/$_pkgname-$pkgver.gem")
sha512sums=('80c373455fba0aca30e841ce4de546913530cca662acfe26d71c82e78201a0cf05c71ea107c7bba856f1ec140a1dba8c6f2c51bc8f066866279bf9bed1adde93')
noextract=("$_gemname-$pkgver.gem")

package() {
  _gemdir="$(ruby -e'puts Gem.default_dir')"

  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri \
      -i "$pkgdir$_gemdir" "$_gemname-$pkgver.gem"
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
      "$_gemname-$pkgver.gem"
  fi
}

