pkgname=python-hypercorn
_pkgname=Hypercorn
pkgver=0.8.2
pkgrel=1
pkgdesc='A ASGI Server based on Hyper libraries and inspired by Gunicorn..'
arch=('any')
url='https://pypi.org/project/hypercorn/#files'
license=('MIT')
depends=('python' 'python-h11' 'python-h2' 'python-priority' 'python-toml'
         'python-wsproto' 'python-typing_extensions')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/df/13/4a5e23606be4e6b54b7523103866fa484f8f82e158cf881a5f729bfef8d1/$_pkgname-$pkgver.tar.gz")
sha512sums=('1a6b52f2f1eecd8c7b075a22ed348a07b505f7b5b49b42a9d7bd1206bb142061b8963d7c19e63c6cae99c80d541d25615299b2433cffc65cbea26801cdccb435')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

