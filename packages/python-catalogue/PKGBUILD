pkgname=python-catalogue
_pkgname=catalogue
pkgver=2.0.5
pkgrel=1
pkgdesc='Library that makes it easy to add function (or object) registries to your code.'
arch=('any')
url='https://pypi.org/project/catalogue/'
license=('MIT')
depends=('python' 'python-pytest' 'python-zipp' 'python-typing-extensions'
         'python-mypy')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/72/3d/b2ae7704227ab15a25940bb07e69b3f4c48cada504af44617985afd14ab6/$_pkgname-$pkgver.tar.gz")
sha512sums=('13fc1a3be95fbd90b48d30a19c45527af118de0b879d6d15efd70e91dbaa3c1bbfa756c2dd26247940e5ae3d6029b6d33b5def27a5bdcc39915289eca851ba12')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

