pkgname=python2-ailment
_pkgname=ailment
pkgver=9.1.12332
pkgrel=1
pkgdesc='The angr Imtermediate Language.'
arch=('any')
url='https://pypi.org/project/ailment/#files'
license=('BSD-2-Clause')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('8a60fbdae6aea33acc2a425cdd0863e93fa5878a01f4e6818fd16cd12debb8e8f6c18c23988d9d501c797c1404030b5f7c5afe6a97d73fcb30966b7dc4fe08cd')


build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

