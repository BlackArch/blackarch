pkgname=python-aiosmb
_pkgname=aiosmb
pkgver=0.4.10
pkgrel=1
pkgdesc='Fully asynchronous SMB library written in pure python.'
arch=('any')
url='https://pypi.org/project/aiosmb/#files'
license=('MIT')
depends=('python' 'python-minikerberos' 'python-winsspi' 'python-six'
         'python-aiocmd' 'python-colorama')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('af422e8c4d9e0d6a659d86d5f9dc10dc89f967092d6636af1460815732a61cad8fb2250b3157456d7131301a5a82b19a988bd4050b0abbe67577506917d187e1')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
