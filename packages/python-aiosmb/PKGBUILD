pkgname=python-aiosmb
_pkgname=aiosmb
pkgver=0.2.20
pkgrel=1
pkgdesc='Fully asynchronous SMB library written in pure python.'
arch=('any')
url='https://pypi.org/project/aiosmb/#files'
license=('MIT')
depends=('python' 'python-minikerberos' 'python-winsspi' 'python-six'
         'python-aiocmd')
makedepends=('git' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/18/ef/a8aef33dd1acb5f4d1e1aa8ee265369db695dfa260f1476cfd2015e0e564/$_pkgname-$pkgver.tar.gz")
sha512sums=('ecbdd45817a5d6041e035d7296fb2de655983661c0d8e1212eb4989ddc9f7cfd8ce4a9f9156101f00a5307befa0104c39270c2f4a91c239b0bcaec82cdf46bda')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

