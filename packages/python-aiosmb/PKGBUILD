pkgname=python-aiosmb
_pkgname=aiosmb
pkgver=0.2.37
pkgrel=1
pkgdesc='Fully asynchronous SMB library written in pure python.'
arch=('any')
url='https://pypi.org/project/aiosmb/#files'
license=('MIT')
depends=('python' 'python-minikerberos' 'python-winsspi' 'python-six'
         'python-aiocmd')
makedepends=('git' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/36/04/f05168f653ddcbe46d1c1037ed3ada663a3b63d98b77da4ca79b46aa063b/$_pkgname-$pkgver.tar.gz")
sha512sums=('18a1039ff7ed7552ce6e68d613744f8e0517eca9839b9902d18e9d32b29318dddd3ac967fad93487b68c0b2891afa95d7ff4939c469e3fceeae598f7d046df27')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

