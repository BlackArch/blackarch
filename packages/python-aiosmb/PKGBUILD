pkgname=python-aiosmb
_pkgname=aiosmb
pkgver=0.2.11
pkgrel=1
pkgdesc='Fully asynchronous SMB library written in pure python.'
arch=('any')
url='https://pypi.org/project/aiosmb/#files'
license=('MIT')
depends=('python' 'python-minikerberos' 'python-winsspi' 'python-six'
         'python-aiocmd')
makedepends=('git' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/3c/82/24edadf464f15f16e7c28fd77c781a0a86e40c8a8752bc401d066cb1c375/$_pkgname-$pkgver.tar.gz")
sha512sums=('f653cf6518a892b02fc041b72419428b8decda04c5c7ab2365d46916ae76ddec7d3651dd6a0e7f8fb44c945448cf5eee0a6b0784e22b554f09f60e973831a662')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

