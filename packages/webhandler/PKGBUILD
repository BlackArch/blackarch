pkgname=webhandler
pkgver=0.8.5
pkgrel=1
pkgdesc="A handler for PHP system functions & also an alternative 'netcat' handler."
url="https://github.com/lnxg33k/webhandler"
license=('custom')
arch=(any)
depends=('python2')
source=("git+https://github.com/lnxg33k/webhandler")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/webhandler"

  # We have to get the version number from the README file. It's better than nothing.
  grep -m1 'Version ' README.md | sed 's/.* //'
}

package() {
  cd "$srcdir/webhandler"

  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin"

  cp -a * "$pkgdir/usr/share/webhandler"

cat > "$pkgdir/usr/bin/webhandler" << EOF
#!/bin/sh
cd /usr/share/webhandler
python2 webhandler.py \$@
EOF
  chmod +x "$pkgdir/usr/bin/webhandler"
}
