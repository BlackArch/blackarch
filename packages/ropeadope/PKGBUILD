# See COPYING for license details.

pkgname=ropeadope
pkgver=81.2fbcbc0
pkgrel=1
groups=('blackarch' 'blackarch-anti-forensic')
pkgdesc='A linux log cleaner.'
arch=('any')
url='http://www.highhacksociety.com/'
license=('custom:unknown')
depends=('python2')
source=('git+https://github.com/nullsecuritynet/tools.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare(){
  sed -i 's|env python$|env python2|' ropeadope.py
}

package() {
  install -Dm 755 ropeadope.py "$pkgdir/usr/bin/$pkgname"
}

