pkgname=python-googleapis-common-protos
_pkgname='googleapis-common-protos'
pkgver=1.72.0
_pyver=3.13
pkgrel=1
pkgdesc='Common protobufs used in Google APIs.'
arch=('any')
url='https://pypi.org/project/googleapis-common-protos/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('daa6e3497e9849a323aaf4d5394bb3dc3fc5102f1547a6d9d09f9ae7112f32de62ba2bd5c18debdde7520b42b046ed8bd91485b900657631b16b92f58ce8195f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build

  # fix permissions
  chmod 644 \
    "$pkgdir/usr/lib/python$_pyver/site-packages/googleapis_common_protos-1.72.0-py$_pyver.egg-info/"*
}

