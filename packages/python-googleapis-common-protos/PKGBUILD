pkgname=python-googleapis-common-protos
_pkgname='googleapis-common-protos'
pkgver=1.55.0
_pyver=3.10
pkgrel=1
pkgdesc='Common protobufs used in Google APIs.'
arch=('any')
url='https://pypi.org/project/googleapis-common-protos/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/7c/51/dd7119327cb7a313f29ba40d0f2380865af89348a42695c27f4250976864/$_pkgname-$pkgver.tar.gz")
sha512sums=('3fe171bb54b9f508e524bf6e25e7533549346f3d70f0a55f2117c0031d823646b6384491ab059eddedfaf23ddcf7bdee4f6a66dcd50930403a1b7da5ee0ac9f8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build

  # fix permissions
  chmod 644 \
    "$pkgdir/usr/lib/python$_pyver/site-packages/googleapis_common_protos-1.55.0-py$_pyver.egg-info/"*
}

