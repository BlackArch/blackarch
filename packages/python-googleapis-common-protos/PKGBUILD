pkgname=python-googleapis-common-protos
_pkgname='googleapis-common-protos'
pkgver=1.63.1
_pyver=3.12
pkgrel=1
pkgdesc='Common protobufs used in Google APIs.'
arch=('any')
url='https://pypi.org/project/googleapis-common-protos/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('b5775e484f6710bf9fad9097e0a1b9cd978688a5803d9cfbcb05421add3e77b0e858db7fb8896afe34ab81eabeb951d7516d93b45c29ebec518589b12f8abd50')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build

  # fix permissions
  chmod 644 \
    "$pkgdir/usr/lib/python$_pyver/site-packages/googleapis_common_protos-1.63.1-py$_pyver.egg-info/"*
}

