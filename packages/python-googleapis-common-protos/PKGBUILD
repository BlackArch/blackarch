pkgname=python-googleapis-common-protos
_pkgname='googleapis-common-protos'
pkgver=1.54.0
_pyver=3.10
pkgrel=1
pkgdesc='Common protobufs used in Google APIs.'
arch=('any')
url='https://pypi.org/project/googleapis-common-protos/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/97/94/e55c0151d6665a5ff7305fef38c7e8f1defa4679f884aaf9812fb42a1109/$_pkgname-$pkgver.tar.gz")
sha512sums=('535cf6e4e5331a99232cb3eec1bc56676fcf87c522bd5b06f3452c7b22abd51479f3e4c69c8654bba4d789e8267360e11573d357ac90bb63854281e227eb8bc6')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build

  # fix permissions
  chmod 644 \
    "$pkgdir/usr/lib/python$_pyver/site-packages/googleapis_common_protos-1.54.0-py$_pyver.egg-info/"*
}

