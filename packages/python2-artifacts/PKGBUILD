pkgname=python2-artifacts
pkgver=20190227
pkgrel=1
pkgdesc='Digital Forensics Artifact Repository.'
url='https://github.com/ForensicArtifacts/artifacts'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
license=('Apache')
depends=('python2')
makedepends=('python2-setuptools')
checkdepends=('python2-nose')
source=("https://github.com/ForensicArtifacts/artifacts/archive/$pkgver.tar.gz")
sha512sums=('04338e3be4ca851076a0c17a29720aac7abacde105f6a5a48d624bf71fab838a5073d3cb8b00cd763f52d214322d40811b6731999e62885eac45c870edc3f345')

build() {
  cd "artifacts-$pkgver"

  python2 setup.py build
}

check(){
  cd "artifacts-$pkgver"

  nosetests
}

package() {
  cd "artifacts-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

