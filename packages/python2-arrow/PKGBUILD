pkgname=python2-arrow
_pkgname=arrow
pkgver=0.14.6
pkgrel=1
pkgdesc='Better dates and times for Python.'
arch=('any')
url='https://github.com/crsmithdev/arrow'
license=('APACHE')
depends=('python2-dateutil')
makedepends=('git' 'python2-setuptools')
source=("https://files.pythonhosted.org/packages/6f/fd/8d6c15fd0ad1d1f7f41a3bf524b9028bc2521cb619695a445f5e777b1fdb/$_pkgname-$pkgver.tar.gz")
sha512sums=('7fb8f54117e74604008fdd5612863f29454bfe87464f7ddd507d3f2a736fef8685b3cf72ab1d2d1d9ad2f2922c84aeba24ae673de863eeeba776cde4238ad76d')

build() {
  cd $_pkgname

  python2 setup.py build
}

package() {
  cd $_pkgname

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

