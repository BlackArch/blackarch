pkgname=python2-arrow
_pkgname=arrow
pkgver=0.14.7
pkgrel=1
pkgdesc='Better dates and times for Python.'
arch=('any')
url='https://github.com/crsmithdev/arrow'
license=('APACHE')
depends=('python2-dateutil')
makedepends=('git' 'python2-setuptools')
source=("https://files.pythonhosted.org/packages/0d/de/2a480ff72f88876e3e2763f1e25b05c779587c1c5d5b2f83c11ba9bb28f9/$_pkgname-$pkgver.tar.gz")
sha512sums=('44ad742d390e6c96a0bdd20cdba5843ae90ece32f26984eaedc7b11f05316f02eb69ae6e4877aa2199abe97b8bdcbd29da66b7f343a7abdf0105899e83ab5b50')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

