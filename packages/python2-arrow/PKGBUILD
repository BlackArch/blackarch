pkgname=python2-arrow
_pkgname=arrow
pkgver=0.15.1
pkgrel=1
pkgdesc='Better dates and times for Python.'
arch=('any')
url='https://github.com/crsmithdev/arrow'
license=('APACHE')
depends=('python2-dateutil')
makedepends=('git' 'python2-setuptools')
source=("https://files.pythonhosted.org/packages/81/7f/54d71354cbf6ff0515bac59653fd6be7e658e6f6e695e83caaeaa0fb2313/$_pkgname-$pkgver.tar.gz")
sha512sums=('5a9c7646e657c2f4b0605f29457ce0e16cf9a63622fc2124924134b28ba075a5b7dd5fe62c324dbafeb333bca9f0e67701003963ad834c87ef956e0242d1304c')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

