pkgname=myrescue
pkgver=0.9.8
pkgrel=1
pkgdesc='A hard disk recovery tool that reads undamaged regions first.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-forensic')
url='http://myrescue.sourceforge.net'
license=('GPL')
depends=()
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz")
sha512sums=('aecf4d141ee555af1c93bf33710ba61c4a7e0fa9dbe51aa32acbcc43eb0eda15e180ea3e57add0fdbec2181af0936a4144d1da82d8d29b3aa2997926ffcf4347')

build() {
  cd src

  make
}

package() {
  install -Dm 755 "src/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 "doc/$pkgname.1" "$pkgdir/usr/share/man/man1/$pkgname.1"
}

