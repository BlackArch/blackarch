pkgname=python-zodbpickle
_pkgname=zodbpickle
pkgver=3.3
pkgrel=1
pkgdesc='A uniform pickling interface for ZODB.'
arch=('any')
url='https://pypi.org/project/zodbpickle/'
license=('ZPL')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('a513dc04d1742b08de37b7014e7ad5ab35c99c7391918e93d8fb0b53a2441e094cdd60ca90541996738314034ae0baf6d55778064c146421eb56039995d34f80')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

