pkgname=python-zodbpickle
_pkgname=zodbpickle
pkgver=2.4
pkgrel=1
pkgdesc='A uniform pickling interface for ZODB.'
arch=('any')
url='https://pypi.org/project/zodbpickle/'
license=('ZPL')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('167fb6a592769f1fb04d86a5a0e684046dfc8c8bd28275a0f3cffc1611001c20c0af3daddfb8e799b0f683281fcecdce7ca0b0c253557d8a672218b960b8692c')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

