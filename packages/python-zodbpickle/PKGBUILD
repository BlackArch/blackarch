pkgname=python-zodbpickle
_pkgname=zodbpickle
pkgver=4.3
pkgrel=1
pkgdesc='A uniform pickling interface for ZODB.'
arch=('any')
url='https://pypi.org/project/zodbpickle/'
license=('ZPL')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('66e6c4e7bd0daa211a0675e3ffb48c78e3ecb98d33c5ca9330aaab9b9a3f08ca44130b826f49367887c05ac2cc58970ac0182b4e91f4d261819886088e83807f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

