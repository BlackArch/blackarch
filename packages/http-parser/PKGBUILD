pkgname=http-parser
pkgver=2.9.4
pkgrel=3
pkgdesc='HTTP request/response parser for C.'
arch=('x86_64' 'aarch64')
url='https://github.com/nodejs/http-parser'
license=('MIT')
depends=('glibc')
source=("https://github.com/nodejs/$pkgname/archive/v$pkgver/$pkgname-$pkgver.tar.gz")
sha512sums=('b45df7b94d1c51079d44687d0a7f901f44faae51df4e84c7e3fe38f130c2d809d0e7c2a146c57b3723e60732aededc246bf44eadb10a95b710963d641f9fe7cd')

build() {
	cd "$pkgname-$pkgver"

	make library
}

package() {
	cd "$pkgname-$pkgver"

	make PREFIX="$pkgdir/usr" install

  install -Dm 644 LICENSE-MIT "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

