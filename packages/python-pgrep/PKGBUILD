pkgname=python-pgrep
_pkgname=pgrep
pkgver=2020.12.3
pkgrel=1
pkgdesc='A python wrapper for pgre.'
arch=('any')
url='https://pypi.org/project/pgrep/#files'
license=('custom:unknown')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/e9/ad/a2f2e4238f4228764eab4d8e8b57fb26cd917ea56bcd421fe51a5c6d4250/$_pkgname-$pkgver.tar.gz")
sha512sums=('773e24c90ae5459bf9358e4b2c4abe77627f23173bfb217decc41d715777607677dc9efe655009a18e02f9cb3a9daa167c7ff38a6cf69693bd78b9a36fad2f53')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

