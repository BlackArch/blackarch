pkgname=lfi-autopwn
pkgver=3.0
pkgrel=11
groups=('blackarch' 'blackarch-exploitation' 'blackarch-fuzzer')
pkgdesc='A Perl script to try to gain code execution on a remote server via LFI.'
url='https://www.blackhatlibrary.net/Lfi_autopwn.pl'
arch=('any')
license=('GPL-2.0-or-later')
depends=('perl' 'perl-libwhisker2')
source=("https://web.archive.org/web/20140820201742/http://www.blackhatlibrary.net/releases/lfi_autopwn.tgz")
sha512sums=('1559da4dd143660202418253f93ef6e8193967faddb793869fa1d57b59c4257176e45632a57a607248086a045709708017331f1771857f4f7f169d02afb77d3b')

package() {
  cd lfi_autopwn

  install -Dm 755 lfi_autopwn.pl "$pkgdir/usr/bin/$pkgname"
}

