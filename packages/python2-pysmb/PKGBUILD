pkgname=python2-pysmb
_pkgname=pysmb
pkgver=1.2.13
pkgrel=1
pkgdesc='An experimental SMB/CIFS library written in Python to support file sharing between Windows and Linux machines.'
arch=('any')
url='https://pypi.org/project/pysmb/#files'
license=('Zlib' 'Libpng')
depends=('python2' 'python2-pyasn1' 'python2-tqdm')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('d16ce4d9ffb385246a57c4fcbd63e292533562f6069c8395ac78a59a559aea574567ebb9fcc411db2714b31d45ebf6b1abfd8bd08e6ac73985ab54fff2a6ef0d')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

