pkgname=python-google-cloud-monitoring
_pkgname=google-cloud-monitoring
pkgver=2.2.0
pkgrel=1
pkgdesc='Stackdriver Monitoring API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-monitoring/#files'
license=('Apache')
depends=('python' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/fa/1d/2b5393b06764f52bc50a2320a154c0d73adb62154cf825ac14fadd11692e/$_pkgname-$pkgver.tar.gz")
sha512sums=('78d7ced960328546d32223b66dbbcea2ad968f59cd393fa081a86a7df9815f7f07a2ef6a3b675f845d60270a923b6955e4ba26774725f8a3d281a080b4044de1')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

