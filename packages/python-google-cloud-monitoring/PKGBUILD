pkgname=python-google-cloud-monitoring
pkgver=0.32.0
pkgrel=1
pkgdesc='Stackdriver Monitoring API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-monitoring/#files'
license=('Apache')
depends=('python' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/76/7c/0754017cab762714b03bfa2fb6b776ca97741c6bc6d53ec52d734273433c/$_pkgname-$pkgver.tar.gz")
sha512sums=('6c56379c9803a822925515746f322a11d82a600c0d8efa050d8d51372f6c0bae711fd6f4920f3e10656d606c972c096a8fa87e78767b0557f70762d6cace0f89')

build() {
  cd "google-cloud-monitoring-$pkgver"

  python setup.py build
}

package() {
  cd "google-cloud-monitoring-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

