pkgname=python-google-cloud-monitoring
_pkgname=google-cloud-monitoring
pkgver=2.3.0
pkgrel=1
pkgdesc='Stackdriver Monitoring API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-monitoring/#files'
license=('Apache')
depends=('python' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c6/c1/84e157e4fd49b4069d9874fd81f74f1145084ac4435ce132b118313d41b2/$_pkgname-$pkgver.tar.gz")
sha512sums=('7aa10ba803411364ab7c91dc3fdd94c20e9fa49543af1804645cc937039a5644bc04028ac99e526b62196e2e29eb825775eaf5767a12b906d0719a9b714b5ceb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

