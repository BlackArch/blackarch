pkgname=python-google-cloud-monitoring
_pkgname=google-cloud-monitoring
pkgver=2.0.1
pkgrel=1
pkgdesc='Stackdriver Monitoring API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-monitoring/#files'
license=('Apache')
depends=('python' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/88/25/fbc595ea1b2c562b9dbf709067a5e2042c4afb70fd5fba9f287eead6d93f/$_pkgname-$pkgver.tar.gz")
sha512sums=('0c8e9923011e066e23195ad9b6629337dbde7298d6cd60a524c613f38a5d5f3fd42f9359618d99a390dddae41b7452988d71797a37e055b46a2c7748625c8f5d')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

