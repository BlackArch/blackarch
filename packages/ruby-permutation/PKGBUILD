pkgname=ruby-permutation
pkgver=0.1.8
pkgrel=0
pkgdesc="Permutation library in pure Ruby"
arch=('any')
license=('GPL2')
depends=('ruby')
url='http://flori.github.com/permutation'
source=("http://rubygems.org/downloads/permutation-$pkgver.gem")
md5sums=('b04c054cc7e6263c78aa31c18006d23a')
noextract=("permutation-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
