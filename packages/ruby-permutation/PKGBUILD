# See COPYING for license details.
pkgname='ruby-permutation'
_gemname='permutation'
pkgver='0.1.8'
pkgrel=3
pkgdesc="Permutation library in pure Ruby"
arch=('any')
url='http://flori.github.com/permutation'
license=("")
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('57389e39c50d27dce3acd94731e6752445134041' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/COPYING" "$pkgdir/usr/share/licenses/$pkgname/COPYING"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{CHANGES,COPYING,README,Rakefile,VERSION,examples,install.rb,make_doc.rb,test}
}
