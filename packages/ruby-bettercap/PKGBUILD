# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=bettercap
pkgname=ruby-$_gemname
pkgver=1.5.8
pkgrel=1
pkgdesc=A\ complete,\ modular,\ portable\ and\ easily\ extensible\ MITM\ framework.
arch=(any)
url=http://github.com/evilsocket/bettercap
license=(GPL-3.0)
depends=(libpcap ruby ruby-colorize ruby-em-proxy ruby-net-dns ruby-network_interface ruby-packetfu ruby-pcaprub ruby-rubydns)
makedepends=()
groups=(blackarch blackarch-sniffer blackarch-exploitation)
replaces=(bettercap)
conflicts=(bettercap)
provides=(bettercap)
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('8d40168eda6220426589c2f0fe0cb4232f208109'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.md" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{LICENSE.md,README.md}
}
