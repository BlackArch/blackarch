pkgname=python-mmh3
_pkgname=mmh3
pkgver=5.2.0
pkgrel=1
pkgdesc='Python wrapper for MurmurHash (MurmurHash3), a set of fast and robust hash functions.'
arch=('any')
url='https://pypi.org/project/mmh3/#files'
license=('custom:CC0 1.0')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('9afc8c21f2ca30b6d6b2617c09562256604fe6616a7fe2f522a6ebf4419f5d72fe62dfa728d78be04878b736c4978962a426cceef6e5b2d3964b4daa3011dae4')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

