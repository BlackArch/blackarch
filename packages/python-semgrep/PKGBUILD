pkgname=python-semgrep
_pkgname=semgrep
pkgver=0.26.0
pkgrel=1
pkgdesc='Lightweight static analysis for many languages.'
arch=('any')
url='https://pypi.org/project/semgrep/#files'
license=('LGPL')
depends=('python' 'python-colorama' 'python-requests' 'python-attrs'
         'python-tqdm' 'python-packaging' 'python-ruamel-yaml' 'python-wheel')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/00/f2/99623bd7c9355148093933b9974f29190bddc5de9de7480f58358e2b25b1/$_pkgname-$pkgver.tar.gz")
        'setup.py.patch')
sha512sums=('24630a4cbf575e924126cf9480c34ccf76e4573373f831ec0d730e876fb1d7a66151423b37db55d5165d9c9d6d4a04f36ea2042d59ea92b2562cd139c8b78923')
            '3bf191cd8449f8cfc7fe45cf02aff416f872e4e30970b21e12e676d2ae0fda38cef0914867157639193c0772667cf867de7d6aad7dd83d431cc454e018ec1d71')

prepare() {
  # dirty fix
  patch -p1 < setup.py.patch
}

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.8/site-packages/tests"
}

