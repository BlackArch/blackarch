pkgname=nodejs-colors
pkgver=246.b63ef88
pkgrel=1
pkgdesc='Get colors in your node.js console.'
arch=('any')
url='https://github.com/marak/colors.js/'
license=('custom:unknown')
depends=('nodejs')
makedepends=('npm')
source=('git+https://github.com/Marak/colors.js.git')
noextract=("colors.js-${pkgver}.tar.gz")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  _npmdir="$pkgdir/usr/lib/node_modules/"

  install -dm 755 "$_npmdir"

  cd $_npmdir

  npm install -g --prefix "$pkgdir/usr" colors.js@${pkgver}
}

