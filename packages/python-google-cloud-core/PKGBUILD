pkgname=python-google-cloud-core
_pkgname=google-cloud-core
pkgver=2.3.2
pkgrel=1
pkgdesc='Google Cloud API client core library.'
arch=('any')
url='https://pypi.org/project/google-cloud-core/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('fd0ab784ce8a3576310f8c861755a9cfea6b49b266c405e2f1bd6ed3a3efd01957c8faf907cf0a7568c363e5baafa3f8b66f90c9fddda23cfa05cce1bf599e95')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

