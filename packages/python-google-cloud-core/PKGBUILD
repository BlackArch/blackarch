pkgname=python-google-cloud-core
_pkgname=google-cloud-core
pkgver=1.4.2
pkgrel=1
pkgdesc='Google Cloud API client core library.'
arch=('any')
url='https://pypi.org/project/google-cloud-core/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/45/55/63d001bc4b772b5027b3e3c09adbad96c111faf8a429a3e34f88db038265/$_pkgname-$pkgver.tar.gz")
sha512sums=('f5e93449842c4411e85b9fa46c7163ee654ebd7ce9088e2a9c896a15b7bc3153c367daf4c1af14d60d82681521e87452310b6b9c9d10eff795db189750479697')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

