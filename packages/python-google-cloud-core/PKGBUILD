pkgname=python-google-cloud-core
_pkgname=google-cloud-core
pkgver=1.7.2
pkgrel=1
pkgdesc='Google Cloud API client core library.'
arch=('any')
url='https://pypi.org/project/google-cloud-core/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/20/16/ec6c32222079bfc17a6e6e4a5dd358e2a93c7319930c6e9c9a99369079f2/$_pkgname-$pkgver.tar.gz")
sha512sums=('35c99ed045e6c480fa44f32ebe80b12d26974e46226d7d413aeb844d3ede807829d22663a57c878c387887193c43c8fc262865d7a7005fcd2e62a228966e0251')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

