pkgname=python-google-cloud-core
pkgver=1.0.0
pkgrel=1
pkgdesc='Google Cloud API client core library.'
arch=('any')
url='https://pypi.org/project/google-cloud-core/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/63/31/dfbd2f842dd9d77c1f9f456cffa2f36b363c26701f2a7c6ba40b33116e04/google-cloud-core-1.0.0.tar.gz")
sha512sums=('c7bf2637d1c0467b79ebb755745ad779ec10d242c78eae7b3dc306fe125860f955657b2a4d4fec2bee2d43e27db5c9e584fb150e4cb2a5003a80393b0e8d486f')

build() {
  cd "google-cloud-core-$pkgver"

  python setup.py build
}

package() {
  cd "google-cloud-core-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

