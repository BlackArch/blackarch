pkgname=python-google-cloud-core
_pkgname=google-cloud-core
pkgver=2.2.3
pkgrel=1
pkgdesc='Google Cloud API client core library.'
arch=('any')
url='https://pypi.org/project/google-cloud-core/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/66/6f/befa5b50ec7a1a51bd06314a2d3b94e9ecb4587ac3c7a554dd6c0135021d/$_pkgname-$pkgver.tar.gz")
sha512sums=('f813d63cd278cd823a29341e903c173527cb8063116bbf1c501b9a1c3f370514b1cb7b4c946617393433748f2069255f4fb401541434a7b995777fc408035a4f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

