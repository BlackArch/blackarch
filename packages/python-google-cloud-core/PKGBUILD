pkgname=python-google-cloud-core
_pkgname=google-cloud-core
pkgver=1.7.0
pkgrel=1
pkgdesc='Google Cloud API client core library.'
arch=('any')
url='https://pypi.org/project/google-cloud-core/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/59/2b/1609c8badc5ec65367969817d0a05d16cbaf9dc93e8cc86cafa20283440f/$_pkgname-$pkgver.tar.gz")
sha512sums=('1eed9f1b2cbf92df045e53445f573ce25e3559b7925acdce1797ed9240c27c1c43f1663ceb235ed5ff3f869539b1b22004377d71ac5e642ada13e51c3f8580d3')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

