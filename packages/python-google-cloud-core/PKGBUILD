pkgname=python-google-cloud-core
_pkgname=google-cloud-core
pkgver=1.4.0
pkgrel=1
pkgdesc='Google Cloud API client core library.'
arch=('any')
url='https://pypi.org/project/google-cloud-core/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ad/20/454cfa363f58f21e45a7722fca93310785edbd23bfe8069d8429228372b9/$_pkgname-$pkgver.tar.gz")
sha512sums=('114228641a443cd6535c282059c80dd0c52f4aaa8c962260bcf06d199b24bbedb4ff089345fb9e606ce099fc88b6631429e9a6a62f0d219231d22c5fde3191a7')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

