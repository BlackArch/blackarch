# See COPYING for license details.
_gemname=mechanize
pkgname=ruby-$_gemname
pkgver=2.7.5
pkgrel=3
pkgdesc=The\ Mechanize\ library\ is\ used\ for\ automating\ interaction\ with\ websites
arch=(any)
url=http://docs.seattlerb.org/mechanize/
license=(MIT)
depends=(ruby ruby-domain_name ruby-http-cookie ruby-mime-types ruby-net-http-digest_auth ruby-net-http-persistent-2 ruby-nokogiri ruby-ntlm-http ruby-webrobots)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('318210b10ba357c8588c9f2cb85684c1e0dd1a98'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.rdoc" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.rdoc"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.autotest,.gitignore,.travis.yml,CHANGELOG.rdoc,EXAMPLES.rdoc,GUIDE.rdoc,Gemfile,LICENSE.rdoc,README.rdoc,Rakefile,examples,mechanize.gemspec,test}
}
