pkgname=('hotpatch')
pkgver=0.2
pkgrel=1
pkgdesc="Hotpatch - Hot patching executables on Linux using .so file injection"
groups=('blackarch' 'blackarch-intel')
arch=('i686' 'x86_64')
url="http://www.selectiveintellect.com/hotpatch.html"
license=('BSD')
depends=('gcc')
makedepends=('cmake')
md5sums=('SKIP')
options=(!strip)
source=("git+https://github.com/vikasnkumar/hotpatch")

pkgver() {
  cd "$srcdir/hotpatch"
  # We have to get the version number from the README file. It's better than nothing.
  grep -m1 'Version ' README | sed 's/.* //'
} 


build() {
  cd "$srcdir/hotpatch"
  make
}

package() {
  cd "$srcdir/hotpatch"
  make DESTDIR="$pkgdir/" install
}

