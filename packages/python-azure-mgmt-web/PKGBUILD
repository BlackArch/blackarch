pkgname=python-azure-mgmt-web
_pkgname=azure-mgmt-web
pkgver=4.0.0
pkgrel=1
pkgdesc='Microsoft Azure Web Apps Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-web/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/66/bc/8e53a3df60e40dd43ea59d7256d6e3bd7a152e88451a85e19abc99d2f6d2/$_pkgname-$pkgver.zip")
sha512sums=('bde8e0989b74d906721493986030edd37ab056b4de16ea49362cc817f0f4077b798a6c4c577f2366eaf8a64dc9442d1165433e0cfa25655f8da0cfb7bd4286d2')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

