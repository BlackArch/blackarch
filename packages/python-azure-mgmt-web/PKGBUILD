pkgname=python-azure-mgmt-web
_pkgname=azure-mgmt-web
pkgver=0.43.1
pkgrel=1
pkgdesc='Microsoft Azure Web Apps Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-web/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/aa/b4/2a9a6b241e49541ce2aa6d8e00d5f63c9b8e2d04397707dbfe95e2320a9b/$_pkgname-$pkgver.zip")
sha512sums=('584f48bbc7e1baca3d4a88dbf0d97bce4bbcc10684b401d748ea740abb44de58cb2549c3af2ce3ffc5741b56ab5217e0181f4906a2710cceef3cf9cfce9a4999')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

