pkgname=python-ring
_pkgname=ring
pkgver=0.8.4
pkgrel=1
pkgdesc='Python library that shows a way to control cache in point of view of code - not about storages.'
arch=('any')
url='https://pypi.org/project/ring/'
license=('BSD')
depends=('python' 'python-wirerope' 'python-mock'
         'python-pymemcache' 'python-diskcache' 'python-inspect2'
         'python-six')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('d91a0ff033b64b3a5e14fd2174647f07f1e2f11a9dcfc4ac538b04eb84f916a770a4c1b39943e2344d2ba4a56fcb1cf8e63ba319c359097d6c28e12eb7138134')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
