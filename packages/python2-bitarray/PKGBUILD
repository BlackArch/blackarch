pkgname=python2-bitarray
pkgver=0.9.0
pkgrel=1
pkgdesc='Efficient arrays of booleans for Python.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://github.com/ilanschnell/bitarray'
license=('PSF')
depends=('python2')
makedepends=('python2-setuptools')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/64/02/48ed15b393641f343fe4b9c10fc12751bac0a93cc2d699bc6676a24bf7ab/bitarray-0.9.0.tar.gz")
sha512sums=('54db87f2618c7721797ef59094437e6dcaf700533145119cf73757a7e98f32a6a8af52c618d2f0c4d954e58e319e8974f50b520b887618890ba15b1db1dca922')

build() {
  cd "bitarray-$pkgver"

  python2 setup.py build
}

package() {
  cd "bitarray-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

