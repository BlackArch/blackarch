pkgname=braces
pkgver=0.5
pkgrel=1
pkgdesc='A Bluetooth Tracking Utility.'
url='http://braces.shmoo.com/'
groups=('blackarch' 'blackarch-bluetooth')
license=('GPL-2.0-or-later')
depends=('perl' 'perl-uri' 'perl-net-dbus' 'bluez' 'imagemagick' 'php-fpm'
         'mariadb' 'nginx')
arch=('any')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('e1fced9e836beb1e118e6c44777af1198c9ebcc319a7cff2170deb3dda8aaf204cde1e1ef2d92e4f5520a0a6e988a6bdc865d3ed7acfb080ca72dc1fc558e93d')

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 "$pkgname.pl" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 README.md "$pkgdir/usr/share/$pkgname/README.md"
  install -Dm 644 init_db.sql "$pkgdir/usr/share/$pkgname/init_db.sql"

  cp -r html maps "$pkgdir/usr/share/$pkgname/"
}

