pkgname=halcyon
pkgver=1.0
pkgrel=1
pkgdesc='A repository crawler that runs checksums for static files found within a given git repository.'
arch=('any')
groups=('blackarch' 'blackarch-recon')
url='https://www.blackhatlibrary.net/Halcyon'
license=('GPL-3.0-or-later')
depends=('python' 'git')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('1a719a8abfa7e032b5ab37f1e4deabcc7f3be59f3df6241194b0bf0458b89544da5197c8cf25b9d3d45397bc1c21133db63f2b6f677c23f2a7eb1ad061852b0e')

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 "$pkgname.py" "$pkgdir/usr/bin/$pkgname"
}

