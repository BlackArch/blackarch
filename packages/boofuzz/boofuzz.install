post_install() {
  set -e
  cd /usr/share/boofuzz
  python -m virtualenv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/boofuzz --prefix=venv boofuzz
}

post_upgrade() {
  set -e
  cd /usr/share/boofuzz
  python -m virtualenv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/boofuzz --prefix=venv -U boofuzz
}

post_remove() {
  rm -rf /usr/share/boofuzz
}

