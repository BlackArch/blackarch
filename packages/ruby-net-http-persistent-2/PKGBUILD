_gemname=net-http-persistent
pkgname=ruby-$_gemname-2
pkgver=2.9.4
pkgrel=1
pkgdesc=Manages\ persistent\ connections\ using\ Net::HTTP\ plus\ a\ speed\ fix\ for\ Ruby\ 1.8
arch=(any)
url=http://docs.seattlerb.org/net-http-persistent
license=(MIT)
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('c5476a2800cf9d99e422b6f465e54ea84fabe6b6'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.autotest,.gemtest,History.txt,Manifest.txt,README.rdoc,Rakefile,test}
}
