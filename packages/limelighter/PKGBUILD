# See COPYING for license details.

pkgname=limelighter
pkgver=16.c808c3c
pkgrel=2
pkgdesc='A tool for generating fake code signing certificates or signing real ones.'
groups=('blackarch' 'blackarch-exploitation' 'blackarch-windows')
arch=('x86_64' 'aarch64')
url='https://github.com/Tylous/Limelighter'
license=('MIT')
depends=('openssl' 'osslsigncode')
makedepends=('git' 'go')
source=("$pkgname::git+https://github.com/Tylous/Limelighter.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod init go.mod
  GOPATH="$srcdir" go mod tidy
  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

