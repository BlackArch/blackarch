# See COPYING for license details.
pkgname='ruby-domain_name'
_gemname='domain_name'
pkgver='0.5.20161129'
pkgrel=3
pkgdesc="Domain Name manipulation library for Ruby"
arch=('any')
url='https://github.com/knu/ruby-domain_name'
license=("BSD-2-Clause', 'BSD-3-Clause', 'MPL-2.0")
depends=('ruby' 'ruby-unf')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('fee5b5ad600643758732a5091756fbbddf2a9768' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.document,.gitignore,.travis.yml,CHANGELOG.md,Gemfile,LICENSE.txt,README.md,Rakefile,data,domain_name.gemspec,test,tool}
}
