pkgname=ruby-singleton
_gemname=${pkgname#ruby-}
pkgver=0.3.0
pkgrel=1
pkgdesc='Implement the Singleton pattern.'
arch=('any')
url='https://rubygems.org/gems/singleton'
license=('BSD-2-Clause' 'Ruby')
depends=('ruby')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem")
noextract=("$_gemname-$pkgver.gem")
sha512sums=('4edc90dc99786733d141dc7479d2453601ce16e38664d55cb5cd369c51ae2401f36d81da92983daf80f37125b0334bbf9f824bbcfd86144ed5a47028cc1807ec')

package() {
  _gemdir="$(ruby -e'puts Gem.default_dir')"

  gem install --ignore-dependencies --no-user-install --no-document \
    -i "$pkgdir/$_gemdir" -n "$pkgdir/usr/bin" "$_gemname-$pkgver.gem"

  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"

  find "$pkgdir/$_gemdir/extensions/" -name *.so -delete
}

