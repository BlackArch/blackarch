# See COPYING for license details.
pkgname='ruby-zxing'
_gemname='zxing'
pkgver='0.4.0'
pkgrel=1
pkgdesc="JRuby wrapper for ZXing 1D/2D barcode image processing library."
arch=('any')
url='http://github.com/ecin/zxing.rb'
license=("")
depends=('ruby' 'ruby-jruby-jars')
replaces=('zxing')
conflicts=('zxing')
provides=('zxing')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('0f9adb4990272787655b2212d58696cecbb89569' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{README.rdoc,spec}
}
