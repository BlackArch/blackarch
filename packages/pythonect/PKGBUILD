pkgname=pythonect
pkgver=0.10.8.5
pkgrel=2
pkgdesc='A general-purpose dataflow programming language written in Python.'
arch=('any')
url='http://www.pythonect.org/'
license=('BSD')
depends=('python2' 'python2-ply')
makedepends=('python2-setuptools')
options=('!emptydirs')
source=("https://files.pythonhosted.org/packages/69/09/b8a2cc186fa5bee34ad41e7b31f927257d359ab25debd64e93c80446d8fe/ct-$pkgver-py2.7.egg")
sha512sums=('9da6ddfede2a5c60264e4b3e482ff5abba8e891be96950b1e252d0005efb7b6e7d8fabcca9909bd206bfdc556b5ac9defbb7476858363335c90a5f442ec1bc78')

package() {
  cd "$srcdir/Pythonect-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1

  rm "$pkgdir/usr/LICENSE"
}
