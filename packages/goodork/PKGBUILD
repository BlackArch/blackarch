pkgname=goodork
pkgver='2.2'
pkgrel=1
pkgdesc="A python script designed to allow you to leverage the
power of google dorking straight from the comfort of your command line."
url="http://goo-dork.blogspot.com/"
groups=(blackarch blackarch-intel)
license=('custom')
arch=('any')
depends=('python2' 'git' 'python2-beautifulsoup4')
source=("git+https://github.com/k3170makan/GooDork.git")
md5sums=('SKIP')

package() {
  cd "$srcdir/GooDork"

  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin"

  cp -a * "$pkgdir/usr/share/goodork"

cat > "$pkgdir/usr/bin/goodork" << EOF
#!/bin/sh
cd /usr/share/goodork
python2 GooDork.py \$@
EOF
  chmod +x "$pkgdir/usr/bin/goodork"
}
