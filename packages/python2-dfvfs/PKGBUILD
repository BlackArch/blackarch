pkgname=python2-dfvfs
pkgver=20190122
pkgrel=1
pkgdesc='Python module that provides read-only access to file-system objects from various storage media types and file formats.'
arch=('any')
url='https://pypi.org/project/dfvfs/'
license=('Apache2')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/f6/fd/9ccd45481935ac97a52abcd83202e312b23e033fd670abd5952df23d4f9d/dfvfs-$pkgver.tar.gz")
sha512sums=('170a960a7babea520717c2b64d60238933e02b1d63eba85a97b1f8cb0651135a7bf8b9270b5ea5e3cfa5cbd778fd29229e5569e852b1a2e3c2fa918e197bb35b')

build() {
  cd "dfvfs-$pkgver"

  python2 setup.py build
}

package() {
  cd "dfvfs-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

