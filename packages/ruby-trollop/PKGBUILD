# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=trollop
pkgname=ruby-$_gemname
pkgver=2.1.2
pkgrel=1
pkgdesc=Trollop\ is\ a\ commandline\ option\ parser\ for\ Ruby\ that\ just\ gets\ out\ of\ your\ way.
arch=(any)
url=http://manageiq.github.io/trollop/
license=(MIT)
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('87a11bff3e9d08702487108cb18e01299112df44'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.travis.yml,FAQ.txt,Gemfile,Gemfile.travis,History.txt,README.md,Rakefile,release-script.txt,test,trollop.gemspec}
}
