pkgname=python-inflect
_pkgname=inflect
pkgver=7.0.0
pkgrel=1
pkgdesc='Correctly generate plurals, singular nouns, ordinals, indefinite articles; convert numbers to words.'
url='https://pypi.org/project/inflect/#files'
arch=('any')
license=('GAGPL')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('b2ca39d0e36cda8c8c42d208443d3b84b10d659dcd0d368273503d6e76df19c61ac3c623d526ea918ca8b347d6db8bdfb691609e480eaa33dd4f1c37e008473b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

