pkgname=python-inflect
pkgver=3.0.1
pkgrel=1
pkgdesc='Correctly generate plurals, singular nouns, ordinals, indefinite articles; convert numbers to words.'
url='https://pypi.org/project/inflect/#files'
arch=('any')
license=('GAGPL')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/39/45/79b5cb5df448775ade7329e8b2d7aa45c70e96d00dc34025ea317c15d1c9/$_pkgname-$pkgver.tar.gz")
sha512sums=('6244cd1d3d15699db00e22d27fb69f27e3ab8c3d966420d4d3a8d1ae7ee7aa8a531f35329431a7c4f62f7b9df09a7202b07e622a888dee09aae3ca6980e8d8fe')

build() {
  cd "inflect-$pkgver"

  python setup.py build
}

package() {
  cd "inflect-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

