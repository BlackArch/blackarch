pkgname=python-inflect
_pkgname=inflect
pkgver=5.2.0
pkgrel=1
pkgdesc='Correctly generate plurals, singular nouns, ordinals, indefinite articles; convert numbers to words.'
url='https://pypi.org/project/inflect/#files'
arch=('any')
license=('GAGPL')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/9a/5e/868ffff6426d9bf1c0a395d384aae876ff03efd7cd6bfb1173620bd2fcc1/$_pkgname-$pkgver.tar.gz")
sha512sums=('2883ffccd28c436908783855a282ff4346c74b14fe5899ed6b9fde0f0f1b97063119f7fbe927f1bf0d16761623abcdfe21439c12311bd2a11a70245b89fbce0b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

