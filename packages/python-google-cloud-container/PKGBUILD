pkgname=python-google-cloud-container
_pkgname=google-cloud-container
pkgver=2.10.6
pkgrel=1
pkgdesc='Google Container Engine API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-container/#files'
license=('Apache')
depends=('python' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/6a/5d/33416a4ef1914841572f873fa13e26a11285c888c127472db0a14a4d1bbd/$_pkgname-$pkgver.tar.gz")
sha512sums=('9e309471a76d157ade4f0dd80b7acf5da361edebdad7be046da259abcaa43dc2a05e304b7a048da31b9d4f5db7a81632f77fa34a06eef3b60b98d032394826d8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

