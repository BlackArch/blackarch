pkgname=python-google-cloud-container
_pkgname=google-cloud-container
pkgver=2.4.1
pkgrel=1
pkgdesc='Google Container Engine API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-container/#files'
license=('Apache')
depends=('python' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/7c/5a/acee06cc924c8ea8aed0c3d5620c9e7f28ccf5e77d3ca6397ca0d98fc18b/$_pkgname-$pkgver.tar.gz")
sha512sums=('cc47e5680ed1b1bc8a00a4b1136186c93ece8ef33165ef646ba04f1d616150dbb308ae088039820e64040d5147aa3e92865cfc2e23f5afce1eafa51f29f767b9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

