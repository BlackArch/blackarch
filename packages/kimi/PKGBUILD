# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=kimi
pkgver=23.1d7a5e6
pkgrel=1
pkgdesc='Script to generate malicious debian packages (debain trojans).'
groups=('blackarch' 'blackarch-backdoor')
arch=('any')
url='https://github.com/ChaitanyaHaritash/kimi'
license=('custom:unknown')
depends=('python2')
makedepends=('git')
source=('git+https://github.com/ChaitanyaHaritash/kimi.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cd $pkgname

  sed -i 's|bin/env python|bin/env python2|' kimi.py
}

package() {
  cd $pkgname

  install -Dm 755 kimi.py "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 -t "$pkgdir/usr/share/$pkgname/screenshots" screenshots/*
}

