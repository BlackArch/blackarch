pkgname=shellcodecs
pkgver=0.2
pkgrel=2
pkgdesc='A collection of shellcode, loaders, sources, and generators provided with documentation designed to ease the exploitation and shellcode programming process.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-exploitation')
url='http://www.blackhatlibrary.net/Shellcodecs'
license=('GPL-3.0-or-later')
depends=('python')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('42bbd276df4a350aa06130c3503d692995d22d6a2fec2e5e0beef417747c57aa63eac1e1dd77ab65c6914ebfeaa93a4925d3c035ef4ba343fa1884e9494d58cf')

build(){
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  install -dm 755 "$pkgdir/usr/share/$pkgname"

  rm LICENSE README.md

  cp -a  --no-preserve=ownership * "$pkgdir/usr/share/$pkgname"
}

