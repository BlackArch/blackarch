post_install() {
  echo "[*] Initializing llm-guard-cli runtime"

  BASE="/usr/share/llm-guard-cli"
  PY="$BASE/python310/bin/python3.10"

  "$PY" -m ensurepip >/dev/null
  "$PY" -m pip install --upgrade pip setuptools wheel >/dev/null

  "$PY" -m pip install "$BASE/llm_guard-0.3.16.tar.gz"

  "$PY" -m pip install \
    torch \
    transformers \
    tiktoken \
    presidio-analyzer \
    presidio-anonymizer \
    spacy \
    faker \
    fuzzysearch \
    json-repair \
    nltk

  "$PY" -m spacy download en_core_web_sm || true

  echo "[âœ“] llm-guard-cli ready"
}

post_upgrade() {
  post_install
}
