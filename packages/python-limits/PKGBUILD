pkgname=python-limits
_pkgname=limits
pkgver=2.8.0
pkgrel=1
pkgdesc='Rate limiting utilities.'
arch=('any')
url='https://pypi.org/project/limits/#files'
license=('MIT')
depends=('python' 'python-six')
makedepends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('40b8ed001cb7f85291e588e4bc6d1e4190bfc0b4024f437bfbc14359122538b37f08ffbb753261e740f6fa7bf2b8bf15268f748c4903562c36f66230082e3be3')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

