pkgname=python-limits
_pkgname=limits
pkgver=3.13.0
pkgrel=1
pkgdesc='Rate limiting utilities.'
arch=('any')
url='https://pypi.org/project/limits/#files'
license=('MIT')
depends=('python' 'python-six')
makedepends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('cd447d274fc02fd9239c4376daa2a3ef9a8168a1a5f7e1b0b64403a3b3b5531c3fb44100402cdc646af4787c10e493a4dba7d5212c174c19aa29da0d891eb3c4')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

