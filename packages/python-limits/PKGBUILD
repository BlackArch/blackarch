pkgname=python-limits
_pkgname=limits
pkgver=2.4.0
pkgrel=1
pkgdesc='Rate limiting utilities.'
arch=('any')
url='https://pypi.org/project/limits/#files'
license=('MIT')
depends=('python' 'python-six')
makedepends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/f8/80/75fd44518566d0f3a17ed27a9d41f1d21c105cb562f685d6c55b2a199ff1/$_pkgname-$pkgver.tar.gz")
sha512sums=('e80c3557f59e6f13b04d021f2e7cfc6e4da994731baec529d5609cefd4844c3f516833877955a294a9939fd0751b7c5d657faef9ba12f89b6abd141bf0c36c41')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

