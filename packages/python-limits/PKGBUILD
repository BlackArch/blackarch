pkgname=python-limits
_pkgname=limits
pkgver=3.5.0
pkgrel=1
pkgdesc='Rate limiting utilities.'
arch=('any')
url='https://pypi.org/project/limits/#files'
license=('MIT')
depends=('python' 'python-six')
makedepends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('07c7c5430aa15b14bf663b854a33e716f7e74850ab63527a26f2b45ae043ea8af67c512fd6e51504dd110bff50f052c347717e84aeb47eb48a408fe271ffab03')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

