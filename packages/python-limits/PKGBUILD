pkgname=python-limits
_pkgname=limits
pkgver=3.12.0
pkgrel=1
pkgdesc='Rate limiting utilities.'
arch=('any')
url='https://pypi.org/project/limits/#files'
license=('MIT')
depends=('python' 'python-six')
makedepends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('0680882e00452ce9543274eb154dc4a7b7758808de48d8fa1462d2568bca6d4c94aae1517925cab873fbae957fc129a56148743520f540ec97de6e224862cb2e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

