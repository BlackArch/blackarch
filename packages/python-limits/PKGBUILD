pkgname=python-limits
_pkgname=limits
pkgver=5.6.0
pkgrel=3
pkgdesc='Rate limiting utilities.'
arch=('any')
url='https://pypi.org/project/limits/#files'
license=('MIT')
depends=('python' 'python-six')
makedepends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('d315ca1e685e70b12fcdb1b9276f2726116931c3dddac98fec6672282849ba1b6021c786f0193f3ce8a71a0420a6b6b628926518c41fb7229f9da2353b5db3b8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

