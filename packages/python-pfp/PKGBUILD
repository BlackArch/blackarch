pkgname=python-pfp
_pkgname=pfp
pkgver=0.4.1
pkgrel=1
pkgdesc='An interpreter for 010 template scripts.'
arch=('any')
url='https://github.com/d0c-s4vage/pfp'
license=('MIT')
depends=('python' 'python-py010parser' 'python-six' 'python-intervaltree')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/cb/79/fe5d81e8de5ddfb316b8a7ece4cdd8d6a7e075974e6a348d28eb52c18128/$_pkgname-$pkgver.tar.gz")
sha512sums=('500ff6d0e392837dbe677994d08e208eeb4e09ea4daf67bf9231641e9715eb0d8da03465802c27d67b8befb3bcac7700674077b0572022a33665f3545972c8aa')

build() {
  cd $_pkgname-$pkgver
  python setup.py build
}

package() {
  cd $_pkgname-$pkgver
  python setup.py install --root="$pkgdir" --optimize=1
}

