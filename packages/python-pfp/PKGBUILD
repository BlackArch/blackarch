pkgname=python-pfp
_pkgname=pfp
pkgver=0.2.5
pkgrel=1
pkgdesc='An interpreter for 010 template scripts.'
arch=('any')
url='https://github.com/d0c-s4vage/pfp'
license=('MIT')
depends=('python' 'python-py010parser' 'python-six' 'python-intervaltree')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/a8/51/7cb92ef8f77c5799b80e47eb035725f426eff08f4282a08c747bac9e0d06/$_pkgname-$pkgver.tar.gz")
sha512sums=('5b9bf90df2fad5643aec1a9863e17d617553d8a0f36ab404c54c98bc6975defce45a7d4ec34c395d700563104d433b42a5546fcfd4c584bf11d0d23db5976aef')

build() {
  cd $_pkgname-$pkgver
  python setup.py build
}

package() {
  cd $_pkgname-$pkgver
  python setup.py install --root="$pkgdir" --optimize=1
}

