pkgname=python-pfp
_pkgname=pfp
pkgver=0.2.4
pkgrel=1
pkgdesc='An interpreter for 010 template scripts.'
arch=('any')
url='https://github.com/d0c-s4vage/pfp'
license=('MIT')
depends=('python' 'python-py010parser' 'python-six' 'python-intervaltree')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ed/e3/6ff893a8f3ce1acfa918440931144eed177fc7736a5a774d90b982831b2d/$_pkgname-$pkgver.tar.gz")
sha512sums=('e59366240e095b548849fba4935ab7821e0f12e143f0d26f1c55fc4fe201e65996802adbee90bb2953d213c15161c03908c0cc9b4c5755ded37add8618f93538')

build() {
  cd $_pkgname-$pkgver
  python setup.py build
}

package() {
  cd $_pkgname-$pkgver
  python setup.py install --root="$pkgdir" --optimize=1
}

