pkgname=python-pfp
_pkgname=pfp
pkgver=0.3.0
pkgrel=1
pkgdesc='An interpreter for 010 template scripts.'
arch=('any')
url='https://github.com/d0c-s4vage/pfp'
license=('MIT')
depends=('python' 'python-py010parser' 'python-six' 'python-intervaltree')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/39/7d/57e84fbaad54eb0e552eb3cee75ee365b77c6e0215c5743ea9f6cbf7c59c/$_pkgname-$pkgver.tar.gz")
sha512sums=('08d6e204827ddfc237294bf3cbf3759b81401a7d4fb97fdba12ef0e5b1eb7e9acac0bf8105a0d1017c8495079d236e13cbd2568f8f8930671705c6ca7dc466b9')

build() {
  cd $_pkgname-$pkgver
  python setup.py build
}

package() {
  cd $_pkgname-$pkgver
  python setup.py install --root="$pkgdir" --optimize=1
}

