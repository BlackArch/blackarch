pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.9506
pkgrel=1
pkgdesc='Classes with architecture-specific information useful to other projects.'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('BSD')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/70/8b/ad17c9dedf349fc50c562f73a4c012a50be815bcaadca9fff85267b4ab7b/$_pkgname-$pkgver.tar.gz")
sha512sums=('9b25104160fded028465df55591485ccf6385c8231dc545cd3d0151aff382ce2f1a4414c71924bb52bb6965fddf29c74852784d526737718f2af6c60db5bf1eb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

