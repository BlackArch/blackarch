pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.5903
pkgrel=1
pkgdesc='UNKNOWN'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('custom:unknown')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/b1/09/f319a05470d0e7228e92109790706f6982bfe9d0697c3f5dda997092d321/$_pkgname-$pkgver.tar.gz")
sha512sums=('39ffb0e9fe708e3bf75a22999ea3d16e0bfd44670dd160fa38e51b30048f2574e33eea20ceec5bff8a36c97b6967d7db0d318030a94ec75193ab43ce3eb1c593')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

