pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.10576
pkgrel=2
pkgdesc='Classes with architecture-specific information useful to other projects.'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('BSD')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/0d/bc/2ac56bebdf2034dc91c0ccfb6749d5e9dbf9682458191843898e7d29be5c/$_pkgname-$pkgver.tar.gz")
sha512sums=('15ac9998273eb9f6822b0d96a600e762b097131f644fc75ceaf242e425cb2942f0fb913b353aae70ec6552b6be6e2beb45fe849888f7ceb81481862e4768fbae')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

