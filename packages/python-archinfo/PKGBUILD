pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.6588
pkgrel=1
pkgdesc='UNKNOWN'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('custom:unknown')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/5b/2f/f9e2a4d83a9a29da9f48c2eb2bf95bcbba2a3fffae2d707196de570ba3b5/$_pkgname-$pkgver.tar.gz")
sha512sums=('70dc7a2d8bfcf6ed23db273388859e3779552185302411238a9db9aa8e9a050665df452f8631c8e4724d59cfbb66e9bb4dbed85bd938aaf7c42e29c48a7201cf')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

