pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.9684
pkgrel=1
pkgdesc='Classes with architecture-specific information useful to other projects.'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('BSD')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/8b/8b/6b2f7e62f615967f3568d48144ddc7e717bc4aa818e10e6600b7017528aa/$_pkgname-$pkgver.tar.gz")
sha512sums=('e867760589f26c66638c5be3d701c51d0e392413119eccea123b37707e3926bbd5ae769990def5dcbd36b9f39013a5c29e2134766c164450551899b6fdc50ced')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

