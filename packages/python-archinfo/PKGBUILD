pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.10159
pkgrel=1
pkgdesc='Classes with architecture-specific information useful to other projects.'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('BSD')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/67/98/f0c5da8cf9a7d515265e906de566a407957894bc3682d8a292163da941c7/$_pkgname-$pkgver.tar.gz")
sha512sums=('0bac28e0a97db8e3d1330913652df3a6ca7074f5b4fa4a1f9b60f5bb3dfa4200eba2ea1ec80fe9d7f4571f4f81b1927c88578f87cb76cc396107f3f27a3fb8c6')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

