pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.9947
pkgrel=1
pkgdesc='Classes with architecture-specific information useful to other projects.'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('BSD')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/ad/9d/cfd8299c2317511115ab963394be7690f3d9e014aa1ea340574f9be3fc1a/$_pkgname-$pkgver.tar.gz")
sha512sums=('2223053f7b91f8507b48ab93c6542803773bf7806c85b1a495b9eaabcc7914a78fc54367739af7642a5316fe83b8cc577339eafc25238647b5e4216db095d326')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

