pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.2.42
pkgrel=1
pkgdesc='Classes with architecture-specific information useful to other projects.'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('BSD')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('c0bea463013588b0e63cc73c3a84ad5a15d5cf4f2e95aa6c6f5d3dd9ae98e5ac7b728daea1177c7d57ea7bad8c3466cef846930c1197141047af9847cca178fb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

