pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.6488
pkgrel=1
pkgdesc='UNKNOWN'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('custom:unknown')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/85/67/a1ece075274f4f90b7dd8e62cc76f978b8eb5607f3bea502e844433f0237/$_pkgname-$pkgver.tar.gz")
sha512sums=('3e140fd9b6ca7b0b7ba1a0fc9ad9a2a921bfd2a19c45c9e95b90270713b424fd054443559ac93d54e32e475c2faf3b3b61f76e3ffc1fb007e7745855a7f7bf50')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

