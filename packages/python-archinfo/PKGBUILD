pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.5034
pkgrel=1
pkgdesc='UNKNOWN'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('custom:unknown')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/47/0b/feca7892d4650417ad717cc7cd84cf2a89bb790e91ec1854f953159a16d9/$_pkgname-$pkgver.tar.gz")
sha512sums=('1d60fc76c2d2735dcf98ed39297285e998ac50c20cddfbfade4e325df602e5315ba267fba8f1d74d9d8e9af4448c04ec5f64fff8131933b448e0ef337bee84c6')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

