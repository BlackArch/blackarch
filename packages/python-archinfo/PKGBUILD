pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.6136
pkgrel=1
pkgdesc='UNKNOWN'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('custom:unknown')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/32/59/50dfc654d65cd935ea14b75872892750fdf9c430373817f1b959c7c7ea39/$_pkgname-$pkgver.tar.gz")
sha512sums=('b031c52a4666f589ca3a1bfd530b3888072e04c0a1c62bb5ddc48dbe5dcd2cff4998bb5f9168bb3c6f70fc5af206fcc9cfcf312c5133aff09833037525e22be7')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

