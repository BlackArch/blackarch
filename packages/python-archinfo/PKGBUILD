pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.10730
pkgrel=1
pkgdesc='Classes with architecture-specific information useful to other projects.'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('BSD')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/cc/b9/2e597a042aa9bc95e40bde91e35658d00b26d2b735234afaf37012298cf6/$_pkgname-$pkgver.tar.gz")
sha512sums=('ef90e0ad355f79b3e2185c2106f509792c744571259f2810edb31d469a03e39ca603507ae692fa46148e727654ce8d6d937c0604d487d618298cab4d15b40aec')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

