pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.2.14
pkgrel=1
pkgdesc='Classes with architecture-specific information useful to other projects.'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('BSD')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/9d/c2/64b657e6daf5e8792de8cfd0536a189747c296316cbe3c2365f5382b1287/$_pkgname-$pkgver.tar.gz")
sha512sums=('7933528fd1ff5cef7e303b3a9d9bafc05e2557c310c0fc31a316846e7b553107cd3c7d0e82658eca512a0ce8368fdfcbcdcbc9aa641b48872ae2044adb26bc29')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

