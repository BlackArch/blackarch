pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.6281
pkgrel=1
pkgdesc='UNKNOWN'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('custom:unknown')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/ab/d8/ebdfed636ddb0f509e6e9260f5f090cb1f7d3d407648498decb634a996d4/$_pkgname-$pkgver.tar.gz")
sha512sums=('9d22400fcaf230059d4a1bcff7e61e24f9f3341e882f627e891bb96de9bd25bca2c4d468c684a1c6dbad831a1d8a59b476091bb1aacbb077a32906a73c9b0b82')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

