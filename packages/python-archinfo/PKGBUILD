pkgname=python-archinfo
_pkgname=archinfo
pkgver=9.0.6852
pkgrel=1
pkgdesc='UNKNOWN'
arch=('any')
url='https://pypi.org/project/archinfo/#files'
license=('custom:unknown')
depends=('python' 'capstone' 'python-pyelftools')
source=("https://files.pythonhosted.org/packages/c4/13/86ed8a0a74691b2fd26aa137fa93816ef734726e63f08af357e650c77477/$_pkgname-$pkgver.tar.gz")
sha512sums=('dac708ff7c60c2c00ee872ac2f93b68e5401f8c22e32bb0be422b88dc7fd7256da9f8a499f0331b5674510cd43512955828656ce9a7384b30797d26e33a578a9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

