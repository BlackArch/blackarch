pkgname=python2-gitdb
_pkgname=gitdb2
pkgver=0.6.4
pkgrel=1
pkgdesc='A pure-Python git object database.'
url='https://github.com/gitpython-developers/gitdb'
license=('BSD')
arch=('any')
depends=('git' 'python2-smmap')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/e3/95/7e5d7261feb46c0539ac5e451be340ddd64d78c5118f2d893b052c76fe8c/$_pkgname-$pkgver.tar.gz")
sha512sums=('2314ae70ec26c46c559cc69a1300ead8cd65a0a22425a3bb36b04edb73bd5e2628cbdcd8e515830c74b21af2badea662c915a727d9a46ed2f92f169eb71bdf62')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

