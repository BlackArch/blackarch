pkgname=hashcatch
pkgver=1.0
pkgrel=1
pkgdesc='Capture handshakes of nearby WiFi networks automatically.'
groups=('blackarch' 'blackarch-wireless' 'blackarch-cracker')
arch=('any')
url='https://stazot.tk/hashcatch.html'
license=('GPL3')
depends=('bash' 'aircrack-ng' 'hashcat-utils' 'hcxtools' 'jq')
makedepends=('git')
source=("git+https://github.com/staz0t/$pkgname.git")
sha512sums=('SKIP')
install="$pkgname.install"

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
	cd "$pkgname"
	touch $pkgname.conf
	touch db
	mkdir handshakes
}

package() {
	cd "$pkgname"
	
	install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
	install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/hashcatch/LICENSE"
	install -Dm 644 README.md "$pkgdir/usr/share/doc/hashcatch/README.md"
	install -Dm 755 $pkgname.conf "$pkgdir/etc/hashcatch/$pkgname.conf"
	install -Dm 755 db "$pkgdir/usr/share/hashcatch/db"
}

