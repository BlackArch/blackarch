pkgname=python-mypy
_pkgname=mypy
pkgver=0.941
pkgrel=1
pkgdesc='Optional static typing for Python.'
arch=('any')
url='https://pypi.org/project/mypy/#files'
license=('MIT')
depends=('python' 'python-typed-ast' 'python-typing-extensions'
         'python-mypy_extensions')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/3e/9f/9f408ca2ed4004e4303649087449556db769b341390dbc21a6075f02bc7d/$_pkgname-$pkgver.tar.gz")
sha512sums=('b29f3debbc0b79afad5417e8db5784c3a725a4dfbed69c22af91558ab798f6bc4f8ad59fbdeb22d16e6e4b3abc21a9bbb71e2075acc5494ace0bc13513880c73')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

