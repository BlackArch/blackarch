pkgname=python-azure-mgmt-security
_pkgname=azure-mgmt-security
pkgver=2.0.0
pkgrel=1
pkgdesc='Microsoft Azure Security Center Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-security/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.zip")
sha512sums=('a0a7b889669a9eca89f124f04bd0c1f3871b167b2e585552350f4e72f3da5c5d5cb3e6590ea83bfa19ea7206f7b9276a8accbeb95f4023410c697cae5edd5622')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

