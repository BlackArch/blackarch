_pkgname=neo4j-python-driver
pkgname=python-neo4j-driver
pkgver=4.2.1
pkgrel=1
pkgdesc='Neo4j Bolt driver for Python'
arch=('any')
url='https://github.com/neo4j/neo4j-python-driver'
license=('Apache')
depends=('python' 'python-pytz')
makedepends=('python-setuptools')
source=("https://github.com/neo4j/$_pkgname/archive/$pkgver.zip")
sha512sums=('fe08780c0cc642633f5a7fb6722851da70739fe1dff1646ca912e98964d4b097c5897923f20ff69c135c171604b06a606148f5ac2210362a13cbc8ae714e8557')

build(){
  cd $_pkgname-$pkgver

  python setup.py build
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.9/site-packages/tests"
}

