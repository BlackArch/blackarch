_pkgname=neo4j-python-driver
pkgname=python-neo4j-driver
pkgver=4.3.4
pkgrel=1
pkgdesc='Neo4j Bolt driver for Python'
arch=('any')
url='https://github.com/neo4j/neo4j-python-driver'
license=('Apache')
depends=('python' 'python-pytz')
makedepends=('python-setuptools')
source=("https://github.com/neo4j/$_pkgname/archive/$pkgver.zip")
sha512sums=('db7130c5b37822379b6da4563582a5302722e52bb65820f89742029e2b070f16c14030ded339e0ac6b4a9707597bf25e5881574366ea9b344d1d39d78d9b549a')

build(){
  cd $_pkgname-$pkgver

  python setup.py build
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.9/site-packages/tests"
}

