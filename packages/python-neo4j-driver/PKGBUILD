_pkgname=neo4j-python-driver
pkgname=python-neo4j-driver
pkgver=4.3.6
pkgrel=1
pkgdesc='Neo4j Bolt driver for Python'
arch=('any')
url='https://github.com/neo4j/neo4j-python-driver'
license=('Apache')
depends=('python' 'python-pytz')
makedepends=('python-setuptools')
source=("https://github.com/neo4j/$_pkgname/archive/$pkgver.zip")
sha512sums=('b74a709e5fb3f87cce1b27cf20eead7164731e8cd6d899ca13dc000358068bae2e3c9e0a438754bbad6f72f7674f25b52e57ca45d8e770ff3458a30ef642fe3c')

build(){
  cd $_pkgname-$pkgver

  python setup.py build
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.9/site-packages/tests"
}

