_pkgname=neo4j-python-driver
pkgname=python-neo4j-driver
pkgver=4.4.0
pkgrel=1
pkgdesc='Neo4j Bolt driver for Python'
arch=('any')
url='https://github.com/neo4j/neo4j-python-driver'
license=('Apache')
depends=('python' 'python-pytz')
makedepends=('python-setuptools')
source=("https://github.com/neo4j/$_pkgname/archive/$pkgver.zip")
sha512sums=('5e61699f06aeb205c39fdb8e8899f7f22d4b320acbfb4cf348f3cc749d0cc118dd8b08fcf2b89c30c80750a37098622a4a3ac1960d66b9fdb6291af9195f8866')

build(){
  cd $_pkgname-$pkgver

  python setup.py build
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.9/site-packages/tests"
}

