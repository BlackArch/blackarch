_pkgname=neo4j-python-driver
pkgname=python-neo4j-driver
pkgver=4.2.0
pkgrel=2
pkgdesc='Neo4j Bolt driver for Python'
arch=('any')
url='https://github.com/neo4j/neo4j-python-driver'
license=('Apache')
depends=('python' 'python-pytz')
makedepends=('python-setuptools')
source=("https://github.com/neo4j/$_pkgname/archive/$pkgver.zip")
sha512sums=('555db583f42698fd619adaa2d48d9cbcef8959b63124d898f68a0528614370d00ebe371004ed6da108717dde923c717545caa129a2eaaf8dc22be057b92c143d')

build(){
  cd $_pkgname-$pkgver

  python setup.py build
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.9/site-packages/tests"
}

