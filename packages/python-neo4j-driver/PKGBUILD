_pkgname=neo4j-python-driver
pkgname=python-neo4j-driver
pkgver=4.4.2
_pyver=3.10
pkgrel=1
pkgdesc='Neo4j Bolt driver for Python'
arch=('any')
url='https://github.com/neo4j/neo4j-python-driver'
license=('Apache')
depends=('python' 'python-pytz')
makedepends=('python-setuptools')
source=("https://github.com/neo4j/$_pkgname/archive/$pkgver.zip")
sha512sums=('3d46ef28f6c7c2580d633d4ae708472c012af45937da31c0310c10725b2862e6aa76058b1fbd5c0540553a33b1475c81031ef93b9019d61cb62f44b48860b05b')

build(){
  cd $_pkgname-$pkgver

  python setup.py build
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python$_pyver/site-packages/tests"
}

