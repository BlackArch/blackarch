pkgname=python-exifread
_newname=exif-py
pkgver=2.1.2
pkgrel=1
pkgdesc='Python library to extract EXIF data from tiff and jpeg files'
arch=('any')
url='https://github.com/ianare/exif-py/releases'
license=('BSD 3-Clause')
depends=('python' )
makedepends=('python-setuptools')
source=("$_newname-$pkgver.tar.gz::https://github.com/ianare/exif-py/archive/$pkgver.tar.gz")
sha512sums=('4636738fa304b4def3cce2adc03494b78318857a1172b2bfbf372e8b88fb2838b1dbb8aab1aefac02540b14d0a571d4ab524166191f539b61c239704bb50c063')

build() {
  cd "$_newname-$pkgver"

  python setup.py build
}

package() {
  cd "$_newname-$pkgver"

  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}
