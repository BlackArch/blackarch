pkgname=python2-progressbar
_pkgname=python-progressbar
pkgdesc='A progress bar for Python.'
pkgver=3.43.1
pkgrel=1
url='https://github.com/WoLpH/python-progressbar'
license=('BSD')
arch=('any')
depends=('python2' 'python2-utils')
makedepends=('python2-setuptools' 'python2-utils')
source=("$_pkgname-$pkgver.tar.xz::https://github.com/WoLpH/python-progressbar/releases/download/v$pkgver/python-progressbar-v$pkgver.tar.xz")
sha512sums=('f9e840eb07fe9c3eefa3aea06127012cd4ea7a959845f9dd44f5392edb3a9d7dcdc02fc98e68b11ef54c538c34ad52b55eeb31dfa74a48350a583efb746fb7cf')

build() {
  cd "$_pkgname-v$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-v$pkgver"

  python2 setup.py install --root="$pkgdir" -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

