pkgname=python-murmurhash
_pkgname=murmurhash
pkgver=1.0.10
pkgrel=2
pkgdesc='Cython bindings for MurmurHash2.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/murmurhash/'
license=('MIT')
depends=('python' 'python-pytest' 'cython')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('b0108bf19cf2d9cf9cad0b82cf941e187b9a7fc3786fc87c21bb538dca9bc81889a470634acb4d45982ed5ecbd811e536f4018a611cdfc582e6cb4cf220f0e8a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

