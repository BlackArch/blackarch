pkgname=python-murmurhash
_pkgname=murmurhash
pkgver=1.0.13
pkgrel=1
pkgdesc='Cython bindings for MurmurHash2.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/murmurhash/'
license=('MIT')
depends=('python' 'python-pytest' 'cython')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('227e65281becb3638eda6b57d5ee58db9b52983b0f38976bfb79af6553cb70063d040c4f1dd6c713af37eafac93d030175e1896a9f0442adc69657b58b2bdb84')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

