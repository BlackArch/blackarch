pkgname=python-murmurhash
_pkgname=murmurhash
pkgver=1.0.15
pkgrel=1
pkgdesc='Cython bindings for MurmurHash2.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/murmurhash/'
license=('MIT')
depends=('python' 'python-pytest' 'cython')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('d06c55bd380d969510ce691ca77246eef12997e8be3d734160ac32204fa97081b3c9307a0e083e77dec1a37b8f487740334412a67d585839c98a4d85f8a6c665')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

