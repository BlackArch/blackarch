pkgname=python-murmurhash
_pkgname=murmurhash
pkgver=1.0.12
pkgrel=1
pkgdesc='Cython bindings for MurmurHash2.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/murmurhash/'
license=('MIT')
depends=('python' 'python-pytest' 'cython')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('8221144bd8597e841dcea41405e6c5bebe35c2dc5a0bd75c89d288860032da987e5b1f9b97bf4fe120953cb18eab2b9263135a339c0496da6ff769acc29d3710')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

