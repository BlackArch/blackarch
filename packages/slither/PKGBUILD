pkgname='slither'
pkgver=1395.c8fb67f
pkgrel=1
pkgdesc='Solidity static analysis framework written in Python 3.'
arch=('any')
groups=('blackarch' 'blackarch-code-audit' 'blackarch-exploitation')
url='https://github.com/crytic/slither'
license=('AGPL3')
depends=('python' 'python-setuptools' 'python-prettytable' 'python-pysha3' 'python-crytic-compile')
makedepends=('git')
source=("git+https://github.com/crytic/$pkgname.git")
sha512sums=('SKIP')

build() {
  cd "$pkgname"

  python setup.py build
}

package() {
  cd "$pkgname"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

