pkgname=python-envi
_pkgname=${pkgname#python-}
pkgver=0.2.2
pkgrel=1
pkgdesc='Minimal environment variables reader.'
arch=('any')
# https://github.com/OvalMoney/envi
url='https://pypi.org/project/envi/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools' 'python-pip')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha256sums=('ea3285eb837230c39e1b9c4373ea64153fc0f674b70cab4d3887ab6903f7aef6')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

