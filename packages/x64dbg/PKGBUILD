pkgname=x64dbg
pkgver=2022.08.20
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_00-05.zip")
sha512sums=('32c26ff6bd498aac089a24c05e0a61e74de90977b82ec5679c5da088d22cea4c98d50967ee9ceec574dae76055f1c95159f2ffeffbc8d6736df27008526bcc00')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

