pkgname=x64dbg
pkgver=2022.06.22
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_00-12.zip")
sha512sums=('99d6e879d12471de6cef451256a632397dcea087ccfc2ac1ca8e12c737cbbceb1c3828e88eb5218d6afb2b92fdd114ad8cd48d5c63870a9a52d0bec14573d90e')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

