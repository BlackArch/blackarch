pkgname=x64dbg
pkgver=2020.12.16
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_05-02.zip")
sha512sums=('0bc2df088ee605a5ac46546731dcd2a0f3d136fc0ca3cdc95a8cd69f7ae6e8e47bc9033d5b3b55b7e4c2f5f16f5c6633ccbec833fe100cd1c395d2191eda15bb')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

