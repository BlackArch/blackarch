pkgname=x64dbg
pkgver=2021.06.14
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_16-37.zip")
sha512sums=('74176ffca90eabeef18ebac2ac422aaa3d0d4d968fedaafd4c8f0c4127164f545f7ff7431ff18845539bcb208b589ee2ebd936b301aad10fdb2a93e928e4988f')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

