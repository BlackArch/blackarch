pkgname=x64dbg
pkgver=2023.07.08
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_14-52.zip")
sha512sums=('752676efe2a6c99526baf9e1ff37f4a0b889e2b82bc32d26b73e3ddc43f050c89eedec2e0070ba4416f643548383950a69a130012c3e2143f47e50dc5b5cc1d2')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

