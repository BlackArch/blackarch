pkgname=x64dbg
pkgver=2022.05.25
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_18-42.zip")
sha512sums=('c2d5f3da33b6c08e6fc47828e9e38b542fe8e2bbd1940e1854205f47b16ca016f0f08063bb0452e4d292b919d42e6930182be55da0b9c2d9a5b80d43ce55158f')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

