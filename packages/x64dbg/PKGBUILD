pkgname=x64dbg
pkgver=2021.12.22
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_16-25.zip")
sha512sums=('154649de931c2bac99560def3c5d56c82c2c3dc4c9a91074282b6e01e2a4a7929d0d43568a21715b4766d9f8a7d1f47a9748014b071c62a7f4217fa0db16022f')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

