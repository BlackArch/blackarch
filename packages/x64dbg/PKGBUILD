pkgname=x64dbg
pkgver=2020.12.22
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_12-57.zip")
sha512sums=('a58f169223cc102a0096be09ce888e20bb7b312e0fc80a383e85216ea2ec3dc6dbe0cb74498c7b63579630aed208c572387629eb618fe6e8a3f4672efb448ce7')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

