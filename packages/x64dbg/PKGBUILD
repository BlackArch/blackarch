pkgname=x64dbg
pkgver=2022.08.08
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_23-56.zip")
sha512sums=('8347ac6a804adb89fda15fd1c901e46979f685b301935fd8d76cf3519aadbd666a5e9ca535fe31bdd65c8999f634d99098cba62a9661cb4c568e002cab301a48')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

