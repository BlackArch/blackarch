pkgname=x64dbg
pkgver=2022.09.02
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_19-46.zip")
sha512sums=('1f3ba029fc41ea3aa01db12930eba7a288945978cc73be3f82f0e796e38f1dfef0143203b2f909923d6831585c5395f9b207002c536f2a0ee6245402ffcc8b15')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

