pkgname=x64dbg
pkgver=2021.12.05
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_15-32.zip")
sha512sums=('fa9b05c89e6807fe04c2d00806d09f20ad7223762616c4d23b52bfb75cebc4ced9dbaf810d1ea7242c07fef0a295c35b5ae2be533390e147a81d7afc56dae8b7')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

