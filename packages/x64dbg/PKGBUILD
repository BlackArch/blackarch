pkgname=x64dbg
pkgver=2023.07.19
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_01-12.zip")
sha512sums=('db3714961efb30d30ea629c50f296bae56fb06605fba88e86d1044460b584d4a416a7120891daa974ebf1af7e149c18e74e63e38e5626c5b4d62d676523fa8d0')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

