pkgname=x64dbg
pkgver=2022.12.12
pkgrel=1
pkgdesc='An open-source x64/x32 debugger for windows.'
url='https://github.com/x64dbg/x64dbg/releases'
groups=('blackarch' 'blackarch-windows' 'blackarch-debugger')
license=('GPL3')
arch=('any')
source=("$pkgname.zip::https://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_${pkgver//./-}_15-45.zip")
sha512sums=('30d711d56916bc3fca872e2418e309e9ef7a47186515897b38144e27bfb3585ee6849a53a887cae9351aded24c7dfa6eba757dbe9516551c99a446a3372543cb')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

