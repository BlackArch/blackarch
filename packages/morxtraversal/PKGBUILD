pkgname=morxtraversal
pkgver=1.0
pkgrel=3
groups=('blackarch' 'blackarch-webapp' 'blackarch-scanner')
pkgdesc='Path Traversal checking tool.'
url='http://www.morxploit.com/tools/'
arch=('any')
license=('custom:unknown')
depends=('perl' 'perl-io-socket')
source=('http://web.archive.org/web/20160112201050/http://www.morxploit.com:80/morxtools/morxtraversal.pl')
#source=('http://www.morxploit.com/morxtools/morxtraversal.pl')
sha512sums=('544d35a8a98da456127e9e8b8a986a1be0a47c8ef30e993c77fb6ec218efa831983506085394cc3b48f3bf4007387c375c9093a90d1cf1b439498ce361434a2f')

pkgver() {
  grep -i "tool:" morxtraversal.pl | cut -d ' ' -f 4 | sed 's/v//g'
}

package() {
  install -Dm 755 morxtraversal.pl "$pkgdir/usr/bin/$pkgname"
}

