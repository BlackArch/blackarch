pkgname=objection
pkgver=1.7.2
pkgrel=1
pkgdesc='Instrumented Mobile Pentest Framework.'
groups=('blackarch' 'blackarch-mobile' 'blackarch-reversing' 'blackarch-binary')
arch=('any')
url='https://pypi.org/project/objection/#files'
license=('custom:unknown')
depends=('python-frida' 'python-frida-tools' 'python-prompt_toolkit'
         'python-click' 'python-tabulate' 'python-requests' 'python-flask'
         'python-delegator.py' 'python-pexpect')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/eb/16/d363032b9d78224b689a485d93cdd3a78170b96069793c1e59b8c8ca4cb2/$pkgname-$pkgver.tar.gz")
sha512sums=('6a143bb2ce7f67d3fbbd3074e26e8a54a1f0aba5bc397449e941be1177bc5364b8f6d21227da3d25257722d10f6967654b31818e695b6a80aa623a239c1fbc2a')

build() {
  cd "$pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.7/site-packages/tests"
}

