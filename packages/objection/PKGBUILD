pkgname=objection
pkgver=1.7.0
pkgrel=1
pkgdesc='Instrumented Mobile Pentest Framework.'
groups=('blackarch' 'blackarch-mobile' 'blackarch-reversing' 'blackarch-binary')
arch=('any')
url='https://pypi.org/project/objection/#files'
license=('custom:unknown')
depends=('python-frida' 'python-frida-tools' 'python-prompt_toolkit'
         'python-click' 'python-tabulate' 'python-requests' 'python-flask'
         'python-delegator.py' 'python-pexpect')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/1b/80/ccb104d160d96cfdca62852e23b92392b306533bfd1ffc3dbdc6254a98c8/$pkgname-$pkgver.tar.gz")
sha512sums=('4da782e8bcce2a9917958b3d3d05c281b8ddaac86ee2f1fbe8838e0b21e4926b691f041d607f22bd19ccd3006ea8ec62407a78296ede255c4df1dd9b1b2e41fd')

build() {
  cd "$pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.7/site-packages/tests"
}

