# See COPYING for license details.

pkgname=sipbrute
pkgver=11.5be2fdd
pkgrel=3
groups=('blackarch' 'blackarch-voip' 'blackarch-cracker')
pkgdesc='A utility to perform dictionary attacks against the VoIP SIP Register hash.'
arch=('x86_64' 'aarch64')
url='https://github.com/packetassailant/sipbrute'
license=('MIT')
makedepends=('git' 'go')
source=("git+https://github.com/packetassailant/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod init go.mod
  GOPATH="$srcdir" go mod tidy
  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname" README.md
}

