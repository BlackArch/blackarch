pkgname=skydive
pkgver=0.28.0
pkgrel=1
pkgdesc='An open source real-time network topology and protocols analyzer.'
arch=('x86_64')
groups=('blackarch' 'blackarch-networking')
url='https://github.com/skydive-project/skydive'
license=('Apache')
depends=('glibc')
makedepends=('git')
source=("https://github.com/skydive-project/skydive/releases/download/v$pkgver/$pkgname")
sha512sums=('93d0fcbcf1a43147907be7676079b1750421557c63d229e1f633ed189b43ee3e37a9ce8fae62e4c8e6fc7881d2bf22fa2fac85ac17ab0e603e5007321e982b85')

package() {
  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

