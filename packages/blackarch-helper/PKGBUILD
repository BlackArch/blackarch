# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=blackarch-helper
pkgver=2.1.0
pkgrel=1
pkgdesc="Helper to find, inspect, and build BlackArch packages from source using makepkg."
arch=('any')
url='https://github.com/x0rgus/blackarch-helper'
license=('MIT')
depends=('bash' 'curl' 'fzf')
makedepends=('git')
source=("git+$url.git")
sha512sums=('SKIP')

package() {
    cd "$pkgname"
    
    install -Dm755 "blackarch-helper" "$pkgdir/usr/bin/blackarch-helper"
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 "blackarch-helper.1" "${pkgdir}/usr/share/man/man1/${pkgname}.1"
    install -Dm644 "blackarch-helper.bash-completion" "${pkgdir}/usr/share/bash-completion/completions/${pkgname}"
    install -Dm644 "_blackarch-helper" "${pkgdir}/usr/share/zsh/site-functions/_${pkgname}"
}