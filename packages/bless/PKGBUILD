# See COPYING for license details.

pkgname=bless
pkgver=0.6.3
pkgrel=3
pkgdesc='High-quality, full-featured hex editor.'
arch=('any')
url='https://github.com/afrantzis/bless'
license=('GPL-1.0-or-later')
depends=('gtk-sharp-2')
makedepends=('meson' 'ninja')
source=("https://github.com/afrantzis/bless/archive/v$pkgver.tar.gz")
sha512sums=('22841b6f1b923ebfc7952ad9233cffb30df4ecb22a655f6461ff3cc97066a8c68ffc6bbd88e4fd83c345226928ed08c557f2f322942766da61bcd2b2c7f7d3cb')

build() {
  cd "$pkgname-$pkgver"

  arch-meson -Dtests=false -Dhtml_user_doc=false build

  ninja -C build
}

package() {
  cd "$pkgname-$pkgver"

  DESTDIR="$pkgdir" ninja -C build install
}

