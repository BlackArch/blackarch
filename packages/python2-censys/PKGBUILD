pkgname=python2-censys
_pkgname=censys
pkgver=2.1.9
pkgrel=5
epoch=1
pkgdesc='Python library for interacting with Censys Search Engine (censys.io).'
arch=('any')
url='https://pypi.org/project/censys/#files'
license=('Apache-2.0')
depends=('python2' 'python2-requests' 'python2-netaddr' 'python2-backoff')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('cb58af6e7c3323f67a869bbb52470257212dbca2029324c4fc3d9e97f5e351392e3e16e44716538aab9c3f3eab18cb88475d8ece9bec149014b472e5806b692f')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  mv "$pkgdir/usr/bin/$_pkgname" "$pkgdir/usr/bin/${_pkgname}2"
}

