pkgname=python2-cle
pkgver=8.18.10.5
pkgrel=1
pkgdesc='Loads Everything (at least, may binary formats!) and provides a Pythonic interface to clelyze what they are and what they would look like in memory.'
arch=('any')
url='https://pypi.org/project/cle/#files'
license=('custom:unknown')
depends=('python2' 'python2-pyelftools' 'python2-pefile' 'python2-cffi'
         'python2-archinfo' 'python2-idalink')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/71/ef/50648bfc116563c70f44aa256f212e0c1206620f5d6590fd91b40d59ae93/cle-$pkgver.tar.gz")
sha512sums=('2a2fed830fadf29f53fc32ba6c7d5e2c35a12bb9fc826a322a08eef0a976ab66d96fd40430532a7896a62f521bf85b5e82c83cb8703c6b758c5c92a72e28db61')

build() {
  cd "cle-$pkgver"

  python2 setup.py build
}

package() {
  cd "cle-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

