pkgname='python2-elasticsearch'
pkgver='6.2.0'
pkgrel=2
pkgdesc='Python client for Elasticsearch.'
arch=('any')
url='https://pypi.org/project/elasticsearch/#files'
license=('Apache')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/7b/32/645c407856c2e799d41c8a861e8d707070f82f00abf3089ccbf80b3c1e20/elasticsearch-${pkgver}.tar.gz")
sha512sums=('cab16567e86658d16df448cb44a60fb403f20e9d836e327a76038c99aa73fcac400a465c2e61227c836d03039b1f1ad32e56f13a592bd9d2638c96006e450347')

build() {
  cd "$srcdir/elasticsearch-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/elasticsearch-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
