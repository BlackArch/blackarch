pkgname=snscrape
pkgver=0.4.3.20220106
pkgrel=2
pkgdesc='A social networking service scraper in Python.'
arch=('any')
groups=('blackarch' 'blackarch-recon' 'blackarch-social')
url='https://github.com/JustAnotherArchivist/snscrape'
license=('GPL3')
depends=('python' 'python-beautifulsoup4' 'python-filelock' 'python-lxml'
         'python-requests')
makedepends=('python-setuptools' 'python-pip')
source=("https://files.pythonhosted.org/packages/source/${pkgname::1}/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('02b74da7c6913fc95da9ddf00f1791fa064088a40f8bff35f9babfdd7425e02ecb26a71b7d895631db21e9add2b64808f41b1a7989e453e237cda7538ea11753')

build() {
  cd "$pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

