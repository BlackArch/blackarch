# See COPYING for license details.

pkgname=snscrape
pkgver=0.4.3.20220106
pkgrel=1
pkgdesc='A social networking service scraper in Python.'
arch=('any')
groups=('blackarch' 'blackarch-recon' 'blackarch-social')
url='https://github.com/JustAnotherArchivist/snscrape'
license=('GPL3')
depends=('python' 'python-beautifulsoup4' 'python-filelock' 'python-lxml' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${pkgname::1}/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('SKIP')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
