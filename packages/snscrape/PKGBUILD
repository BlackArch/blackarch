# See COPYING for license details.

pkgname=snscrape
pkgver=v0.4.3.20220106.r73.gcbdaee6
pkgrel=1
pkgdesc='A social networking service scraper in Python.'
arch=('any')
groups=('blackarch' 'blackarch-recon' 'blackarch-social')
url='https://github.com/JustAnotherArchivist/snscrape'
license=('GPL3')
depends=('libxml2' 'libxslt' 'python' 'python-lxml')
makedepends=('git')
source=("git+https://github.com/JustAnotherArchivist/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd "$pkgname"

  python setup.py build
}

package() {
  cd "$pkgname"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
