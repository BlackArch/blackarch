pkgname=python-python-whois
_pkgname=python_whois
pkgver=0.9.6
pkgrel=1
pkgdesc='Whois querying and parsing of domain registration information.'
arch=('any')
url='https://pypi.org/project/python-whois/#files'
license=('MIT')
depends=('python' 'python-future' 'python-dateutil')
makedepends=('python-build' 'python-installer' 'python-setuptools'
             'python-wheel')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('1b4bfe40bc29f8903ea823b6b095787bce89f82f2cc14732c287a61b43756bb91a6a8a193beb73076d911d753214ec8d8ef96c9d3a51e275db79c0adb8813f31')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --no-isolation
}

package() {
  cd "$_pkgname-$pkgver"

  python -m installer --destdir="$pkgdir" dist/*.whl
}

