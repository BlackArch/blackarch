pkgname=iaxflood
pkgver=0.2
pkgrel=2
epoch=3
pkgdesc='IAX flooder.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-dos' 'blackarch-voip')
url='https://www.hackingexposedvoip.com/'
license=('GPL-2.0-or-later')
depends=('glibc')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('ceaea3a121f7ab2e512e7fd9dd29d31ec2051618216fe60219d57464358d23e79cebff223c3c18f5f1f89aa8ee00d6096262499476b62edb6880ac795ced17df')

build() {
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir" PREFIX=/usr install
}

