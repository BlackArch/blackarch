pkgname=iaxflood
pkgver=20131025
pkgrel=1
epoch=2
pkgdesc="IAX flooder"
url='http://www.hackingexposedvoip.com/'
groups=('blackarch' 'blackarch-intel' 'blackarch-stress-testing')
makedepends=('gcc' 'make')
depends=('glibc')
license=('GPL')
arch=('i686' 'x86_64')
source=(http://www.hackingexposedvoip.com/tools/iaxflood.tar.gz)
md5sums=('39d557dcfdcab7c668ba321f4de82664')

pkgver() {
  date +%Y%m%d
}

build() {
  cd "$srcdir/iaxflood"
  sed -i "s:gcc :gcc $CFLAGS :" makefile
  make
}

package() {
  cd "$srcdir/iaxflood"
  install -Dm755 iaxflood $pkgdir/usr/bin/iaxflood
}
