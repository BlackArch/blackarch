pkgname=python-normality
_pkgname=normality
_pyver=3.10
pkgver=2.3.1
pkgrel=1
pkgdesc='Micro-library to normalize text strings.'
arch=('any')
url='https://pypi.org/project/normality/#files'
license=('MIT')
depends=('python' 'python-six' 'python-chardet' 'python-pyicu' 'python-banal')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ac/1d/6ebbaff72c7c6472a6a8bad5d4fd85cbda41456219ba290077f64f975ce7/$_pkgname-$pkgver.tar.gz")
sha512sums=('e348d09df1935cd200c4701b277da02121abdcfd335abe48b052ca5515d944a49150c1a8a29b2d4324e26c42095e86a0cf9a8a13082fb35a5b4cb7715a0c1b14')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python$_pyver/site-packages/tests"
}

