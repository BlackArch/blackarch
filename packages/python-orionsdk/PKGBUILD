pkgbase=python-orionsdk
pkgname=('python2-orionsdk' 'python-orionsdk')
_pkgname=orionsdk
pkgver=0.5.0
pkgrel=1
pkgdesc='Nanosecond resolution temporal types.'
arch=('any')
url='https://pypi.org/project/orionsdk/#files'
license=('APACHE')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('e39ecf317c38e7ac7edd0c9f3a3662a2e7608ad2cde07c8589e4e4edae9f5b22d2358fb174c2bb9c866a479ae21b7e4e3909dba6455a6db42b56d65e79f9cadc')

prepare() {
  cp -a "$_pkgname-$pkgver"{,-2}
}

build() {
  cd "$_pkgname-$pkgver-2"

  python2 setup.py build

  cd "$srcdir/$_pkgname-$pkgver"

  python setup.py build
}

package_python2-orionsdk() {
  depends=('python2' 'python2-requests' 'python2-six')

  cd "$_pkgname-$pkgver-2"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

package_python-orionsdk() {
  depends=('python' 'python-requests' 'python-six')

  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

