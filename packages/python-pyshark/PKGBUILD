pkgbase=python-pyshark
pkgname=('python2-pyshark' 'python-pyshark')
_pkgname=pyshark
pkgver=0.4.2.5
pkgrel=1
pkgdesc='Python wrapper for tshark, allowing python packet parsing using wireshark dissectors.'
arch=('any')
url='https://pypi.org/project/pyshark/#files'
license=('MIT')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/f2/19/b67ce24f6bb4d846016c79407a8daf95e41d3f16716ce03a5d86594334eb/$_pkgname-$pkgver.tar.gz")
sha512sums=('23233e8f566ce9e6c3f029f42f9b1f4f5c62d85defc984f443ec0ae8a2f3144d4ae2f016d7365b6d6c1041f7dfa3747e85edcaccb7d0a7ccae46f46222fd51eb')

prepare() {
  cp -a "$_pkgname-$pkgver"{,-2}
}

build() {
  cd "$_pkgname-$pkgver-2"

  python2 setup.py build

  cd "$srcdir/$_pkgname-$pkgver"

  python setup.py build
}

package_python2-pyshark() {
  depends=('python2' 'python2-lxml' 'python2-logbook')

  cd "$_pkgname-$pkgver-2"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

package_python-pyshark() {
  depends=('python' 'python-lxml' 'python-logbook')

  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

