_gemname=faraday
pkgname=ruby-$_gemname
pkgver=0.8.7
pkgrel=2
pkgdesc="HTTP/REST API client library."
arch=('any')
url='https://github.com/lostisland/faraday'
license=('MIT')
depends=('ruby' 'ruby-multipart-post>=1.1')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('2eb70975e36b9bcbdaf1d5f01d8e9f70')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
