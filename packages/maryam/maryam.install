post_install() {
  set -e
  cd /usr/share/maryam
  python -m virtualenv venv
  source venv/bin/activate &&
    pip install git+https://github.com/saeeddhqan/maryam.git \
    --isolated --root='/usr/share/maryame' --prefix='venv' -r requirements
}

post_upgrade() {
  post_install "$@"
}

post_remove() {
  rm -rf /usr/share/maryam
}

