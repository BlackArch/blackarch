pkgname=python2-jdcal
_pkgname=jdcal
pkgver=1.4.1
pkgrel=3
pkgdesc='Julian dates, from proleptic Gregorian and Julian calendars.'
arch=('any')
url='https://github.com/phn/jdcal'
license=('BSD')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/7b/b0/fa20fce23e9c3b55b640e629cb5edf32a85e6af3cf7af599940eb0c753fe/$_pkgname-$pkgver.tar.gz")
sha512sums=('5e14f470f35764c0d76fcf0ee13f9ea0879e645b589a48636207b7848f3df0437343898595c8cf19b8e4fe8a172d4e82aa06e56284ed263154c93de217e24e39')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" -O1 --skip-build
}

