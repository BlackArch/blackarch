pkgname=python-pyautogui
_pkgname=PyAutoGUI
pkgver=0.9.51
pkgrel=1
pkgdesc='Cross-platform module for GUI automation for human beings.'
arch=('any')
url='https://pypi.org/project/PyAutoGUI/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/62/31/6d86dd60c36270533399fa9a22d3263f44fcb73147467abb730a18e9bfec/PyAutoGUI-$pkgver.tar.gz")
sha512sums=('beb06514708a6376c9b3698652e7cf96adeb5f61f7e51e6142fa572cad31dd4cba9263e33a61d901fbde1243b9b2dc6b2015d32ed52e15f586e7bee9fb67c8d8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

