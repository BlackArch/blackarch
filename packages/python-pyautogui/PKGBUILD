pkgname=python-pyautogui
pkgver=0.9.43
pkgrel=1
pkgdesc='Cross-platform module for GUI automation for human beings.'
arch=('any')
url='https://pypi.org/project/PyAutoGUI/#files'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ff/17/b6ec11e78e0372eed786093964ad805852b67b6bce2f54ccc709080bd92f/PyAutoGUI-0.9.43.tar.gz")
sha512sums=('15e5e3a33850bfd96648d0a1a475211e95ad9b32c9bf4698e7a32885a1f2bd2db7e269943c209252672f695783b04cb64b822e82b385250e56eea84154cb3d09')

build() {
  cd "PyAutoGUI-$pkgver"

  python setup.py build
}

package() {
  cd "PyAutoGUI-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

