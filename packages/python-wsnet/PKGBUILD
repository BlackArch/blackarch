# See COPYING for license details.

pkgname=python-wsnet
_pkgname=wsnet
pkgver=19.144d5f1
pkgrel=1
pkgdesc='A lightweight protocol implementation to perform TCP and authentication proxying over websockets.'
arch=('any')
url='https://github.com/skelsec/wsnet'
license=('custom:unknown')
depends=()
makedepends=('git' 'python-setuptools')
source=("git+https://github.com/skelsec/$_pkgname")
sha512sums=('SKIP')

pkgver() {
  cd $_pkgname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$_pkgname"

  python setup.py build
}

package() {
  cd "$_pkgname"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
