pkgname=python-ldap0
_pkgname=ldap0
pkgver=1.4.1
_pyver=3.10
pkgrel=3
pkgdesc='Module package for implementing LDAP clients.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/ldap0/#files'
license=('Apache')
depends=('python' 'python-pyasn1' 'python-pyasn1-modules' 'openldap')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/02/2e/26021246e5779384aa726a1591ead630f59009e2cf20904ea78c3c00abc2/$_pkgname-$pkgver.tar.gz")
sha512sums=('fa9709dfc218e82536364c524898a75a401d878dfec6a2945a7de9383f96d2bbeb57afef06329e6a8cfaaae90eda9ca2fc7d0bf4074f044c12d309af242da738')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  chmod 644 \
    "$pkgdir/usr/lib/python$_pyver/site-packages/ldap0-$pkgver-py$_pyver.egg-info/"*
}

