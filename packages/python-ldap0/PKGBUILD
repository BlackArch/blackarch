pkgname=python-ldap0
_pkgname=ldap0
pkgver=1.3.0
pkgrel=1
pkgdesc='Module package for implementing LDAP clients.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/ldap0/#files'
license=('Apache')
depends=('python' 'python-pyasn1' 'python-pyasn1-modules')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/f5/81/50fb8b7cf506cad6faefc6b4dbc0b388ffadb58dd0303da6b076440663f7/$_pkgname-$pkgver.tar.gz")
sha512sums=('06f0fbb1e041762912fdf1f7aefc7b1fbdf1accddabddcd900a7bb29394dccf8fb1b83ead2b8fec802cebc0f94c68c14795c6e8f91b192735b2504efd84ba5fb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  chmod 644 \
    "$pkgdir/usr/lib/python3.9/site-packages/ldap0-$pkgver-py3.9.egg-info/"*
}

