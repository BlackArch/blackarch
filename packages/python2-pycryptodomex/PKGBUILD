pkgname=python2-pycryptodomex
_pkgname=pycryptodomex
pkgver=3.9.1
pkgrel=1
pkgdesc='A self-contained Python package of low-level cryptographic primitives'
url='http://www.pycryptodome.org/'
arch=('x86_64' 'aarch64')
license=('BSD')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/54/c9/d8373b27c1571ec980883c4d154ff7871ce8e5784a5546cec2792918659d/$_pkgname-$pkgver.tar.gz")
sha512sums=('607ee1e99fed083bb8e16437b4702d0b959b3c3ba4488ebb6f8c10963184740844327d839fdc7100d6edb639ef16dbe01ba1a90a3dd0b13efd6a663b8bcba8e1')

build() {
	cd "$_pkgname-$pkgver"

	python2 setup.py build
}

package() {
	cd "$_pkgname-$pkgver"

	python2 setup.py install --root="$pkgdir" -O1 --skip-build

	install -Dm 644 LICENSE.rst "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

