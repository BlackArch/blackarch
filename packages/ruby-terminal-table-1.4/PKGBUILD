_gemname=terminal-table
pkgname=ruby-$_gemname-1.4
pkgver=1.4.5
pkgrel=1
pkgdesc=Simple,\ feature\ rich\ ascii\ table\ generation\ library
arch=(any)
url=http://github.com/visionmedia/terminal-table
license=()
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('17f6a889b8bcc91a1242fabc39bac186f8e9542a'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{History.rdoc,Manifest,README.rdoc,Rakefile,Todo.rdoc,examples,spec,tasks,terminal-table.gemspec}
}
