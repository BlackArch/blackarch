pkgname=python2-frida
pkgver=12.4.3
pkgrel=1
pkgdesc='Inject JavaScript to explore native apps on Windows, Mac, Linux, iOS and Android.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://pypi.org/project/frida/#files'
license=('custom:unknown')
depends=('python2' 'python2-colorama' 'python2-prompt_toolkit'
         'python2-pygments')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/6c/e3/1458c72af63fe894962ffe328f54cc82f7e8f441943d8180510043a05f0b/frida-12.4.3.tar.gz")
sha512sums=('5e098ddc28441eb7d054347985e6777074c8c6e37636159a0f1ea814e1c27c7038eab263d43b0c37b70c871c13e192024622af7e91a836398bd26a2e49b52a98')

build() {
  cd "frida-$pkgver"

  python2 setup.py build
}

package() {
  cd "frida-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

