pkgname=python-python-dxf
_pkgname=python-dxf
pkgver=12.1.0
pkgrel=1
pkgdesc='Package for accessing a Docker v2 registry.'
url='https://pypi.org/project/python-dxf/#files'
arch=('any')
license=('MIT')
depends=('python' 'python-jwcrypto' 'python-tqdm' 'python-requests'
         'python-www-authenticate')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('41ea0472e010032596b1b3d641e2bc751f95634c567409025b2a32f9ffdc285a04cd27ba860bb3a795063942fb9bfad86382f5dcfef4614c155d453df3f4f1f7')

build() {
  cd "python-dxf-$pkgver"

  python setup.py build
}

package() {
  cd "python-dxf-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

