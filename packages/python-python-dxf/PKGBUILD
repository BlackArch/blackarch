pkgname=python-python-dxf
_pkgname=python-dxf
pkgver=7.7.3
pkgrel=2
pkgdesc='Package for accessing a Docker v2 registry.'
url='https://pypi.org/project/python-dxf/#files'
arch=('any')
license=('MIT')
depends=('python' 'python-jwcrypto' 'python-tqdm' 'python-requests'
         'python-www-authenticate')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/6c/ae/92a03e957cfa0ddec36e860ae7bd9a40b201911fad6abb4ef5197d6bdfee/$_pkgname-$pkgver.tar.gz")
sha512sums=('35ea9684fb801a421509a87c74edb8062fdc68327c60a1f521e709c36c98d0d8450680ced3e13f647efecd38eb052979d58a37a9ceaee92df4755e1b52acb1ec')

build() {
  cd "python-dxf-$pkgver"

  python setup.py build
}

package() {
  cd "python-dxf-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

