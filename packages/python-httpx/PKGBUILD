pkgname=python-httpx
_pkgname=httpx
pkgver=0.13.2
pkgrel=1
pkgdesc='Fully featured HTTP client which provides sync and async APIs, and support for both HTTP/1.1 and HTTP/2.'
arch=('any')
url='https://pypi.org/project/httpx/#files'
license=('BSD')
depends=('python' 'python-urllib3' 'python-h11' 'python-h2' 'python-certifi'
         'python-chardet' 'python-hstspreload' 'python-idna' 'python-rfc3986'
         'python-sniffio' 'python-brotlipy')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/1d/47/cc69ebcd2c8dcdd48c2b901756489bc581efa18150e071e1e4f0ccdb49c9/$_pkgname-$pkgver.tar.gz")
sha512sums=('aab88d48502cf47b7313359dcb6d4659270c9ee8f8169563b763f8c5bf521a1ae1c556e79b24f3f68656e8fb7f8d221951951e3ecfb806f135bddd97718af3c0')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

