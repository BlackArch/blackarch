pkgname=detect-it-easy
_pkgname=die
pkgver=3.02
pkgrel=1
epoch=1
groups=('blackarch' 'blackarch-binary' 'blackarch-reversing')
pkgdesc='A program for determining types of files.'
arch=('x86_64')
url='https://github.com/horsicq/DIE-engine/releases'
license=('MIT')
depends=('qt5-script')
source=("https://github.com/horsicq/DIE-engine/releases/download/$pkgver/${_pkgname}_${pkgver}-20210605_amd64.deb")
sha512sums=('86c354249c4d79da313e5f8fb1410230cfa54a9ade348c6901d85b034d2603ee5122c027a486bd678dcaf4cdff1d0156d381853990c4a5eb426791f08c4471dd')

prepare() {
   bsdtar xfJ data.tar.xz
}

package() {
  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/lib"
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  cp -a usr/bin/* "$pkgdir/usr/bin/"
  cp -a usr/lib/* "$pkgdir/usr/lib/"
  cp -a usr/share/* "$pkgdir/usr/share/$pkgname/"
}

