# See COPYING for license details.
pkgname='ruby-text-table'
_gemname='text-table'
pkgver='1.2.4'
pkgrel=5
pkgdesc="A feature-rich, easy-to-use plain text table formatter."
arch=('any')
url='https://github.com/aptinio/text-table'
license=("MIT")
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('1bb0097483facc2fed7cda4a414c486bcb7cc459' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.document,.gitignore,.travis.yml,CHANGELOG.rdoc,Gemfile,LICENSE,README.rdoc,spec,text-table.gemspec}
}
