pkgname=ufo-wardriving
pkgver=4
pkgrel=1
pkgdesc="Foo is an example package for this PKGBUILD file."
url="http://www.ufo-wardriving.com/"
arch=('any')
license=('GPLv2')
depends=('python2')
source=("https://bitbucket.org/asterixthc/ufo-wardriving-4/downloads/${pkgname}-${pkgver}.zip")
md5sums=('e884108abcbfb78bc2480716704a1b49')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin"

 cp -a * "$pkgdir/usr/share/ufo-wardriving"

cat > "$pkgdir/usr/bin/ufo" << EOF
#!/bin/sh
cd /usr/share/ufo-wardriving
python2 ufo.py \$@
EOF

chmod +x "$pkgdir/usr/bin/ufo"
}
