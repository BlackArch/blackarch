pkgname=promiscdetect
pkgver=1.0
pkgrel=2
pkgdesc='Checks if your network adapter(s) is running in promiscuous mode, which may be a sign that you have a sniffer running on your computer.'
url='https://vidstromlabs.com/freetools/promiscdetect'
groups=('blackarch' 'blackarch-windows' 'blackarch-networking'
        'blackarch-defensive')
license=('custom:unknown')
arch=('any')
source=("https://vidstromlabs.com/downloads/$pkgname.exe")
sha512sums=('aeb77a807f889cd35a69e4b7f1e3fdd27d9a9b6ed8cb98150c48f0243002723d7ea401929a77bb6c7a527cd70debf7a21efccd43d874ced5336a1720e47e145e')

package() {
  install -Dm 644 "$pkgname.exe" \
    "$pkgdir/usr/share/windows/$pkgname/$pkgname.exe"
}

