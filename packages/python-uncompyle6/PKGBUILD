pkgname=python-uncompyle6
_pkgname=uncompyle6
pkgver=3.4.1
pkgrel=1
pkgdesc='A Python cross-version decompiler.'
groups=('blackarch' 'blackarch-decompiler')
arch=('any')
url='https://github.com/rocky/python-uncompyle6'
license=('GPL3')
depends=('python' 'python-hypothesis' 'python-pytest' 'python-spark-parser'
         'python-xdis')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/3e/ba/0524b013eed79d5074f8aaddec116130dd61e737d9bbd40cbbe9ce069d78/$_pkgname-$pkgver.tar.gz")
sha512sums=('16f8aa5c79929607bb493ccdfbf73466410a69d6e9708b529f3a5e311db72f276974802d6f071b91ae717aae6f0ec74ca5599ef954f1995ce72326319449ec8e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.rst
  install -Dm 644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

