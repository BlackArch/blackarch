pkgname=blackhash
pkgver=0.2
pkgrel=8
groups=('blackarch' 'blackarch-cracker')
pkgdesc='Creates a filter from system hashes.'
url="http://16s.us/blackhash/"
arch=('x86_64' 'aarch64')
license=('GPL')
depends=('crypto++')
source=("https://github.com/sepehrdaddev/$pkgname/archive/v$pkgver.tar.gz")
sha512sums=('46c904f961f2e3bc61e6e3545f4f23b4f5b7d006d971e1855da93edf37f9350555544262e4a107587bf44e6793aa43db24a6c60ad1a25288e28301e2ec151759')

build() {
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  DESTDIR="$pkgdir" make install
}

