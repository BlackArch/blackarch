pkgname=pblind
pkgver=1.0
pkgrel=2
pkgdesc='Little utility to help exploiting blind sql injection vulnerabilities.'
url='http://www.edge-security.com/pblind.php'
groups=('blackarch' 'blackarch-exploitation' 'blackarch-webapp')
license=('GPL')
depends=('python2')
arch=('any')
makedepends=('unrar')
source=("http://www.edge-security.com/soft/pblind-${pkgver}.rar")
sha512sums=('da2aebfce85a44dea9adfda68c2dcc616c75006e835ae81df0a9211e1156993bdc964e78148d5fa8d33031ad365b1356bff7e59d7208896c0d471ac6e1bb303f')

prepare() {
  cd "$srcdir"

  sed -ie '1 s|^|#!/usr/bin/env python2\n\n|' "pblind.py"
}

package() {
  cd "$srcdir"

  install -Dm755 pblind.py "$pkgdir/usr/bin/pblind.py"
}
