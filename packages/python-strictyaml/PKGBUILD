pkgname=python-strictyaml
_pkgname=strictyaml
pkgver=1.6.2
pkgrel=1
pkgdesc='Strict, typed YAML parser.'
arch=('any')
url='https://pypi.org/project/strictyaml/#files'
license=('MIT')
depends=('python' 'python-ruamel-yaml' 'python-dateutil')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('f9ed917dc435fd39927e7e033ee0224c10e952b35243cc841854d098fc96a18e726a89285b17ecbd3527555b946b7f2a5581baee0649e055acf73104fcfc3136')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

