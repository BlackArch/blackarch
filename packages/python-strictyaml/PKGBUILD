pkgname=python-strictyaml
_pkgname=strictyaml
pkgver=1.7.3
pkgrel=2
pkgdesc='Strict, typed YAML parser.'
arch=('any')
url='https://pypi.org/project/strictyaml/#files'
license=('MIT')
depends=('python' 'python-ruamel-yaml' 'python-dateutil')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('7eaef2de28826a2fbd99a56881392b8d233c88c591007859b2bb0713832398f566912af426c2d8dd30f8b510d69dd64d2194aa16b5f8c267a18ae70f3414a0eb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

