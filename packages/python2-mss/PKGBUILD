pkgname=python2-mss
pkgver=4.0.0
pkgrel=1
pkgdesc='An ultra fast cross-platform multiple screenshots module in pure python using ctypes.'
url='https://pypi.org/project/mss/#files'
arch=('any')
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/ac/2b/bc7206da9e25aa6fc22695343284419a78528e7c0ae770a04d48a9e92654/mss-$pkgver.tar.gz")
sha512sums=('0d36332e4014a345301d2ef2b1245e913ad4995795fc6f9a1b4497c33e769666bf7730f0a12f6eda0621fda2022cb8347831bbb985ba7a807bac806f43f0ec43')

build() {
  cd "mss-$pkgver"

  python2 setup.py build
}

package() {
  cd "mss-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

