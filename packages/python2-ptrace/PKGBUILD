pkgname=python2-ptrace
_pkgname=python-ptrace
pkgver=0.9.4
pkgrel=2
pkgdesc='Python binding of ptrace.'
url='https://pypi.org/project/python-ptrace/#files'
arch=('any')
license=('GPL2')
depends=('python2' 'python2-six')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/48/c2/a479cf803c50b7aed1b9aa412cae715301c1acb8f6786575e504bdb8763f/$_pkgname-$pkgver.tar.gz")
sha512sums=('71c190d5de6ec8e76793daaeeecde2415ae452847726024a5adf6a5587ba1aa1f492e830e1519057b48636aa33f8483a77037bfaf2db57bbf4785638f2e7af3e')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  for i in "$pkgdir/usr/bin/"*; do
    mv $i "${i}2"
  done
}

