# Maintainer: lsfxz (https://github.com/lsfxz/quarry)
# Many thanks to anatol for quarry and gem2arch!
# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
pkgname='ruby-msgpack'
_gemname='msgpack'
pkgver='1.0.3'
pkgrel=1
pkgdesc="MessagePack, a binary-based efficient data interchange format."
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://msgpack.org/'
license=("Apache 2.0")
depends=('ruby')
groups=('blackarch')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('7dfb362894f1a829fce9869fd7477ada453c0e7c' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.rubocop.yml,.travis.yml,ChangeLog,Gemfile,LICENSE,README.rdoc,Rakefile,appveyor.yml,bench,doclib,ext,msgpack.gemspec,msgpack.org.md,spec}
  mkdir -p "$pkgdir$_gemdir/extensions/$CARCH/$(ruby -rubygems -e puts Gem.extension_api_version)/$_gemname-$pkgver/"
  touch "$pkgdir$_gemdir/extensions/$CARCH/$(ruby -rubygems -e puts Gem.extension_api_version)/$_gemname-$pkgver/gem.build_complete"
}
