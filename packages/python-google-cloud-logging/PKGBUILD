pkgname=python-google-cloud-logging
_pkgname=google-cloud-logging
pkgver=2.3.0
pkgrel=1
pkgdesc='Stackdriver Logging API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-logging/#files'
license=('Apache')
depends=('python' 'python-google-api-core' 'python-google-cloud-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/14/da/1ed0647a562e4371a4979e862ad268c32e6b8f888aabc09b51c77700aba4/$_pkgname-$pkgver.tar.gz")
sha512sums=('48ef133030edf811c96af0ca226ea3f73c4132139787e0879f33f4f356e7931225613e720092d9ded3cf8ba3ff77beccfe52f149f4a39da7f775fe8da963b35b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

