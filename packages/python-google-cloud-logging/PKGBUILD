pkgname=python-google-cloud-logging
_pkgname=google-cloud-logging
pkgver=1.13.0
pkgrel=1
pkgdesc='Stackdriver Logging API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-logging/#files'
license=('Apache')
depends=('python' 'python-google-api-core' 'python-google-cloud-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/22/b8/5caf6c27f4f7039dd39371d05a8f3e068ada799824a74dee052ea439ba37/$_pkgname-$pkgver.tar.gz")
sha512sums=('f13808a092f1ad76ba6fa8646e90cf2636d137821606aecb7575e7a866235a9ba57e6efc249d4736b16f81cd0dae022e75dc28b8b2126232ddd1b4466b02d89b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

