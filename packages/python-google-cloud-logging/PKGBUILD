pkgname=python-google-cloud-logging
_pkgname=google-cloud-logging
pkgver=3.2.2
pkgrel=1
pkgdesc='Stackdriver Logging API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-logging/#files'
license=('Apache')
depends=('python' 'python-google-api-core' 'python-google-cloud-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/87/38/654f964eb61fd7f24bc6ed8f3b1219868cef1e2dece7acc4141bfa3e2eb3/$_pkgname-$pkgver.tar.gz")
sha512sums=('988178ec4fe96773374fcd6eaa40512a195b01d8e5540d60ea5e4e04232740ecbc3c80e117d7511c7a1e6ec80646c376155feecb3727ce070dd3aa8f3877ecf2')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

