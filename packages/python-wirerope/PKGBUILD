pkgname=python-wirerope
_pkgname=wirerope
pkgver=0.4.3
pkgrel=1
pkgdesc='Wrapper interface for python callable.'
arch=('any')
url='https://pypi.org/project/wirerope/'
license=('BSD')
depends=('python' 'python-six')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('fea990c4635c0873862eb5761efce81394c6d84b267f62425098e981ef88e71d8720883c9b279400c3b5715606bc308bb72583823779280e1ce79bed7468d2cd')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --skip-build
}

