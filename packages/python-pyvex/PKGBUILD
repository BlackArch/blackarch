pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.9947
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/66/e4/d7c8fb6ef0bde6c3199adadaa2fd3df2b045cc4484273097f865f5ec594e/$_pkgname-$pkgver.tar.gz")
sha512sums=('b94430749986ad6679f170fa0c4d43165470bfe397b9a232cb8aea2f0f519a9c8744a60f26b706dd766f31c2d38d5e831888c47b2331dec191681a4e331ab1bd')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

