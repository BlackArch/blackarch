pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.5903
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/b5/96/869da16b9c4d69e87c492945276954b5f55caf661f19098a33765cdef35d/$_pkgname-$pkgver.tar.gz")
sha512sums=('5ce7f38382d3354b2471ac3bc5d4f2a0d82a29813f27283320c6d348b0013b4db68fdf0f036f5394b5e41d675dffe806ccd9ae86cb1a859e93b1fd6de36941f7')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

