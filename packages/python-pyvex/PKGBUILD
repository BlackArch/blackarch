pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.6136
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/49/77/65feb3aaeea7fa5131ec4d9908a0f55f7aa90bb307e8edf5397113efd359/$_pkgname-$pkgver.tar.gz")
sha512sums=('b4c3ba88d7dc758272ec5134addb9172d94bc1db35ae0d90723f19d239988105ccd2f79e24170be6e6dda7337cec7fe6cc806a0e6249412f38c79ab653de9078')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

