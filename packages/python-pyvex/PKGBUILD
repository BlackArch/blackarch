pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.6488
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/79/80/6eecd3e461c15ca831639cb9286e5d3a4847ab25c9e564964d73571ebd9e/$_pkgname-$pkgver.tar.gz")
sha512sums=('3c3d268d0c16e7e9fc09b618edd15640da132dc1bf0b0ef19c377e51508211d0bcfba2bdde219f523d496351f82c7fd44487308772b9fefc6e11486d6c09f865')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

