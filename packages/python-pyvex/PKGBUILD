pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.6281
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/fb/19/dad44db7feddebb6d74a2f3a1773d999ed1b43f2e2a742abeb4256e24cab/$_pkgname-$pkgver.tar.gz")
sha512sums=('cb07ba4dacc3a8e636a52951649bca52aca7cbeb387321565c867f903903211f832d47d7da1910880598e51bc267c8f580100a2861d2ab82af0c9d08a1509d5f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

