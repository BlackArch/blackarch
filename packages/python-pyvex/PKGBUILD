pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.10159
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/32/b7/9941349fdc03d8708edabdc3caf82f9bb3bae852ba7cc055896010b3f50d/$_pkgname-$pkgver.tar.gz")
sha512sums=('fe1c3a4b9548102b5e08dd27c2bab775676f29349b6a457c5c76939c86b376cd387d6985642d7f891b0a5124dc030d73e2b71529c5960cd761720a5360125743')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

