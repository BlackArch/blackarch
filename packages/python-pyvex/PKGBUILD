pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.9684
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/31/de/95cee6d7fe8ab2304331ff3de2f4720a9d4f310f9f2b200da9eb2db032c3/$_pkgname-$pkgver.tar.gz")
sha512sums=('cfaec8d34861a09247ca9140216b16b451d14f9bc82f0ac20d12ca48fd1037ca041e621c398dff9ca0c94d6c31420d41005c56ae995471024ddcce0cc6ba59f6')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

