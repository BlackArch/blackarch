pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.2.14
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/06/b0/4b81b2c8d6a338fe0311fe50b02fb2ed38eab82de42e6b7651af81736da6/$_pkgname-$pkgver.tar.gz")
sha512sums=('40d18e557976a05e0aa9685cf6bbe8b1a700913a5c5b093dd93d7b4e2febc2a245b5560503f6da86ce98e9c4800fdfcd54b7c09fbd66a7cfd76b07d7dcc379c8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

