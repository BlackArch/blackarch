pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.5034
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/8e/22/e983c3f19af7af5cfd0eb995549848f485792f3fec140955d81bb6b0273f/$_pkgname-$pkgver.tar.gz")
sha512sums=('178d49ce3ff02a618a58112efc4b722e818d872810b3ee06e02dbdc449e310e0dfd8bc91dd4ecf4648522a89affb58958d78fb93a975035bda34e2cc9302455e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

