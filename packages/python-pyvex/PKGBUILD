pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.6852
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/e5/3e/7c7020c40fa7be38eaa8fc6820447480854dbc9e845dee2cba5d4d20b48f/$_pkgname-$pkgver.tar.gz")
sha512sums=('31f55527ac6de76c8847f48d8a4306b82a488d07510b473127fe9853852b9a76144883aba7c0668df3a206fd570ae4058f7b0a18ccd5dcf7b969d0ca76dd10e9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

