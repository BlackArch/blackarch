pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.9506
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/56/3d/61bf6e6d6f0de34d041df91e86c9e86266ad459c95df71c9527731d8f953/$_pkgname-$pkgver.tar.gz")
sha512sums=('f8a39f91369b5befdc7191f72108ef0a6927cf19071a32cee26aa013cd9f532c24d3883a0e5c916bcf6cf12f6f23a0bc2e268e08d5ad52b9af0362b02404b376')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

