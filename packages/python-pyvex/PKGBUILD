pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.6588
pkgrel=1
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/81/77/b18f7e3e541e8ce0f92dbad9802f41367d7d7a4ec50fa68d1ebc11aafcd2/$_pkgname-$pkgver.tar.gz")
sha512sums=('659212e3632084647f3768284f036587716038fbf428a68634d36b42eb7ade7690bd5ecd8206b1a33f65af9e005d56b0d1ce27025766c0c52eecb7cd31f15d47')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

