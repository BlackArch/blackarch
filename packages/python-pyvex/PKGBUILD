pkgname=python-pyvex
_pkgname=pyvex
pkgver=9.0.10576
pkgrel=2
pkgdesc='A Python interface to libVEX and VEX IR.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/pyvex/#files'
license=('BSD')
depends=('python' 'python-pycparser' 'python-cffi' 'python-archinfo'
         'python-bitstring' 'python-future' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/09/97/ce622a1adb10fd91e83de04180e89dcfbcabdf5390aff632a7283df114d8/$_pkgname-$pkgver.tar.gz")
sha512sums=('e6b98639d5238f994a7446ce4e06c6a5d49ec0a5da8bde29782e2c170360ba65fddcd50fb3ae6cc6dbb64c7ebbdc3c37882aa3551968aee3e7c0a813726efe84')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

