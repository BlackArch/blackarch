# See COPYING for license details.

pkgname=rtp-flood
pkgver=1.0
pkgrel=3
pkgdesc='RTP flooder.'
url='http://www.hackingexposedvoip.com/'
license=('GPL2')
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-voip')
source=("http://www.hackingexposedvoip.com/tools/rtpflood.tar.gz")
sha512sums=('df3defc84837a72c017ff991eca79269518d6081a47464ad4d96b04dba49a76fa50ac4332b026d26e154450fb53c02fb02ba7074101b29082df12b5599ff5823')

prepare() {
  cd $pkgname

  sed -i "s:gcc :gcc $CFLAGS :" Makefile
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 LICENSE_SOFTWARE "$pkgdir/usr/share/doc/$pkgname/LICENSE"
}

