pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.5034
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/74/53/13bd40f6d5e78aea8b97882a27ce5ad412a0f22510761d7a44f5d9403066/$_pkgname-$pkgver.tar.gz")
sha512sums=('9cf764ed57deffa2a97cc110b2b1880b1c914fe2e56ae448681027d7566dde778be5f97fa7b8f3b6348209ae585a3a935c4bc2fc80eeddc9d698413aeb68dda3')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

