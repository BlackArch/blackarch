pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.10159
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/7d/1c/08cbe7a5a9ef8f3eeebbbae52b87af5628f161d0bc2d3ea79f7cf6f2226e/$_pkgname-$pkgver.tar.gz")
sha512sums=('f81b1797807a0d6eacf3b9d95685ab0a42f2921e16f738a1f7591f799a973e7e6c619bc6fe192762e5ef3662ffb770f5d20902b790945cc3a41c438abcc372ad')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

