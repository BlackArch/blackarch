pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.6281
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/96/0c/4cc7a85687206e09345f3b93c732b9c9728cd059d578a5d428b0e35924cf/$_pkgname-$pkgver.tar.gz")
sha512sums=('1131c8060827052868edc54dbb6cc1d2a7647bceed2797370a3d35a53fa472b231c915a7c85a79cca75d3ac180a587bb380318c4f2483012ef3ff03be2a20eb8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

