pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.6136
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/83/29/c487de0ba85de5efb8a66afd48ca8eceb37d3b45b0c83c352404a0fdb868/$_pkgname-$pkgver.tar.gz")
sha512sums=('95e7629c875d31c2e1e6c8ba882f1a369bdcb76460e249c8836b7a75ef1c966f3e9bdad8a1eb622255ecfd2b40fcb3c14808284eed514e3043e2cc0af23617f0')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

