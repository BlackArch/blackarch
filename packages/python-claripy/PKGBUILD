pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.10730
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/b9/7b/f71a9f9b75447c232a8b797f98f8fd642416961f0ac5fdc77b28ea1e7db5/$_pkgname-$pkgver.tar.gz")
sha512sums=('b6cde552149be193604a56040a7e63fea4aeebb696084303c2cf7efb932bbd1ab3c521a67479f39bf002e90f65f6887381f6af030f56ff537da07f15c065963b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

