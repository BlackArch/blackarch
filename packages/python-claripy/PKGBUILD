pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.6852
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/3f/d9/5b0488f583b453df3833e5e13289f88c5862c987f28ef48701b25bea67f3/$_pkgname-$pkgver.tar.gz")
sha512sums=('c4c787d193ee0003469dcaa9195b785587f5e97f647d5b27cbe3bbb20f819788a46852d0c77983b2afbebe19e867c794d401d466bd1ab5fa95ffb54c7ff852b5')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

