pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.5903
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/2f/d0/6f1d559ca6b3a1299944828a2d710868ca704db0473d5dd8910f648cb16a/$_pkgname-$pkgver.tar.gz")
sha512sums=('de9615c63f2b0b5f546a92133f580cdfd7974b6d97a5f119be4e3f6957b9e2f002d927c5e34efff13071bceab6c9c1fdb947c48f5c3c73e41c19aa81f142a82a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

