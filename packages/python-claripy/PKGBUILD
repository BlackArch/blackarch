pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.9506
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/07/ea/e5577b586d2932b108a0e25540b3f56f3df3765c7c325c235b058f84b2e6/$_pkgname-$pkgver.tar.gz")
sha512sums=('cf5e2080c80070bdab24a57b2320148dbdbeebd502e5a8fd632a5efb498d7cba1d20578abfaac854f0ab87191716ddea0ffc226ed4e0261642acadedfcfbb9ce')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

