pkgname=python-claripy
_pkgname=claripy
pkgver=9.2.14
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/74/7d/d21b82a19797628847e63412743d2f5b1fd56b23213d040f3128dfb0c4ce/$_pkgname-$pkgver.tar.gz")
sha512sums=('4e42b1e3d0d24162b008f849ce6935cbbf06987eb1631e10e636f7898e448b7a1ee6bf5727f3d7a68fa411bc948d2b3ab1acd851ec064cdbe9a729a0f5bda5b5')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

