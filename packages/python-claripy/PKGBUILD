pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.9947
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/12/0c/956c2244541607de0cfed61c179e192ef961ba3a12d3d4ab7a80270ef0b6/$_pkgname-$pkgver.tar.gz")
sha512sums=('ea194118cd460c2e12a554dd9936b78c748f9a5dc9aa971347516d335fd10855c86b432204850c190ad9ee54246ee3949ec32109c917861fd068e6731b9cb2c3')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

