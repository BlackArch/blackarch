pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.6588
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/4f/c6/156f8b79c1b3f460aae7f342b87eaf8edc9ad3f24c858054899090c610db/$_pkgname-$pkgver.tar.gz")
sha512sums=('fd9c49b7bbfa3a39be31e053db299ca859750d5cabca0fa618513ef63a99957dea5220aa6d6c3f42d4fd239cc0720aed160bc94608e53376f364802e77d0219a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

