pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.10576
pkgrel=2
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/df/89/7ea2d74b33e5ac968e8542f225cd464899da5753d5e5724f5d052ff65cb0/$_pkgname-$pkgver.tar.gz")
sha512sums=('640f57543c11be3ce9868745ee2c5b32c4156b9dcdb4f928e95b07dfd5cfbe51c3e7eefea2efd66c8008667684d75a91b3cb90f0276536ccc45e6d9f2f1a25f2')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

