pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.6488
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/5f/4b/b045901a75d50e4ae635c361f88191183e300b0c49c256ea7297d5352b31/$_pkgname-$pkgver.tar.gz")
sha512sums=('9299182d73015f6ce1e957fa66631bb928cfa6b09176d254c61bdcfddeafa495226a64c06e7c96ac7ca5e368737e74939600dc5eed4d1d659b4d754cff6c7feb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

