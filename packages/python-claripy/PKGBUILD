pkgname=python-claripy
_pkgname=claripy
pkgver=9.0.9684
pkgrel=1
pkgdesc='An abstraction layer for constraint solvers.'
arch=('any')
url='https://pypi.org/project/claripy/#files'
license=('custom:unknown')
depends=('python' 'z3' 'python-future' 'python-cachetools' 'python-decorator'
         'python-pysmt')
source=("https://files.pythonhosted.org/packages/5c/9d/02e80449f8b664131f8a538a904bba4a789cb73227b8b553f4040acd6d3b/$_pkgname-$pkgver.tar.gz")
sha512sums=('36a2052d2049014467a79b6a7e55bd48faa1161c8ddc4010c4ca963f148f3086f39347cf19094898b6dc2f7a8c19310a08555295714fd4a274640b4b07185ede')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

