pkgname=blindsql
pkgver=1.0
pkgrel=3
pkgdesc='Set of bash scripts for blind SQL injection attacks.'
groups=('blackarch' 'blackarch-database')
arch=('any')
url='http://www.enye-sec.org/programas.html'
license=('GPL')
depends=('bash')
source=("http://www.enye-sec.org/programas/${pkgname}.v${pkgver}.tar.gz")
sha512sums=('e184d3c0bbd8179eca6d29eda04541d695422274cdec65691448810d6ec94381ee68ca2a4a2a29b184061195eedaf8f136080ee2d29a76cac8fe1d4e5a7a4db9')

package() {
  cd "blindsql.v$pkgver"

  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  install -m 644 readme.txt "$pkgdir/usr/share/$pkgname/readme.txt"
  install -m 755 sqldata.sh "$pkgdir/usr/share/$pkgname/sqldata.sh"
  install -m 755 sqlcheck.sh "$pkgdir/usr/share/$pkgname/sqlcheck.sh"

  ln -s "/usr/share/$pkgname/sqldata.sh" "$pkgdir/usr/bin/sqldata"
  ln -s "/usr/share/$pkgname/sqlcheck.sh" "$pkgdir/usr/bin/sqlcheck"
}

