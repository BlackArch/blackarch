pkgname=arpoison
pkgver=0.6
pkgrel=1
pkgdesc="The UNIX arp cache update utility"
arch=(i686 x86_64)
url="http://www.arpoison.net"
license=('GPL')
depends=('libnet')
source=("http://www.arpoison.net/arpoison-$pkgver.tar.gz")
md5sums=("5274ae9c7c879b97b425a4b2da59aa65")

build() {
  cd "$srcdir/arpoison"
  make
}

package() {
  install -Dm755 "$srcdir/arpoison/arpoison" "$pkgdir/usr/bin/arpoison"
}

