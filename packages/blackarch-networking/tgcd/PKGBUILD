# See COPYING for license details.

pkgname=tgcd
pkgver=1.1.1
pkgrel=1
pkgdesc='TCP/IP Gender Changer Daemon utility.'
groups=('blackarch' 'blackarch-networking')
arch=('x86_64' 'aarch64')
url='http://tgcd.sourceforge.net/'
license=('custom:unknown')
depends=('')
source=("https://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz")
sha512sums=('66b1a0d48780eaa8bc0754431ec5aeb5bab26be71a15b00131bbdaf2eb4b69b7149eb973656b4321ca13ae15dd3abccd6069cb6fd50b63d48146513f38525533')

build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr

  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" AUTHORS README INSTALL \
    NEWS
  install -Dm 644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

