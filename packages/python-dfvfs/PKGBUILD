pkgbase=python-dfvfs
pkgname=('python2-dfvfs' 'python-dfvfs')
_pkgname=dfvfs
pkgver=20200604
pkgrel=1
pkgdesc='Python module that provides read-only access to file-system objects from various storage media types and file formats.'
arch=('any')
url='https://pypi.org/project/dfvfs/'
license=('Apache')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/7b/4b/ac618ea8ad7afc1598d638a93f36be87b24e56753aa605244ab1d524197b/$_pkgname-$pkgver.tar.gz")
sha512sums=('2c980df12a93a653a4b9598d426ca81a8972763015f762a08415da6e743e4087f4f97dba1809744898ed0768177851e00a1177577fb832a1cb5293662ed63960')

package_python2-dfvfs() {
  depends=('python2')

  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1

  mv $pkgdir/usr/share/doc/dfvfs{,2}
}

package_python-dfvfs() {
  depends=('python')

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1
}

