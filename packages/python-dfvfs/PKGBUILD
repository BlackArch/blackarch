pkgbase=python-dfvfs
pkgname=('python2-dfvfs' 'python-dfvfs')
pkgver=20190713
pkgrel=1
pkgdesc='Python module that provides read-only access to file-system objects from various storage media types and file formats.'
arch=('any')
url='https://pypi.org/project/dfvfs/'
license=('Apache2')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/d6/d3/7bbb0c2fae666d60147b9add640716bf305786f9234c602bca4c6a728694/dfvfs-20190713.tar.gz")
sha512sums=('8bd662df22c806ea64fc95da3875cab3ed41e5a155e7b80f8eb0db5c8f276e4b472c6912a405cf7fd6562ac6cf5f6458697b7814920cb6e0f2e49ef6626ee829')

package_python2-dfvfs() {
  depends=('python2')

  cd "dfvfs-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
  mv $pkgdir/usr/share/doc/dfvfs{,2}
}

package_python-dfvfs() {
  depends=('python')

  cd "dfvfs-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

