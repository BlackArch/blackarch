pkgname=python-dfvfs
_pkgname=dfvfs
pkgver=20220311
pkgrel=1
pkgdesc='Python module that provides read-only access to file-system objects from various storage media types and file formats.'
arch=('any')
url='https://pypi.org/project/dfvfs/'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/1d/31/5c7bdc3295a725ce8bb27dc40a4353ffb6bc2ec1a227e362c46741a96af6/$_pkgname-$pkgver.tar.gz")
sha512sums=('96573f29fa0cd32e16db421f450e9b9592b5e86cbcb0865e1cc4f95c7b42e62a5b6b961fc3e5ac7232a3ddf6a8eae5d79e019bedd8690849a1ede55c9ede20ee')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

