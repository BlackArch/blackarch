pkgname=python-dfvfs
_pkgname=dfvfs
pkgver=20211223
pkgrel=1
pkgdesc='Python module that provides read-only access to file-system objects from various storage media types and file formats.'
arch=('any')
url='https://pypi.org/project/dfvfs/'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/45/83/efd8816c12b28a339a8c75d88b081140d9602ffb0d006d4fbc7e6bd1cfec/$_pkgname-$pkgver.tar.gz")
sha512sums=('1b21d2469c563c7b42b60aff653d0a6cbd1bc5456841d7a208ec166d6d74fd8711f6423f7ccf16950a9e5b3a48de6aa745b612c0bb34ef8fded780fb976af3ff')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

