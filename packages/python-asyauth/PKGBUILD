pkgname=python-asyauth
_pkgname=asyauth
pkgver=0.0.9
pkgrel=1
pkgdesc='Unified authentication library.'
arch=('any')
url='https://pypi.org/project/asyauth/#files'
license=('MIT')
depends=('python' 'python-asn1crypto' 'python-minikerberos' 'python-unicrypto'
         'python-asysocks')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('57b95d1d26c01cbc37636c07926f00d8adf01703bc205a24f486003724175a3d6253a164893e040f443cbb4ba72225ec9859ee51386b10d894b676ba01fb7281')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
