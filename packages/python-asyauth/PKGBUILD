pkgname=python-asyauth
_pkgname=asyauth
pkgver=0.0.23
pkgrel=1
pkgdesc='Unified authentication library.'
arch=('any')
url='https://pypi.org/project/asyauth/#files'
license=('MIT')
depends=('python' 'python-asn1crypto' 'python-minikerberos' 'python-unicrypto'
         'python-asysocks')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('bf56e8f80729d4af9077b48add9f1e0d62b580542e5ec15b9f7be99a5586ed0a2e4ffc512fc05afa7757fe0b9789dace823bff3e781db69e3cec8267dcd28f0d')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
