pkgname=python2-gitpython
_pkgname=GitPython
pkgver=3.0.4
pkgrel=1
pkgdesc='A python library used to interact with Git repositories.'
url='https://github.com/gitpython-developers/gitpython'
license=('BSD')
arch=('any')
depends=('git' 'python2-gitdb')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/be/0f/b180ddaf91429d6ebd7d46d022c31522e05ce7631b41da3901d9e4338c64/GitPython-$pkgver.tar.gz")
sha512sums=('36d57c19459f97809082ae769390254ba27c5234d81e7ba86a73bc6605c6bb478e4c344ca01e78de4b4c7e035928bf4a539af1b5268b6028fb13d80a95a788a9')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

