pkgname=python2-tqdm
_pkgname=tqdm
pkgver=4.37.0
pkgrel=2
pkgdesc='Fast, Extensible Progress Meter.'
arch=('any')
url='https://pypi.org/project/tqdm/#files'
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/cc/7b/5878d4e1b01a2eb802f78ea277f2385072681cabefc8fb4fbdee28dd1869/$_pkgname-$pkgver.tar.gz")
sha512sums=('17f5d93a07ef843dae018ec0ffd225340cfcd338e8ae145eae8da4fbc137d3b7fd200b498416ead44b001eea72cb6290e0dc109715b7870444c247f59112d07c')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  mv "$pkgdir/usr/bin/$_pkgname" "$pkgdir/usr/bin/${_pkgname}2"
}

