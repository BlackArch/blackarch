pkgname=ruby-metasploit_data_models
_gemname=metasploit_data_models
pkgver=0.16.7
pkgrel=2
pkgdesc="Database code for MSF and Metasploit Pro"
arch=('any')
license=('')
makedepends=('ruby')
depends=('ruby-activerecord>=3.2.13')
url=''
source=("http://rubygems.org/downloads/metasploit_data_models-$pkgver.gem")
md5sums=('eefdb78b619834f90d73b1648a082107')
noextract=("metasploit_data_models-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" metasploit_data_models-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" metasploit_data_models-$pkgver.gem
  fi
}
