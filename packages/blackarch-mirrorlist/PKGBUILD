groups=('blackarch')
arch=('any')
url='https://www.blackarch.org/blackarch-mirrorlist'
license=('custom:unknown')
depends=('pacman')
backup=('etc/pacman.d/blackarch-mirrorlist')
source=('https://www.blackarch.org/blackarch-mirrorlist')
sha512sums=('2aa0956e7d1f40526ee94f60c35f4d00d14708882eb40f34f5253a8300491d0beb3da9fc0c40649c9d59c48135fe24e12589c8d0c490f3250af9fe83a5f50e2b')
options=('!strip')

package() {
  install -Dm 644 -t "$pkgdir/etc/pacman.d/" $pkgname
}

