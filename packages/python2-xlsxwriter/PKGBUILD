pkgname=python2-xlsxwriter
_pkgname=XlsxWriter
pkgver=1.2.3
pkgrel=1
pkgdesc='A Python module for creating Excel XLSX files.'
arch=('any')
url='https://pypi.org/project/XlsxWriter/#files'
license=('BSD')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/51/62/45e728427abff02d36e837b3beb371560ba527bece8bd4a8fb4eb3abf2fe/XlsxWriter-$pkgver.tar.gz")
sha512sums=('c9e29ea9614c7c3c0d07f3ab05589b8c4239443e5bdf3b5892679a16b443d2e4292a4837ac416b5c35da99886f29b01e0805dad6fa5c88e6dbe787be23df561f')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  mv "$pkgdir/usr/bin/vba_extract.py" "$pkgdir/usr/bin/vba_extract2.py"
}

