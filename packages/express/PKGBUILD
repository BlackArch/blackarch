pkgname=express
pkgver=5502.dc538f6e
pkgrel=1
epoch=1
pkgdesc='High performance, high class web development for node.js.'
arch=('any')
url='http://expressjs.com/'
license=('MIT')
depends=('nodejs')
makedepends=('git' 'npm')
source=('git+https://github.com/strongloop/express.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$pkgname"

  _npmdir="$pkgdir/usr/lib/node_modules/"

  install -dm 755 $_npmdir

  cd $_npmdir

  npm install --user root -g --prefix "$pkgdir/usr" "express@$pkgver"
}

