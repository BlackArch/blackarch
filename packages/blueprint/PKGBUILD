pkgname=blueprint
pkgver=0.1_3
pkgrel=3
pkgdesc='A perl tool to identify Bluetooth devices.'
url='http://trifinite.org/trifinite_stuff_blueprinting.html'
groups=('blackarch' 'blackarch-bluetooth')
license=('GPL')
depends=('perl')
arch=('any')
source=("http://trifinite.org/Downloads/bp_v01-3.zip")
sha512sums=('328d331ca71ed44f5b20b6aad4b83444323b1ab42e341b99cb0db3437ead77bb54c9eeb68115cb634903744802f01935fd618708471ac460bbcb6813362bcc94')

package() {
  cd "$srcdir/bp"

  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/blueprint"

  cp -r * "$pkgdir/usr/share/blueprint/"
  chmod -R a+rX "$pkgdir"

  cat > "$pkgdir/usr/bin/blueprint" <<EOF
#!/bin/sh
cd /usr/share/blueprint/
exec perl bp.pl \$*
EOF

  chmod 755 "$pkgdir/usr/bin/blueprint"
}
