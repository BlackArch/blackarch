pkgname=webrute
pkgver=1.cda179d
pkgrel=1
groups=('blackarch' 'blackarch-scanner' 'blackarch-webapp')
pkgdesc='Web server directory brute forcer.'
arch=('any')
url='https://github.com/BlackArch/webrute'
license=('custom:unknown')
depends=('perl' 'perl-net-ssleay')
source=('git+https://github.com/BlackArch/webrute.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -Dm 755 webrute.pl "$pkgdir/usr/bin/$pkgname"
}

