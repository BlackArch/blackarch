pkgname=ruby-scandb
pkgver=0.1.3
pkgrel=0
pkgdesc="ScanDB is a library for importing and analyzing information generated by various network scanning utilities."
arch=('any')
license=('GPL2')
depends=('ruby' 'ruby-do_sqlite3>=0.9.9' 'ruby-dm-core>=0.9.9' 'ruby-dm-types>=0.9.9' 'ruby-dm-serializer>=0.9.9')
url='http://scandb.rubyforge.org/'
source=("http://rubygems.org/downloads/scandb-$pkgver.gem")
md5sums=('a7f60f9dd2a91e5d9edad6f20fb71330')
noextract=("scandb-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" scandb-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" scandb-$pkgver.gem
  fi
}
