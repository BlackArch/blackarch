pkgname='ruby-dm-core'
_gemname="${pkgname#ruby-}"
pkgver='1.2.1'
pkgrel=3
pkgdesc='DataMapper core library.'
arch=('any')
url="http://github.com/datamapper/dm-core"
license=('custom')
depends=('ruby' 'rubygems')
source=("http://rubygems.org/downloads/${_gemname}-${pkgver}.gem")
noextract=("${_gemname}-${pkgver}.gem")
sha1sums=('c3de1d17884d9b010f94cd99340e08518b0037be')

package() {
  cd "$srcdir"

  export HOME=/tmp

  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri \
      -i "$pkgdir$_gemdir" dm-core-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
      dm-core-$pkgver.gem
  fi

  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}

  install -Dm644 \
    ${pkgdir}/usr/lib/ruby/gems/*/gems/${_gemname}-${pkgver}/LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
