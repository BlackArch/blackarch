pkgname=python-requests-html
_pkgname=requests-html
pkgver=0.10.0
pkgrel=1
pkgdesc='Pythonic HTML Parsing for Humans.'
arch=('any')
url='https://github.com/psf/requests-html'
license=('MIT')
depends=('python' 'python-requests' 'python-pyquery' 'python-fake-useragent'
         'python-parse' 'python-beautifulsoup4' 'python-w3lib'
         'python-pyppeteer')
makedepends=('git' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/86/76/27a8fd44f43d265af17e75be753b6ebf67c93b1d4dc7cf6eb6ea2d03a13c/$_pkgname-$pkgver.tar.gz")
sha512sums=('28baba1d137aba23f954556fd0c0b2924321f407c8e9f7197854ac5f319d16632961024414775353bc6519ac58994034d7cf76f26ad60bce3b09112e72fe18f4')

pkgver() {
  cd $_pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $_pkgname

  python setup.py build
}

package() {
  cd $_pkgname

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

