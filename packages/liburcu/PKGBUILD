pkgname='liburcu'
pkgver='0.10.1'
pkgrel=1
pkgdesc='A userspace RCU (read-copy-update) library.'
arch=('x86_64')
url='http://lttng.org/urcu/'
license=('LGPL2.1')
source=("http://lttng.org/files/urcu/userspace-rcu-${pkgver}.tar.bz2")
options=('!libtool')
sha512sums=('2bb042e1cf8888eab664ea6e88b94646c995bea61c89d49dcf4e844d144329303c600d73e29e0f05c935ad8278857cc08fb5b4b9f7f0c2f120c46b458b51a211')

build() {
  cd "$srcdir/userspace-rcu-$pkgver"

  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/userspace-rcu-$pkgver"

  make install DESTDIR="$pkgdir"
}
