# See COPYING for license details.
_gemname=em-websocket
pkgname=ruby-$_gemname-0.3
pkgver=0.3.8
pkgrel=2
pkgdesc=EventMachine\ based\ WebSocket\ server
arch=(any)
url=http://github.com/igrigorik/em-websocket
license=()
depends=(ruby ruby-addressable ruby-eventmachine)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('21c18c286b7fb920f4f65405f3ff12355995869e'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,CHANGELOG.rdoc,Gemfile,README.md,Rakefile,em-websocket.gemspec,examples,spec}
}
