pkgname=cmospwd
pkgver=5.1
pkgrel=1
groups=('blackarch' 'blackarch-cracker')
pkgdesc='Decrypts password stored in CMOS used to access BIOS setup.'
arch=('x86_64')
url='http://www.cgsecurity.org/wiki/CmosPwd'
license=('GPL')
depends=('glibc')
source=("http://www.cgsecurity.org/$pkgname-$pkgver.tar.bz2")
sha512sums=('eb76bbab2e686b54421556c5228b90a35c2883d59b31815ab04494df8e2d03e7193abdd83c4a7fa5915abdff1f189eb69bd29fc02ea9d84565ea8767e2c455a8')

build() {
  cd "$pkgname-$pkgver/src"

  make -B
}

package() {
  cd "$pkgname-$pkgver/src"

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

