pkgname='registryviewer'
pkgver=1.3
pkgrel=1
pkgdesc='Open raw Windows NT 5 Registry files (Windows 2000 or higher).'
groups=('blackarch' 'blackarch-windows' 'blackarch-forensic')
arch=('any')
makedepends=('p7zip' 'curl')
url='https://www.gaijin.at/en/dlregview.php'

pkgver() {
  ver=$(curl -H 'User-Agent: Mozilla' https://www.gaijin.at/en/dlregview.php | grep -P 'download_value' | grep -m1 -o -P '\d+\.\d+')

  echo "${ver}"
}

package() {
  targetDir="$pkgdir/usr/share/windows/registryviewer/"

  mkdir -p "${targetDir}"

  cd "${targetDir}"

  curl -L -H 'User-Agent: Mozilla' 'https://www.gaijin.at/getit.php?id=regview' -o './r.7z'

  7z e './r.7z'

  rm -rf './r.7z'
}
