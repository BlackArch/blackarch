pkgname=rfidtool
pkgver=0.2
pkgrel=1
pkgdesc='An open source tool to read / write rfid tags.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-wireless')
url='http://www.bindshell.net/tools/rfidtool.html'
license=('GPL-2.0-or-later')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('9212f1b10e45ca8626d67f036b135bd0a39319bfdc6b48dc80f524fc6e73d0f6d57b25479b6806d75905563f8dd9dcfc5058ab900b96cb423c146aace1ed0c4f')

build() {
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir" PREFIX=/usr install
}

