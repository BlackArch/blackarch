post_install() {
  echo "To use BlackArch lxdm config move the following files:"
  echo " * /etc/lxdm-blackarch           -> /etc/lxdm"
  echo " * /usr/share/lxdm-blackarch     -> /usr/share/lxdm/"
  echo " * /usr/share/xsessions-blackarch -> /usr/share/xsessions"
}

post_upgrade() {
  post_install
}
