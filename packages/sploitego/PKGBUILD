pkgname=sploitego
pkgver=1.0
pkgrel=1
pkgdesc="Maltego Penetration Testing Transforms"
url="https://github.com/allfro/sploitego"
arch=('any')
license=('GPLv2')
depends=('python2' 'nmap' 'p0f' 'amap' 'metasploit')
optdepends=('nessus')
install='sploitego.install'
source=("git+https://github.com/allfro/sploitego.git"
        "sploitego.install")
md5sums=('SKIP'
         '4124df5f0981e31a1b9319e56fd2df63')

pkgver() {
  cd "$srcdir/sploitego"
  # Use the tag of the last commit
  local ver="$(git describe --long)"
  printf "%s" "${ver//-/.}"
}

build(){
  cd "$srcdir/sploitego"
  python2 setup.py build
}

package() {
  cd "$srcdir/sploitego"

  python2 setup.py install --root="$pkgdir/" --optimize=1 
}

