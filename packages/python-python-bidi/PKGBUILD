pkgname=python-python-bidi
_pkgname=python-bidi
pkgver=0.6.7
pkgrel=2
pkgdesc='Pure python implementation of the BiDi layout algorithm.'
url='https://bidict.readthedocs.org/'
arch=('any')
license=('LGPL')
depends=('python')
makedepends=('python-setuptools' 'python-pip' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('c08e55f6ad45624345d2d48005e2a0b96eed3bd78b0d7b211c7f88a2dee5834de8a9726abd3598fe33251e0ae8cca748d5f73bb911509888943d079f43ff97f9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

