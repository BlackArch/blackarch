pkgname=vlan
pkgver=1.9
pkgrel=6
pkgdesc='Virtual LAN configuration utility.'
arch=('x86_64' 'aarch64')
url='https://www.candelatech.com/~greear/vlan.html'
license=('GPL')
depends=('glibc')
source=("https://www.candelatech.com/~greear/vlan/${pkgname}.${pkgver}.tar.gz")
sha512sums=('7602679c1f1569d1742da37062213fea3a14b875bec9c41fc6b10c28a09a312db80f6eae4a8641a1892946545b2b4ef4699e61fddd8514469970e334a9dab0c5')

build() {
  cd $pkgname

  make clean

  make all
}

package() {
  cd $pkgname

  install -Dm 755 vconfig "$pkgdir/usr/bin/vconfig"
  install -Dm 755 macvlan_config "$pkgdir/usr/bin/macvlan_config"
  install -Dm 644 vconfig.8 "$pkgdir/usr/share/man/man8/vconfig.8"
}

