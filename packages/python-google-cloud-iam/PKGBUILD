pkgname=python-google-cloud-iam
_pkgname=google-cloud-iam
pkgver=0.2.0
pkgrel=1
pkgdesc='IAM Service Account Credentials API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-iam/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/cc/8a/751f1863293d5b16568301faa875144a578a55eb260001784cab80405c62/$_pkgname-$pkgver.tar.gz")
sha512sums=('8c9f8e806d8b267080214de601d042b4a2160d1d092e3b0beb6d8a16ec00426be7cbed3f6aa2ef5855e08f0562570ef09e66d508f4e23d087f8a5081592ec18a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

