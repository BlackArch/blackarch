pkgname=python-google-cloud-iam
_pkgname=google-cloud-iam
pkgver=2.4.0
pkgrel=1
pkgdesc='IAM Service Account Credentials API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-iam/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/78/29/59377ac95d5b2737b00dae10adb9abcfe4e88f2aae2a9bd87e50a991fa43/$_pkgname-$pkgver.tar.gz")
sha512sums=('89752aed9f10e83b4e899c067d914c6a85937ebc2b5946a190bba052c29d1a73966272e2d2bbb388e377390ac69d024a3d6bd526ac673dc6c414d796edb81d09')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

