# See COPYING for license details.

pkgname=hbad
pkgver=1.0
pkgrel=3
groups=('blackarch' 'blackarch-scanner')
pkgdesc='This tool allows you to test clients on the heartbleed bug.'
arch=('x86_64' 'aarch64')
url='http://www.curesec.com/'
license=('MIT')
depends=('openssl-1.1')
source=("https://web.archive.org/web/20200512070327/https://curesec.com/data/$pkgname-release.tar.gz")
sha512sums=('4308d402edfd915a7b4fdde34ca53c8570196245072db3f7364dc3365ec6f6fbd50ce5a786721bf3da40ddb597e577494284e3532ce8ef57839e1a0f7ec09ab0')

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/$pkgname/" server.crt server.key
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README
  install -Dm 644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

