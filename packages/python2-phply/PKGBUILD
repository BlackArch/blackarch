pkgname=python2-phply
pkgver=0.3.1
pkgrel=1
pkgdesc="PHP parser written in Python using PLY"
arch=('any')
url="https://github.com/ramen/phply"
license=('BSD')
depends=('python2')
source=("git+http://github.com/ramen/phply")
md5sums=('SKIP')

package() {
  cd "$srcdir/phply"
  python2 setup.py install "--root=$pkgdir" --optimize=1
}
