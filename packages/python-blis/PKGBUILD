pkgname=python-blis
_pkgname=blis
pkgver=1.3.0
pkgrel=1
pkgdesc='Blis linear algebra routines as a self-contained Python C-extension.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/blis/'
license=('MIT')
depends=('python' 'python-pytest' 'python-hypothesis')
makedepends=('python-setuptools' 'cython' 'python-numpy')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('aa88e2eee5898a6c1453b2b6740454f215904dcf3f4dfba0dbfd751ab822001b12453df79f4e3745fd6f9177e900ec453ab9fec13d7e9cf04ebf1fa0f9b6225d')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

