pkgname=python-blis
_pkgname=blis
pkgver=0.7.4
pkgrel=1
pkgdesc='Blis linear algebra routines as a self-contained Python C-extension.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/blis/'
license=('MIT')
depends=('python' 'python-pytest' 'python-hypothesis')
makedepends=('python-setuptools' 'cython' 'python-numpy')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('451f5f774570353ee0a86aa18d79c3c304840ecffc1193787d6511a396e5a0aa4d7d592d3b6f10a815313e2625c43a0f0b795cb02395607a46b279ad0608174e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

