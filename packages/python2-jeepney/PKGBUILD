pkgname=python2-jeepney
_pkgname=jeepney
pkgver=0.4.1
pkgrel=1
pkgdesc='Low-level, pure Python DBus protocol wrapper.'
url='https://gitlab.com/takluyver/jeepney'
license=('MIT')
arch=('any')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/3a/b6/28c665d48e48b5b7e6a26853d6b4595c4031de7798a6c4985b14492ebd14/$_pkgname-$pkgver.tar.gz")
sha512sums=('46aed19fd29df724af0e78ec0acabeb196324444e682817c330f3fd290a52cf6a6cb639f8c76f4ef5311817c4e051d7231b4f26af3cb6768bdd8c4bec7589210')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

