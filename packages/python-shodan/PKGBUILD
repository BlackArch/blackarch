# See COPYING for license details.

pkgname=python-shodan
pkgver=1.11.1
pkgrel=1
pkgdesc='Python library for Shodan (https://developer.shodan.io).'
url='https://pypi.org/project/shodan/#files'
groups=('blackarch' 'blackarch-automation')
depends=('python' 'python-requests' 'python-simplejson' 'python-click'
         'python-click-plugins')
makedepends=('python-setuptools')
license=('MIT')
arch=('any')
source=("https://files.pythonhosted.org/packages/ff/61/3545b2d9476f4b83536506b6a4ac6ecde8fcb09481d7b23cb334298dc4b2/shodan-1.11.1.tar.gz")
sha512sums=('7f8ad635823bac5e20aea05743b51b791a13878a8494339a123add5bfbbc1df15a70dac8876c7913a5095dd1519f301b47802d90bba84587b3fa62161b7d4924')

build() {
  cd "shodan-$pkgver"

  python setup.py build
}

package() {
  cd "shodan-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/python3-shodan/LICENSE"

  mv "$pkgdir/usr/bin/shodan" "$pkgdir/usr/bin/shodan3"
}

