pkgname='python2-boto3'
pkgver='1.7.19'
pkgrel=2
pkgdesc='The AWS SDK for Python.'
arch=('any')
url='https://pypi.org/project/boto3/'
license=('Apache2')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/41/bc/dbf76863733ec02978e7f75470e3a739ffc6052ba89a0d067c45996e4d1f/boto3-${pkgver}.tar.gz")
sha512sums=('a3aa6ee7c61ab1db0d3baeddaadd99f3f66b909a820e2be4f54eb99679e3c4a6c0bab52141f5ece1b4c907918530ec85f2537dbc5e549fcee9549e4bccd0e005')

build() {
  cd "$srcdir/boto3-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/boto3-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
