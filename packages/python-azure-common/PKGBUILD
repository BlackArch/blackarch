pkgname=python-azure-common
pkgver=1.1.17
pkgrel=1
pkgdesc='Microsoft Azure Client Library for Python (Common).'
arch=('any')
url='https://pypi.org/project/azure-common/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/0d/4b/a65b1a766b1687158d12df65392fe99730f4c46a038c438cd845c51d0bd3/azure-common-$pkgver.zip")
sha512sums=('c2fc23192f8d37b91585e61e517805e12bc58017e1d70982aef3b0bf253c0aebc95f2e6ec748a2b1df15605b5141fd538a275507acc3ac5053744d152b2ac6a0')

build() {
  cd "azure-common-$pkgver"

  python setup.py build
}

package() {
  cd "azure-common-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

