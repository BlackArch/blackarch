pkgname=python-azure-common
pkgver=1.1.23
pkgrel=1
pkgdesc='Microsoft Azure Client Library for Python (Common).'
arch=('any')
url='https://pypi.org/project/azure-common/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/e4/c9/0300b5a409a3758c0b6f77df5d8816366c9516579d065210ef3a2f21e23a/azure-common-1.1.23.zip")
sha512sums=('a155f1cb57f8c40fcbc44a9b50b7fbe1190e1f8e0fcf8cacd48d77c900e45b32670ee1fdc3ac798144362150ba6771a3d0a8e83dd09a9f5199b6a9cbb2174f08')

build() {
  cd "azure-common-$pkgver"

  python setup.py build
}

package() {
  cd "azure-common-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

