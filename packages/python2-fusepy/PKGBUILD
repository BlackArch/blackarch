pkgname=python2-fusepy
pkgver=3.0.1
pkgrel=1
pkgdesc='Simple ctypes bindings for FUSE.'
url='https://pypi.org/project/fusepy/#files'
arch=('any')
license=('ISC')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/04/0b/4506cb2e831cea4b0214d3625430e921faaa05a7fb520458c75a2dbd2152/fusepy-$pkgver.tar.gz")
sha512sums=('f913dfd9f29412daa8239548c8ad8bcc64f8fc7be1425bf34cd40a5c4d22faae67c5d5575c187395d911f64ad0dda186614ada598b38b9557e18794639d43767')

build() {
  cd "fusepy-$pkgver"

  python2 setup.py build
}

package() {
  cd "fusepy-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

