pkgname=python2-nmap
pkgver=0.0.1
pkgrel=3
pkgdesc='A Python library which helps in using the nmap port scanner.'
arch=('any')
url='http://xael.org/norman/python/python-nmap'
license=('GPL3')
depends=('python2' 'nmap')
source=("https://files.pythonhosted.org/packages/33/65/1bb09cc9532e75d84890d2b3c96be812fd6076fbc3c8ed4e5531abd4898f/nmap-$pkgver.tar.gz")
makedepends=('python2')
options=(!emptydirs)
sha512sums=('290a141a3140469309e4de21c4d00c356e4cc0ba3285a75bacd5b58dfdbdf6b046d93e6104fa871e893cea0546a1bcbb721247da5a790aa6fe375ae8c68bcfb2')

package() {
  cd "$srcdir/python-nmap-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}
