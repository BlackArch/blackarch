pkgname='CORStest'
pkgver=3.65e0b3e
pkgrel=0
pkgdesc='A simple CORS misconfigurations checker'
groups=('blackarch' 'blackarch-scanner' 'blackarch-webapp')
arch=('any')
url='https://github.com/RUB-NDS/CORStest'
depends=('python')
source=('git+https://github.com/RUB-NDS/CORStest')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir/$pkgname"
  install -Dm655 corstest.py "$pkgdir/usr/bin/cortest"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/coretest/LICENSE"
}
