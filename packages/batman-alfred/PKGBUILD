pkgname='batman-alfred'
pkgver='2018.1'
pkgrel=1
pkgdesc='Almighty Lightweight Fact Remote Exchange Daemon'
groups=('blackarch' 'blackarch-wireless')
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://www.open-mesh.org/'
license=('GPL')
depends=('gpsd' 'libnl')
source=("http://downloads.open-mesh.org/batman/releases/batman-adv-${pkgver}/alfred-${pkgver}.tar.gz")
sha512sums=('25c140f37e414565fb5720d9222b215f3e69209ea892348bf3c22d29c1dc6d7eb307b23f31cdbeb9257c11116e9d150d9f43a685a14f395f9f0ab9d3eb02c591')

build() {
  cd "$srcdir/alfred-$pkgver"

  make
}

package() {
  cd "$srcdir/alfred-$pkgver"

  make DESTDIR="$pkgdir" PREFIX=/usr SBINDIR=/usr/bin install
}
