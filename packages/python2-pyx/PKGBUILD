pkgname=python2-pyx
_pkgname=PyX
pkgver=0.12.1
pkgrel=4
pkgdesc='Python package for the generation of PostScript, PDF, and SVG files.'
url='https://pypi.org/project/PyX/#files'
arch=('any')
license=('GPL')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/27/04/3e13fab75ea4d7e390af41b732a00709557c9b46a1d598b40a68bc312503/pyx-$pkgver.tar.gz")
sha512sums=('4941f5aa21aff3743546495fb073c10d2657ff42b2aff401903498638093d0e31e344cce778980f28a7170c6d29eab72ac074277b9d4088376e8692dc71e55c1')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

