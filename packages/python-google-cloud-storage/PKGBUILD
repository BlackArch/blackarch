pkgname=python-google-cloud-storage
_pkgname=google-cloud-storage
pkgver=1.42.0
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media'
         'python-google-auth' 'python-protobuf' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/b4/8b/4eafe08a5e2d959369e6cd36119221140f5886790325a4c0f290faf8e734/$_pkgname-$pkgver.tar.gz")
sha512sums=('c3764853d72297821b3d7496b3e55719d3b66c3eb9580b53d2f06b744a1798a33c8f506cf52d7ad2e990eb0ee4eba4f417921b73ac67083b2f5835b764d07bb1')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

