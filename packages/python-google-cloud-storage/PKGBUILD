pkgname=python-google-cloud-storage
_pkgname=google-cloud-storage
pkgver=1.18.0
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/6d/40/c91ba5b87e15d4e580bd9bc3af3a0a2c222f71d817534cd47577dbddfdf9/$_pkgname-$pkgver.tar.gz")
sha512sums=('150c8ecf72efab87a13c9ee6f5c2a483c55d82db0a32f9b18f55b9246bfb9f580b56aad4a893265eef0290a23ee715610c49d55abe976007e67e3dfbda7dfe73')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

