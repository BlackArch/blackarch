pkgname=python-google-cloud-storage
pkgver=1.15.1
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c3/76/9cdfcd88b37b1026b9d3d8e2e4bb4d375de6101b18d2da84c627c0f1697f/google-cloud-storage-1.15.1.tar.gz")
sha512sums=('8543a75948f7fd034fbc6532d2eb2dbc5464681b7552d7d8c1e3016d1d95cfa8ab4bdafd6beea87860ff22c8fcd62c318c514a71d6c8988c1f6617a985926b0f')

build() {
  cd "google-cloud-storage-$pkgver"

  python setup.py build
}

package() {
  cd "google-cloud-storage-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

