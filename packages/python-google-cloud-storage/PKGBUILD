pkgname=python-google-cloud-storage
_pkgname=google-cloud-storage
pkgver=1.42.1
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media'
         'python-google-auth' 'python-protobuf' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ff/60/5ac908715718763b1cf5e80e72ae4a56263e9f31f5d9f672362bff64b8d9/$_pkgname-$pkgver.tar.gz")
sha512sums=('73f4d33680773e1c05d4bb073dc9a24a3e3948ff87bc7011f5d16cd0701813b54e7a760e81580d99f0f8f5d27ee6330c797a81e3ae7f2957798dbb6d4b424a36')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

