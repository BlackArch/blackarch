pkgname=python-google-cloud-storage
_pkgname=google-cloud-storage
pkgver=2.2.0
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media'
         'python-google-auth' 'python-protobuf' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/a4/f8/66d917242a51d886f94718dea0118180953263a5d2860fda8685bb558cee/$_pkgname-$pkgver.tar.gz")
sha512sums=('00fbdc8863800de2f3f05fe03f39cbf5189451039e5af447634a69ebad908cddd63d6f465c4f6244e9fe59f117108850b22e8cf4a9c637381efb995cecd55018')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

