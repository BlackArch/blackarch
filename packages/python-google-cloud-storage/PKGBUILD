pkgname=python-google-cloud-storage
_pkgname=google-cloud-storage
pkgver=1.19.0
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/0f/4d/03582c8659680e0c60c55d57381791c03e03f0c3f656f069ec68ec532c92/$_pkgname-$pkgver.tar.gz")
sha512sums=('24ae01e701882a0870485fde2eb1689781edb708520b6b0b92fa740566a8c2cb973a2fdc983e9e47c9e538dca02c3746d9b66624ee3f81f4ac5eee207dbea312')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

