pkgname=python-google-cloud-storage
_pkgname=google-cloud-storage
pkgver=1.21.0
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/eb/a3/2c82d92bbcff98027a318661145ebff1c49d4e7ca04e3a64caca2f6254c4/$_pkgname-$pkgver.tar.gz")
sha512sums=('1879c42358dede0b9615f29c250eb609ea27d4ec8a80863b0b3544969d3e8f58683faad44f636ac528a88bbf5d837b25453ec87e2538d61f4a81c874d4759fd9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

