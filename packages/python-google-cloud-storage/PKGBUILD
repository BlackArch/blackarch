pkgname=python-google-cloud-storage
_pkgname=google-cloud-storage
pkgver=1.22.0
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/59/92/3e7bf6adb5a91a7563de4e1e8345c4dccf75e5e193fcaeaabdd82a5dcd8d/$_pkgname-$pkgver.tar.gz")
sha512sums=('3d6ac9d088a24ca08b54733155a8fb887f2f29465e04ffc98f1ddaf42a532136243afa8fa38e38c1644a1c5fe2be3a4a8fe4df24d7538ceedc7d3d14e752a3ef')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

