pkgname=python-google-cloud-storage
_pkgname=google-cloud-storage
pkgver=2.2.1
pkgrel=1
pkgdesc='Google Cloud Storage API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-storage/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core' 'python-google-resumable-media'
         'python-google-auth' 'python-protobuf' 'python-google-api-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/28/f5/d42d6c78dd8fc4d693557509a6a25a1f6338e9b215537798604cd448e6fa/$_pkgname-$pkgver.tar.gz")
sha512sums=('e9d1813e4ca701773a7fff685cd58880f503e2582d77538ac72e6f7f54ae142c49697148d7f2dc9dfe1315504fbc8439313709efd94d8b737a5eb178933881fd')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

