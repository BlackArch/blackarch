pkgname=python-httpx-socks
_pkgname=httpx-socks
pkgver=0.6.0
pkgrel=2
pkgdesc='Proxy (HTTP, SOCKS) transports for httpx.'
url='https://pypi.org/project/httpx-socks/#files'
arch=('any')
license=('Apache')
depends=('python' 'python-httpx' 'python-python-socks')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/0d/8e/9ff2bacdb8147e18943c97ec9694573f2a48c1c4ffca945ae46ba1d21260/$_pkgname-$pkgver.tar.gz")
sha512sums=('ae0470f145f69edc8cd62fa2543542157f18e855385b52aecde75684147912275701ac415bb5be5a529030567c425abfa0d4541fc1c44c403df847aa200e3d12')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

