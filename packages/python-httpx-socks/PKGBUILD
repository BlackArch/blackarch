pkgname=python-httpx-socks
_pkgname=httpx-socks
pkgver=0.5.0
pkgrel=1
pkgdesc='Proxy (HTTP, SOCKS) transports for httpx.'
url='https://pypi.org/project/httpx-socks/#files'
arch=('any')
license=('Apache')
depends=('python' 'python-httpx' 'python-python-socks')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/f8/27/3dabc60b96eeda5f3e12d6154cbf68ae0c7ede40c41f8dc743b0f82999cb/$_pkgname-$pkgver.tar.gz")
sha512sums=('526c8e1709c9217a3a2b019669e62e639c6c3d609fcf4a76bf78f5ab5003fe8964e8bdb8d6a2f0e0ac6355e6e185c9da0d1e16f5f4f3aafe37fa66d15cb0a3b2')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

