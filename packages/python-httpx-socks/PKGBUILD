pkgname=python-httpx-socks
_pkgname=httpx-socks
pkgver=0.10.0
pkgrel=1
pkgdesc='Proxy (HTTP, SOCKS) transports for httpx.'
url='https://pypi.org/project/httpx-socks/#files'
arch=('any')
license=('Apache')
depends=('python' 'python-httpx' 'python-python-socks')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('0a9bb35336eae2bb0993caf17e313dd6549e7b728244989239d8353aa381a2ff5f407633fee2216afab3cbbba543ad5d3b253d3df478e8ca6e56adac3346c471')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

