pkgname=python-httpx-socks
_pkgname=httpx-socks
pkgver=0.11.0
pkgrel=2
pkgdesc='Proxy (HTTP, SOCKS) transports for httpx.'
url='https://pypi.org/project/httpx-socks/#files'
arch=('any')
license=('Apache')
depends=('python' 'python-httpx' 'python-python-socks')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('7b4b0e7db6ce20b881c9533ecf0400fdb84018e192c0ec249bcb328b684a1e5f83de5e32e151369ad5f8cff4a35a0d1fd1cf8f380c532e8910817984eddb463a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

