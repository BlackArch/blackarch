pkgname=irpas
pkgver=0.11
pkgrel=1
pkgdesc='Internetwork Routing Protocol Attack Suite.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-exploitation')
url='https://phenoelit-us.org/irpas'
license=('custom:phenoelit')
depends=('libpcap' 'libtirpc')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('cc78ed6ad695bb53a8033f38792bf14df61b1f5b1e469563e4debcb662024c34007c78b0c0572ed231aefa0e3daaa06bc6dd7aaf8dd9c29064017129677d27f0')

build() {
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" PREFIX=/usr install

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

