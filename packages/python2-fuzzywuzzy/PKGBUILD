# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.

pkgname='python2-fuzzywuzzy'
pkgver=333.e0f2b0d
pkgrel=1
pkgdesc='Fuzzy string matching like a boss.'
arch=('any')
url='https://github.com/seatgeek/fuzzywuzzy'
license=('BSD')
depends=('python2')
makedepends=('git')
source=('git+https://github.com/seatgeek/fuzzywuzzy.git')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/fuzzywuzzy"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/fuzzywuzzy"

  python2 setup.py build
}

package() {
  cd "$srcdir/fuzzywuzzy"

  python2 setup.py install --prefix=/usr --root="$pkgdir"

  install -Dm644 -t "$pkgdir/usr/share/doc/python2-fuzzywuzzy" README.rst \
    CHANGES.rst requirements.txt
  install -Dm644 LICENSE.txt \
    "$pkgdir/usr/share/licenses/python2-fuzzywuzzy/LICENSE"
}
