pkgname=python-simple-term-menu
_pkgname=simple-term-menu
pkgver=1.3.0
pkgrel=1
pkgdesc='Creates simple menus for interactive command line programs.'
arch=('any')
url='https://pypi.org/project/simple-term-menu/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/76/07/792111161a53220502a2f4ad95ca04febd7e3c9a8903a99e837949359a8c/$_pkgname-$pkgver.tar.gz")
sha512sums=('70c59242560e3d9251e8c7a0ab9ed47091c0579eac202cf7be43132328b82e97bf3e8cc9d2d867d6ca8f25d7131be841e9ad3cbbfd04f8bd7a462d67544eb1ce')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

