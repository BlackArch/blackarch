pkgname=python-simple-term-menu
_pkgname=simple-term-menu
pkgver=1.6.1
pkgrel=2
pkgdesc='Creates simple menus for interactive command line programs.'
arch=('any')
url='https://pypi.org/project/simple-term-menu/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('3b24f3b0cff60897f83644901f58fbe9d1131694cd3b62adf219893a771b170ce2183558cba299309d592a8a76c53eb38924a98bdf8ab7cbea341ace1407b9aa')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

