# See COPYING for license details.
_gemname=timers
pkgname=ruby-$_gemname-4.0
pkgver=4.0.4
pkgrel=1
pkgdesc=Schedule\ procs\ to\ run\ after\ a\ certain\ time,\ or\ at\ periodic\ intervals,\ using\ any\ API\ that\ accepts\ a\ timeout
arch=(any)
url=https://github.com/celluloid/timers
license=(MIT)
depends=(ruby ruby-hitimes)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('d16f50fe80784a7f8aa0a8b6e6ee56d81d4274b1'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.coveralls.yml,.gitignore,.rspec,.travis.yml,AUTHORS.md,CHANGES.md,Gemfile,LICENSE,README.md,Rakefile,spec,timers.gemspec}
}
