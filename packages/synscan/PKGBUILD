# See COPYING for license details.

pkgname=synscan
pkgver=5.02
pkgrel=7
groups=('blackarch' 'blackarch-scanner')
pkgdesc='Fast asynchronous half-open TCP portscanner.'
url='http://www.digit-labs.org/files/tools/synscan/'
arch=('x86_64' 'aarch64')
license=('GPL2')
depends=('libpcap')
source=("http://www.digit-labs.org/files/tools/$pkgname/releases/$pkgname-$pkgver.tar.gz")
sha512sums=('fd2461a9520204682228f942cce075782e0fc21c')

build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr

  make linux
}

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 755 sslog "$pkgdir/usr/bin/sslog"
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

