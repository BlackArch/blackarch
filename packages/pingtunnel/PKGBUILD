pkgname=pingtunnel
pkgver=0.72
pkgrel=1
pkgdesc="is an application that allows you to reliably tunnel TCP connections to a remote host using ICMP echo request and reply packets."
url="http://www.cs.uit.no/~daniels/PingTunnel/index.html"
groups=('blackarch' 'blackarch-tunnel')
arch=('i686' 'x86_64')
license=('BSD')
depends=('glibc' 'libpcap')
source=("http://www.cs.uit.no/~daniels/PingTunnel/PingTunnel-${pkgver}.tar.gz")
md5sums=('c5f0c36d1a48d84ce7b5217f1ba52dd0')

build() {
  cd "$srcdir/PingTunnel"
  make
  make prefix="$pkgdir/usr install"
}

package() {
  cd "${srcdir}/PingTunnel"
  
  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/pingtunnel"
  install -dm755 "$pkgdir/usr/share/doc/pingtunnel"

  cp --no-preserve=ownership CHANGELOG LICENSE README "$pkgdir/usr/share/doc/pingtunnel"
  cp --no-preserve=ownership ptunnel "$pkgdir/usr/share/pingtunnel/"

  ln -s /usr/share/pingtunnel/ptunnel "$pkgdir/usr/bin/"
}
