pkgname=fuzzball2
pkgver=0.7
pkgrel=4
pkgdesc='A fuzzer for TCP and IP protocol options. It sends a bunch of more or less bogus packets to the target.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-fuzzer')
url='http://nologin.org/'
license=('custom')
source=("https://web.archive.org/web/20150329133340/http://warlord.nologin.org/download/$pkgname.tar.gz")
sha512sums=('3eb11aa32fef53396d5f355b6a7ca8db273918041dbfa326858659fdd8d995703ade3b205459df032352b19ebfb4233b04f586b5aa51a1e9b7d366933ed9fcfb')

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

