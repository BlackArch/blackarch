# See COPYING for license details.

pkgname=sgn
pkgver=22.686e60d
pkgrel=2
groups=('blackarch' 'blackarch-binary')
pkgdesc='Shikata ga nai encoder ported into go with several improvements.'
arch=('x86_64' 'aarch64')
url='https://github.com/EgeBalci/sgn'
license=('MIT')
depends=('capstone' 'keystone')
makedepends=('git' 'go')
source=("git+https://github.com/EgeBalci/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

