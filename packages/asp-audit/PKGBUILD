pkgname='asp-audit'
pkgver='2BETA'
_pkgver='v2'
pkgrel=4
pkgdesc="An ASP fingerprinting tool and vulnerability scanner."
arch=('any')
url="http://seclists.org/basics/2006/Sep/128"
license=('custom:unknown')
depends=('perl')
groups=('blackarch' 'blackarch-fingerprint' 'blackarch-scanner' 'blackarch-webapp')
source=("https://dl.packetstormsecurity.net/UNIX/scanners/asp-audit-${_pkgver}.tar.gz")
sha1sums=('3a032d32b8998f4c2182b7ef074fe4c7ce276947')

package() {
  cd "$srcdir"

  install -Dm755 "$srcdir/asp-audit-latest.pl" "$pkgdir/usr/bin/asp-audit"
}
