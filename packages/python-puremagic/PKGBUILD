pkgname=python-puremagic
_pkgname=puremagic
pkgver=1.24
pkgrel=1
pkgdesc="Pure python module that will identify a file based off itâ€™s magic numbers."
arch=('any')
url='https://pypi.org/project/puremagic/'
license=('MIT')
depends=('python')
makedepends=('python-setuptools' 'python-pip' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('68b0bfe0c08f573c8e6a2335251601194a2bdb0381cade11b3e5322ae2f2a14839a8deb9bcec2cb9d6958c6ac172fd5f3963eed9fb3d2b8577cee1608254366a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

