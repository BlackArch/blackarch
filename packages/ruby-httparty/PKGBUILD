# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=httparty
pkgname=ruby-$_gemname
pkgver=0.14.0
pkgrel=1
pkgdesc=Makes\ http\ fun\!\ Also,\ makes\ consuming\ restful\ web\ services\ dead\ easy.
arch=(any)
url=http://jnunemaker.github.com/httparty
license=(MIT)
depends=(ruby ruby-multi_xml)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('0e7330eb3572aebf43992939aca48f35b647f80d'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/MIT-LICENSE" "$pkgdir/usr/share/licenses/$pkgname/MIT-LICENSE"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.rubocop.yml,.rubocop_todo.yml,.simplecov,.travis.yml,CONTRIBUTING.md,Gemfile,Guardfile,History,MIT-LICENSE,README.md,Rakefile,cucumber.yml,docs,examples,features,httparty.gemspec,script,spec,website}
}
