pkgname=ruby-mini_exiftool
_gemname=mini_exiftool
pkgver=2.10.1
pkgrel=1
pkgdesc='This library is wrapper for the Exiftool command-line application (http://www.sno.phy.queensu.ca/~phil/exiftool).'
arch=('any')
license=('custom:unknown')
depends=('ruby')
makedepends=('ruby-rdoc')
url='http://gitorious.org/mini_exiftool'
source=("https://rubygems.org/gems/$_pkgname-$pkgver.gem")
sha512sums=('bd0accdac43728125f3d35208edc0251ae8d6ad044b8cba5d72b3f46a8a359900681864844b470a52e6a93ebc54e49a77fd9ffe12aa4fca5ad2972a8732483fb')
noextract=("$_gemname-$pkgver.gem")

package() {
  _gemdir=$(ruby -e 'puts Gem.default_dir')

  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri \
      -i "$pkgdir$_gemdir" "$_gemname-$pkgver.gem"
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
      "$_gemname-$pkgver.gem"
  fi
}

