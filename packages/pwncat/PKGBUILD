pkgname=pwncat
pkgver=0.0.23
pkgrel=1
groups=('blackarch' 'blackarch-scanner' 'blackarch-backdoor' 'blackarch-networking' 'blackarch-proxy')
pkgdesc='Bind and reverse shell handler with FW/IDS/IPS evasion, self-inject and port-scanning'
url='http://pwncat.org/'
license=('MIT')
arch=('any')
depends=('python')
source=("$pkgname-$pkgver-alpha.tar.gz::https://github.com/cytopia/pwncat/archive/v$pkgver-alpha.tar.gz")
sha512sums=('e5ffee7defe2f950c3d292fe1cab6b60b4a3d2f9b353e1d19cd999ce2e87814d02c1581313d6f2cbc58e397d252c52ce822d17710b7d9e9b3e98571fdd73d447')

package() {
  cd "$pkgname-$pkgver-alpha"

  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/man/man1"
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  install -Dm 644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md CHANGELOG.md

  install -Dm 755 "bin/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 "man/$pkgname.1" "$pkgdir/usr/share/man/man1/$pkgname.1"

  cp -a pse "$pkgdir/usr/share/doc/$pkgname/"
}

