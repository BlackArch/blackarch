pkgname=blackarch-keyring
pkgver=13399.2453e28ab
pkgrel=1
pkgdesc='BlackArch Linux PGP keyring.'
arch=('any')
url='https://github.com/BlackArch/blackarch-keyring'
license=('GPL')
install='blackarch-keyring.install'
source=('git+https://github.com//keyring.git')
        "https://www.blackarch.org//keyring/blackarch-keyring.tar.gz.sig")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}
            'SKIP')

package() {
  cd "$pkgname"

  make PREFIX=/usr "DESTDIR=$pkgdir" install
}

