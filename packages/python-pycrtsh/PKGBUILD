pkgbase=python-pycrtsh
pkgname=('python2-pycrtsh' 'python-pycrtsh')
_pkgname=pycrtsh
pkgver=0.2
pkgrel=1
pkgdesc='Python library to request crt.sh certificate information.'
arch=('any')
url='https://pypi.org/project/pycrtsh/#files'
license=('APACHE')
makedepends=('git' 'python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/5d/4a/805a7c6f14fd044939f136ab464e98b7a1e338e9ba11c6b0b0e84c91a631/$_pkgname-$pkgver.tar.gz")
sha512sums=('99e80c95c2f2dc51920ec37d070bc62fdebc89e665da0ffa8b00552300bb1eceabd3cc584f518f4b2812ca83d77715daf712d93173aef0787dd0b81a6ac0a13f')

pkgver() {
  cd $_pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cp -a "$_pkgname"{,-2}
}

build() {
  cd "$_pkgname-2"

  python2 setup.py build

  cd "$srcdir/$_pkgname"

  python setup.py build
}

package_python2-pycrtsh() {
  depends=('python2' 'python2-beautifulsoup4' 'python2-dateutil' 'python2-lxml'
           'python2-requests')

  cd "$_pkgname-2"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build

  mv "$pkgdir/usr/bin/certsh" "$pkgdir/usr/bin/certsh2"
}

package_python-pycrtsh() {
  depends=('python' 'python-beautifulsoup4' 'python-dateutil' 'python-lxml'
           'python-requests')

  cd $_pkgname

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

