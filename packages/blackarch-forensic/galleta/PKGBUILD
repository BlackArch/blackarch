pkgname=galleta
pkgver=20040505_1
pkgrel=5
groups=('blackarch' 'blackarch-forensic')
pkgdesc="Examine the contents of the IE's cookie files for forensic purposes"
arch=('x86_64' 'aarch64')
url='http://www.jonesdykstra.com/'
license=('GPL')
source=("http://sourceforge.net/projects/fast/files/Galleta/Galleta%20v$pkgver/galleta_$pkgver.tar.gz/download")
sha512sums=('7c420a413371cd9d7d818941026bc6981c8a749b8d3c97a9f0fc867116f9e642a06ad2832ded6de08780ed24885c2de7e8b655400569cb7ae56844161308dc3d')

package() {
  cd "galleta_$pkgver/src"

  make install

  install -dm 755 "$pkgdir/usr"

  mv -v ../bin "$pkgdir/usr"
}

