post_install() {
  set -e

  cd /usr/share/cmsscanner
  bundle config build.nokogiri --use-system-libraries
  bundle install --path vendor/bundle

  cd /usr/share/cmsscanner/example
  bundle config build.nokogiri --use-system-libraries
  bundle install --path vendor/bundle
}

post_upgrade() {
  post_install "$@"
}

