pkgname='cirt-fuzzer'
pkgver='1.0'
pkgrel=2
pkgdesc='A simple TCP/UDP protocol fuzzer.'
url='http://www.cirt.dk/'
groups=('blackarch' 'blackarch-fuzzer')
license=('GPL')
arch=('any')
depends=('perl' 'perl-algorithm-generatesequence')
source=('https://dl.packetstormsecurity.net/fuzzer/fuzzer-cirt.tgz')
sha1sums=('a4f872b96bebd4a45a0b54b31941b0be7acb99ca')

package() {
  cd "$srcdir"

  install -Dm755 fuzzer.txt "$pkgdir/usr/bin/cirt-fuzzer"
  install -Dm644 template.txt "$pkgdir/usr/share/cirt-fuzzer/template.txt"
}
