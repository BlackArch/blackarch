pkgname=python-unfurl
_pkgname=unfurl
pkgver=0.0.1.dev391
pkgrel=1
pkgdesc='Use Git to record and deploy changes to your DevOps infrastructure.'
arch=('any')
url='https://pypi.org/project/unfurl/#files'
license=('MIT')
depends=('python' 'python-requests' 'python-dateutil' 'python-yaml' 'python-pbr'
         'python-click')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/61/96/654c1116c4384b0b3e68bc06e13858b60efc0a5b76cb0467cbd3825314d3/$_pkgname-$pkgver.tar.gz")
sha512sums=('d3375275778868cc842b6ed79e9b16ce5b0a1f93766fa7ee5c9b7c9db128338b27ec615db41035753f619fb3daa106d78915902f850e8a3818daba79c6098526')

prepare() {
  cd "$_pkgname-$pkgver"

  touch full-requirements.txt
}

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  mv "$pkgdir/usr/bin/$_pkgname" "$pkgdir/usr/bin/python-$pkgname"
}

