pkgname=python-minikerberos
_pkgname=minikerberos
pkgver=0.2.18
pkgrel=1
epoch=1
pkgdesc='Kerberos manipulation library in pure Python.'
arch=('any')
url='https://pypi.org/project/minikerberos/'
license=('MIT')
depends=('python' 'python-asn1crypto' 'python-oscrypto')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c2/59/19326b17db31880d3a54689ad77a27cc9229a65e74471187e5eb5c24726a/$_pkgname-$pkgver.tar.gz")
sha512sums=('86f57a2ba99978b8e21a96cf5d050ce83d6739473b3d7b6fee84507745f206994a315f121c9f048e6eccab4f658e28340fc2c34d5b72e61f60b6a887ca9b22db')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

