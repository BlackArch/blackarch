pkgname=python-minikerberos
_pkgname=minikerberos
pkgver=0.4.9
_pyver=3.13
pkgrel=1
epoch=1
pkgdesc='Kerberos manipulation library in pure Python.'
arch=('any')
url='https://pypi.org/project/minikerberos/#files'
license=('MIT')
depends=('python' 'python-asn1crypto' 'python-oscrypto' 'python-asysocks'
         'python-unicrypto')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('359d8cf45d4df5bdf398e394615c61179ca9682daa4fc6abb84c7b86a7c51d880037b1a4b85bed294e726ec692a00c11e8279119988998bdf49b5fc9758b044f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python$_pyver/site-packages/tests"
}

