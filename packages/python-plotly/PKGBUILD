pkgname=python-plotly
_pkgname=plotly
pkgver=4.1.0
pkgrel=1
pkgdesc='Make collaborative, interactive, publication-quality graphs from Python.'
arch=('any')
url='https://pypi.org/project/plotly/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/48/32/d138e07ba0d869e5b1c536700994df05e0a515f0877a8b4d65d2405a2f3f/$_pkgname-$pkgver.tar.gz")
sha512sums=('b7249ce8acc98d642ede4eec3f18cdd251969d8da9a1dba467afed40d84b568ac2f3c8471bb98b386dde82d027c1f9f03cdab6d8271fa85349a428f1a507dde1')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

