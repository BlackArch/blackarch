pkgname=python-plotly
_pkgname=plotly
pkgver=5.2.1
pkgrel=1
pkgdesc='Make collaborative, interactive, publication-quality graphs from Python.'
arch=('any')
url='https://pypi.org/project/plotly/#files'
license=('MIT')
depends=('python' 'python-pandas')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/e4/af/016b24a3882bdd30db73e992592877fcf629d318a0765524662ef62ec9ef/$_pkgname-$pkgver.tar.gz")
sha512sums=('b2d521137d37023a0826d8f10e44159aca4c1f13d9ce433b874d0fdb223d72eda404e49f3170679011760fd5db4fd306f829be8786ba37767182eebd1d853fb1')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

