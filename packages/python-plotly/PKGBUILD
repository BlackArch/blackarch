pkgname=python-plotly
_pkgname=plotly
pkgver=5.0.0
pkgrel=1
pkgdesc='Make collaborative, interactive, publication-quality graphs from Python.'
arch=('any')
url='https://pypi.org/project/plotly/#files'
license=('MIT')
depends=('python' 'python-pandas')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/5e/c5/0485d7dac84585ea3e6a6ac4cc545a607981afaace948789771699c6b1d9/$_pkgname-$pkgver.tar.gz")
sha512sums=('68de37afe7624aeea7bfa37c278d648606b5a1df33d84c3078c94889ca241429cdc5972a6938b928abc48a6a0d8315fd356b2810fa002f0c7a03442f81264e9b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

