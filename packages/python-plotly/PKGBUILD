pkgname=python-plotly
_pkgname=plotly
pkgver=4.2.1
pkgrel=1
pkgdesc='Make collaborative, interactive, publication-quality graphs from Python.'
arch=('any')
url='https://pypi.org/project/plotly/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/51/6d/835092e91c265d28f4bb94beda715b0182080f8e0344a6480bf4dc9d8522/$_pkgname-$pkgver.tar.gz")
sha512sums=('50c703e54e94ced9e3e5b522417418366d518d003447d5fa5fba093dede2e8bddcaf9f6537f6203c63bf2728076a8f59aa252b3565981546351046f7dc5d5c59')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

