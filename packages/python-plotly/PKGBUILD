pkgname=python-plotly
_pkgname=plotly
pkgver=5.13.1
pkgrel=2
pkgdesc='Make collaborative, interactive, publication-quality graphs from Python.'
arch=('any')
url='https://pypi.org/project/plotly/#files'
license=('MIT')
depends=('python' 'python-pandas')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('9b3c22018a809b8ed0a1cb71ebcbbb05fd0695cdae87b6c84079a60cc7466a86c204c670e6f23fb2033d0e69958b7eac7939b12c3c23fe38460576a926005639')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

