pkgname=python-plotly
_pkgname=plotly
pkgver=4.8.0
pkgrel=1
pkgdesc='Make collaborative, interactive, publication-quality graphs from Python.'
arch=('any')
url='https://pypi.org/project/plotly/#files'
license=('MIT')
depends=('python' 'python-pandas')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/59/f8/37560bba64dcb5ab53ba559591d1b2a646264c7ae22f03812baf42caf53c/$_pkgname-$pkgver.tar.gz")
sha512sums=('68b345539d04997288512234aa844897c92cdf14aa48ed1a6f837e8ad4c38739b2be5ac91acf320161b0d90cc717b98ce99fc7d267ea6386bedd9c6ee337fb7b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

