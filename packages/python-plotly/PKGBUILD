pkgname=python-plotly
_pkgname=plotly
pkgver=5.4.0
pkgrel=1
pkgdesc='Make collaborative, interactive, publication-quality graphs from Python.'
arch=('any')
url='https://pypi.org/project/plotly/#files'
license=('MIT')
depends=('python' 'python-pandas')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/16/29/be9980cd3eff67f2c28feb4a87728d3e9c54a1a40f61bcbe0424496272a9/$_pkgname-$pkgver.tar.gz")
sha512sums=('826b3b942f640b27aea52b49b24ad6c0569cb94fb7539cf45dbfbcbe67cf46087a8f96015a2a636f2ea829edf4adc60376913629c58ef7d42ecec58653fba5ec')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

