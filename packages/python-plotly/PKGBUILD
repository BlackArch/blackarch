pkgname=python-plotly
_pkgname=plotly
pkgver=5.10.0
pkgrel=1
pkgdesc='Make collaborative, interactive, publication-quality graphs from Python.'
arch=('any')
url='https://pypi.org/project/plotly/#files'
license=('MIT')
depends=('python' 'python-pandas')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/aa/71/77c8429c083688a10abab2a096c06fb62f6b986c02242e5b487eb68cbca7/$_pkgname-$pkgver.tar.gz")
sha512sums=('f30f78ad8683d8b8ccd6a1c383772eddf6719fd47b4be693a72e9ae2c6d567fbf683e87aecc24dcd4c1fd89697366e510cfd93e6599d859554b687e6f6cfb416')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

