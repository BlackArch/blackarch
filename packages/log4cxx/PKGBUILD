pkgname=log4cxx
_pkgname=apache-log4cxx
pkgver=0.12.1
pkgrel=1
pkgdesc='A C++ port of Log4j.'
url='http://logging.apache.org/log4cxx'
arch=('x86_64' 'aarch64')
license=('Apache')
depends=('apr-util' 'libxml2' 'zip' 'boost' 'boost-libs')
makedepends=('cmake')
source=("http://archive.apache.org/dist/logging/$pkgname/$pkgver/$_pkgname-$pkgver.tar.gz")
sha512sums=('807058734cebf7c92e99484313becbc6be63e48bd930889c733318bb78dfec498b66aaa12255ed30879abb005b32e2b965f9dd87ec50d0421ca067f3f66280d9')

build() {
  cd "$_pkgname-$pkgver"

  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ../
  make
}

package() {
  cd "$_pkgname-$pkgver"

  cd build

  make DESTDIR="$pkgdir" install
}

