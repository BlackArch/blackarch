post_install() {
  echo
  echo "  >> To use BlackArch X11 config move the following files:"
  echo "      /usr/share/blackarch/config/x11/xprofile      -> /etc/xprofile"
  echo "      /usr/share/blackarch/config/x11/Xresources    -> ~/.Xresources"
  echo "      /usr/share/blackarch/config/x11/Xdefaults     -> ~/.Xdefaults"
  echo
}

post_upgrade() {
  post_install
}
