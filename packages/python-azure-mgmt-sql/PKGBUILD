pkgname=python-azure-mgmt-sql
_pkgname=azure-mgmt-sql
pkgver=1.0.0
pkgrel=2
pkgdesc='Microsoft Azure SQL Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-sql/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c4/1f/40af724de7a0b00f9a8986ec3554adf1c1cbc5f65c6401d3b0d7b86fc169/$_pkgname-$pkgver.zip")
sha512sums=('71c5501680ca36d10966187ea9293dcaef814ba162d05c1d4711ecf0d03c0789d3849d46828b50cd799277f1dde40c77787b31c556d4790d1bded7f10172fddb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

