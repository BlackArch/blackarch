# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=certgraph
pkgver=157.41f78b5
pkgrel=2
groups=('blackarch' 'blackarch-recon')
pkgdesc='Crawl the graph of certificate Alternate Names.'
arch=('x86_64' 'aarch64')
url='https://github.com/lanrat/certgraph'
license=('GPL3')
depends=('glibc')
makedepends=('git' 'go-pie')
source=("git+https://github.com/lanrat/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 docs/index.html "$pkgdir/usr/share/$pkgname/index.html"
  install -Dm 644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
}

