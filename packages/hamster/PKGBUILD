pkgname=hamster
pkgver=2.1
pkgrel=1
pkgdesc='Tool for HTTP session sidejacking.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-exploitation')
url='https://hamster.erratasec.com/'
license=('GPL-2.0-or-later')
depends=('libpcap')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('c7b7c40c7c6fac30cd99cef51dd176fa4806ba32fcda879729f8b7c8f9676ef3d1d3d5b8054d9e005d08e5299239b6f8e18153347832081bda198b1388260b1f')

build() {
  cd "$pkgname-$pkgver"

  make

  cd ferret

  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install

  cd ferret

  make DESTDIR="$pkgdir" install
}

