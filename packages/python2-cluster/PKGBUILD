pkgname=python2-cluster
pkgver=1.4.1.post1
pkgrel=4
pkgdesc='Allows grouping a list of arbitrary objects into related groups (clusters).'
arch=('any')
url='http://python-cluster.sourceforge.net/'
license=('LGPL')
depends=('python2')
source=("https://files.pythonhosted.org/packages/46/3d/55c6d15349d9e037d7f0221495c612f411b816ef2c4bdefd3447356bc450/cluster-$pkgver-py2.py3-none-any.whl")
sha512sums=('95b5e6dba64f8761d97c6e110afc4d24f619cc486acdc23b85c3056ded7a759535eb3bdb20eaaa485e5dc86802dde169fb77b8e4beb71ac43d51121d1e06b662')

package() {
  cd "$srcdir/cluster-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}
