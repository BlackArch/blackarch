pkgname=python-msgspec
_pkgname=msgspec
pkgver=0.20.0
pkgrel=2
pkgdesc='A fast serialization and validation library, with builtin support for JSON, MessagePack, YAML, and TOML.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/msgspec/#files'
license=('BSD-3-Clause')
depends=('python' 'python-yaml' 'python-toml')
makedepends=('python-build' 'python-pip' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('41fea07bac025684e914fb9a60590c389b4eaac0a45fd22ccbb629062561dbfe0b5a0b63e304ee74a0a97e1bb262b96f5c47637cef47b2c97090f8d333774001')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --outdir="$startdir/dist"
}

package() {
  cd "$_pkgname-$pkgver"

  pip install \
    --verbose \
    --disable-pip-version-check \
    --no-warn-script-location \
    --ignore-installed \
    --no-compile \
    --no-deps \
    --root="$pkgdir" \
    --prefix=/usr \
    --no-index \
    --find-links="file://$startdir/dist" \
    $_pkgname
}

