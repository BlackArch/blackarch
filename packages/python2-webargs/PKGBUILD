pkgname=python2-webargs
pkgver=5.1.3
pkgrel=1
pkgdesc='A friendly library for parsing and validating HTTP request arguments, with built-in support for popular web frameworks, including Flask, Django, Bottle, Tornado, Pyramid, webapp2, Falcon, and aiohttp.'
arch=('any')
url='https://pypi.org/project/webargs/#files'
license=('MIT')
depends=('python2' 'python2-marshmallow')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/5f/5b/467a2cd8e3e0088483a4d5f9ff653788c244b03b65063fdc9e6804e9d30c/webargs-5.1.3.tar.gz")
sha512sums=('cd249224fa78ce210d74e763b6d331458695d7c6ae954597cf2ab4e0f0f82f021ca0581e53fcd576fbc373867c0f120a098974ac015e3ed5dabd1ee41c081865')

build() {
  cd "webargs-$pkgver"

  python2 setup.py build
}

package() {
  cd "webargs-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

