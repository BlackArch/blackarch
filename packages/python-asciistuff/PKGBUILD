pkgname=python-asciistuff
_pkgname=asciistuff
pkgver=1.3.0
pkgrel=1
pkgdesc='Library for producing ASCII arts from a text or an image.'
arch=('any')
url='https://pypi.org/project/asciistuff/#files'
license=('AGPL3')
depends=('python' 'python-terminaltables' 'python-termcolor' 'python-cowpy'
         'python-pyfiglet')
makedepends=('python-pip' 'python-build' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('c49441560d883b91c0d2ed33304349c567b2b55bbb850e7ffa52d4710b94be865d87dc2b610d63a797ca2db44b858c7bf2503b18cfae2d6de1f778f1f5eb1898')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --outdir="$startdir/dist"
}

package() {
  cd "$_pkgname-$pkgver"

  pip install \
    --verbose \
    --disable-pip-version-check \
    --no-warn-script-location \
    --ignore-installed \
    --no-compile \
    --no-deps \
    --root="$pkgdir" \
    --prefix=/usr \
    --no-index \
    --find-links="file://$startdir/dist" \
    $_pkgname
}

