pkgname='winhex'
pkgver=19.7
pkgrel=1
pkgdesc='Hex Editor and Disk Editor'
groups=('blackarch' 'blackarch-windows')
arch=('any')
url='https://www.x-ways.net/winhex/'
depends=()

pkgver() {
	curl 'https://www.x-ways.net/winhex/' | grep 'strong>WinHex ' | sed -r 's/.*WinHex ([0-9]+\.[0-9]+).*/\1/gi'
}
package() {
	tmpFile='/tmp/winhex.zip'
	targetDir="${pkgdir}/usr/share/windows/winhex/"
	mkdir -p "${targetDir}"
	curl -L --output "${tmpFile}" "https://www.x-ways.net/winhex.zip"
	unzip -d "${targetDir}" "${tmpFile}"
	rm -rf "${tmpFile}"
}
