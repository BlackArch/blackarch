pkgname=winhex
pkgver=19.7
pkgrel=1
pkgdesc='Hex Editor and Disk Editor.'
groups=('blackarch' 'blackarch-windows')
arch=('any')
url='https://www.x-ways.net/winhex/'
depends=()
source=('http://www.x-ways.net/winhex/winhex.zip')
sha256sums=('15b864a81556267600fa952e62b74b845e319f651b9d1dc9d9b8eb721dfa348b')
DLAGENTS=('http::/usr/bin/curl -A rofl -fLC - --retry 3 --retry-delay 3 -o %o %u')

pkgver() {
  curl 'https://www.x-ways.net/winhex/' | grep 'strong>WinHex ' | sed -r 's/.*WinHex ([0-9]+\.[0-9]+).*/\1/gi'
}

package() {
  rm -rf './winhex.zip'
  mkdir -p "${pkgdir}/usr/share/windows/winhex/"
  cp ./* "${pkgdir}/usr/share/windows/winhex/"
}
