# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=loofah
pkgname=ruby-$_gemname
pkgver=2.0.3
pkgrel=2
pkgdesc=Loofah\ is\ a\ general\ library\ for\ manipulating\ and\ transforming\ HTML/XML\ documents\ and\ fragments
arch=(any)
url=https://github.com/flavorjones/loofah
license=(MIT)
depends=(ruby ruby-nokogiri)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('da00db084b21106056c7c09e8608392439db90ec'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/MIT-LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/MIT-LICENSE.txt"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gemtest,CHANGELOG.rdoc,Gemfile,MIT-LICENSE.txt,Manifest.txt,README.rdoc,Rakefile,benchmark,test}
}
