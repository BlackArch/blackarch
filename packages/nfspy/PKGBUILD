pkgname=nfspy
pkgver=0.8.5
pkgrel=1
pkgdesc="a Python library for automating the falsification of NFS credentials when mounting an NFS share."
url="https://github.com/bonsaiviking/NfSpy"
license=('custom')
arch=(any)
depends=('python2' 'python2-fuse')
source=("git+https://github.com/bonsaiviking/NfSpy")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/NfSpy"

  # We have to get the version number from the README file. It's better than nothing.
  grep -m1 'Version ' README.md | sed 's/.* //'
}

package() {
  cd "$srcdir/NfSpy"
  
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
