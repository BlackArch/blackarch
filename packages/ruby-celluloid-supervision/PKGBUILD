# See COPYING for license details.
pkgname='ruby-celluloid-supervision'
_gemname='celluloid-supervision'
pkgver='0.20.6'
pkgrel=2
pkgdesc="Celluloid Supervision"
arch=('any')
url='https://github.com/celluloid/'
license=("MIT")
depends=('ruby' 'ruby-timers')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('3f29e12927063c350003000cae36afd7e11ab32b' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.coveralls.yml,.env-ci,.env-dev,.gitignore,.gitmodules,.rspec,.rubocop.yml,.travis.yml,CHANGES.md,Gemfile,LICENSE,README.md,Rakefile,celluloid-supervision.gemspec,tasks}
}
