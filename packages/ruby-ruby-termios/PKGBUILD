# See COPYING for license details.
_gemname=ruby-termios
pkgname=ruby-$_gemname
pkgver=1.0.2
pkgrel=1
pkgdesc=a\ simple\ wrapper\ of\ termios\(3\)
arch=(i686 x86_64)
url=https://github.com/arika/ruby-termios
license=(Ruby\'s)
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('8925ab4fd8d7c96a4ce398f0817f82ec2b0d9ff1'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,Gemfile,README.md,Rakefile,bin,examples,ext,ruby-termios.gemspec,termios.rd}
}
