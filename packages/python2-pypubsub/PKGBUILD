pkgname=python2-pypubsub
pkgver=4.0.3
pkgrel=1
pkgdesc='Python Publish-Subscribe Package.'
arch=('any')
license=('BSD')
url='https://pypi.org/project/Pypubsub/#files'
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/3b/ae/1e327cbc89b436bb5318d7b059133696e583fc1aef087621424e0c862d52/Pypubsub-$pkgver.tar.gz")
sha512sums=('cb1248865b0a49fece6f32065a8dd94e2370c0d4cb91e96f03cd107eecf227ed2fa887eeddb7d31c8498cc466a16e2fcdffde5c982e89857a66eb750a5655a27')

build() {
  cd "Pypubsub-$pkgver"

  python2 setup.py build
}

package() {
  cd "Pypubsub-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}
