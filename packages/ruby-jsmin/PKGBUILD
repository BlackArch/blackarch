pkgname=ruby-jsmin
_gemname=${pkgname#ruby-}
pkgver=1.0.1
pkgrel=2
pkgdesc="Ruby implementation of Douglas Crockford's JSMin JavaScript minifier"
arch=('any')
url="https://github.com/rgrove/jsmin/"
license=('custom')
depends=('ruby' 'rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('b64f1b806fe267c927240b6c41a16298')

package() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
  install -d ${pkgdir}/usr/share/licenses/${pkgname}
  sed -n 103,119p ${pkgdir}/usr/lib/ruby/gems/*/doc/${_gemname}-${pkgver}/rdoc/JSMin.html | sed 's/<[^>]*>//g' > ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
