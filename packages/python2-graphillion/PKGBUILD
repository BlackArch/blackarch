pkgname=python2-graphillion
_pkgname=graphillion
pkgver=1.11
pkgrel=1
pkgdesc='Fast, lightweight library for a huge number of graphs.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/Graphillion/'
license=('MIT')
depends=('python2' 'python2-future')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('6508e85e90a622985a827d42ecad61f584a17f469c57593b4bb1daadeb3e216aeae493aa92a0cfeef4e3c1919bdf789a97a6b7afd730cbbb6095205c47495df5')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

