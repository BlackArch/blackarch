# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=packetfu
pkgname=ruby-$_gemname
pkgver=1.1.11
pkgrel=2
pkgdesc=PacketFu\ is\ a\ mid-level\ packet\ manipulation\ library.
arch=(any)
url=https://github.com/todb/packetfu
license=(BSD)
depends=(ruby ruby-network_interface ruby-pcaprub)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('92acc4fa9517172aa5be5b17a670572b6c7c78d9'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.document,.gitignore,.mailmap,.travis.yml,CONTRIBUTING.md,Gemfile,INSTALL.rdoc,LICENSE.txt,README.rdoc,Rakefile,bench,examples,gem-public_cert.pem,packetfu.gemspec,setup.rb,spec,test}
}
