# See COPYING for license details.

pkgname='yuck'
pkgver=20161226
pkgrel=1
pkgdesc='A bog-standard command line option parser for C that works with only household ingredients'
url='https://github.com/hroptatyr/yuck'
# seems to work on arm as well
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
# groups=('blackarch' 'blackarch-radio')
license=("BSD")
depends=('keystone' 'capstone')
makedepends=('git')
source=('git://github.com/hroptatyr/yuck')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"

  git show -s --format="%ci" HEAD | cut -d ' ' -f 1 | tr -d '-'
}

build() {
  cd "$srcdir/$pkgname"

  autoreconf -fi
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname"

  make DESTDIR="$pkgdir/" install
}
