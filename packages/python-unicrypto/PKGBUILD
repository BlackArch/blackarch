pkgname=python-unicrypto
_pkgname=unicrypto
pkgver=0.0.9
pkgrel=1
pkgdesc='Unified interface for some crypto algos.'
arch=('any')
url='https://pypi.org/project/unicrypto/#files'
license=('MIT')
depends=('python' 'python-pycryptodomex')
makedepends=('python-setuptools')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/9e/87/42197ac46fe6a309630b1817ef42cb8a1d450fa5d4d95b48735d9e7b2631/$_pkgname-$pkgver.tar.gz")
sha512sums=('aa02dce27b2094b03a3d5c32573f862b57143dd8183cad362624a59f9378ced7c6ddcbe72b176399ea9a6ed292f98f9c7ae5db3549df4af42fafe70257ea21de')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
