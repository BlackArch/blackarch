# See COPYING for license details.

pkgname=tor-router
pkgver=1.5.2.ab272cb
pkgrel=1
arch=('any')
pkgdesc="A tool that allows you to make TOR your default gateway and send all internet connections under TOR (as a transparent proxy) for increased privacy/anonymity without extra unnecessary code."
url="https://github.com/Edu4rdSHL/tor-router.git"
source=("git+https://github.com/Edu4rdSHL/tor-router/"
        "tor-router.install")
sha256sums=('SKIP'
            'SKIP')
    
arch=('any')
license=('GPL3')
depends=('tor')

package() {
  mkdir -p "${pkgdir}/usr/bin/"
  mkdir -p "${pkgdir}/usr/lib/systemd/system"
  mkdir -p "${pkgdir}/usr/share/doc/tor-router/"
  mkdir -p "${pkgdir}/usr/share/license/tor-router"

  cp ${srcdir}/tor-router/files/tor-router ${pkgdir}/usr/bin/tor-router
  cp ${srcdir}/tor-router/files/tor-router.service ${pkgdir}/usr/lib/systemd/system/tor-router.service
  cp ${srcdir}/tor-router/README.md ${pkgdir}/usr/share/doc/tor-router/README
  cp ${srcdir}/tor-router/LICENSE ${pkgdir}/usr/share/license/tor-router/LICENSE

  chmod +x ${pkgdir}/usr/bin/tor-router

}