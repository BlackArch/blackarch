pkgname=mkbaiso
pkgver=13
pkgrel=1
pkgdesc="Tools for creating BlackArch Linux live and install iso images"
arch=('any')
url="https://github.com/BlackArch/mkbaiso"
license=('GPL')
depends=('archiso')
source=("git+git@github.com:BlackArch/mkbaiso.git")
md5sum=("SKIP")

package() {
  cd "$srcdir"
  install -Dm755 "mkbaiso" $pkgdir/usr/bin/mkbaiso
}
