pkgname=idswakeup
pkgver=1.0
pkgrel=2
groups=('blackarch' 'blackarch-recon' 'blackarch-networking' 'blackarch-scanner')
pkgdesc='A collection of tools that allows to test network intrusion detection systems.'
arch=('x86_64' 'aarch64')
url='http://www.hsc.fr/ressources/outils/idswakeup/index.html.en'
license=('custom:unknown')
depends=('libnet')
source=("http://www.hsc.fr/ressources/outils/$pkgname/download/IDSwakeup-$pkgver.tgz")
sha512sums=('1b1499860693ca83a0f0438cc6a5fe7566ea29960b9db1033b9e30570c99807ae253e0627ffcc3fbb31352f4ce6a229bad78e885d01411d2dd054e1aca769f59')

package() {
  cd "IDSwakeup-$pkgver"

  install -Dm 755 IDSwakeup "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

