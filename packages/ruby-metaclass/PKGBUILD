pkgname=ruby-metaclass
_gemname=metaclass
pkgver=0.0.1
pkgrel=1
pkgdesc='Adds a metaclass method to all Ruby objects'
arch=('any')
url='https://github.com/floehopper/metaclass'
license=('MIT')
makedepends=('ruby')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
md5sums=('563290373717a06691561ed1b5786a1b')
#noextract=($_gemname-$pkgver.gem)

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
