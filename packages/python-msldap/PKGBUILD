pkgname=python-msldap
_pkgname=msldap
pkgver=0.2.2
pkgrel=2
pkgdesc='Python library to play with MS LDAP.'
arch=('any')
url='https://pypi.org/project/msldap/#files'
license=('MIT')
depends=('python' 'python-ldap3' 'python-asn1crypto' 'python-winsspi')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/fb/1c/4e1520a3926afb476c19c1f0cadde7754ec972c6af85e26d4f26873ed357/$_pkgname-$pkgver.tar.gz")
sha512sums=('3b7312902593de8d5977a7c488a7a5b9df7c4a7c16eee28ae5aa143f03e2a0ee4e74fe7ae4d640bbb6dac4ad04dc27f371b175aaa36df4793795c460ed2d830d')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

