pkgname=python-msldap
_pkgname=msldap
pkgver=0.2.4
pkgrel=1
pkgdesc='Python library to play with MS LDAP.'
arch=('any')
url='https://pypi.org/project/msldap/#files'
license=('MIT')
depends=('python' 'python-ldap3' 'python-asn1crypto' 'python-winsspi')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/47/20/6b40dd43286d44c7f449b20079c00b889bc7ef4af1f3093b92b3edc1c40d/$_pkgname-$pkgver.tar.gz")
sha512sums=('739162ae803385a399f600ed3a5b8291f86b378e3ff1a301fb0e17ca402359214f24d74ac6fbe217aa992bcf6ff5029623b7c5120f85cb4924ad35c985ed8426')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

