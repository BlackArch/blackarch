pkgname=python-msldap
_pkgname=msldap
pkgver=0.3.27
pkgrel=1
pkgdesc='Python library to play with MS LDAP.'
arch=('any')
url='https://pypi.org/project/msldap/#files'
license=('MIT')
depends=('python' 'python-asn1crypto' 'python-winsspi' 'python-minikerberos'
         'python-aiocmd' 'python-asciitree' 'python-asysocks' 'python-winacl'
         'python-prompt_toolkit' 'python-tqdm')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/6b/2d/5616049ce736fc8238a86b65700f8ffba5999a1f23bb2d0881ff009500bd/$_pkgname-$pkgver.tar.gz")
sha512sums=('8e88fb8a0f402a0cdc5e5c5f159b1956b2ff58142bbb58d6a65f895cfa62374999a6b8c0029af7b215e45dfc1c89d62db0b980974a651589e413c578e367215b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

