pkgname=python-inquirer
pkgver=2.5.1
pkgrel=2
pkgdesc='Collection of common interactive command line user interfaces, based on Inquirer.js.'
arch=('any')
url='https://pypi.python.org/pypi/inquirer/'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/5b/e1/1b154d3f81af4e33c35270a19bd2b26d85466aa131781f5eda175af19a1c/inquirer-$pkgver-py2.py3-none-any.whl")
sha512sums=('d8ee0ed2bc1c7dc2cf58096de50ac17b1a76a7c4b0618a4b8159e225f27fe2b2a2a95534189a333a501cc947e243339d808513e0e1185b37b9ed628391f52061')

prepare() {
  cd "$srcdir/inquirer-$pkgver"

 # psst, temp fix!
 sed -i 's|long_description=read_description()|long_description=""|' setup.py
}

build() {
  cd "$srcdir/inquirer-$pkgver"

  python setup.py build
}

package() {
  cd "$srcdir/inquirer-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
