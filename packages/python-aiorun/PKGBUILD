pkgname=python-aiorun
_pkgname=aiorun
pkgver=2022.11.1
pkgrel=2
pkgdesc='Boilerplate for asyncio applications.'
arch=('any')
url='https://pypi.org/project/aiorun/#files'
license=('Apache')
depends=('python')
makedepends=('git' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('127ca21481bb997d3d46c41620b570a1dd523e29e32bc537c1d38771816856a12183f7d0e45c85427c516aa1624517899da5f02afc976bef1443b814ea1d8f37')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

