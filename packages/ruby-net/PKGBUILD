# See COPYING for license details.
pkgname='ruby-net'
_gemname='net'
pkgver='0.3.3'
pkgrel=3
pkgdesc="An API Client for social networks"
arch=('any')
url='https://github.com/Fullscreen/net'
license=("MIT")
depends=('ruby' 'ruby-activesupport')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('0709a18be254948f0ce016b2946edb030e887c3a' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/MIT-LICENSE" "$pkgdir/usr/share/licenses/$pkgname/MIT-LICENSE"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.rspec,.ruby-version,CHANGELOG.md,Gemfile,MIT-LICENSE,README.md,Rakefile,net.gemspec,spec}
}
