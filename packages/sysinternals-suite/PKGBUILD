# TODO: make package function

pkgname=sysinternals-suite
pkgver=latest
pkgrel=1
pkgdesc="Sysinternals tools suite"
url="http://sysinternals.com"
groups=('blackarch' 'blackarch-windows')
license=('sysinternals')
arch=(any)
source=(http://download.sysinternals.com/files/SysinternalsSuite.zip)
md5sums=('3ed7faf7489b1e12adb47449072d7382')

build() {
  cd "$srcdir"
  find . -type l -exec rm {} \;

  # Transform all files to lowercase
  for f in *; do
    lc=$(echo $f | tr '[A-Z]' '[a-z]0')

    if [ ! -f $f -o -f $lc ]; then
      continue
    fi
    mv -i $f $lc
  done

  for f in *.exe *.sys; do
    install -Dm755 $f $pkgdir/opt/windows/sysinternals-suite/$f
  done

  for f in *.chm *.hlp *.txt *; do
    install -Dm644 $f $pkgdir/opt/windows/sysinternals-suite/$f
  done
}

