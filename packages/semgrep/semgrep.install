post_install() {
  set -e
  cd /usr/share/semgrep
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/semgrep --prefix=venv \
      semgrep
}

post_upgrade() {
  set -e
  cd /usr/share/semgrep
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/semgrep --prefix=venv \
      semgrep -U

  # post_install "$@"
}

post_remove() {
  rm -rf /usr/share/semgrep
}

