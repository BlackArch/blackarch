# See COPYING for license details.

pkgname=timeverter
pkgver=83.24b715e
pkgrel=1
pkgdesc='Bruteforce time-based tokens and to convert several time domains.'
groups=('blackarch' 'blackarch-cracker')
arch=('any')
url='https://github.com/D3vil0p3r/timeverter'
license=('GPL3')
depends=('python')
makedepends=('git')
source=("git+https://github.com/D3vil0p3r/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname
  mkdir -p "$pkgdir/usr/share/$pkgname/src"
  mkdir -p "$pkgdir/usr/bin"
  install -Dm 755 -t "$pkgdir/usr/share/$pkgname/" $pkgname.py
  install -Dm 755 -t "$pkgdir/usr/share/$pkgname/src/" src/core.py src/parser.py src/printer.py src/time.py src/util.py

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
cd /usr/share/$pkgname
exec ./$pkgname.py "\$@"
EOF

  chmod a+x "$pkgdir/usr/bin/$pkgname"
}
