pkgname=loki
pkgver=0.2.7
pkgrel=1
pkgdesc="Python based framework implementing many packet generation and attack modules for Layer 2 and 3 protocols"
arch=('i686' 'x86_64')
url="http://c0decafe.de/loki.html"
license=('BSD')
depends=('python2' 'pygtk' 'python2-ipy' 'dpkt-svn' 'pylibpcap' 'libdnet' 'python2-dpkt' 'libglade' 'autoconf' 'automake')
source=("http://c0decafe.de/${pkgname}/${pkgname}-${pkgver}.tar.gz")
options=(!emptydirs)
md5sums=('31e849b6bb1d43444ecab972ef13e7db')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  sed -i 's|#!/usr/bin/env python|#!/usr/bin/env python2|' ${srcdir}/${pkgname}-${pkgver}/src/loki.py
  grep -rl 'python-config' ${srcdir}/${pkgname}-${pkgver}/ | xargs sed -i 's|python-config|python2-config|g' 
  aclocal && automake --add-missing && autoconf 
  ./configure --prefix=/usr PYTHON=/usr/bin/python2 
  make 
}

package() {
  install -d ${pkgdir}/usr/bin 
  install -d ${pkgdir}/usr/share/${pkgname} 
  install -d ${pkgdir}/usr/share/licenses/${pkgname} 

  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}/" install 
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/ 
  install -Dm644 AUTHORS ${pkgdir}/usr/share/licenses/${pkgname}/ 
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/ 

  for doc in ChangeLog README REQUIREMENTS; do
    install -Dm644 ${doc} ${pkgdir}/usr/share/${pkgname}/${doc} 
  done
}
