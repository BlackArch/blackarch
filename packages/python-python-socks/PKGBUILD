pkgname=python-python-socks
_pkgname=python-socks
pkgver=2.4.2
pkgrel=1
pkgdesc='Core proxy (SOCKS4, SOCKS5, HTTP tunneling) functionality for Python.'
url='https://pypi.org/project/python-socks/#files'
arch=('any')
license=('Apache')
depends=('python' 'python-asyncio' 'python-trio' 'python-curio')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('e4fdbca8794020533b1db8a735b04d95ba0161927dc49d4f58d7be1f2274e03bc479eaac4c02bcc3bb48e77f96ca4e3b130dea24ce5b147743d5f1b80cae6629')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

