pkgname=ruby-minitest
_gemname=minitest
pkgver=5.0.8
pkgrel=2
pkgdesc="Provides a complete suite of testing facilities supporting TDD, BDD, mocking and benchmarking."
arch=(any)
url="https://github.com/seattlerb/minitest"
license=("MIT")
depends=('ruby')
makedepends=('rubygems')
source=(http://gems.rubyforge.org/gems/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('847245c0cad1752efffd9e71c10b10ee')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
