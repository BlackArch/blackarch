# See COPYING for license details.
_gemname=minitest
pkgname=ruby-$_gemname
pkgver=5.10.1
pkgrel=2
pkgdesc=minitest\ provides\ a\ complete\ suite\ of\ testing\ facilities\ supporting\ TDD,\ BDD,\ mocking,\ and\ benchmarking
arch=(any)
url=https://github.com/seattlerb/minitest
license=(MIT)
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('b051ec10148076aa85f813b5e10e9e629de187d7'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.autotest,History.rdoc,Manifest.txt,README.rdoc,Rakefile,design_rationale.rb,test}
}
