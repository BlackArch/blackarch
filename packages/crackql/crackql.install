post_install() {
  set -e
  cd /usr/share/crackql
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/crackql --prefix=venv \
      -r requirements.txt
    pip install -e .
}

post_upgrade() {
  set -e
  cd /usr/share/crackql
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/crackql --prefix=venv \
      -r requirements.txt -U
    pip install -e .
}

post_remove() {
  rm -rf /usr/share/crackql
}

