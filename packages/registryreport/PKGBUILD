pkgname='registryreport'
pkgver=1.5.1
pkgrel=1
pkgdesc='Windows registry forensic analysis tool.'
groups=('blackarch' 'blackarch-windows' 'blackarch-forensic')
arch=('any')
makedepends=('p7zip' 'curl')
url='https://www.gaijin.at/dlregreport.php'

pkgver() {
  ver=$(curl -H 'User-Agent: Mozilla' https://www.gaijin.at/dlregreport.php | grep -P 'download_value' | grep -m1 -o -P '\d+\.\d+\.\d+')

  echo "${ver}"
}

package() {
  targetDir="$pkgdir/usr/share/windows/registryreport/"

  mkdir -p "${targetDir}"

  cd "${targetDir}"

  curl -H 'User-Agent: Mozilla' 'https://www.gaijin.at/downlo4d/regreport.7z' -o './r.7z'

  7z e './r.7z'

  rm -rf './r.7z'
}
