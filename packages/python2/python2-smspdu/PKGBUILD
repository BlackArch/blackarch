pkgname=python2-smspdu
_pkgname=smspdu
pkgver=1.0
pkgrel=3
pkgdesc='SMS PDU encoding and decoding, including GSM-0338 character set.'
arch=('any')
url='https://pypi.org/project/smspdu/#files'
license=('BSD')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/d4/ef/f632a98655bfe6ada9eca406c4980fe1ca23f925efd93ab33cd57cd16994/$_pkgname-$pkgver.tar.gz")
sha512sums=('c6971a6266f3f4ecf1c82ed5b0482350332fd630')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

