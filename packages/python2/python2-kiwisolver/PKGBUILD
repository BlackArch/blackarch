pkgname=python2-kiwisolver
_pkgname=kiwisolver
pkgver=1.1.0
pkgrel=4
pkgdesc='A fast implementation of the Cassowary constraint solver.'
url='https://pypi.org/project/kiwisolver/#files'
arch=('x86_64' 'aarch64')
license=('BSD')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/16/e7/df58eb8868d183223692d2a62529a594f6414964a3ae93548467b146a24d/$_pkgname-$pkgver.tar.gz")
sha512sums=('651614fe10ae857ac7fc4f72f6d6029788cc176380e8d598edbad141c5a772f33dd0e98a82e7e6125e8cd14197d728a1678f2f7f10c0b1b72723c9bc75d8ba79')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

