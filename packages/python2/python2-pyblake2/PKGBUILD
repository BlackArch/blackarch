pkgname=python2-pyblake2
_pkgname=pyblake2
pkgver=1.1.2
pkgrel=4
pkgdesc='BLAKE2 hash function extension module.'
url='https://pypi.org/project/pyblake2/#files'
arch=('x86_64' 'aarch64')
license=('custom:unknown')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/a6/ea/559658f48713567276cabe1344a9ef918adcb34a9da417dbf0a2f7477d8e/$_pkgname-$pkgver.tar.gz")
sha512sums=('26297d788208a80c8102602135332d5ee1424711d9c693828af232b5546301c5d144680367a954d8d9765998a23b82046b157b0072fdc63305ff0088feb16e55')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

