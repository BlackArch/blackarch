pkgname=python2-arrow
_pkgname=arrow
pkgver=0.15.4
pkgrel=1
pkgdesc='Better dates and times for Python.'
arch=('any')
url='https://github.com/crsmithdev/arrow'
license=('APACHE')
depends=('python2-dateutil')
makedepends=('git' 'python2-setuptools')
source=("https://files.pythonhosted.org/packages/a2/58/fd486f60594fe51afd1d2f2f0e8a80832d5b3d66c100caef24dadcdc95d7/$_pkgname-$pkgver.tar.gz")
sha512sums=('905cead77a9a75f9511551aff9923321015d4e1615ea44317333dddbe28837932458a46d5237eacf0566e239225a4aabdd1d419ca294c648c8401bf5d8940383')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

