pkgname=python2-clint
_pkgname=clint
pkgver=0.5.1
pkgrel=9
pkgdesc='Python Command Line Interface Tools.'
url='https://pypi.org/project/clint/#files'
arch=('any')
license=('ISC')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/3d/b4/41ecb1516f1ba728f39ee7062b9dac1352d39823f513bb6f9e8aeb86e26d/$_pkgname-$pkgver.tar.gz")
sha512sums=('4462969afcc0c6119afdd1ddae1984d06f150dd6ec660c51b42e3120196cdd694e5050b5b8575688863431e92d8ae80e46849aa5f6dc3474eb784312f3573266')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

