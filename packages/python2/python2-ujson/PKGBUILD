pkgname=python2-ujson
_pkgname=ujson
pkgver=1.35
pkgrel=1
pkgdesc='Ultra fast JSON encoder and decoder for Python.'
url='https://pypi.org/project/ujson/#files'
arch=('x86_64' 'aarch64')
license=('BSD')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/16/c4/79f3409bc710559015464e5f49b9879430d8f87498ecdc335899732e5377/$_pkgname-$pkgver.tar.gz")
sha512sums=('931d8f574fc4920c9ded48369774666060e951f40982606ce9f1d9de3420004042af7d797075a54d92a2b25c4f313572a5e1a30f3bc8ce387ef8f3881193eee7')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1
}

