pkgname=python2-rsa
_pkgname=rsa
pkgver=4.0
pkgrel=4
pkgdesc='Pure-Python RSA implementation.'
url='https://pypi.org/project/rsa/#files'
arch=('any')
license=('BSD')
depends=('python2' 'python2-pyasn1')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/cb/d0/8f99b91432a60ca4b1cd478fd0bdf28c1901c58e3a9f14f4ba3dba86b57f/$_pkgname-$pkgver.tar.gz")
sha512sums=('e11106741cc4275246c986d39b3f028b5a4df6fbffdd08a78072ac3d3a9a7ade7a39789c504a2705f54d858a9bdbf03981251f32f9c45baba71e4a986e14b24e')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  for i in "$pkgdir/usr/bin/"*; do
    mv $i "${i}2"
  done
}

