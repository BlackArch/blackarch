pkgname=python2-botocore
_pkgname=botocore
pkgver=1.13.19
pkgrel=1
pkgdesc='Low-level, data-driven core of boto 3.'
url='https://pypi.org/project/botocore/#files'
arch=('any')
license=('Apache')
depends=('python2' 'python2-urllib3' 'python2-dateutil' 'python2-jmespath'
         'python2-docutils')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/ba/50/4ab803b034f92a3990cea7f20f64039f16b37b830987c247882832bcb523/$_pkgname-$pkgver.tar.gz")
        'setup.py.patch')
sha512sums=('86a1f6e5cd5a5f13b9ae2ceb1f113a136604b97888dd71775d7f6627081fa3704acb8f64143c274839658431f1196f2f35f13b3e2bc6d6ddb916cb5693881c5b')
            '42e458fd81149780171c4e8b17b0569fa57fa30f645b5775ad895e2e3b13e8d1e8df629c70cc609622335e8655eb712d904c57271dce6dc4e8c35ecb0f3c3d7c')

prepare() {
  patch -p1 < setup.py.patch
}

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

