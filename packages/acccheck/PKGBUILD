pkgname=acccheck
pkgver=0.2.1
pkgrel=1
pkgdesc="A password dictionary attack tool that targets windows authentication via the SMB protocol."
url='http://labs.portcullis.co.uk/tools/acccheck/'
arch=('any')
license=('GPL2')
depends=('perl' 'smbclient')
source=("http://labs.portcullis.co.uk/download/acccheck-0-2-1.tar.gz")
md5sums=('ad14f58e04bc683fce5f72ef3cdb745d')

package() {
  cd "$srcdir/$pkgname-${pkgver//./-}"

  # Base directories.
  install -dm755 "$pkgdir/usr/share/licenses/acccheck"
  install -dm755 "$pkgdir/usr/bin/"

  # Docs.
  install -m644 COPYING.GPL "$pkgdir/usr/share/licenses/acccheck"
  install -m644 README.TXT "$pkgdir/usr/share/licenses/acccheck"

  # Bin.
  install -m755 acccheck.pl "$pkgdir/usr/bin/acccheck"
}
