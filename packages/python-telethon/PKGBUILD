pkgname=python-telethon
_pkgname=Telethon
_pyver=3.10
pkgver=1.24.0
pkgrel=1
epoch=1
pkgdesc='Full-featured Telegram client library for Python 3.'
arch=('any')
url='https://pypi.org/project/telethon/#files'
license=('MIT')
depends=('python' 'python-pyaes' 'python-rsa')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/71/75/40c3a381b230f7b5b4ea1b48df403590d54001a81e07cf819af812943822/$_pkgname-$pkgver.tar.gz")
sha512sums=('f9ce75a069d3e0139cee8543c9aaf854d29eb9ddbe0d7a20013098ebf461e33fc0f799cdec8ba61bc041ebe6549c57e1fde9985406c619214392f2f2272a7271')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python$_pyver/site-packages/tests"
}

