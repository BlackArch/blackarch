pkgname=python-telethon
_pkgname=Telethon
pkgver=0.18.3
pkgrel=1
epoch=1
pkgdesc='Full-featured Telegram client library for Python 3.'
arch=('any')
url='https://pypi.org/project/telethon/#files'
license=('MIT')
depends=('python' 'python-pyaes' 'python-rsa')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/8f/c3/cdc01fc22b2691d4abdd6c064baeb22ffd81dfe01ac7f518d652b8d22a32/$_pkgname-$pkgver.tar.gz")
sha512sums=('fa2e6c7877dc87bea0a0282738f613876f94388385f0405ae61d889529277743c35ee02f022c6e02b627256d17b711ced8965266b3f1b6f389788d02e4f6294e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

