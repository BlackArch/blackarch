pkgname=python2-bacpypes
pkgver=0.17.5
pkgrel=2
pkgdesc='Testing multiple versions of python.'
arch=('any')
url='https://pypi.python.org/pypi/bacpypes/'
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/3f/5b/5d9811008de98f49dc62a9df5bc302ebf74abda775db8353e2cd7fc1b5e5/bacpypes-$pkgver-py3-none-any.whl")
sha512sums=('52a47f52214ed9109d589c6df7ead91adf97ceef05d06590bc1e31874a536fb51fb3fe8be8c9fea6676c40621f2216eb8c1cf2623a7b5666318696515bd1cabb')

build() {
  cd "$srcdir/bacpypes-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/bacpypes-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
