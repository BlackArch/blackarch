pkgname=chromensics
pkgver=1.0
pkgrel=3
groups=('blackarch' 'blackarch-windows' 'blackarch-forensic')
pkgdesc='A Google chrome forensics tool.'
arch=('any')
url='https://sourceforge.net/projects/chromensics/'
license=('custom:unknown')
makedepends=('unzip')
source=('http://downloads.sourceforge.net/project/chromensics/Chromensics.zip')
sha512sums=('a9f412ced4b7428a73e202150a784ae75f0ae9dfcffa6c44f7e24624a2452923db011ec9550cd1552e11fab1f71c4f8e526c6aef515a3f44538179ef280bd235')

package() {
  cd "$srcdir"

  install -dm 755 "$pkgdir/opt/windows/chromensics"

  rm Chromensics.zip

  cp -a * "$pkgdir/opt/windows/chromensics"
}
