# See COPYING for license details.

pkgname=python2-pyexiftool
pkgver=29.3db3764
pkgrel=1
pkgdesc="Python library to communicate with an instance of Phil Harvey's excellent ExifTool command-line application."
arch=('any')
url='https://github.com/smarnach/pyexiftool'
license=('GPL' 'BSD')
depends=('python2')
makedepends=('python2-setuptools')
source=('git+https://github.com/smarnach/pyexiftool.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "pyexiftool"

  python2 setup.py build
}

package() {
  cd "pyexiftool"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

