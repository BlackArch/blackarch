pkgname=httpsscanner
pkgver=1.2
pkgrel=2
groups=('blackarch' 'blackarch-scanner' 'blackarch-crypto')
pkgdesc='A tool to test the strength of a SSL web server.'
arch=('any')
url='https://code.google.com/p/libre-tools/'
license=('GPL-3.0-or-later')
depends=('java-environment')
source=("https://web.archive.org/web/20220114092810/https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/libre-tools/httpsScanner.jar")

package() {
  cd "$srcdir"

  install -dm 755 "$pkgdir/usr/bin"

  install -Dm 644 httpsScanner.jar "$pkgdir/usr/share/$pkgname/httpsScanner.jar"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
exec java -jar /usr/share/$pkgname/httpsScanner.jar "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

sha256sums=('46fc00e9c1deebac173c39f7b0dd9f1f3c7045ff7dd4c762d77ddcc3b42c87c5')
