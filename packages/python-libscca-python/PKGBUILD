pkgbase=python-libscca-python
pkgname=('python2-libscca-python' 'python-libscca-python')
pkgver=20191029
pkgrel=1
pkgdesc='Library and tools to access the Windows Prefetch File (SCCA) format.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/libscca-python/#files'
license=('LGPLv3+')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/67/ef/3654b57755c6cf095bd31535ac0eed8f88cbef6bd8573521652cdf2b6fb6/$_pkgname-$pkgver.tar.gz")
sha512sums=('bfd5c8b6a0f94b4aeabddae163cf6d21922606a1f41aa472f912cf173cc0f30ea84c155fe16d5f60c5f25d2c63b76b88e1821afcd9258003f2cee842f35f6166')

package_python2-libscca-python() {
  depends=('python2' 'python2-pyaml')

  cd "libscca-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

package_python-libscca-python() {
  depends=('python' 'python-pyaml')

  cd "libscca-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

