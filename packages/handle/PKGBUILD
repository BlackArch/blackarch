pkgname=handle
pkgver=0.1
pkgrel=4
epoch=1
pkgdesc='An small application designed to analyze your system searching for global objects related to running process and display information for every found object, like tokens, semaphores, ports, files,..'
url='http://www.tarasco.org/security/handle/index.html'
groups=('blackarch' 'blackarch-windows' 'blackarch-recon')
license=('custom')
arch=('any')
source=("http://www.tarasco.org/security/$pkgname/$pkgname.zip")
sha512sums=('d986e96a007baac2cea2b62dcadb2ad09bbcd282f9c7104b57cb7f0ad0a6a79e20945ae7c3764296cb4c7d79d31bf0a702b4378e88bf88fab3e0bd816b587cd6')

package() {
  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"

  rm "$pkgname.zip"

  cp -a * "$pkgdir/usr/share/windows/$pkgname"
}

