pkgname=python-loguru
_pkgname=loguru
pkgver=0.7.3
pkgrel=1
pkgdesc='Python logging made (stupidly) simple.'
arch=('any')
url='https://pypi.org/project/loguru/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('ff2e2a8b125b9616a5e6d2ace34a8b8106fa50b206ea632b6275c756dde7ede11130b0a3fc2f288f4f42a39877f4ce3c211ade4feaf876f4947cc1a0b4e73153')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

