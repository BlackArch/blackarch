pkgname=ruby-wirb
pkgver=1.0.2
pkgrel=0
pkgdesc="Wavy IRB: Colorizes irb results."
arch=('any')
license=('MIT')
depends=('ruby' 'ruby-paint')
url='https://github.com/janlelis/wirb'
source=("http://rubygems.org/downloads/wirb-$pkgver.gem")
md5sums=('3f6ad3ffac3a90f5a015a9ee3773e57c')
noextract=("wirb-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
