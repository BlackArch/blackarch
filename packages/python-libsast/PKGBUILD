pkgname=python-libsast
_pkgname=libsast
pkgver=1.2.3
pkgrel=1
pkgdesc='A generic SAST core built on top of semgrep and regex.'
arch=('any')
url='https://pypi.org/project/libsast/#files'
license=('LGPL')
depends=('python' 'python-requests' 'python-yaml' 'python-pyaml'
         'python-semgrep')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/60/12/c829985d523fd653af5067eeab85095be5590abf73e856f97564f7fdd792/$_pkgname-$pkgver.tar.gz")
sha512sums=('2fa9dabb55140d0e4ae4fc29dbe50980915578fea6dbd3d0f4eaa0b162e3906a5bd1318151386bed3c7b1bae6c6a6acb34701319dcbb509c1ca905ecfcc4d6d6')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

