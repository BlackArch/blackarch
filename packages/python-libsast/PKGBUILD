pkgname=python-libsast
_pkgname=libsast
pkgver=1.1.8
pkgrel=1
pkgdesc='A generic SAST core built on top of semgrep and regex.'
arch=('any')
url='https://pypi.org/project/libsast/#files'
license=('LGPL')
depends=('python' 'python-requests' 'python-yaml' 'python-pyaml'
         'python-semgrep')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/cc/42/38df594f9904ef3d7713fa64d9c2ccf1f6fffa1ed3a35f16cd66221d58ed/$_pkgname-$pkgver.tar.gz")
sha512sums=('252fd80a90b329d8c2ba21890eda9b792a143e4beb47ef54daeee593e291353524f0979b0112c44bcca047f5601c0f4d229b460e13a905ec285b1957fdffc5a4')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

