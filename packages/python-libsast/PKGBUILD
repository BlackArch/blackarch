pkgname=python-libsast
_pkgname=libsast
pkgver=1.3.3
pkgrel=1
pkgdesc='A generic SAST core built on top of semgrep and regex.'
arch=('any')
url='https://pypi.org/project/libsast/#files'
license=('LGPL')
depends=('python' 'python-requests' 'python-yaml' 'python-pyaml'
         'python-semgrep')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/b3/4c/10890f33254f2d1feff5201d19e5fd185507ebe39e03e0d03fafab750cb1/$_pkgname-$pkgver.tar.gz")
sha512sums=('1510bbdbf51240f3d6e14e8a77e46eed123d91238f439ce33756d050d36198a4c6c779a65416c6c411c944fa7d634d4863dbc5cba5d051a3558a3ba860d3f4f5')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

