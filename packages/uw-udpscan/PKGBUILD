pkgname=uw-udpscan
pkgver=0.1
pkgrel=2
groups=('blackarch' 'blackarch-scanner')
pkgdesc='Multi threaded udp scanner.'
arch=('x86_64' 'aarch64')
url='http://uberwall.org/bin/download/44/UWudpscan.tar.gz'
license=('custom:unknown')
source=('http://uberwall.org/bin/download/download/44/UWudpscan.tar.gz')
sha512sums=('2420a94e30e9f1d2cf7cea132aac7b0119f4d7374e1bd88e3e3fcd466e398af83ac597f7c1892f773bbab1462bc402657ac1bc1ae18fc4d38ee654f0770f3104')

build() {
  cd "UWudpscan-xmas-release-public"

  make
}

package() {
  cd "UWudpscan-xmas-release-public"

  install -Dm 755 UWudpscan "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 README "$pkgdir/usr/share/doc/$pkgname/README"
}

