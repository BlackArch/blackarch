pkgname=ruby-pg
_gemname=pg
pkgver=0.17.0
pkgrel=2
pkgdesc="Pg is the Ruby interface to the {PostgreSQL RDBMS}[http://www.postgresql.org/]"
arch=('any')
license=('')
makedepends=('ruby')
url='https://bitbucket.org/ged/ruby-pg'
source=("http://rubygems.org/downloads/pg-$pkgver.gem")
md5sums=('a7ccfd2bd4bc7af640825983ac0c332c')
noextract=("pg-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
