# See COPYING for license details.

pkgname=simtrace2
pkgver=788.2fdcf3b
pkgrel=1
pkgdesc='Host utilities to communicate with SIMtrace2 USB Devices.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
groups=('blackarch' 'blackarch-radio')
url='https://osmocom.org/projects/simtrace2/wiki'
license=('GPL')
depends=('libosmocore' 'libusb' 'pcsclite')
makedepends=()
source=('git+git://git.osmocom.org/simtrace2.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname/host
  make
}

package() {
  cd $pkgname/host

  install -Dm 755 simtrace2-list "$pkgdir/usr/bin/simtrace2-list"
  install -Dm 755 simtrace2-remsim "$pkgdir/usr/bin/simtrace2-remsim"
  install -Dm 755 simtrace2-remsim-usb2udp "$pkgdir/usr/bin/simtrace2-remsim-usb2udp"
  install -Dm 755 simtrace2-sniff "$pkgdir/usr/bin/simtrace2-sniff"
  install -Dm 644 99-simtrace2.rules "$pkgdir/etc/udev/rules.d/99-simtrace2.rules"
}

