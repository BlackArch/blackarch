pkgbase=python-libsmdev-python
pkgname=('python2-libsmdev-python' 'python-libsmdev-python')
pkgver=20191103
pkgrel=1
pkgdesc='Python bindings module for libsmdev.'
arch=('x86_64' 'aarch64')
url='https://pypi.python.org/pypi/libsmdev-python/'
license=('LGPL3')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/a2/86/75ef27e9bfb72cb061aea7e677bff73ab82eafaf13df898a11b8e2d3d948/$_pkgname-$pkgver.tar.gz")
sha512sums=('d7771eee7d93764b06e6824c1df7a4eef5002843fb6d16d347f5c223c19bce5b6bb0f6083a2ea60635d939cf1d45630d11a5f59b735e9d02a9e83a42dc13d505')

package_python2-libsmdev-python() {
  depends=('python2')

  cd "libsmdev-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

package_python-libsmdev-python() {
  depends=('python')

  cd "libsmdev-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

