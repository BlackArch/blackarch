pkgname=golismero
pkgver='2.0'
pkgrel=1
pkgdesc="Opensource web security testing framework"
url="https://github.com/golismero/golismero"
license=('custom')
arch=('any')
depends=('python2' 'git')
source=("git+https://github.com/golismero/golismero.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/golismero"

  # We have to get the version number from the README file. It's better than nothing.
  grep -m1 'Version ' README.md | sed 's/.* //'
}

package() {
  cd "$srcdir/golismero"

  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin"

  cp -a * "$pkgdir/usr/share/$pkgname"

cat > "$pkgdir/usr/bin/golismero" << EOF
#!/bin/sh
cd /usr/share/golismero
python2 golismero.py \$@
EOF
  chmod +x "$pkgdir/usr/bin/golismero"
}
