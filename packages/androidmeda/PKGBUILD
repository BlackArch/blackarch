# See COPYING for license details.

pkgname=androidmeda
pkgver=2.0.0
pkgrel=1
pkgdesc='AI tool to deobfuscate and find any potential vulnerabilities in android apps.'
arch=('any')
groups=('blackarch' 'blackarch-mobile')
url='https://github.com/In3tinct/androidmeda'
license=('Apache-2.0')
# Only depend on python and pip to avoid 'target not found' errors
depends=('python' 'python-pip')
makedepends=('git')
source=("git+https://github.com/In3tinct/androidmeda")
sha512sums=('SKIP')

pkgver() {
  cd "$pkgname"
  ( set -o pipefail
    git describe --long --tags --abbrev=7 2>/dev/null | sed 's/\([^-]*-g\)/r\1/;s/-/./g' ||
    printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
  )
}

package() {
  cd "$pkgname"

  # Create directory structure
  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  # 1. Create a virtual environment inside the package directory
  python -m venv "$pkgdir/usr/share/$pkgname/venv"

  # 2. Install missing dependencies via pip into the venv
  # This replaces the missing 'python-google-generativeai', 'python-ollama', etc.
  "$pkgdir/usr/share/$pkgname/venv/bin/pip" install --upgrade pip
  "$pkgdir/usr/share/$pkgname/venv/bin/pip" install -r requirements.txt

  # Copy application files
  install -Dm 644 requirements.txt "$pkgdir/usr/share/$pkgname/requirements.txt"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" *.md docs/*.md 2>/dev/null || true
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  rm -rf LICENSE *.md docs/ .gitignore
  cp -a * "$pkgdir/usr/share/$pkgname/"

  # Create the executable wrapper that activates the venv
  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
source /usr/share/$pkgname/venv/bin/activate
exec python /usr/share/$pkgname/androidmeda.py "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}
