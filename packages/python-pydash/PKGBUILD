pkgname=python-pydash
_pkgname=pydash
pkgver=6.0.1
pkgrel=1
pkgdesc='TPython utility libraries for doing stuff in a functional way based on the Lo-Dash Javascript library.'
arch=('any')
url='https://pypi.org/project/pydash/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('2308fd0ef25e70969873727f6428623f99d55eb875ce91f4dff485a907fb69498c4852dc0872512cdc557aaaa65c48897395327c77b64ddc0811cb0625255b2a')

build() {
  cd $_pkgname-$pkgver

  python setup.py build
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

