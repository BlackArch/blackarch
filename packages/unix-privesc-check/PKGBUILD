pkgname=unix-privesc-check
pkgver=1.4
pkgrel=1
pkgdesc="It tries to find misconfigurations that could allow local unprivilged users to escalate privileges to other users or to access local apps (e.g. databases)."
url="http://pentestmonkey.net/tools/audit/unix-privesc-check"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=('')
source=("http://pentestmonkey.net/tools/unix-privesc-check/${pkgname}-${pkgver}.tar.gz")
md5sums=('b278797b8698160ca2d26425930ad13c')


package() {
  cd "$srcdir/${pkgname}-${pkgver}"

  install -Dm644 COPYING.GPL "$pkgdir/usr/share/licenses/$pkgname/COPYING.GPL"
  install -Dm644 CHANGELOG "$pkgdir/usr/share/$pkgname/$pkgname"
  install -Dm755 unix-privesc-check "$pkgdir/usr/bin/$pkgname"


}

