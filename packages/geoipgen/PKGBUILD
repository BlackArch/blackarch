pkgname=geoipgen
pkgver=0.4
pkgrel=12
pkgdesc='A country to IP addresses generator.'
arch=('any')
groups=('blackarch' 'blackarch-misc')
url='https://code.google.com/archive/p/geoipgen/'
license=('GPL-1.0-or-later')
depends=('ruby' 'ruby-getoptlong')
source=("https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/geoipgen/$pkgname-$pkgver.tar.gz")
sha512sums=('31eb57b73a3a3b53bb71bd2fad757135f0b3bc53de262abb4790c663d178c149ca9ee0e0da577fc008f498b887cda9332b119d1469dc070c175b356f889a7794')

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"

  for f in README CHANGELOG TODO; do
    install -Dm 644 $f "$pkgdir/usr/share/doc/$pkgname/$f"
  done
}

