pkgname=findomain
pkgver=0.1.3
pkgrel=1
pkgdesc='A tool that use Certificate Transparency logs to find subdomains.'
arch=('any')
groups=('blackarch' 'blackarch-scanner' 'blackarch-recon')
url='https://github.com/Edu4rdSHL/findomain'
license=('GPL3')
source=("https://github.com/Edu4rdSHL/$pkgname/releases/download/$pkgver/$pkgname")
options=(!strip)
sha512sums=('afc6a8462806a13a8e28e53adfd3d4d67427da912d5c4b864f24cdbc9df1f2ed270d6cf75883cc5a820d5e7fc299568e48f1aefe6ec6f353525b27d231cd891a')

package() {
  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

