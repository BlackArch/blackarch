pkgname=bettercap
pkgver=2.9
pkgrel=1
pkgdesc='The Swiss Army knife for 802.11, BLE and Ethernet networks reconnaissance and MITM attacks.'
groups=('blackarch' 'blackarch-exploitation' 'blackarch-proxy'
        'blackarch-networking' 'blackarch-spoof')
arch=('x86_64')
url='https://www.bettercap.org/'
license=('GPL-3.0')
depends=('libnetfilter_queue')
source=('https://github.com/bettercap/bettercap/releases/download/v2.9/bettercap_linux_amd64_2.9.zip')
sha256sums=('75b54b64c81465714ab3d930c959849fc5228f50a9de8cd859c6d4e8ff4c1b22')

package() {
  install -Dm644 "$srcdir/README.md" "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm644 "$srcdir/LICENSE.md" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"
  install -Dm755 "$srcdir/bettercap" "$pkgdir/usr/bin/$pkgname"
}
