pkgname=sleuthkit-java
pkgver=5964.346fd7ad
pkgrel=1
pkgdesc='Java dependencies for The Sleuth Kit.'
arch=('x86_64')
url='http://www.sleuthkit.org/sleuthkit'
license=('CPL, custom:"IBM Public Licence", GPL2')
provides=('sleuthkit')
depends=('java-runtime' 'sleuthkit')
source=('git+https://github.com/sleuthkit/sleuthkit.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir"

  bsdtar -xf data.tar.xz -C "$pkgdir"
}

