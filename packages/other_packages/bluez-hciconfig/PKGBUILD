build() {
  gcc hciconfig.c csr.c -lbluetooth -o hciconfig -DVERSION=\"$pkgver\"
}

package() {
  install -Dm 755 hciconfig "$pkgdir/usr/bin/hciconfig"
  install -Dm 755 hciconfig.1 "$pkgdir/usr/share/man/man1/hciconfig.1"
}

