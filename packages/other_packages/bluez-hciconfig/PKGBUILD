arch=('x86_64' 'aarch64')
license=('GPL2')
depends=('bluez' 'bluez-utils' 'bluez-libs' 'bluez-tools')
source=('hciconfig.1'
        'hciconfig.c'
        'textfile.c'
        'textfile.h'
        'csr.h'
        'csr.c'
        'util.h')
