pkgname=libestr
pkgver=0.1.11
pkgrel=1
pkgdesc='Essentials for string handling (and a bit more).'
url='http://libestr.adiscon.com/'
arch=('x86_64' 'aarch64')
license=('LGPL')
source=("http://libestr.adiscon.com/files/download/$pkgname-$pkgver.tar.gz")
sha512sums=('0ab98c2fa4b58cf6fee89c88602725b8b5e8e5a171a6976cdd8cff4dfc1cd3e5b747868da74fccd1bca66b9fa524ceae1c4f1ad5ee653a44ff81df6916ab5328')

build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr

  make
}
package() {
  cd "$pkgname-$pkgver"

  make install DESTDIR="$pkgdir"
}

