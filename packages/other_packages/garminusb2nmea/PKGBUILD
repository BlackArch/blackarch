pkgname=garminusb2nmea
pkgver=0.12a
pkgrel=1
pkgdesc='Garmin USB to NMEA protocol converter.'
arch=('x86_64' 'aarch64')
url='http://www.sourceforge.net/projects/garmin-gps'
license=('GPL')
source=("http://sourceforge.net/projects/garmin-gps/files/garminusb2nmea/$pkgver/$pkgname-$pkgver.tar.gz/download")
sha512sums=('26f10d8019520028f032a6e01586c2a13f3f935ab61f9206b09b8222cedcc5d78755bb273bc41af886897f896e64ffc52f63997134349f09951a65dd95c73a1f')

build() {
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

