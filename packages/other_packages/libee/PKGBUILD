pkgname=libee
pkgver=0.4.1
pkgrel=4
pkgdesc='Event expression library inspired by CEE.'
url='http://www.libee.org/'
arch=('x86_64' 'aarch64')
license=('LGPL')
depends=('libestr' 'glibc')
makedepends=()
optdepends=()
source=("http://www.libee.org/files/download/$pkgname-$pkgver.tar.gz")
sha512sums=('810cbca8077c975b045b6761de22642708b3555aa8959c17e6be3f3865612642176762ca4def09274a6291256608f11b5833bfaaa25ba0d66f71d0dee6f594d4')

build() {
  cd "$pkgname-$pkgver"

./configure --prefix=/usr --sbindir=/usr/bin

  make -j1
}

package() {
  cd "$pkgname-$pkgver"

	make install DESTDIR="$pkgdir"
}

