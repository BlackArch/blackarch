# See COPYING for license details.

pkgname='jsql'
pkgver='0.6'
pkgrel=1
groups=('blackarch' 'blackarch-scanner')
pkgdesc='A lightweight application used to find database information from a distant server.'
arch=('any')
url=("https://code.google.com/p/jsql-injection/")
license=('GPL3')
depends=('java-environment')
source=("https://github.com/ron190/jsql-injection/releases/download/alpha-v0.6.0/jsql-injection-alpha.v${pkgver}.jar")
sha1sums=('208cf392a21b10e632d3bd44f14f395aa344d1c9')

package() {
  cd "$srcdir"

  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/share/jsql"

  install -Dm644 jsql-injection-alpha.v${pkgver}.jar "$pkgdir/usr/share/jsql"

  cat > "$pkgdir/usr/bin/jsql" << EOF
#!/bin/sh
exec java -jar /usr/share/jsql/jsql-injection-alpha.v${pkgver}.jar \${@}
EOF

  chmod +x "$pkgdir/usr/bin/jsql"
}
