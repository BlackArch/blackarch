# See COPYING for license details.

pkgname=subfinder
pkgver=404.b89ce97
pkgrel=1
groups=('blackarch' 'blackarch-recon')
pkgdesc='Modular subdomain discovery tool that can discover massive amounts of valid subdomains for any target.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://github.com/Ice3man543/subfinder'
license=('MIT')
depends=('glibc' 'go')
makedepends=('go-pie' 'git')
source=('git+https://github.com/Ice3man543/subfinder')
sha512sums=('SKIP')
_url='github.com/Ice3man543/subfinder'

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  install -dm 755 src/$_url && rm -rf src/$_url && mv subfinder src/$_url &&
    cd src/$_url

  GOPATH="$srcdir" go get -d -t $_url
}

package() {
  install -dm 755 "$pkgdir/usr/bin"

  GOPATH="$srcdir" go build -v $_url

  install -Dm 755 "$srcdir/subfinder" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 src/$url/README.md \
    "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm 644 src/$url/LICENSE \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

