pkgname=python2-sflock
pkgver=0.3.10
pkgrel=1
pkgdesc='Sample staging and detonation utility.'
arch=('any')
url='https://pypi.org/project/SFlock/#files'
license=('MIT')
depends=('python2' 'python2-click' 'python2-olefile' 'python2-magic'
         'python2-cryptography' 'peepdf')
makedepends=('python2-setuptools')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/97/4f/1ae8358cab38bea9d9b4b196b66c7eb68e3db8df74b77d4adf13667c792b/SFlock-0.3.10.tar.gz")
        'setup.py.patch')
sha512sums=('055b60a23103c1662cfd62aef37a2c2bfbfc0cc2fa5982736bd58b8e4a4fb73f5450b11c3e3ef3802871e3ce11b75a1b03f309ae17191ce407b2fd6c89e24111')
            '4952e37e9f052865b02a03f93c6a2a733d35acfc33a32f9a2803e9bfdb345ab15cd3b7db959fb47c56f5ad0ebe8f506931c130adedc541da5b6a9c6f662848cd')

prepare() {
  patch -p1 < setup.py.patch
}

build() {
  cd "SFlock-$pkgver"

  python2 setup.py build
}

package() {
  cd "SFlock-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

