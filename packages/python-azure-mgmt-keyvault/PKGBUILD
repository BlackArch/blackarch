pkgname=python-azure-mgmt-keyvault
pkgver=2.1.0
pkgrel=1
pkgdesc='Microsoft Azure Key Vault Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-keyvault/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/24/c6/03d76cbd0ceb7233c749537ea4c2af187f27a100172941ddbf0bfbaa2c52/$_pkgname-$pkgver.zip")
sha512sums=('6e777bc0fefe0cbe0f7e3608f57a7da776d4223cca23ed2e480c23fed542ccbcfd55ed8d9f80d2f5f0f58cfc8606ad1be605f616386dab9a1800c2012e1282bb')

build() {
  cd "azure-mgmt-keyvault-$pkgver"

  python setup.py build
}

package() {
  cd "azure-mgmt-keyvault-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

