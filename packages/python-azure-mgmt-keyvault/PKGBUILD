pkgname=python-azure-mgmt-keyvault
_pkgname=azure-mgmt-keyvault
pkgver=8.0.0
pkgrel=2
pkgdesc='Microsoft Azure Key Vault Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-keyvault/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/69/56/678b158efbd4b4d70151a0d688e11a529a42eac3ff426813878f253f76c4/$_pkgname-$pkgver.zip")
sha512sums=('bea8064cb747ca9c2bd21162485436530d62f7cd1da2719ea221448290fe11f632f67efef515c6af6b752f18d0423f9406ce376871311b26ed58c4b50c7815e0')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

