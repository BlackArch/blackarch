pkgbase=python-tinyec
pkgname=('python2-tinyec' 'python-tinyec')
_pkgname=tinyec
pkgver=0.3.1
pkgrel=1
pkgdesc='A tiny ellliptic curve library.'
url='https://github.com/alxchk/tinyec'
arch=('any')
license=('GPL3')
makedepends=('git' 'python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/c2/00/977e7339ae19b42ae10e1219e5b13c0f54ef703e019be5d3e0b6bf5b90fe/tinyec-0.3.1.tar.gz")
sha512sums=('05075b023ec2afa961b6c348661bca03503fbd8ea8fcfeab994c35005d78ec839c64348bf46debee4c95ef4c966840be6d89374a6e4e75237e64e359a36feaec')

pkgver() {
  cd $_pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cp -a $_pkgname "$_pkgname-2"
}

build() {
  cd "$_pkgname-2"

  python2 setup.py build

  cd "$srcdir/$_pkgname"

  python setup.py build
}

package_python2-tinyec() {
  depends=('python2')

  cd "$_pkgname-2"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build

  chmod 644 \
  "$pkgdir"/usr/lib/python2.7/site-packages/tinyec-*-py2.7.egg-info/*
}

package_python-tinyec() {
  depends=('python')

  cd $_pkgname

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build

  chmod 644 \
  "$pkgdir"/usr/lib/python3.7/site-packages/tinyec-*-py3.7.egg-info/*
}

