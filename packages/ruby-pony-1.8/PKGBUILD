# See COPYING for license details.
_gemname=pony
pkgname=ruby-$_gemname-1.8
pkgver=1.8
pkgrel=2
pkgdesc=Send\ email\ in\ one\ command:\ Pony.mail\(:to\ \=\>\ \'someone@example.com\',\ :body\ \=\>\ \'hello\'\)
arch=(any)
url=http://github.com/benprew/pony
license=(MIT)
depends=(ruby ruby-mail)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('c50d8e21098d4be7d7fc420eb496771e96039f6a'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{README.rdoc,Rakefile,pony.gemspec,spec}
}
