# See COPYING for license details.
_gemname=watir-webdriver
pkgname=ruby-$_gemname-0.8
pkgver=0.8.0
pkgrel=2
pkgdesc=Watir\ on\ WebDriver
arch=(any)
url=http://github.com/watir/watir-webdriver
license=(MIT)
depends=(ruby ruby-selenium-webdriver)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('622052130899e98709a4e112cc5df49de70c0df9'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.document,.gitignore,.gitmodules,.travis.yml,CHANGES.md,Gemfile,LICENSE,README.md,Rakefile,spec,support,watir-webdriver.gemspec}
}
