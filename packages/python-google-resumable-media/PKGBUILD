pkgname=python-google-resumable-media
_pkgname=google-resumable-media
pkgver=2.0.0
pkgrel=1
pkgdesc='Utilities for Google Media Downloads and Resumable Uploads.'
arch=('any')
url='https://pypi.org/project/google-resumable-media/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/b1/ff/a6b7112fd2d6a09bb09479d2cd9c2eef8bd04cf6793e6144a3bb7434b1f9/$_pkgname-$pkgver.tar.gz")
sha512sums=('5d9bf5e0645d0e06995fb85208b6d058c51b9d112274eaa0de43283b18c7423668887a5e81a699971a6765ae55347ff13681a3c2cb0f838ec222f9842ec208c3')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

