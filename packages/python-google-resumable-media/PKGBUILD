pkgname=python-google-resumable-media
_pkgname=google-resumable-media
pkgver=2.7.0
pkgrel=1
pkgdesc='Utilities for Google Media Downloads and Resumable Uploads.'
arch=('any')
url='https://pypi.org/project/google-resumable-media/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('b5fdaabd89687a979591f09f44158aaab058354ea578301c465af85baf9188b2d8585d296a9ccba0a16861748f578f673a949ffc3a3d69c5910efb50d689dcde')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

