pkgname=python-google-resumable-media
_pkgname=google-resumable-media
pkgver=0.4.0
pkgrel=1
pkgdesc='Utilities for Google Media Downloads and Resumable Uploads.'
arch=('any')
url='https://pypi.org/project/google-resumable-media/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/20/ac/a6a7ae41f2cdafe5bb6ed1e16c5b0d256dc6114150cec55a7df74e3bfeef/$_pkgname-$pkgver.tar.gz")
sha512sums=('2fb70dc5e8485f0608a01496354275a0b587343a034ac0d2359784a3a2138fd712feb3afe36888c56ab02bafdb197679e81944905039d387dde64365d50d4fcb')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

