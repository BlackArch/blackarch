pkgname=python-google-resumable-media
_pkgname=google-resumable-media
pkgver=0.3.3
pkgrel=1
pkgdesc='Utilities for Google Media Downloads and Resumable Uploads.'
arch=('any')
url='https://pypi.org/project/google-resumable-media/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/b1/d9/ba1676012c209faa128f94f2cb7dd11fecbd364009e4f0cf26b76b7ce162/$_pkgname-$pkgver.tar.gz")
sha512sums=('95045dcb9e10b44f2792b7339c4ffac1c5462c7c0c2f8045c3880c06e3b3e1352bad198b12bbf0b5b0f9ea719a1fc67924784349fcd00ff3096cd435a364327c')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

