_pkgname=google-resumable-media
pkgver=0.4.1
pkgrel=1
pkgdesc='Utilities for Google Media Downloads and Resumable Uploads.'
arch=('any')
url='https://pypi.org/project/google-resumable-media/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c2/aa/ace464dfd3262e246bf95ec8f79661c1fe70eb2acbf8836e1f0f94a8ee84/$_pkgname-$pkgver.tar.gz")
sha512sums=('a38c5329843deb03673b142ba431413102e1dcc4d0b93ab9d0c2e675574366e3c6a1e3c5662bef35749942aa110be4ddc9d34ac381f0aa8a5e1f99acdcb20d39')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

