pkgname=python-google-resumable-media
_pkgname=google-resumable-media
pkgver=2.0.2
pkgrel=1
pkgdesc='Utilities for Google Media Downloads and Resumable Uploads.'
arch=('any')
url='https://pypi.org/project/google-resumable-media/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/1d/74/31e24e257bb48f4554f426f6a77a1cf129e215fc48f35acc17db530e55ea/$_pkgname-$pkgver.tar.gz")
sha512sums=('259139bc87062ab26dd4924a39cca539fe12b46b36fd543bc675bb1c555817ba9b570bf3449115edd9d05923ff72251c5f9bf5f4d2f9a9fdeac0fb392075c9e2')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

