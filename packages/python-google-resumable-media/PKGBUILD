pkgname=python-google-resumable-media
_pkgname=google-resumable-media
pkgver=2.1.0
pkgrel=2
pkgdesc='Utilities for Google Media Downloads and Resumable Uploads.'
arch=('any')
url='https://pypi.org/project/google-resumable-media/#files'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/b5/e8/94ce8dc454f4735d51bfa96bf15bac787e66f0eb8afcdc7b4b7855708583/$_pkgname-$pkgver.tar.gz")
sha512sums=('d05d970c2e1fb8255689417cf4bb217f8387591ba3b0ff78ddf364d654c77d78e37f5f2dbcb6ecb2b59bd036ce88a50b90d7786e3fe8a4c86d64d74d0acaf8fd')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

