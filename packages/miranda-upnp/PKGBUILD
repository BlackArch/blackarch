pkgname=miranda-upnp
pkgver=1.4
pkgrel=1
pkgdesc='A Python-based Universal Plug-N-Play client application designed to discover, query and interact with UPNP devices.'
arch=('any')
groups=('blackarch' 'blackarch-exploitation' 'blackarch-scanner')
url='https://code.google.com/archive/p/miranda-upnp/'
license=('MIT')
depends=('python')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('5b99906bb2e8406c1180ec2ed849a5c726f904783f58a0f1a28db37e72aeea33c29c8c4a209a58564144381eefe51ba356d9653ef8d4b363c07c6da4e4051422')

package() {
  cd "$pkgname-$pkgver"

  install -dm 755 "$pkgdir/usr/share/doc"

  install -Dm 755 portmapper.sh "$pkgdir/usr/bin/miranda-upnp-portmapper"
  install -m 755 miranda.py "$pkgdir/usr/bin/miranda"

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" *.md docs/changelog docs/ENUM_HOSTS docs/readme.html

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

