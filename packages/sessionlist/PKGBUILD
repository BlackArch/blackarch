# See COPYING for license details.

pkgname=sessionlist
pkgver=6.3efc3b2
pkgrel=1
groups=('blackarch' 'blackarch-networking' 'blackarch-sniffer')
pkgdesc='Sniffer that intents to sniff HTTP packets and attempts to reconstruct interesting authentication data from websites that do not employ proper secure cookie auth.'
arch=('x86_64' 'aarch64')
url='http://www.0xrage.com/'
license=('GPL3')
depends=('libpcap' 'ncurses')
makedepends=('git')
source=("git+https://github.com/iamrage/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/$pkgname/" README
  install -Dm 644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

