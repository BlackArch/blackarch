pkgname=python-neo4j
_pkgname=neo4j
pkgver=4.4.5
pkgrel=1
pkgdesc='A Neo4j driver for Python.'
arch=('any')
url='https://pypi.org/project/neo4j/'
license=('Apache2')
depends=('python' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('c86053f655b2f7b5c032924b004991252257997ad1cb0653b94b9fd71f36c4e2f065895e9562002716fd91a08bbad0624a27f83bb9850785ded0f60000ba7d91')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

