pkgname=python2-darts.util.lru
_pyname=DartsPyLRU
pkgver=0.5
pkgrel=1
pkgdesc='Library that provides a simple dictionary with LRU behaviour.'
url='https://pypi.org/project/darts.util.lru/'
arch=('any')
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://github.com/deterministic-arts/DartsPyLRU/archive/v$pkgver.tar.gz")
sha512sums=('7f25e65cf26990c7f0f65f3a16bc602a4e0418177e30e7dc38a49267eefc7feb9231e1478c7041bf6ed9b15964bb2c227c8e4ea31c6c5820e74a495c74f017ce')

build() {
  cd "$_pyname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pyname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 README.txt "${pkgdir}/usr/share/doc/$pkgname/README"
}

