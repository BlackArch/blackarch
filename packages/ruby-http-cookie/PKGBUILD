pkgname='ruby-http-cookie'
_gemname='http-cookie'
pkgver='1.0.3'
pkgrel=8
pkgdesc="A Ruby library to handle HTTP Cookies based on RFC 6265"
arch=('any')
url='https://github.com/sparklemotion/http-cookie'
license=("MIT")
depends=('ruby' 'ruby-domain_name')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('34c03e5f450d33591f47d9934dd9315577a3da57' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.travis.yml,CHANGELOG.md,Gemfile,LICENSE.txt,README.md,Rakefile,http-cookie.gemspec,test}
}
