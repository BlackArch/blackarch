pkgname=python-dataset
_pkgname=dataset
pkgver=1.5.1
pkgrel=2
pkgdesc='Toolkit for Python-based data processing.'
arch=('any')
url='https://pypi.org/project/dataset/'
license=('MIT')
depends=('python' 'python-six' 'python-sqlalchemy' 'python-alembic'
         'python-normality')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/7d/51/9bf3372927cf826fb4be4f7eaf4d9df3e18e642e88108b62647c7c938694/$_pkgname-$pkgver.tar.gz")
sha512sums=('02fc8baaae1ca659902b9e52b56a675f4095dddb896d66a3a10d50c0a78b0c0fb979296557731672656c88f448c3c78f2e7015a1fbf1a9a630959e05f308bbde')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

