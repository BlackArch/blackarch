pkgname=python-enlighten
_pkgname=enlighten
pkgver=1.12.4
pkgrel=1
pkgdesc='Enlighten Progress Bar.'
arch=('any')
url='https://pypi.org/project/enlighten/#files'
depends=('python' 'python-blessed' 'python-wcwidth' 'python-six'
         'python-prefixed')
makedepends=('python-setuptools')
license=('MIT')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('9d2bcaf648e2c1951bba43b4b70095dd01d6d069715719efbb916126bc36d7ac89af4db7db548dcd8eecabc7f580c8ab34eb4a7adeafcc3f677471ea9a372a37')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

