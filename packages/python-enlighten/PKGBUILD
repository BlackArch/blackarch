pkgname=python-enlighten
_pkgname=enlighten
pkgver=1.11.1
pkgrel=1
pkgdesc='Enlighten Progress Bar.'
arch=('any')
url='https://pypi.org/project/enlighten/#files'
depends=('python' 'python-blessed' 'python-wcwidth' 'python-six'
         'python-prefixed')
makedepends=('python-setuptools')
license=('MIT')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('a9ac7ba855f5213d11d4956f01f30811fb3f3ac35d541c2745f1622a56bc4e53324d730fa0a1421386e487832cb39ab801280e886e5419dfb918bfd44dea12ad')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

