pkgname=python-enlighten
_pkgname=enlighten
pkgver=1.11.2
pkgrel=2
pkgdesc='Enlighten Progress Bar.'
arch=('any')
url='https://pypi.org/project/enlighten/#files'
depends=('python' 'python-blessed' 'python-wcwidth' 'python-six'
         'python-prefixed')
makedepends=('python-setuptools')
license=('MIT')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('22b869bd1a37fdf179a9413d8426cdeec77650772d1c51aac8dccfeba5e5aa8d091aa393596619ad3500dc96b16332f02ef23d9b388806065985354bc382b4a4')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

