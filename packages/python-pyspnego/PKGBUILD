pkgname=python-pyspnego
_pkgname=pyspnego
pkgver=0.5.0
pkgrel=1
pkgdesc='Windows Negotiate Authentication Client and Server.'
arch=('any')
url='https://pypi.org/project/pyspnego/#files'
license=('MIT')
depends=('python' 'python-cryptography')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/53/4d/ce4c77f1efe5390fd6a0b045fdde20fdfe27ee62eb81ed51e85c88dccfe6/$_pkgname-$pkgver.tar.gz")
sha512sums=('4abb5726f9432366453069d32344b2be2169301cb0a6f96bcaac3f49f807c2ba819ad85a50f7979e920ddf3a4dcd13f6fc868e8d72c3c00cd3b9ffc97692b4c8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

