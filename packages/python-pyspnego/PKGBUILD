pkgname=python-pyspnego
_pkgname=pyspnego
pkgver=0.6.0
pkgrel=1
pkgdesc='Windows Negotiate Authentication Client and Server.'
arch=('any')
url='https://pypi.org/project/pyspnego/#files'
license=('MIT')
depends=('python' 'python-cryptography')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/d9/4f/3e4985ffd0d5956bfab25915a81d3572095feb1cb852d15bc3ff1ffc65a1/$_pkgname-$pkgver.tar.gz")
sha512sums=('65f877a2fcff4671606063223d1499be19368040a0f70d0d9363dd84c0b09a195a5e6bc7da1d3745fbf81af822f20f3d903ca2a9372898a2973ba93b6661a708')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

