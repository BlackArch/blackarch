# See COPYING for license details.

pkgname=ldeep
pkgver=1.0.89.r0.gf932f9f
pkgrel=2
epoch=1
pkgdesc='In-depth ldap enumeration utility.'
groups=('blackarch' 'blackarch-recon')
arch=('any')
url='https://github.com/franc-pentest/ldeep'
license=('MIT')
depends=('python')
makedepends=('git' 'python-setuptools' 'python-pip')
source=("git+https://github.com/franc-pentest/$pkgname.git")
sha512sums=('SKIP')
install="$pkgname.install"

pkgver() {
  cd $pkgname

  ( set -o pipefail
    git describe --long --tags --abbrev=7 2>/dev/null |
      sed 's/\([^-]*-g\)/r\1/;s/-/./g' ||
    printf "%s.%s" "$(git rev-list --count HEAD)" \
      "$(git rev-parse --short=7 HEAD)"
  )
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/bin"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" *.rst
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  rm -rf .gitignore .github .pre-commit-config.yaml

  cp -a . "$pkgdir/usr/share/$pkgname/"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
source /usr/share/$pkgname/venv/bin/activate
exec python /usr/share/$pkgname/ldeep/__main__.py "\$@"
EOF

  chmod a+x "$pkgdir/usr/bin/$pkgname"
}

