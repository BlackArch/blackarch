pkgbase=python-efilter
pkgname=('python2-efilter' 'python-efilter')
pkgver=1453815385
pkgrel=1
pkgdesc='A general-purpose destructuring and search language implemented in Python.'
arch=('any')
url='https://github.com/google/dotty'
license=('GPL')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/31/13/a8f1bfc1fa269f2e0177ad6f0da51cb5c5671fba10c1d7abdb108d23bcab/efilter-1453815385.tar.gz")
sha512sums=('d1b26ff56274d275a45320b265f29068ffbdc1790faaf170d6b1f461a6c8959225a43bc50e4e10d5cea4684224037458c3e48e6475d726af27a317755d5ef342')

package_python2-efilter() {
  depends=('python2')

  cd "dotty-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

package_python-efilter() {
  depends=('python')

  cd "dotty-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

