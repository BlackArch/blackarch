# See COPYING for license details.

pkgname=python-altair
_pkgname=altair
pkgver=6.0.0
pkgrel=1
pkgdesc='A declarative statistical visualization library for Python.'
arch=('any')
url='https://pypi.org/project/altair/#files'
license=('BSD')
depends=('python' 'python-typing_extensions' 'python-numpy' 'python-jinja'
         'python-pandas' 'python-jsonschema' 'python-packaging' 'python-toolz')
makedepends=('python-build' 'python-pip')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('06aa15ddbfeddf5eda451c6527caf68587607185e46fe74d80412784a7599713c8fccd5e3cd482d58bdc217f7e15e85c9365b539a64466bdc56b0ee448c85fec')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --outdir="$startdir/dist"
}

package() {
  cd "$_pkgname-$pkgver"

  pip install \
    --verbose \
    --disable-pip-version-check \
    --no-warn-script-location \
    --ignore-installed \
    --no-compile \
    --no-deps \
    --root="$pkgdir" \
    --prefix=/usr \
    --no-index \
    --find-links="file://$startdir/dist" \
    $_pkgname
}

