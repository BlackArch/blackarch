# Maintainer: BlackArch Team <team@blackarch.org>

pkgname=blackarch-gui-installer
pkgver=1.0.0
pkgrel=1
pkgdesc="GUI installer for BlackArch Linux tools"
arch=('any')
url="https://github.com/BlackArch/blackarch-gui-installer"
license=('GPL3')
depends=('python' 'python-qt5' 'pacman' 'sudo')
makedepends=('python-setuptools')
source=("$pkgname-$pkgver.tar.gz")
sha512sums=('SKIP')

package() {
  cd "$pkgname-$pkgver"
  python setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
} 