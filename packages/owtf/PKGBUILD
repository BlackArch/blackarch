pkgname='owtf'
pkgver='0.40'
pkgrel=1
pkgdesc="OWASP OWTF, the Offensive (Web) Testing Framework"
url="https://www.owasp.org/index.php/OWASP_OWTF"
groups=(blackarch blackarch-webapps)
license=('custom')
arch=(any)
depends=('python2' 'git' 'python2-jinja' 'python2-tornado')
source=("git+https://github.com/7a/owtf")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/$pkgname"
	grep -m1 'Version ' README | sed 's/.* //'
}

package() {
  cd "$srcdir/$pkgname"
  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin"

  cp -a * "$pkgdir/usr/share/owtf"
    
cat > "$pkgdir/usr/bin/owtf" << EOF
#!/bin/sh
cd /usr/share/owtf
python2 owtf.py \$@
EOF

chmod +x "$pkgdir/usr/bin/owtf"
}
