post_install() {
  set -e
  cd /usr/share/owtf
  python -m virtualenv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/owtf --prefix=venv \
    -r requirements/base.txt
}

post_upgrade() {
  set -e
  cd /usr/share/owtf
  python -m virtualenv venv
  source venv/bin/activate &&
    pip install --isolated --root=/usr/share/owtf --prefix=venv \
    -r requirements/base.txt -U
}

post_remove() {
  rm -rf /usr/share/owtf
}

