pkgname=python-azure-mgmt-network
pkgver=2.7.0
pkgrel=1
pkgdesc='Microsoft Azure Network Management Client Library for Python.'
arch=('any')
url='https://pypi.org/project/azure-mgmt-network/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ec/2b/1a7d777b9e503550b29e38b6fe5a79374fc9704370d9699fd79dd92023c8/azure-mgmt-network-2.7.0.zip")
sha512sums=('964306ddc8425d2c716818a20a89414d93aff51a21e0765e61cba345af177d45227e4533c1c6a2f13c1ac48fbe237d1ff0b7b057f7e873070f187d8966e0a29c')

build() {
  cd "azure-mgmt-network-$pkgver"

  python setup.py build
}

package() {
  cd "azure-mgmt-network-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

