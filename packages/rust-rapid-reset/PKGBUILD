

pkgname=rrst
pkgver=1.0.0
pkgrel=1
pkgdesc="HTTP/2 Rapid Reset PoC tool written in Rust (authored by Can Ünüvar - X-croot)"
arch=('x86_64')
url="https://github.com/X-croot/RRR-RUST-RAPID-RESET"
license=('MIT')
depends=()
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
  cd "$srcdir/RRR-RUST-RAPID-RESET-$pkgver"
  cargo build --release
}

package() {
  cd "$srcdir/RRR-RUST-RAPID-RESET-$pkgver"

  install -Dm755 "target/release/RRR-RUST-RAPID-RESET" "$pkgdir/usr/bin/rrst"

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
}
