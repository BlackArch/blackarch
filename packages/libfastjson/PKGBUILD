pkgname=libfastjson
pkgver=0.99.9
pkgrel=1
pkgdesc='A performance-focused json library for C.'
arch=('x86_64' 'aarch64')
url='https://github.com/rsyslog/libfastjson'
license=('GPL')
source=("https://github.com/rsyslog/$pkgname/archive/v$pkgver.tar.gz")
sha512sums=('d32d949465dcc94d04be6cd0e1cf78e5653bbbef7e2bd148079a5f4d69102febabd1fe8af668e344b82c62a918d1cc6c9f39a203d65cb1d81409a6d400a63d6a')

build() {
  cd "$pkgname-$pkgver"

  autoreconf -fvi

  ./configure --prefix=/usr

  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
}

