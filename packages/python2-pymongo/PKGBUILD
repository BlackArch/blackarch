pkgname=python2-pymongo
_pkgname=pymongo
pkgver=3.10.1
pkgrel=2
pkgdesc='Python driver for MongoDB.'
url='https://pypi.org/project/pymongo/#files'
arch=('x86_64' 'aarch64')
license=('Apache')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/dc/9b/6791f7219f3573bfaa2251da4d814f4fbc49f0bbb258df1e08f7d89a7b85/$_pkgname-$pkgver.tar.gz")
sha512sums=('43fb571af90583eb29bf0f52a0ae12b6499fc4c3913d57655d3b58ba58c2e16c510a86136beaf8fd9c9d43fb498aa562c0816340de6d1e716eb323450100e2db')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

