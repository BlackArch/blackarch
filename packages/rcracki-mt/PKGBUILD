pkgname=rcracki-mt
pkgver=0.7.0
groups=('blackarch' 'blackarch-password-attacks')
pkgrel=3
pkgdesc="A tool to perform rainbow table attacks on password hashes. It is intended for indexed/perfected rainbow tables, mainly generated by the distributed project www.freerainbowtables.com"
url='http://rcracki.sourceforge.net/'
depends=('openssl')
license=('GPL')
replaces=('rcracki_mt')
conflicts=('rcracki_mt')
provides=('rcracki_mt')
source=("http://downloads.sourceforge.net/project/rcracki/rcracki_mt/rcracki_mt_$pkgver/rcracki_mt_${pkgver}_src.7z")
md5sums=('7894d6bcec9e307fac27a8f9052ade80')
arch=('i686' 'x86_64')

build() {
  cd "$srcdir/rcracki_mt_${pkgver}_src/rcracki_mt"
  make
}

package() {
  cd "$srcdir/rcracki_mt_${pkgver}_src/rcracki_mt"
  make "DESTDIR=$pkgdir" install
}
