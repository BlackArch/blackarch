# See COPYING for license details.
_gemname=sqlite3
pkgname=ruby-$_gemname
pkgver=1.3.12
pkgrel=2
pkgdesc=This\ module\ allows\ Ruby\ programs\ to\ interface\ with\ the\ SQLite3\ database\ engine\ \(http://www.sqlite.org\)
arch=(armv7h armv6h i686 x86_64)
url=https://github.com/sparklemotion/sqlite3-ruby
license=(BSD-3)
depends=(ruby sqlite)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('b7fc39f340e95c1fe7eb1725f9d9f531fb3df3c8'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{API_CHANGES.rdoc,CHANGELOG.rdoc,ChangeLog.cvs,Gemfile,LICENSE,Manifest.txt,README.rdoc,Rakefile,ext,faq,setup.rb,tasks,test}
}
