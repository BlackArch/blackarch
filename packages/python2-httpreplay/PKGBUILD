pkgname=python2-httpreplay
pkgver=0.2.6
pkgrel=1
pkgdesc='Properly interpret, decrypt, and replay pcap files.'
arch=('any')
url='https://pypi.org/project/HTTPReplay/#files'
depends=('python2')
makedepends=('python2-setuptools')
license=('GPL3')
source=("https://files.pythonhosted.org/packages/48/3f/d139f812b14a6571b93f735aabad1f51d32d297f28981e90ca38d221370d/HTTPReplay-0.2.6.tar.gz")
sha512sums=('258c31834e4f03e04bc1360b867944414f9eebd01732aee64e67305e12d44ddcb6949d6f89dc70ceb5dc88ca1eee030d6e5509b1e0c4069c235beabc72554a07')

build() {
  cd "HTTPReplay-$pkgver"

  python2 setup.py build
}

package() {
  cd "HTTPReplay-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

