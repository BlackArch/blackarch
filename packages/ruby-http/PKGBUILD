# See COPYING for license details.
pkgname='ruby-http'
_gemname='http'
pkgver='2.1.0'
pkgrel=1
pkgdesc="HTTP should be easy"
arch=('any')
url='https://github.com/httprb/http'
license=("MIT")
depends=('ruby' 'ruby-addressable' 'ruby-http-cookie' 'ruby-http-form_data' 'ruby-http_parser.rb')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('0886985dfb76b6bb480f7ad6a6c139736a8da980' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.coveralls.yml,.gitignore,.rspec,.rubocop.yml,.travis.yml,.yardopts,CHANGES.md,CONTRIBUTING.md,Gemfile,Guardfile,LICENSE.txt,README.md,Rakefile,http.gemspec,logo.png,spec}
}
