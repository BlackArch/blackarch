# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=hashrat
pkgver=v1.15.r0.g0b3c057
pkgrel=1
pkgdesc='Hashing tool supporting md5, sha1, sha256, sha512, whirlpool, jh and hmac versions of these. Include recursive file hashing and other features.'
arch=('any')
groups=('blackarch' 'blackarch-cracker' 'blackarch-crypto')
url='https://github.com/ColumPaget/Hashrat'
license=('GPL')
depends=()
makedepends=('git')
source=("git+https://github.com/ColumPaget/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd "$pkgname"

  ./configure --prefix=/usr --enable-largefiles --enable-xattr
}

build() {
  cd "$pkgname"

  make
  make check
}

package() {
  cd "$pkgname"

  make DESTDIR="$pkgdir" install
}

