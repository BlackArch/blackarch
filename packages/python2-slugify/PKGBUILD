pkgname=python2-slugify
pkgver=0.0.1
pkgrel=1
pkgdesc='A Python slugify application that handles unicode.'
arch=('any')
url='https://github.com/un33k/python-slugify'
license=('BSD')
depends=('python2' 'python2-unidecode')
optdepends=('python2-text-unidecode: text-unidecode support')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/7b/89/fbb7391d777b60c82d4e1376bb181b98e75adf506b3f7ffe837eca64570b/slugify-$pkgver.tar.gz")
sha512sums=('8e6dbf2477389979a0795aafd42bfa208d4ba16bc28384ce2b8d28634900549b84d3a6a14a7b2197490dca63a95cdacfea5a5d0e99a61d45ea5d8985bba500b7')

package() {
  cd "python-slugify-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1

  mv "$pkgdir/usr/bin/slugify" "$pkgdir/usr/bin/slugify2"
}

