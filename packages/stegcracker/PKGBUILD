pkgname=python-stegcracker
pkgver=2.0.7
pkgrel=1
pkgdesc="Steganography brute-force utility to uncover hidden data inside files."
arch=(any)
url="https://github.com/Paradoxis/StegCracker"
license=(MIT)
makedepends=("python" "python-pip")
build() {
  pip install --no-deps --target="stegcracker" stegcracker==2.0.7
}
package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/stegcracker/* $pkgdir/"$sitepackages"
}
