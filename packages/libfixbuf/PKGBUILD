pkgname=libfixbuf
pkgver=2.4.1
pkgrel=1
pkgdesc='IPFIX Message Format Implementation.'
arch=('x86_64' 'aarch64')
url='http://aircert.sourceforge.net/fixbuf'
license=('GPL')
depends=('glib2')
source=("http://tools.netsa.cert.org/releases/$pkgname-$pkgver.tar.gz")
sha512sums=('01e0913675f2ec4240efd74aec41619505858a3ef13f8c9c4c460a8b17236e210a635b29fbc4ae6e48d8c3a9c8f49e8a6b7a80cf0f2c2e992dbb57d7a6e3750e')

build() {
  cd "$pkgname-$pkgver"

  if [[ "$CARCH" == "aarch64" ]]; then
    ./configure --prefix=/usr --build=arm
  else
    ./configure --prefix=/usr
  fi

  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
}

