pkgname=lans
pkgver=148.9f8ef2d
pkgrel=1
epoch=1
groups=('blackarch' 'blackarch-spoof' 'blackarch-networking')
pkgdesc='A Multithreaded asynchronous packet parsing/injecting arp spoofer.'
url='https://github.com/DanMcInerney/LANs.py'
arch=('any')
license=('GPL')
depends=('python2' 'python2-scapy' 'python2-nfqueue' 'aircrack-ng' 'python2-twisted'
         'nbtscan')
makedepends=('git')
optsdepends=('beef')
source=('git+https://github.com/DanMcInerney/LANs.py.git')
sha512sums=('SKIP')

pkgver() {
  cd LANs.py

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd LANs.py

  install -Dm 755 LANs.py "$pkgdir/usr/bin/$pkgname"
}

