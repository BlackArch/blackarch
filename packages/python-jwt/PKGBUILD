options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/ad/66/1e792aef36645b96271b4d27c2a8cc9fc7bbbaf06277a849b9e1a6360e6a/$_pkgname-$pkgver-py3-none-any.whl")
