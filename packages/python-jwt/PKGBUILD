pkgname=python-jwt
_pkgname=jwt
pkgver=1.3.0
pkgrel=1
pkgdesc='JSON Web Token library for Python 3..'
arch=('any')
url='https://pypi.org/project/jwt/#files'
license=('Apache')
depends=('python' 'python-cryptography')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/50/81/d22ba0a90fdafb9eaaeec77ff8859c23df73e655406ccf023db8b0200c66/$_pkgname-$pkgver.tar.gz")
sha512sums=('55913953318fa274e079659db7263d731460cc7fde4a66bb429e4240a9e545dc0f6e460612c5250aedba883370c9570bdfce0ddaa8d5c8a445e9f0e4c21c3d54')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

