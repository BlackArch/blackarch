pkgname=python-jwt
_pkgname=jwt
pkgver=1.1.0
pkgrel=1
pkgdesc='Random name generator.'
arch=('any')
url='https://pypi.org/project/jwt/#files'
license=('Apache')
depends=('python')
makedepends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/64/8a/fc89fb5bdac53a1e07327b0526d8a9185b4cc01dcebad4b9b3256518c6e6/$_pkgname-$pkgver.tar.gz")
sha512sums=('04a9cbf4980157ce69a8f57c5d63f4b4e52a952bb1b7135984c93470b1e8c055e7e1bf089a0ce4f2d82b89455a47a303050d915327cda8bbed397486560e7509')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

