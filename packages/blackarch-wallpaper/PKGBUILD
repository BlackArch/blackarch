pkgname='blackarch-wallpaper'
pkgver=
pkgrel=1
pkgdesc='BlackArch Linux wallpaper.'
arch=('any')
url='https://github.com/BlackArch/blackarch-wallpaper'
license=('custom')
source=('git+https://github.com/BlackArch/blackarch-wallpaper.git')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/blackarch-wallpaper"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir/blackarch-wallpaper"

  install -D -m 644 "wallpaper.png" "$pkgdir/usr/share/blackarch/wallpaper.png"
}
