pkgname=blackarch-wallpaper
pkgver=58.6f43c6a
pkgrel=1
epoch=1
pkgdesc='The default BlackArch Linux wallpaper.'
arch=('any')
url='https://github.com/BlackArch/blackarch-artwork'
license=('custom:unknown')
source=('git+https://github.com/BlackArch/blackarch-artwork.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -Dm 644 wallpaper-fog.jpg \
    "$pkgdir/usr/share/blackarch/wallpaper.jpg"
}

