# See COPYING for license details.
pkgname='ruby-rprogram'
_gemname='rprogram'
pkgver='0.3.2'
pkgrel=4
pkgdesc="A library for creating wrappers around command-line programs."
arch=('any')
url='https://github.com/postmodern/rprogram\#readme'
license=("MIT")
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('fdf67d5fa64a154caab00cd8304329016f29021e' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.document,.gemtest,.gitignore,.rspec,.yardopts,ChangeLog.md,LICENSE.txt,README.md,Rakefile,gemspec.yml,rprogram.gemspec,spec}
}
