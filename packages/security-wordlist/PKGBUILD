# See COPYING for license details.

pkgname=security-wordlist
pkgver=23.a090dff
pkgrel=1
groups=('blackarch' 'blackarch-fuzzer')
pkgdesc='A wordlist repository with human-curated and reviewed content.'
url='https://github.com/DragonJAR/Security-Wordlist'
arch=('any')
license=('GPL-3.0-or-later')
makedepends=('git')
source=("$pkgname::git+https://github.com/DragonJAR/Security-Wordlist.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  ( set -o pipefail
    git describe --long --tags --abbrev=7 2>/dev/null |
      sed 's/\([^-]*-g\)/r\1/;s/-/./g' ||
    printf "%s.%s" "$(git rev-list --count HEAD)" \
      "$(git rev-parse --short=7 HEAD)"
  )
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/$pkgname"

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md

  rm -rf README.md LICENSE

  cp -a --no-preserve=ownership * "$pkgdir/usr/share/$pkgname/"
}

