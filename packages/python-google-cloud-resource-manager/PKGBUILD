pkgname=python-google-cloud-resource-manager
_pkgname=google-cloud-resource-manager
pkgver=1.2.0
pkgrel=1
pkgdesc='Google Cloud Resource Manager API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-resource-manager/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/1e/1a/b9742483130b022f430543268de9d65229020e16a8e76c7b2dfc37b1d827/$_pkgname-$pkgver.tar.gz")
sha512sums=('b8224dba232e9aecae19fe3b88f35443617c0d95efcdf13cc7f44b858841b13f430cf18479ba87197e715db77ccddd1ede643b7297e6ab8a36f4dc94de2bd343')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  rm -rf "$pkgdir/usr/lib/python3.9/site-packages/tests/"
}

