pkgname=python-google-cloud-resource-manager
pkgver=0.28.4
pkgrel=1
pkgdesc='Google Cloud Resource Manager API client library.'
arch=('any')
url='https://pypi.org/project/google-cloud-resource-manager/#files'
license=('Apache')
depends=('python' 'python-google-cloud-core')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/6e/5a/83eecaa9f30c649facb06aa6ec6202b89ce22c7ca0e2a3f3f40b4edc4465/google-cloud-resource-manager-0.28.4.tar.gz")
sha512sums=('9a2a464919a64a4ab73311aae9e33c3249650fb056c920e396e1d6bf617318c9a3466fdcc697e046eb1bec4f254705267ce1309a322ccd1c947c775eae9cce2a')

build() {
  cd "google-cloud-resource-manager-$pkgver"

  python setup.py build
}

package() {
  cd "google-cloud-resource-manager-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

