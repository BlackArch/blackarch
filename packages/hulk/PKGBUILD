# See COPYING for license details.

pkgname=hulk
pkgver=27.ed2b11c
pkgrel=2
pkgdesc='A webserver DoS tool (Http Unbearable Load King) ported to Go with some additional features.'
groups=('blackarch' 'blackarch-dos')
arch=('x86_64' 'aarch64')
url='https://github.com/grafov/hulk'
license=('GPL3')
makedepends=('git' 'go')
source=("git+https://github.com/grafov/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

