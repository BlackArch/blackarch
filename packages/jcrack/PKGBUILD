pkgname=jcrack
pkgver=0.3.6
pkgrel=1
groups=('blackarch' 'blackarch-wireless')
pkgdesc='A utility to create dictionary files that will crack the default passwords of select wireless gateways'
arch=('any')
url='http://www.thedrahos.net/jcrack/'
license=('custom:unknown')
depends=('bash' 'crunch')
source=('http://www.thedrahos.net/jcrack/jcrack.sh')
sha512sums=('98d66989680e1a7b5f6ba54aa2db7e64dc906a357e95362b81b1b86eca998ac66b0be64367cc6f201aec508a6cb0f10665dfb53b5ae31c57a2211523943cb9a9')

pkgver() {
  grep -i 'jigver=' "$pkgname.sh" | cut -d '=' -f 2 | sed 's/v//' | tr -d '"'
}

package() {
  install -Dm 755 "$pkgname.sh" "$pkgdir/usr/bin/$pkgname"
}

