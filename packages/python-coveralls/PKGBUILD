pkgname=python-coveralls
_pkgname=coveralls
pkgver=2.1.2
pkgrel=1
pkgdesc='Show coverage stats online via coveralls.io.'
arch=('any')
url='https://github.com/coveralls-clients/coveralls-python'
license=('MIT')
depends=('python' 'python-coverage' 'python-docopt' 'python-requests')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/d1/7a/a121aefa37d33afadaecde50146ef42733e9a218f4fcb94f86523739cee6/$_pkgname-$pkgver.tar.gz")
sha512sums=('a908909a0117faa982d8305c79cde05ec0a7ecf873a45564f56f7daf6f954d2ddc59d9cc102b9baafe92d74790a41201f072f15a8119efe3e63ac5f9042735e9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

