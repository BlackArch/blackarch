package() {
  cd "$srcdir/hashcat-utils"

  mkdir -p "$pkgdir/usr/bin"

  cd bin

  for bin in *.bin
  do
    install -m755 "$bin" "$pkgdir/usr/bin/hashcat-${bin%.bin}"
  done
}
