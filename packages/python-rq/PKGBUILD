pkgname=python-rq
_pkgname=rq
pkgver=1.11.1
pkgrel=1
pkgdesc='A simple, lightweight, library for creating background jobs, and processing them.'
arch=('any')
url='https://pypi.org/project/rq/#files'
license=('BSD')
depends=('python' 'python-click' 'python-redis')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('f84f3f70131ffe84a9328bcd95b451cb23020c426e86ec1f1fe618f8a4aafcd4d5387ca22b79802b809da18729ddd6dad0b6adf264f61b2513ad40cd18936cbd')

prepare() {
  cd "$_pkgname-$pkgver"

  touch requirements.txt
}

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

