pkgname=python-rq
_pkgname=rq
pkgver=1.11.0
pkgrel=1
pkgdesc='A simple, lightweight, library for creating background jobs, and processing them.'
arch=('any')
url='https://pypi.org/project/rq/#files'
license=('BSD')
depends=('python' 'python-click' 'python-redis')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/6f/ba/02242499902b4a2fa18433ff9faf1b0e2e817078ea52d507d6783c1775cb/$_pkgname-$pkgver.tar.gz")
sha512sums=('a3aa8fe35972858769461a5d53b21f8b19de1b59df8ad89e2b9850498c59d000bfd8f983e2c6073e0665c7c95b84bc8eac8af1da1f173a7a9d3703030e0168bf')

prepare() {
  cd "$_pkgname-$pkgver"

  touch requirements.txt
}

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

