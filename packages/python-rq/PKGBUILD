pkgname=python-rq
_pkgname=rq
pkgver=1.8.1
pkgrel=1
pkgdesc='A simple, lightweight, library for creating background jobs, and processing them.'
arch=('any')
url='https://pypi.org/project/rq/#files'
license=('BSD')
depends=('python' 'python-click' 'python-redis')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/f2/8f/2a63a51079ed5903496c113b2a4bda5fe91e748d6c00d4a533f2d901b9d8/$_pkgname-$pkgver.tar.gz")
sha512sums=('192f10143670ebbc81aa1f134714083742310a0621eb050d3046ee9aa1159162220e30390b61f862c9d19de454fa8269136159036a9c7caa2c09aace9f6ee5f0')

prepare() {
  cd "$_pkgname-$pkgver"

  touch requirements.txt
}

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

