pkgname=python-libfsntfs-python
_pkgname=libfsntfs
pkgver=20210424
pkgrel=1
pkgdesc='Library and tools to access the Windows New Technology File System (NTFS).'
url='https://github.com/libyal/libfsntfs'
arch=('x86_64' 'aarch64')
license=('LGPL3')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/32/13/747097b3aa6fbe9bbf738282291a837bcffac6ec1532b9cda4f355a17388/$_pkgname-python-$pkgver.tar.gz")
sha512sums=('4d34a6fe7d167722f987f2672464bcfc98e7715c044fc327ea4f1586108b6710a437e4446faaf4968c3d332b18e2f4b2ad57530fc3cd784d4f7c7a856ea30492')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

