pkgname=python-libfsntfs-python
_pkgname=libfsntfs
pkgver=20251028
pkgrel=1
pkgdesc='Library and tools to access the Windows New Technology File System (NTFS).'
url='https://pypi.org/project/libfsntfs-python/#files'
arch=('x86_64' 'aarch64')
license=('LGPL3')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('d84330025d10f165f4587c8530568c050abb7652e58f8ddeafaac9bbd084cb7dd546b91871886dd4cb5f7ace58833178c76904d038637f1d21a2582f506b5cc8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

