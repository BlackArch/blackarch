# See COPYING for license details.

pkgname='rp'
pkgver=138.3a54a7c
pkgrel=1
groups=('blackarch' 'blackarch-exploitation' 'blackarch-binary')
pkgdesc='A full-cpp written tool that aims to find ROP sequences in PE/Elf/Mach-O x86/x64 binaries.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='https://github.com/0vercl0k/rp'
license=('GPL3')
depends=('')
makedepends=('git' 'cmake')
source=('git+https://github.com/0vercl0k/rp.git')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/rp"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/rp"

  mkdir -p build

  cd build

  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr ..

  make
}

package() {
  cd "$srcdir/rp"

  install -Dm755 -t "$pkgdir/usr/bin/" bin/rp-*
  install -Dm644 -t "$pkgdir/usr/share/doc/rp/" README.md TODO
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/rp/COPYING"
}
