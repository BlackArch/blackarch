# See COPYING for license details.
_gemname=childprocess
pkgname=ruby-$_gemname-0.5.3
pkgver=0.5.3
pkgrel=1
pkgdesc=This\ gem\ aims\ at\ being\ a\ simple\ and\ reliable\ solution\ for\ controlling\ external\ programs\ running\ in\ the\ background\ on\ any\ Ruby\ /\ OS\ combination.
arch=(any)
url=http://github.com/jarib/childprocess
license=(MIT)
depends=(ruby ruby-ffi)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('c8856f74b8d16b231cab53454fef7155c018b05c'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.document,.gitignore,.rspec,.travis.yml,Gemfile,LICENSE,README.md,Rakefile,childprocess.gemspec,spec}
}
