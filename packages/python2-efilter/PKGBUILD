pkgname=python2-efilter
pkgver=1!1.5.1
pkgrel=4
pkgdesc='A general-purpose destructuring and search language implemented in Python.'
arch=('any')
url='https://pypi.python.org/pypi/efilter/'
license=('GPL')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/78/a1/f0c6a5409e95e39dee96a0a2be6f7ad24e3fdfb807a780c8f53d06bcd39c/efilter-$pkgver-py2-none-any.whl")
sha512sums=('88214f2f9ba8fa07d8aa93ea03e3cbf960774300cdc6bde6d4c021a9205edac39de489600f8b86ab53907e421c97a36df41c44cb547d19263b5c48df5d32c9bf')

build() {
  cd "$srcdir/efilter-1-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/efilter-1-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1

  chmod 644 "$pkgdir"/usr/lib/python2.7/site-packages/efilter-1!1!1.5.1-py2.7.egg-info/PKG-INFO
}
