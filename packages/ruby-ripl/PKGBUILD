pkgname=ruby-ripl
pkgver=0.7.0
pkgrel=0
pkgdesc="ruby interactive print loop - A light, modular alternative to irb and a shell framework"
arch=('any')
license=('MIT')
depends=('ruby' 'ruby-bond>=0.4.2')
url='http://github.com/cldwalker/ripl'
source=("http://rubygems.org/downloads/ripl-$pkgver.gem")
md5sums=('17b4764a3680afdfe9315dbfdb1d4fdd')
noextract=("ripl-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
