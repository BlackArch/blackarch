pkgname=python-mac-alias
_pkgname=mac_alias
pkgver=2.2.3
pkgrel=1
pkgdesc='Generate or read binary Alias and Bookmark records from Python code.'
arch=('any')
url='https://pypi.org/project/mac_alias/2.2.3/#files'
license=('MIT')
depends=('python')
makedepends=('python-pip' 'python-build' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/mac_alias-$pkgver.tar.gz")
sha512sums=('53f6401d1bb04f76c4e2edfc741a00127f31e9abcbdff3eed0ea2c02c0553e92da2a2139adc7f62327f48f833c9bd7aca78034b8bb0eb05d508347e34b61437c')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --outdir="$startdir/dist"
}

package() {
  cd "$_pkgname-$pkgver"

  pip install \
    --verbose \
    --disable-pip-version-check \
    --no-warn-script-location \
    --ignore-installed \
    --no-compile \
    --no-deps \
    --root="$pkgdir" \
    --prefix=/usr \
    --no-index \
    --find-links="file://$startdir/dist" \
    $_pkgname
}

