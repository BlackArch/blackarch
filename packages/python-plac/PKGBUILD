pkgname=python-plac
_pkgname=plac
pkgver=1.4.0
pkgrel=1
pkgdesc='Python package that can generate command line parameters from function signatures.'
arch=('any')
url='https://pypi.org/project/plac/'
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('1223273c5c291c6925299ccdde0c517684719a8217f783ec473569e4920c13dbcd893b1f90d5fd3ad04571c32eeadd6d7b3465814923e7efeb3bfdd9ca166284')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  for s in "$pkgdir/usr/bin/"*;do
    arrS=(${s//./ })
    mv $s "${arrS[0]}"
  done
}

