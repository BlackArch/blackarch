pkgname=python2-fs
_pkgname=fs
pkgver=2.4.10
pkgrel=2
pkgdesc='Filesystem abstraction layer.'
arch=('any')
license=('BSD')
url='https://pypi.org/project/fs/#files'
depends=('python2' 'python2-appdirs' 'python2-pytz' 'python2-setuptools'
         'python2-six')
source=("https://files.pythonhosted.org/packages/a2/5a/75f34dd560ddc577ea24604b506e01ef8b1c8ac271e4c0d43c98e885433c/$_pkgname-$pkgver.tar.gz")
sha512sums=('225d372d74d5bf916ecd78d8254c54d94141cad259c10178014afae1593c472df20300525b0758604a95cb867388a3145fb7608ed73a6893ec5e489dbf93b88e')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

