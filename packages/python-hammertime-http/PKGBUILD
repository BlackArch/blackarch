pkgname=python-hammertime-http
pkgver=0.6.3
pkgrel=1
pkgdesc='An HTTP client library aiming to perform a large number of requests on a server as fast as it can take them, but without distrupting operations significantly.'
url='https://pypi.org/project/HammerTime-http/#files'
arch=('any')
license=('GPL2')
depends=('python' 'python-aiohttp' 'python-easyinject' 'python-aiodns'
         'python-simhash')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/95/96/6b0cfefeab18e7831052a1bbe2447d532a367689050dbd906f38ce8f583a/HammerTime-http-$pkgver.tar.gz")
sha512sums=('c4ed1e0c714f6f53783a27aedc832c781761fefecd75d7aed3a77d42e342e77f1f5d87940076c47452500e2fc562e83df1f3728ae78e50abbae559b2d7b18179')

build() {
  cd "HammerTime-http-$pkgver"

  python setup.py build
}

package() {
  cd "HammerTime-http-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

