pkgname=python-asyncio
pkgver=4.0.0
pkgrel=2
pkgdesc='Reference implementation of PEP 3156.'
arch=('any')
url='https://pypi.org/project/asyncio/#files'
license=('Apache2')
depends=('python')
makedepends=('python-setuptools')
source=("https://pypi.python.org/packages/source/a/asyncio/asyncio-$pkgver.tar.gz")
sha512sums=('3aca97e7c8a878abd772d3243e03447f483ab2197ace467a150c4439a5f6388c06a42868d97760c91a503129dcef148503369734b00570fd9de3598d05237939')

build() {
  cd "asyncio-$pkgver"

  python setup.py build
}

package() {
  cd "asyncio-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

