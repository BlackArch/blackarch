pkgname=klar
pkgver=2.4.0
pkgrel=1
pkgdesc='Integration of Clair and Docker Registry.'
arch=('x86_64')
groups=('blackarch' 'blackarch-exploitation' 'blackarch-misc')
url='https://github.com/optiopay/klar'
license=('MIT')
# We are using the binary release because https://github.com/optiopay/klar/issues/174
# and https://github.com/BlackArch/blackarch/issues/2989#issuecomment-774789718
source=("https://github.com/optiopay/$pkgname/releases/download/v$pkgver/$pkgname-$pkgver-linux-amd64"
        "https://raw.githubusercontent.com/optiopay/klar/master/README.md")
sha512sums=('7f6ca39fc9e11dd09ec908775a13f5c24df4eebddf566a536cf0ce6dbed33b37278a15de024577b8b5942c8dee0898daf52ee33d19ef0fc017b973fc6da5f4aa'
            'b46493d3c4547d9360d8577ad51d842c889d649c6df937c753ebc31b012e6b38618d2d4ad5bda8fb525687e7108d79901a9aa50d1b9e61195f1350ee3fec2e6e')

package() {
  install -Dm 755 "$pkgname-$pkgver-linux-amd64" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

