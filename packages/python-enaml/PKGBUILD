pkgname=python-enaml
_pkgname=enaml
pkgver=0.16.0
pkgrel=2
pkgdesc='Declarative DSL for building rich user interfaces in Python.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/enaml/#files'
license=('BSD')
depends=('python' 'python-ply' 'python-kiwisolver' 'python-atom'
         'python-qtpy')
makedepends=('python-setuptools' 'python-pip' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('362a22f8925d1b337addd4f4ddab48b22a8333781c6c45c57c5d6ec638e43e12a11c7e30cfbd2fcb8fe1e5b1413276242ab9aeccac8f92320818befd660bfe43')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package_python-enaml() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

