# See COPYING for license details.

pkgname=python-enaml
_pkgname=enaml
pkgver=0.19.0
pkgrel=1
pkgdesc='Declarative DSL for building rich user interfaces in Python.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/enaml/#files'
license=('BSD')
depends=('python' 'python-ply' 'python-kiwisolver' 'python-atom'
         'python-qtpy')
makedepends=('python-pip' 'python-build' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('cec4b11a607c5087ff00feb4f7fb07e9ade3d87cf4b2da3c988debe5f38bddd2d8288f37e1c27853ae5c113666723e150f4636017eed9a02f722730eaa48ad02')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --outdir="$startdir/dist"
}

package() {
  cd "$_pkgname-$pkgver"

  pip install \
    --verbose \
    --disable-pip-version-check \
    --no-warn-script-location \
    --ignore-installed \
    --no-compile \
    --no-deps \
    --root="$pkgdir" \
    --prefix=/usr \
    --no-index \
    --find-links="file://$startdir/dist" \
    $_pkgname
}

