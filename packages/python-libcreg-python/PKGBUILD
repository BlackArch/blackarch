pkgname=python-libcreg-python
_pkgname=libcreg-python
pkgver=20210424
pkgrel=1
pkgdesc='Python bindings module for libcreg.'
url='https://pypi.org/project/libcreg-python/'
arch=('x86_64' 'aarch64')
license=('LGPL3')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/8b/8c/7faf0dcc3c51f1efe91c08ab553282b7db38b73f047da1950940382feabd/$_pkgname-$pkgver.tar.gz")
sha512sums=('316fb2861012f4beb83ac23d7c190b935bc57afbae15feadb0c25c9be7d9e056d17a21dde48fd52dd4d25d0643141d8324ec387de738744a5f914961106a4bd8')

build() {
  cd "libcreg-$pkgver"

  python setup.py build
}

package() {
  cd "libcreg-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

