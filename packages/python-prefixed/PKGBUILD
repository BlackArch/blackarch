pkgname=python-prefixed
_pkgname=prefixed
pkgver=0.5.0
pkgrel=1
pkgdesc='Prefixed alternative numeric library.'
arch=('any')
url='https://pypi.org/project/prefixed/#files'
license=('MPL')
depends=('python')
makedepends=('python-setuptools' 'python-wheel' 'python-pip')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('5fd761063dcbe1345d676ee4068ed16777967574ae6111761d5e2d2e2d37ad1657efa5803493b052d5040559d1b635a06fa26d940447e2dc93df0d46db649703')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

