# Many thanks to anatol for quarry and gem2arch!
# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=json
pkgname=ruby-$_gemname-1
pkgver=1.8.3
pkgrel=3
pkgdesc=JSON\ Implementation\ for\ Ruby
arch=(i686 x86_64 armv6h armv7h aarch64)
url=http://flori.github.com/json
license=(Ruby)
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('dcd00a477bbb8c0c722f68f9c28bc8460a7b1d6f'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/COPYING" "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/COPYING-json-jruby" "$pkgdir/usr/share/licenses/$pkgname/COPYING-json-jruby"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{tests,.gitignore,.travis.yml,CHANGES,COPYING,COPYING-json-jruby,GPL,Gemfile,README-json-jruby.markdown,README.rdoc,Rakefile,TODO,VERSION,data,diagrams,ext,install.rb,java,json-java.gemspec,json.gemspec,json_pure.gemspec,tools}
}
