pkgname=python-python-libpcap
_pkgname=python-libpcap
pkgver=0.2.3
pkgrel=1
pkgdesc='Cython libpcap.'
url='https://pypi.org/project/python-libpcap/#files'
arch=('x86_64' 'aarch64')
license=('BSD')
depends=('python')
makedepends=('python-setuptools' 'cython')
source=("https://files.pythonhosted.org/packages/c6/bc/eb2b38ad0f519ee9b42fadc0ce6da95f4b2d775dfb3e020413957244179b/$_pkgname-$pkgver.tar.gz")
sha512sums=('6a5b50a0c780dadb138d0bb8c9b32ff001afbc1a61f080ceb10683a128a874aadd91d2a261e298e734101dc6585c42c3551e0a7ff8adeb72f1707b324b6c158f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

