pkgname=python-python-libpcap
_pkgname=python-libpcap
pkgver=0.5.1
pkgrel=3
pkgdesc='Cython libpcap.'
url='https://pypi.org/project/python-libpcap/#files'
arch=('x86_64' 'aarch64')
license=('BSD')
depends=('python' 'libpcap')
makedepends=('python-setuptools' 'cython')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('41ca4b202a1ff74b679b6d58df02604e51c984d934d8f72b39523552c2f2a032d0ec150619cb7d81f402db4375934e18ba0d861783bddd9225211b209bb703c9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

