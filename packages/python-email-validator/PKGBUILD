pkgname=python-email-validator
_pkgname=email-validator
pkgver=1.1.2
pkgrel=1
pkgdesc='A robust email syntax and deliverability validation library for Python.'
arch=('any')
url='https://github.com/JoshData/python-email-validator'
license=('CC0-1.0')
depends=('python' 'python-dnspython' 'python-idna')
makedepends=('python-setuptools')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/3c/e9/b627245ab03a843202611b57bd7329ae0f3924b067b48037379ac160bce2/$_pkgname-$pkgver.tar.gz")
sha512sums=('5039155c2b1971f6b53d2dde8478cf314f5f6c2c11d9f10c3957f39beb8f0656afa03a6dcc0bb59b33f7e290f15c1372e1694e2381ef3f76081abdc203c46fa0')

build() {
  cd $_pkgname-$pkgver

  python setup.py build
}

package() {
  cd $_pkgname-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

