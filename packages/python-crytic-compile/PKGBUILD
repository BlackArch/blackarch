pkgname=python-crytic-compile
_pkgname='crytic-compile'
pkgver=0.1.4
pkgrel=1
pkgdesc='Library to help smart contract compilation.'
arch=('any')
url='https://github.com/crytic/crytic-compile'
license=('GPL3')
depends=('python' 'python-pysha3')
makedepends=('python-setuptools')
options=(!emptydirs)
source=("https://github.com/crytic/$_pkgname/archive/$pkgver.tar.gz")
sha512sums=('79d0518cb4640a2f9bfd37d6bc364c33a936c6f2b51f7fae0e55dd1089b5bde26fc12ef1c2cca38de498c10188ad1ca86751e4546f567feba522e1f830d619ee')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

