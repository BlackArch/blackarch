pkgname=python-crytic-compile
_pkgname=crytic-compile
pkgver=0.2.3
pkgrel=1
pkgdesc='Library to help smart contract compilation.'
arch=('any')
url='https://github.com/crytic/crytic-compile'
license=('GPL3')
depends=('python' 'python-pysha3')
makedepends=('python-setuptools')
options=(!emptydirs)
source=("https://github.com/crytic/crytic-compile/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('8ab77c2557b6b3180415ae162d36891a362d2b77eca4033da383cc232b0de0c11f242a4db6d17ad96f69afcea9fc000b5efb5e24ec6a78c3b6bc12f930cf04fc')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

