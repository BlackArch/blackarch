pkgname=python-crytic-compile
_pkgname=crytic-compile
pkgver=0.1.10
pkgrel=2
pkgdesc='Library to help smart contract compilation.'
arch=('any')
url='https://github.com/crytic/crytic-compile'
license=('GPL3')
depends=('python' 'python-pysha3')
makedepends=('python-setuptools')
options=(!emptydirs)
source=("https://github.com/crytic/crytic-compile/archive/$pkgver.tar.gz")
sha512sums=('2e253c14560431dfd76674d31c9e1e3f06c2f25b856d6ac3245d0112ffbe8f77f08171c8f93acfede2c9143030b8cd1e5c54cbe55e775a7cd54e57a5cbcbe7d8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

