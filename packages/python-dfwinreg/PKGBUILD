pkgbase=python-dfwinreg
pkgname=('python2-dfwinreg' 'python-dfwinreg')
_pkgname=dfwinreg
pkgver=20201002
pkgrel=1
pkgdesc='Digital Forensics Windows Registry.'
arch=('any')
url='https://pypi.org/project/dfwinreg/#files'
license=('Apache2')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/98/f9/8f0dbe7320e7886c37d18d066e7c757b3a9eea0cb44a87fec4b44a92ffc1/$_pkgname-$pkgver.tar.gz")
sha512sums=('a9f573a87c5e51c3257781ed9b7572d10bb504b2898fbf6bfa8fa467008552de6e3e89314ff1ec1aa1b7ff61901ab072f33c43d4f3cba114cf9f47bda74327f2')

package_python2-dfwinreg() {
  depends=('python2')

  cd "$_pkgname-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
  mv $pkgdir/usr/share/doc/dfwinreg{,2}
}

package_python-dfwinreg() {
  depends=('python')

  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

