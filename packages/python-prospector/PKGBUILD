pkgname=python-prospector
_pkgname=prospector
pkgver=1.8.3
pkgrel=1
pkgdesc='Python static analysis tool.'
arch=('any')
url='https://pypi.org/project/prospector/#files'
license=('GPL2')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('c52d2cc6f594184dff96c1cd81caf6a5328cd933ec95f1b7b9183f5b093511cbb10e494747784ee383eb72bdb8170d9b73a2878bbbb855c93122585445d34eb7')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

