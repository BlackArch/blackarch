pkgname=python-prospector
_pkgname=prospector
pkgver=1.17.3
pkgrel=3
pkgdesc='Python static analysis tool.'
arch=('any')
url='https://pypi.org/project/prospector/#files'
license=('GPL2')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('6ed0d31e54bf87c5471209905771c0fd1e56dae2fe25b163e6da907854dea0877d430ada62e654ead88a5b2e8b16074cfec88df6161c64bd228b062a30918de3')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

