pkgname=python-prospector
_pkgname=prospector
pkgver=1.7.7
pkgrel=1
pkgdesc='Python static analysis tool.'
arch=('any')
url='https://pypi.org/project/prospector/#files'
license=('GPL2')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/2d/d5/fcaff3071b18926f967cf6e5ccb5e4e49f0bc8f6a82941a819d3801eaa21/$_pkgname-$pkgver.tar.gz")
sha512sums=('10f78b1aac8a5674c9ab0b45482548ab1cf983acfc848a1278967d872534cb0f272dda2503aeaf1de005e336d69adc04c6c7bf140edaf6efecd0361425c15c84')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

