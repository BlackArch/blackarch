pkgname=python-google-play-scraper
_pkgname=google-play-scraper
pkgver=0.0.3.2
pkgrel=1
pkgdesc='Provides APIs to easily crawl the Google Play Store for Python without no external dependencies.'
arch=('any')
url='https://pypi.org/project/google-play-scraper/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/d5/d6/8b8fd121a5499d29ec068d3fea7989bc5ebe3328b0c0a7614c5534c2ed75/$_pkgname-$pkgver.tar.gz")
sha512sums=('e8d385d4e4152f52883aaf9e05310e097e110f0eaa960f5133a69e8cbf80b8d854542f877ff661675cd966e74b3ffbd66a45903c5cb2414dbd33e581c750e9cf')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

