pkgname=python-google-play-scraper
_pkgname=google-play-scraper
pkgver=1.2.3
pkgrel=2
pkgdesc='Provides APIs to easily crawl the Google Play Store for Python without no external dependencies.'
arch=('any')
url='https://pypi.org/project/google-play-scraper/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('5ceef42c423661e5fbc2749739f6be55f4b3d0099c3cb1a62d914875e3c881a1c78736ae19ca881fd91cce332c8de1838e47ebcb7a75bb41d43d75510dbe81f3')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

