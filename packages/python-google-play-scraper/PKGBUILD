pkgname=python-google-play-scraper
_pkgname=google-play-scraper
pkgver=1.2.4
pkgrel=1
pkgdesc='Provides APIs to easily crawl the Google Play Store for Python without no external dependencies.'
arch=('any')
url='https://pypi.org/project/google-play-scraper/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('9f80cf46b888ad0631c06ee1895a8fbe519c5f01a4f45351544a9cc8a8ad88ef809d9427cdcc673f9797da7a1d7e7c7f62245e893e862068997f5ca96b95cb54')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

