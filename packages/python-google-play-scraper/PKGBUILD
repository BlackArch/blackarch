pkgname=python-google-play-scraper
_pkgname=google-play-scraper
pkgver=1.2.2
pkgrel=1
pkgdesc='Provides APIs to easily crawl the Google Play Store for Python without no external dependencies.'
arch=('any')
url='https://pypi.org/project/google-play-scraper/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('e21088bddc762b06cbf91327042c696091c264b2c3852e2c2eb0396d43cd17e58b19d07fda61dd90b0f878723512e0027f1326d41b1a14d65f02ce9e35ef3d43')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

