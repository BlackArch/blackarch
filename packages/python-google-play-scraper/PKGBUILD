pkgname=python-google-play-scraper
_pkgname=google-play-scraper
pkgver=1.0.1
pkgrel=1
pkgdesc='Provides APIs to easily crawl the Google Play Store for Python without no external dependencies.'
arch=('any')
url='https://pypi.org/project/google-play-scraper/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/3a/fc/612677e04ba9cefeb89b11ebca941db7c650981639cc8518320e301dec1c/$_pkgname-$pkgver.tar.gz")
sha512sums=('edb10719e2f59ab7cbcab4e651b4ce2c12d285a2a91c65eda6d783b058d34cfc9d14336ebd5311ef908f8aeaf76ddbc0373334af13f5ab1b36f6a1b40c8aa0ed')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

