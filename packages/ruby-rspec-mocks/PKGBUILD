pkgname=ruby-rspec-mocks
_gemname=rspec-mocks
pkgver=2.14.4
pkgrel=2
pkgdesc="rspec-mocks-2.14.4"
arch=('any')
license=('')
makedepends=('ruby')
url='http://github.com/rspec/rspec-mocks'
source=("http://rubygems.org/downloads/rspec-mocks-$pkgver.gem")
md5sums=('38a8052113102c5aec2b6a73358dc614')
noextract=("rspec-mocks-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
