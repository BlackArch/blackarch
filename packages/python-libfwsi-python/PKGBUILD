pkgbase=python-libfwsi-python
pkgname=('python2-libfwsi-python' 'python-libfwsi-python')
_pkgname=libfwsi
pkgver=20191006
pkgrel=1
pkgdesc='Library to access the Windows Shell Item format.'
url='https://github.com/libyal/libfwsi'
arch=('x86_64' 'aarch64')
license=('LGPLv3')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/cb/81/a3f7d0e8c61504c2cca5a15c7f6c7b52abe3d5edd5bf359445fd60a5d9cb/$_pkgname-$pkgver.tar.gz")
sha512sums=('6f2e3a389c9bf8a5d9102a35190154ee2243755d7cddc26e575318c084a655b446e2158a2218f3c2eb61167cece4bbb53252dfe27c18a76e7f8dad1bf6c2b9f2')

package_python2-libfwsi-python() {
  depends=('python2')

  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}

package_python-libfwsi-python() {
  depends=('python')

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --optimize=1
}

