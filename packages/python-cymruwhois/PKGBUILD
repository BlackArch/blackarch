pkgname='python-cymruwhois'
pkgver=30.022e16d
pkgrel=1
pkgdesc='Python client for the whois.cymru.com service'
groups=('blackarch' 'blackarch-networking' )
arch=('any')
url='https://github.com/JustinAzoff/python-cymruwhois'
depends=('python')
source=('git+https://github.com/JustinAzoff/python-cymruwhois')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir/$pkgname"
  PIP_CONFIG_FILE=/dev/null pip3 install --isolated --root="$pkgdir" --ignore-installed --no-deps ./
}
