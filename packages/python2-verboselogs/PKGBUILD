pkgname='python2-verboselogs'
pkgver='1.6'
pkgrel=1
pkgdesc="Verbose logging level for Python's logging module."
arch=('any')
url='https://pypi.python.org/pypi/verboselogs/'
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/c8/09/77d7b6dbe39ef77422baa6d826e4270212bad817b2ef14b8ec6d584b3864/verboselogs-${pkgver}.tar.gz")
sha1sums=('11cc04de7f90b6c7ed6a0396a133b4ec73a7577e')

build() {
  cd "$srcdir/verboselogs-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/verboselogs-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
