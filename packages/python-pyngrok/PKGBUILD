pkgname=python-pyngrok
_pkgname=pyngrok
pkgver=4.1.13
pkgrel=1
pkgdesc='A Python wrapper for Ngrok.'
arch=('any')
url='https://pypi.org/project/pyngrok/#files'
license=('MIT')
depends=('python' 'ngrok')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/87/93/09a09c5034fcef7cc956107a36beb4ba47924afeb70bea3626a3a4b76b77/$_pkgname-$pkgver.tar.gz")
sha512sums=('3115e0b7e2f1c965373e6b08aedf07786afe615d7f0b6cd241f822f93a9dd4b156b8c980669aed5e52f9f9847390b45c0ed2ccae3e9b60044df21ea7106c4b3f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
  mv "$pkgdir/usr/bin/ngrok" "$pkgdir/usr/bin/pyngrok"
}

