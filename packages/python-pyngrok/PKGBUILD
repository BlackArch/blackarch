pkgname=python-pyngrok
_pkgname=pyngrok
pkgver=5.0.3
pkgrel=1
pkgdesc='A Python wrapper for Ngrok.'
arch=('any')
url='https://pypi.org/project/pyngrok/#files'
license=('MIT')
depends=('python' 'ngrok')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/6f/ba/562dc75ca358bdecd8bfa4cdfbd27f750e7d6e46699d3a51bcaa7feb7f3e/$_pkgname-$pkgver.tar.gz")
sha512sums=('72daa43427bd806890a51e507011a21573b9fff100e0e0bd25b2ccb906111a6f7a0ab997d22ebaed6b6196fb458b7452854fe85940623f504f53b03aa0445872')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
  mv "$pkgdir/usr/bin/ngrok" "$pkgdir/usr/bin/pyngrok"
}

