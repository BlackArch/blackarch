pkgname=python-pyngrok
_pkgname=pyngrok
pkgver=4.1.7
pkgrel=1
pkgdesc='A Python wrapper for Ngrok.'
arch=('any')
url='https://pypi.org/project/pyngrok/#files'
license=('MIT')
depends=('python' 'ngrok')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/a1/bf/2295023b256727bb30bcec3ebb785903d6980ec166a4d0ea13a9a364e939/$_pkgname-$pkgver.tar.gz")
sha512sums=('60d62c34874af45c4dea9f3bc5b012c03517f15f8b00b86cc3f726e50984184c0a0f51c2d56e48483148b8f8bf43c18e02afa7b138bc869a8b2f1976286977f8')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
  mv "$pkgdir/usr/bin/ngrok" "$pkgdir/usr/bin/pyngrok"
}

