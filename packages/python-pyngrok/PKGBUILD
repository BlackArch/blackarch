pkgname=python-pyngrok
_pkgname=pyngrok
pkgver=5.2.1
pkgrel=2
pkgdesc='A Python wrapper for Ngrok.'
arch=('any')
url='https://pypi.org/project/pyngrok/#files'
license=('MIT')
depends=('python' 'ngrok')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('2bb40e827fa7407b307e696cf93b66b0f8fcc6806e8d0118ad6d1530aac857d254cf28a28df559e9f7d8989d1a18d9b591be1b9b472e5a0316ad2295edc26800')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
  mv "$pkgdir/usr/bin/ngrok" "$pkgdir/usr/bin/pyngrok"
}

