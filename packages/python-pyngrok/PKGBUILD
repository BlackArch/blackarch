pkgname=python-pyngrok
_pkgname=pyngrok
pkgver=5.0.6
pkgrel=1
pkgdesc='A Python wrapper for Ngrok.'
arch=('any')
url='https://pypi.org/project/pyngrok/#files'
license=('MIT')
depends=('python' 'ngrok')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c3/ef/cd780378a469a8a8a66719584aa5df72c8910ef74cda392a65e2e5d7a327/$_pkgname-$pkgver.tar.gz")
sha512sums=('cc14ed5365e23adf5afe5854500474f76c5c1207d9c01010205932875d833d3b5ff459fa9e17220d0e24bff4c2e953ad0447a492de456156e47877d8cc6dcf67')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
  mv "$pkgdir/usr/bin/ngrok" "$pkgdir/usr/bin/pyngrok"
}

