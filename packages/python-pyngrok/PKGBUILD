pkgname=python-pyngrok
_pkgname=pyngrok
pkgver=4.1.5
pkgrel=1
pkgdesc='A Python wrapper for Ngrok.'
arch=('any')
url='https://pypi.org/project/pyngrok/#files'
license=('MIT')
depends=('python' 'ngrok')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/9c/2a/8cfe54f7fa7c776366e3891bf86b9ebab8e5753bf0e4e8329c9700e90b19/$_pkgname-$pkgver.tar.gz")
sha512sums=('817b74af0bf03e010aca661342e0e9e9ac47e2164da16cf33dcc9c822ce9d7b6e9eff27757d9e89628dda9e2a87957cf708af240b3a30774de2e6b4bc0aa5f5a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
  mv "$pkgdir/usr/bin/ngrok" "$pkgdir/usr/bin/pyngrok"
}

