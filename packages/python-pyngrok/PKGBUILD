pkgname=python-pyngrok
_pkgname=pyngrok
pkgver=6.0.0
pkgrel=1
pkgdesc='A Python wrapper for Ngrok.'
arch=('any')
url='https://pypi.org/project/pyngrok/#files'
license=('MIT')
depends=('python' 'ngrok')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('0419d66bc2d53c826ad216fc0e1d9da88c458608231611f178f950112edd7c2794b39d446a503660464bfd116d84e1a41f09b7819c93f488ad16d7d64178b916')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
  mv "$pkgdir/usr/bin/ngrok" "$pkgdir/usr/bin/pyngrok"
}

