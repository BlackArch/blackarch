# See COPYING for license details.
_gemname=multipart-post
pkgname=ruby-$_gemname
pkgver=2.0.0
pkgrel=2
pkgdesc=A\ multipart\ form\ post\ accessory\ for\ Net::HTTP.
arch=(any)
url=https://github.com/nicksieger/multipart-post
license=(MIT)
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('15f1fee5557716868726ec23f389938e7957bf63'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.travis.yml,Gemfile,History.txt,Manifest.txt,README.md,Rakefile,multipart-post.gemspec,test}
}
