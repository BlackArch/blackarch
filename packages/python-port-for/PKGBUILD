pkgname=python-port-for
_pkgname=port-for
pkgver=1.0.0
pkgrel=1
pkgdesc='Utility that helps with local TCP ports managment.'
arch=('any')
url='https://github.com/kmike/port-for'
license=('MIT')
makedepends=('python-build' 'python-installer' 'python-setuptools'
             'python-wheel')
options=(!emptydirs)
source=("https://github.com/kmike/port-for/archive/refs/tags/v$pkgver.tar.gz")
sha512sums=('e002203e868d8833999f75eb62ed0aafa98c9b12c6c16c205bf12fde7c4652c11a10d9046c630ba96776603b044c0fac7a5a7e151a99a68040ef298d1f055503')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --no-isolation
}

package() {
  cd "$_pkgname-$pkgver"

  python -m installer --destdir="$pkgdir" dist/*.whl
}


