pkgname='resourcehacker'
pkgver=5.1.6
pkgrel=1
pkgdesc='Resource compiler and decompiler for WindowsÂ® applications'
groups=('blackarch' 'blackarch-windows')
arch=('any')
url='http://www.angusj.com/resourcehacker/'
depends=()

pkgver() {
	curl 'http://www.angusj.com/resourcehacker/' | grep '>Version ' | sed -r 's/.*Version ([0-9]+\.[0-9]+[^<]+).*/\1/gi'
}
package() {
	tmpFile='/tmp/resourcehacker.zip'
	targetDir="${pkgdir}/usr/share/windows/resourcehacker/"
	mkdir -p "${targetDir}"
	curl -L --output "${tmpFile}" 'http://www.angusj.com/resourcehacker/resource_hacker.zip'
	unzip -d "${targetDir}" "${tmpFile}"
	rm -rf "${tmpFile}"
}
