pkgname=blueranger
pkgver=1.1
pkgrel=1
groups=('blackarch' 'blackarch-automation' 'blackarch-bluetooth')
pkgdesc='A simple Bash script which uses Link Quality to locate Bluetooth device radios.'
url='https://www.hackfromacave.com/projects/blueranger.html'
arch=('any')
license=('GPL-2.0-or-later')
source=("https://github.com/Obsidian-Covenant/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('d85ded503162afc785173b857d276aec4c5778326fe836c6ea8804c2afd5135968714b89c015b348c5393b790de549c5d2a31a0b78390f43e8f8a7c516dcbd1f')

package() {
  cd "$pkgname-$pkgver"

  install -Dm 755 "$pkgname.sh" "$pkgdir/usr/bin/$pkgname"
}

