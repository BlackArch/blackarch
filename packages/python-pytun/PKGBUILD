pkgname=python-pytun
pkgver=1.0.1
pkgrel=2
pkgdesc='A Python module which let you create TUN/TAP device very easily.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
license=('MIT')
depends=('python2>=2.5')
makedepends=('python2-distribute')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/3c/a3/e4a2c18163b6f0e5fc02929d151d7ed6117c96e775258ece68b74105fc5d/pytun-$pkgver.tar.gz")
sha512sums=('9d8eef27ca2ff19528490baab753f45c5230f796b8bba5d969cbf199904b3e181eb179196e2b1a820f6b69c8d0dbd9434a3826776ea23c6ff3bf6e05cb4ec66c')

package() {
  cd "$srcdir/python-pytun-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr --optimize=1
}
