pkgname=python2-pytesseract
pkgver=0.2.7
pkgrel=1
pkgdesc="Python-tesseract is a python wrapper for Google's Tesseract-OCR."
arch=('any')
url='https://pypi.org/project/pytesseract/'
license=('GPL3')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/1d/40/3f72d13d0f347bf688ff189b6d6bb369125c0bed9ed4b15e7f20c65123a8/pytesseract-0.2.7.tar.gz")
sha512sums=('a2e115d77d1a5da8b0688a286f2cf463644f7d9de577303903521c65b7427a83571f2686bf87b4b7fb0705ac97864883726f44a256213a10d2576f019a60d08d')

build() {
  cd "pytesseract-$pkgver"

  python2 setup.py build
}

package() {
  cd "pytesseract-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

