# See COPYING for license details.

pkgname=zxing
pkgver=3487.a81dda90
pkgrel=1
pkgdesc='Multi-format 1D/2D barcode image processing library (C++ version).'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://code.google.com/p/zxing/'
license=('Apache')
makedepends=('scons')
depends=('imagemagick')
source=('git+https://github.com/zxing/zxing.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$pkgname-$pkgname/cpp"

  scons DEBUG=0 -j1 zxing
}

package() {
  cd "$pkgname-$pkgname/cpp"

  install -Dm 755 build/zxing "$pkgdir/usr/bin/$pkgname"

  cd ..

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" CHANGES NOTICE AUTHORS
  install -Dm 644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

