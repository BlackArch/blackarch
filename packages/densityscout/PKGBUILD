# See COPYING for license details.

pkgname=densityscout
pkgver=45
pkgrel=1
pkgdesc='This tool calculates density for files of any file-system-path to finally output an accordingly descending ordered list.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-misc')
url='https://www.cert.at/en/downloads/software/software-densityscout'
license=('ISC')
source=("https://www.cert.at/media/files/downloads/software/densityscout/files/${pkgname}_build_45_linux.zip")
sha512sums=('SKIP')

package() {
  install -Dm 644 "license.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  if [ $(uname -m) == "x86_64" ]; then
    cd lin64
  elif [ $(uname -m) == "i686" ]; then
    cd lin32
  fi

  install -Dm 644 "$pkgname" "$pkgdir/usr/bin/$pkgname"  

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

