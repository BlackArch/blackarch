# Maintainer heichblatt <git@hanneseichblatt.de>
pkgname=seclists
pkgver=r283.8ef8694
pkgrel=1
pkgdesc='A collection of multiple types of lists used during security assessments.'
arch=('any')
url='https://github.com/danielmiessler/SecLists/'
license=('unknown')
groups=('blackarch-exploitation')
makedepends=('git')
provides=("${pkgname}")
source=('$pkgname::source_url')
sha512sums=('SKIP')

pkgver() {
    cd "${pkgname}"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}


package() {
    install -dm 755 "${pkgdir}/usr/share/${pkgname}"
    find "${srcdir}/${pkgname}" -maxdepth 1 | grep -v \\.git | xargs -I{} cp -r {} "${pkgdir}/usr/share/${pkgname}"
}

