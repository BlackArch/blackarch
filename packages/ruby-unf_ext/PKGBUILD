pkgname=ruby-unf_ext
_gemname=unf_ext
pkgver=0.0.9.1
pkgrel=1
pkgdesc='Unicode Normalization Form support library for CRuby.'
arch=('any')
url='https://rubygems.org/gems/unf_ext'
license=('MIT')
depends=('ruby')
makedepends=('rubygems' 'ruby-rdoc')
source=("https://rubygems.org/gems/$_gemname-$pkgver.gem")
noextract=("$_gemname-$pkgver.gem")
sha512sums=('f2d0d58dc0ed30e3e99ac75022c8ea78bf4ad51c8803009c059de087b1cd439e06a8e7ef4c1be5c75048f85afe6c301f402ed21405ff02ad36ea73209416994d')

package() {
  _gemdir="$(ruby -e 'puts Gem.default_dir')"

  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri \
      -i "$pkgdir$_gemdir" "$_gemname-$pkgver.gem"
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
      "$_gemname-$pkgver.gem"
  fi
}

