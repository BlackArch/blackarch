pkgname='sslcat'
pkgver='1.0'
pkgrel=2
pkgdesc='A simple Unix utility that reads and writes data across an SSL enable network connection.'
url='http://www.bindshell.net/tools/sslcat'
license='GPL'
groups=('blackarch' 'blackarch-misc')
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
source=('http://www.bindshell.net/tools/sslcat/sslcat.tgz')
sha1sums=('ff5acb99399cdf8627059f0c957db15409198916')

build() {
  cd "$srcdir/sslcat"

  ./configure --prefix=/usr --mandir=/usr/share/man/

  make -j1
}

package(){
  cd "$srcdir/sslcat"

  make prefix="$pkgdir/usr" mandir="$pkgdir/usr/share/man" install

}
