pkgname='ghettotooth'
pkgver='1.0'
pkgrel=2
pkgdesc="Ghettodriving for bluetooth"
url="http://www.oldskoolphreak.com/tfiles/ghettotooth.txt"
groups=('blackarch' 'blackarch-bluetooth')
license=('GPL')
depends=('perl')
