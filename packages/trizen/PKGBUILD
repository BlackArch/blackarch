pkgname='trizen'
pkgver=1.39
pkgrel=1
epoch=1
pkgdesc="Trizen AUR Package Manager: A lightweight wrapper for AUR."
groups=('blackarch' 'blackarch-misc')
arch=('any')
url="https://github.com/trizen/trizen"
license=('GPL3')
depends=('git' 'pacutils' 'perl>=5.20.0' 'perl-libwww' 'perl-term-ui'
         'pacman' 'perl-json' 'perl-data-dump' 'perl-lwp-protocol-https')
optdepends=('perl-json-xs: faster JSON deserialization'
            'perl-term-readline-gnu: better STDIN support')
source=("trizen-${pkgver}.tar.gz::https://github.com/trizen/trizen/archive/${pkgver}.tar.gz")
sha256sums=('9c8a19f532ff05f3038c850ed0d6dcf857d02642a123e58f3c3030175bfc9a1f')

package() {
  cd "trizen-$pkgver"
  install -m 755 -D trizen "$pkgdir/usr/bin/trizen"
  install -m 644 -D "zsh.completion" "$pkgdir/usr/share/zsh/site-functions/_trizen"
  install -m 644 -D "bash.completion" "$pkgdir/usr/share/bash-completion/completions/trizen"
}
