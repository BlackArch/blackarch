pkgname=python-zconfig
_pkgname=zconfig
pkgver=4.3
pkgrel=1
pkgdesc='Structured Configuration Library'
arch=('any')
url='https://github.com/zopefoundation/ZConfig'
license=('ZPL-2.1')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('daf3fdd39bd9baa8c56005e02c72f332a448969fa9d53fcfe8b629dca4d10c785af139bf481b62420561934867aa31efacdf31795fcd86fc11d416c640366f91')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

