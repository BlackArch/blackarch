# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgbase=python-bencode.py
pkgname=('python2-bencode.py' 'python-bencode.py')
pkgver=2.0.0.3
pkgrel=1
pkgdesc='Simple bencode parser.'
groups=('blackarch')
url='https://github.com/fuzeman/bencode.py'
arch=('any')
license=('custom:unknown')
makedepends=('python2-setuptools' 'python-setuptools')
source=('git+https://github.com/fuzeman/bencode.py.git')
sha512sums=('SKIP')

pkgver() {
  cd 'bencode.py'

  git describe --long | sed -r 's/-([0-9,a-g,A-G]{7}.*)//' | sed 's/-/./'
}
package_python2-bencode.py() {
  depends=('python2')
  cd 'bencode.py'

  python2 setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

package_python-bencode.py() {
  depends=('python')
  cd 'bencode.py'

  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

