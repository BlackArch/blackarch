post_install() {
  set -e
  cd /usr/share/lrod
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root="/usr/share/lrod" --prefix='venv' \
      -r requirements.txt
}

post_upgrade() {
  post_install "$@"
}

post_remove() {
  # /usr/share/lrod/venv
  rm -r /usr/share/lrod
}
