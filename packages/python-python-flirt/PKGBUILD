pkgname=python-python-flirt
_pkgname=python_flirt
_pyver=3.14
pkgver=0.9.10
pkgrel=2
pkgdesc='A Python library for parsing, compiling, and matching Fast Library Identification and Recognition Technology (FLIRT) signatures.'
arch=('x86_64')
url='https://pypi.org/project/python-flirt/#files'
license=('Apache-2.0')
depends=('python')
source=("https://files.pythonhosted.org/packages/4c/f4/8813d507df764d03cb127a94138a7c40eb8f75cf06744f4a051507a8e789/$_pkgname-$pkgver-cp${_pyver//./}-cp${_pyver//./}-manylinux_2_17_x86_64.manylinux2014_x86_64.whl")
sha512sums=('d8d7aca009309832e36d865a60c9fdf3c3658986f1ffabbac9ee53ebc059834d2a76a471f341abfc0eb673fcc6fdcd0a93c0781e1ca7f82aa7f33fb284cac3e7')

package() {
  install -Dm 755 -t "$pkgdir/usr/lib/python$_pyver/site-packages/" \
    "flirt/flirt.cpython-${_pyver//./}-x86_64-linux-gnu.so"

  cp -a "$_pkgname-$pkgver.dist-info" \
    "$pkgdir/usr/lib/python$_pyver/site-packages/"
}

