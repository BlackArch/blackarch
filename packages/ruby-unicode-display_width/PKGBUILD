# See COPYING for license details.
pkgname='ruby-unicode-display_width'
_gemname='unicode-display_width'
pkgver='1.1.3'
pkgrel=3
pkgdesc="Determines the monospace display width of a string in Ruby."
arch=('any')
url='http://github.com/janlelis/unicode-display_width'
license=("MIT")
depends=('ruby')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('ffbd2f91f7cd6660d4bb13d6114c4ca16a97d032' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/MIT-LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/MIT-LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{CHANGELOG.txt,MIT-LICENSE.txt,README.md,Rakefile,data,spec,unicode-display_width.gemspec}
}
