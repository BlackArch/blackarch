# See COPYING for license details.
pkgname='ruby-celluloid-fsm'
_gemname='celluloid-fsm'
pkgver='0.20.5'
pkgrel=3
pkgdesc="Celluloid Finite State Machines"
arch=('any')
url='https://github.com/celluloid/celluloid-fsm'
license=("MIT")
depends=('ruby' 'ruby-timers')
options=('!emptydirs')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem" )
noextract=("$_gemname-$pkgver.gem")
sha1sums=('ed6bdc42e9620db10129bf4c8a671a6607940548' )


package() {
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.env-ci,.env-dev,.gitignore,.gitmodules,.rspec,.rubocop.yml,.travis.yml,CHANGES.md,Gemfile,LICENSE.txt,README.md,Rakefile,celluloid-fsm.gemspec,tasks}
}
