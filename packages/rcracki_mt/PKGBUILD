# Contributor: Spider.007 <archPackage@spider007.net>
packager="Spider.007 <archPackage@spider007.net>"
pkgname='rcracki_mt'
pkgver=0.7.0
groups=(archtrack archtrack-password-attacks)
pkgrel=1
pkgdesc='Rcracki_mt can be used to perform a rainbow table attack on password hashes. It is intended for indexed%PKGDESC%perfected rainbow tables, mainly generated by the distributed project www.freerainbowtables.com'
url="http://rcracki.sourceforge.net/"
depends=('openssl')
license=('GPL')
source=("http://downloads.sourceforge.net/project/rcracki/rcracki_mt/rcracki_mt_$pkgver/rcracki_mt_${pkgver}_src.7z")
md5sums=('955981a46c6ced426429fd77afc9412d')
arch=('i686' 'x86_64')

build() {
  cd $srcdir/${pkgname}_${pkgver}_src/$pkgname
  make
}

package() {
  cd $srcdir/${pkgname}_${pkgver}_src/$pkgname
  make DESTDIR=$pkgdir install
}
