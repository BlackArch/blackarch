pkgname=owabf
pkgver=1.3
pkgrel=5
groups=('blackarch' 'blackarch-cracker')
pkgdesc='Outlook Web Access bruteforcer tool.'
arch=('any')
url='http://netsec.rs/70/tools.html'
license=('custom:unknown')
depends=('python2')
source=("https://raw.githubusercontent.com/dejanlevaja/owa-brute-forcer/refs/heads/master/$pkgname.py")
sha512sums=('cd0fe497e3e93022a68807746111ceab05fa8783ce911a9deb08188aa03529c8ccf50cceee1569521139db73b47c6c7ded4be2a4373c9ae85460beb7582be4f6')

prepare() {
  sed -i 's/.$//' "$pkgname.py"
  sed -i '1i\#!/usr/bin/env python2' "$pkgname.py"
}

package() {
  install -Dm 755 "$pkgname.py" "$pkgdir/usr/bin/$pkgname"
}

