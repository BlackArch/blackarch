pkgname=python-uvicorn
_pkgname=uvicorn
pkgver=0.18.2
pkgrel=1
pkgdesc='The lightning-fast ASGI server.'
arch=('any')
url='https://pypi.org/project/uvicorn/#files'
license=('BSD')
depends=('python' 'python-asgiref' 'python-click' 'python-h11'
         'python-typing-extensions')
makedepends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/c1/ec/23abd850aa173e35b0436f46a3385585b131ee0e70a55c408d89cade30a1/$_pkgname-$pkgver.tar.gz")
sha512sums=('6492dfc920fdb5633ac152f1b31a4b4ac27de822d1fea2e5b8b74ffc30ccec50621df7b96855e0366bb1c1cbf1dc061e3f99ad44142811d9f97683b8f0b57076')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

