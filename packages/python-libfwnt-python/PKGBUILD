pkgbase=python-libfwnt-python
pkgname=('python2-libfwnt-python' 'python-libfwnt-python')
_pkgname=libfwnt-python
pkgver=20191221
pkgrel=1
pkgdesc='Library for Windows NT data types.'
url='https://github.com/libyal/libfwnt'
arch=('x86_64' 'aarch64')
license=('LGPLv3')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/9e/a5/d0ff06c25a1fc23083566f1c5abb56490972da6fb3e3446d7d15442545f4/$_pkgname-$pkgver.tar.gz")
sha512sums=('e50a57687397cf7ba7b2dd9e1b2859ed44b476e8802d39ad7559eacb11729d935dba2b8d5a45844bef9a6177b6f7bf824cd6f2eaa8ddc16bc526a4c73ee3bf18')

package_python2-libfwnt-python() {
  depends=('python2')

  cd "libfwnt-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}

package_python-libfwnt-python() {
  depends=('python')

  cd "libfwnt-$pkgver"

  python setup.py install --root="$pkgdir" --optimize=1
}

