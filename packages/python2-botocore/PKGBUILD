pkgname=python2-botocore
_pkgname=botocore
pkgver=1.13.14
pkgrel=3
pkgdesc='Low-level, data-driven core of boto 3.'
url='https://pypi.org/project/botocore/#files'
arch=('any')
license=('Apache')
depends=('python2' 'python2-urllib3' 'python2-dateutil' 'python2-jmespath'
         'python2-docutils')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/37/c3/a5f9f61f3f18312859eebdbf79313830b3a980b8b84b6ff83bd49163f8ea/$_pkgname-$pkgver.tar.gz"
        'setup.py.patch')
sha512sums=('a82724041d9e7ae5f2197ddfb922a1c0df99e1e8cbb47be4c18ab2a97b811fb8071dd512eb41e552563a3d97a640fbc7ec421d75dc51bd718339b061546f933e'
            '42e458fd81149780171c4e8b17b0569fa57fa30f645b5775ad895e2e3b13e8d1e8df629c70cc609622335e8655eb712d904c57271dce6dc4e8c35ecb0f3c3d7c')

prepare() {
  patch -p1 < setup.py.patch
}

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

