pkgname=python-defang
pkgver=0.5.2
pkgrel=1
pkgdesc='Defangs and refangs malicious URLs.'
url='https://pypi.org/project/defang/#files'
arch=('any')
license=('GPL3')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/d9/c9/faa3b40c3c3f770d1c1fd98a75bf7b76ef03055809d57dae559835e8aa4c/$_pkgname-$pkgver.tar.gz")
sha512sums=('d73d805240ab70dd95ba5de93be693b07b7e1e72dc3b765f6a711e84a50681d8a3b55a9234fd9f1df3188ee8012e3e6762de38053f76177ac60273018748c42a')

build() {
  cd "defang-$pkgver"

  python setup.py build
}

package() {
  cd "defang-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

