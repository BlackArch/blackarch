# Many thanks to anatol for quarry and gem2arch!
# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=origami
pkgname=ruby-$_gemname
pkgver=2.0.0
pkgrel=3
pkgdesc=Ruby\ framework\ to\ manipulate\ PDF\ documents
arch=(any)
url=http://github.com/gdelugre/origami
license=(LGPL-3.0\+)
depends=(ruby ruby-colorize)
makedepends=()
groups=(blackarch blackarch-malware blackarch-binary)
replaces=(origami)
conflicts=(origami)
provides=(origami)
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('c4bb8a31f30f5dab4e35104add9806901cd2142c'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/COPYING.LESSER" "$pkgdir/usr/share/licenses/$pkgname/COPYING.LESSER"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{CHANGELOG.md,COPYING.LESSER,README.md,examples,test}
}
