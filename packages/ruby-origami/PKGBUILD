pkgname=ruby-origami
_gemname=origami
pkgver=2.1.0
pkgrel=1
pkgdesc='A pure Ruby library to parse, modify and generate PDF documents.'
arch=('any')
url='https://rubygems.org/gems/origami'
license=('LGPL3')
depends=('ruby' 'ruby-colorize')
provides=('ruby-origami')
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem")
noextract=("$_gemname-$pkgver.gem")
sha512sums=('92ce7006b6368895e252b01b4157d387b5705f5269b3562b83fed1da44ab26a148b1bedbbefc86108825a29a8124295abb4b388175d175f5ff72361d948e01b6')

package() {
  _gemdir="$(ruby -e'puts Gem.default_dir')"

  gem install --ignore-dependencies --no-user-install --no-document \
    -i "$pkgdir/$_gemdir" -n "$pkgdir/usr/bin" "$_gemname-$pkgver.gem"

  rm -rf "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  find "$pkgdir/$_gemdir/extensions/" -name *.so -delete
  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/"{test,examples}
}

