_gemname=net-http-digest_auth
pkgname=ruby-$_gemname
pkgver=1.4
pkgrel=7
pkgdesc=An\ implementation\ of\ RFC\ 2617\ -\ Digest\ Access\ Authentication
arch=(any)
url=http://github.com/drbrain/net-http-digest_auth
license=()
depends=(ruby)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('2b2826cf85fe307c4b770de5c077880d8d8f1fe2'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.autotest,.gemtest,History.txt,Manifest.txt,README.txt,Rakefile,sample,test}
}
