pkgname=grabbb
pkgver=0.0.7
pkgrel=2
groups=('blackarch' 'blackarch-scanner')
pkgdesc='Clean, functional, and fast banner scanner.'
arch=('x86_64' 'aarch64')
url='https://packetstormsecurity.com/files/11372/grabbb-0.0.7.tar.gz.html'
license=('custom:unknown')
source=("https://dl.packetstormsecurity.net/UNIX/scanners/$pkgname-$pkgver.tar.gz")
sha512sums=('249f56f5c25ae65e549a262a2c83eaa3133791bbd24ab9dcbf806da4576dcf5ef86d285834e17dc1883206066acc93aa85b5aa6b10ab0166dcde7c6b7f77e153')

build() {
  cd $pkgname

  gcc -o $pkgname "$pkgname.c"
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README
}

