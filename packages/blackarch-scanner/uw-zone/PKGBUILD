pkgname=uw-zone
pkgver=0.1
pkgrel=2
groups=('blackarch' 'blackarch-scanner')
pkgdesc='Multi threaded, randomized IP zoner.'
arch=('x86_64' 'aarch64')
url='http://uberwall.org/bin/download/43/UWzone.tgz'
license=('custom:unknown')
source=('http://uberwall.org/bin/download/download/43/UWzone.tgz')
sha512sums=('fd7c295db4b658d6b13c474be6e8ca13bff6448f0ed69cec5f6377bfc6a73ac306173150bf60d63d7210591ebce0e556404ef9a6572a5612f4385d75023e878b')

prepare() {
  cd UWzone

  sed -i 's|-I /usr/local/include|-D_GNU_SOURCE|' Makefile
}

build() {
  cd UWzone

  make
}

package() {
  cd UWzone

  install -Dm 755 UWzone "$pkgdir/usr/bin/$pkgname"
}

