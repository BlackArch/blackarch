pkgname=python-diskcache
_pkgname=diskcache
pkgver=5.3.0
pkgrel=1
pkgdesc='A disk and file backed cache library, written in pure-Python, and compatible with Django.'
arch=('any')
url='https://pypi.org/project/diskcache/'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/6d/0b/6cb2f669c0eedceeaec4d1e45c97799a4c5ca78b560423d65f7a5d63e1bf/$_pkgname-$pkgver.tar.gz")
sha512sums=('171876a071f13cc84bc300c9f660d1468d532a4606898b73caec8b828bea356ca2e4e92b464b03bf8f475432b174349e02f33de29a6c53311bfb9f6e07280ce5')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

