pkgname=python-cvss
_pkgname=${pkgname#python-}
pkgver=3.6
pkgrel=1
pkgdesc='CVSS2/3 library with interactive calculator for Python.'
arch=('any')
url='https://pypi.org/project/cvss/#files'
license=('LGPL3')
depends=('python')
makedepends=('python-setuptools')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('ed80a621707c705e50e9a28383bf2b3230e1d349bec9ca44d2a770ed79221a93702572bf3143f7231022e61aad7cb2bab770d75329796e7cc9ca75468423216f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

