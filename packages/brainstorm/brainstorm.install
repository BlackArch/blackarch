post_install() {
  set -e
  cd /usr/share/brainstorm
  python -m venv venv
  source venv/bin/activate &&
    pip install --isolated --root="/usr/share/brainstorm" --prefix='venv' \
      -r requirements.txt

  echo ">"
  echo "> Don't forget to pull the model for ollama."
  echo "> While running ollama, run this command:"
  echo "> ollama pull qwen3:4b"
  echo ">"
}

post_upgrade() {
  post_install "$@"
}

post_remove() {
  # /usr/share/brainstorm/venv
  rm -r /usr/share/brainstorm
}
