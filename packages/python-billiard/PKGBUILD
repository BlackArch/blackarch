pkgname=python-billiard
_pkgname=billiard
pkgver=4.2.2
pkgrel=1
pkgdesc='Python multiprocessing fork with improvements and bugfixes.'
arch=('any')
url='https://pypi.org/project/billiard/#files'
license=('BSD')
depends=('python' 'python-case')
makedepends=('python-build' 'python-pip' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('d9fb03e871e833821252f43df2a3d0061f50416a7e4bac9b4e45875332ce764ed1499eafb0ca7bdf49ce96f0f38054d73c9dd70b14dc569961e879d25c513765')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --outdir="$startdir/dist"
}

package() {
  cd "$_pkgname-$pkgver"

  pip install \
    --verbose \
    --disable-pip-version-check \
    --no-warn-script-location \
    --ignore-installed \
    --no-compile \
    --no-deps \
    --root="$pkgdir" \
    --prefix=/usr \
    --no-index \
    --find-links="file://$startdir/dist" \
    $_pkgname
}

