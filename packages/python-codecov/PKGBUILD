pkgname=python-codecov
_pkgname=codecov
pkgver=2.1.5
pkgrel=1
pkgdesc='Hosted coverage reports for Github, Bitbucket and Gitlab.'
url='https://pypi.org/project/codecov/#files'
arch=('any')
license=('APACHE')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/d2/e0/5b5f92c89c811b4c191566d0c6575896403e62c60f0095bc47d7294dacca/$_pkgname-$pkgver.tar.gz")
sha512sums=('8aa27fb7362d8e0e2de6c3c2af8e54710853a3fe4cda56bd28f9e4ef1c2dd23e51fe137b4c338285177b916ea5bb5d5ed858875ce7231077a232d0033283c01b')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

