# Maintainer: <ghost53947@gmail.com>
pkgname=siege
pkgver=4.0.4r3
pkgrel=1
epoch=
pkgdesc="Siege is an open source regression test and benchmark utility."
arch=('x86_64')
url="https://github.com/JoeDog/siege"
license=('GPL')
groups=('blackarch' 'blackarch-ddos')
depends=("openssl")
makedepends=()
provides=()
conflicts=()
source=("https://github.com/JoeDog/$pkgname/archive/v$pkgver.tar.gz")
noextract=()
md5sums=("aecb65e575b4a55548df0d25236c7fce")
validpgpkeys=()

build() {
	cd "$pkgname-$pkgver"
	./utils/bootstrap
	./configure   --prefix=/usr/share/$pkgname  --bindir=/usr/bin --mandir=/usr/share/man --with-ssl=/etc/ssl
	make
}

check() {
	cd "$pkgname-$pkgver"
	make -k check
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
