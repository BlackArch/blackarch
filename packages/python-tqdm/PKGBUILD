pkgname=python-tqdm
_pkgname=tqdm
pkgver=4.46.0
pkgrel=1
pkgdesc='Extensible Progress Bar for Python and CLI.'
arch=('any')
url='https://pypi.org/project/tqdm/#files' # https://github.com/tqdm/tqdm
license=('MIT' 'MPL2')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/3b/42/d14dda3dc578485ec6e24d66fac5b731b2a4c5441db0e2fdc31672864115/$_pkgname-$pkgver.tar.gz")
sha512sums=('ccdfce4d273e78ced172fc3edb24ac038465169f7b765e7bf779831ef3d0dc72c648c5fb165aba02e0c6dc86c5d0ea3d93d5530b642ddd84e3d284c7354739cf')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

