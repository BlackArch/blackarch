pkgname=python-pick
_pkgname=pick
pkgver=2.0.0
pkgrel=1
pkgdesc='Create curses based interactive selection list in the terminal.'
arch=('any')
url='https://pypi.org/project/pick/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/d8/58/f049f5b2d44d0215174db10b00823f7844a09e762a9cfab43452cf07957f/$_pkgname-$pkgver.tar.gz")
sha512sums=('f9bad80312328072d3ba99c44fce816c820174921470041d15b8d28aea496d01aca69e0ebd424d3bf2c8c3f831b0e43889d65817fd5cbd9c2f96ae8f471ee368')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

