# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.

pkgname='python-pick'
pkgver=42.36cd17f
pkgrel=1
pkgdesc='Create curses based interactive selection list in the terminal.'
groups=('blackarch' 'blackarch-misc')
arch=('any')
url='https://github.com/wong2/pick'
license=('MIT')
depends=('python' 'python-setuptools')
makedepends=('git')
source=('git+https://github.com/wong2/pick.git')
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/pick"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "${srcdir}/pick"

  python setup.py build
}

package() {
  cd "${srcdir}/pick"

  mkdir -p "${pkgdir}/usr/share/doc/pick"
  mkdir -p "${pkgdir}/usr/share/licenses/pick"

  install -Dm644 -t "${pkgdir}/usr/share/doc/pick/" README.md
  install -Dm644 -t "${pkgdir}/usr/share/licenses/pick/" LICENSE

  python setup.py install --prefix=/usr --root="${pkgdir}"
}
