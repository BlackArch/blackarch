pkgname=python-pick
_pkgname=pick
pkgver=0.6.6
pkgrel=1
pkgdesc='Create curses based interactive selection list in the terminal.'
arch=('any')
url='https://pypi.org/project/pick/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ee/98/51d696419479e34e53dcacd4e3a973929045fbddc42d06386f8c4a9965ad/$_pkgname-$pkgver.tar.gz")
sha512sums=('2682b84db053dbbbd87f45c88f95eead8505106808a71e384225e03a6514df7838b08a8cf8c60b5d3dee3c2c6419cfe98e015e9852fbed597844704fbc4228f2')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

