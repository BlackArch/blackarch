pkgname='eternal_scanner-git'
pkgver=1
pkgrel=1
groups=('blackarch' 'blackarch-networking')
pkgdesc='An internet scanner for exploit CVE-2017-0144 (Eternal Blue)'
arch=('any')
url='https://github.com/peterpt/eternal_scanner'
license=('MIT')
depends=('masscan' 'metasploit')
makedepends=('git')
source=('git+https://github.com/peterpt/eternal_scanner.git')
sha1sums=('SKIP')

build() {
    cd "${pkgname%-git}"
    git describe --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {
    mkdir -p ${pkgdir}/usr/bin
    install -m655 ${srcdir}/${pkgname%-git}/escan ${pkgdir}/usr/bin/
    install -m655 ${srcdir}/${pkgname%-git}/elog ${pkgdir}/usr/bin/
}
