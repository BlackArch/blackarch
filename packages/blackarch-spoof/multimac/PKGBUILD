pkgname=multimac
pkgver=1.0.3
pkgrel=3
groups=('blackarch' 'blackarch-spoof')
pkgdesc='Multiple MACs on an adapter.'
arch=('x86_64' 'aarch64')
url='http://sourceforge.net/projects/multimac/'
license=('GPL2')
depends=('gcc')
source=("http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname.tar.gz")
sha512sums=('7b221a4f99ba1d33cc3be6de069f0668c1f4dd4bae04fd1b37da234948e1cded40bf20340d9754f660fa47a3626be17165cb0c54208a5989d329f5d2daed98d8')

build() {
  cd $pkgname

  make all
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 README.txt "$pkgdir/usr/share/doc/$pkgname/README.txt"
}

