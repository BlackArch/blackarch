# See COPYING for license details.
_gemname=sinatra-websocket
pkgname=ruby-$_gemname
pkgver=0.3.1
pkgrel=2
pkgdesc=Simple,\ upgradable\ WebSockets\ for\ Sinatra.
arch=(any)
url=http://github.com/simulacre/sinatra-websocket
license=()
depends=(ruby ruby-em-websocket-0.3 ruby-eventmachine ruby-thin)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('da794621bdd04e7c6f848ca281fbb1ce576f0e51'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{CHANGELOG.md,README.md}
}
