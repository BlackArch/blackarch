pkgname=python-minidump
pkgver=0.0.9
_pkgname=minidump
pkgrel=1
epoch=1
pkgdesc='Python library to parse and read Microsoft minidump file format.'
groups=('blackarch' 'blackarch-windows')
arch=('any')
url='https://pypi.org/project/minidump/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/7b/70/e0e64d13ddb72c3526af2e32d20b504508195bd251c5444d7c867ddf49cb/$_pkgname-$pkgver.tar.gz")
sha512sums=('a629f3cb88c976b761f80a81da46a4d8b3491b1e6f1e1dc2ceeb7981f16ec080a34a35e14a889d5961b6499d492e394f73e6f6cbc0d055909696804999e26c1e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

