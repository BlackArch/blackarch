pkgname=python-minidump
pkgver=0.0.8
_pkgname=minidump
pkgrel=1
epoch=1
pkgdesc='Python library to parse and read Microsoft minidump file format.'
groups=('blackarch' 'blackarch-windows')
arch=('any')
url='https://pypi.org/project/minidump/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/a1/58/e0701d72412148f3e85f8a4eae17575be733823872d90ec0825cb9fbc0e4/$_pkgname-$pkgver.tar.gz")
sha512sums=('5994df122d4af2daacea6045e21f67a515023a81e3d033bf3091612bc77b9bfefbc7252fade33bc8d20b1f460772601db5cf66dfeac6ff4bc6e90b6e59cfb163')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

