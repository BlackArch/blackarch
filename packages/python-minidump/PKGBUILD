pkgname=python-minidump
pkgver=0.0.16
_pkgname=minidump
pkgrel=1
epoch=1
pkgdesc='Python library to parse and read Microsoft minidump file format.'
groups=('blackarch' 'blackarch-windows')
arch=('any')
url='https://pypi.org/project/minidump/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c3/21/6702a155d00187b856d1a7d70ef3bdf3d9c8a89b6eb9efaf8c4e8f4b4b53/$_pkgname-$pkgver.tar.gz")
sha512sums=('8be747cda86d5ae4bed6357149c196f8a864a517bf906b3f01714fc787c2ef87add1ec496482f1bf37a3b22af215fb10d0ec2d73db8936e2587bbca3b775f25e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

