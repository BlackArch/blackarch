pkgname=python-minidump
pkgver=0.0.19
_pkgname=minidump
pkgrel=1
epoch=1
pkgdesc='Python library to parse and read Microsoft minidump file format.'
groups=('blackarch' 'blackarch-windows')
arch=('any')
url='https://pypi.org/project/minidump/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/43/f4/fd83417a3eff99d26077bceb2c83aeee200db565401d77e72a1c8816a0d3/$_pkgname-$pkgver.tar.gz")
sha512sums=('dd9773e26070f58d14aaa7e14ee5c6bc831abe5821b767203e8b4bb573a558aac4184a9f7cebd66d6f84bc378409a7eb7b8a6442e081dfc15399a24db4c8babc')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

