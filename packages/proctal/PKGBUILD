pkgname='proctal'
pkgver=20170104
pkgrel=1
pkgdesc='Provides a command line interface and a C library to manipulate the address space of a running program on Linux.'
url='https://github.com/daniel-araujo/proctal'
# untested on anything but x86_64 TODO
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
# which groups?
# groups=('blackarch' 'blackarch-radio')
license=("GPL3")
depends=('keystone' 'capstone')
makedepends=('git' 'yuck')
source=('git://github.com/daniel-araujo/proctal.git')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"

  git show -s --format="%ci" HEAD | cut -d ' ' -f 1 | tr -d '-'
}

build() {
  cd "$srcdir/$pkgname"

  autoreconf -i
  ./configure --prefix=/usr
  make
  # make PREFIX=/usr
}

package() {
  cd "$srcdir/$pkgname"

  make DESTDIR="$pkgdir/" install
  # install -Dm755 multimon-ng "$pkgdir/usr/bin/multimon-ng"
}
