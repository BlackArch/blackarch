pkgname=uw-loveimap
pkgver=0.1
pkgrel=2
groups=('blackarch' 'blackarch-scanner')
pkgdesc='Multi threaded imap bounce scanner.'
arch=('x86_64' 'aarch64')
url='http://uberwall.org/bin/download/45/UWloveimap.tgz'
license=('custom:unknown')
source=('http://uberwall.org/bin/download/download/45/UWloveimap.tgz')
sha512sums=('46223fe779d3b61244e19dc32df0da1de813abe0c9e6e33d83248ff11cca10b9edf41eb23b4d58a65638e50629af3595f40e6981d57450845be6ac8166dffb5a')

prepare() {
  cd UWloveimap

  sed -i 's|-I /usr/local/include|-D_GNU_SOURCE|' Makefile
}

build() {
  cd UWloveimap

  make
}

package() {
  cd UWloveimap

  install -Dm 755 UWloveimap "$pkgdir/usr/bin/$pkgname"
}

