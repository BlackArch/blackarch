pkgname=python-pyexcel-io
_pkgname=pyexcel-io
pkgver=0.6.2
pkgrel=1
pkgdesc='A python library to read and write structured data in csv, zipped csvformat and to/from databases.'
arch=('any')
url='https://pypi.org/project/pyexcel-io/#files'
license=('BSD')
depends=('python' 'python-lml')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/03/b1/af920123a165708f4205f256e6884e3d5ac467adc2777cf3eae8a501cddc/$_pkgname-$pkgver.tar.gz")
sha512sums=('e561cf67b21ef461ae99979f94f1b93cf703d74d6d4859632dc0f8c26fe0a434ec6c8e64a2b64ac569740ebb8b3bcbce8c35ec3d7dfbe5710a131de3282d2e20')

prepare() {
  cd "$_pkgname-$pkgver"

  sed -i 's|lml==0.0.1|lml|g' setup.py
}

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

