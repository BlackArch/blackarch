# See COPYING for license details.

pkgname=python-timezonefinder
_pkgname=${pkgname#python-}
pkgver=6.6.3
pkgrel=1
pkgdesc='A Python package for finding the timezone of any point on Earth (coordinates) offline.'
arch=('x86_64' 'aarch64')
url='https://github.com/jannikmi/timezonefinder'
license=('MIT')
depends=('python' 'python-cffi' 'python-h3' 'python-numba' 'python-numpy'
         'python-pytz' 'python-flatbuffers')
makedepends=('python-build' 'python-installer' 'python-setuptools'
             'python-wheel')
options=(!emptydirs)
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('171703809829cdcbf28ad7daf5456dbdeade3d473392feb3e1962be38a520dfaa81258a5427e952e295337bc6af4db4a6694fba2b920d4cf0991254b40a72650')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --no-isolation
}

package() {
  cd "$_pkgname-$pkgver"

  python -m installer --destdir="$pkgdir" dist/*.whl
}

