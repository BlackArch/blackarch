# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=bashfuscator
pkgver=321.263bce1
pkgrel=1
pkgdesc='Fully configurable and extendable Bash obfuscation framework.'
groups=('blackarch' 'blackarch-automation')
arch=('any')
url='https://github.com/Bashfuscator/Bashfuscator'
license=('MIT')
depends=('python' 'python-argcomplete')
makedepends=('git' 'python-setuptools')
source=('git+https://github.com/Bashfuscator/Bashfuscator.git')
sha512sums=('SKIP')
_dir_name_=Bashfuscator

pkgver() {
  cd $_dir_name_

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $_dir_name_

  python setup.py build
}

package() {
  cd $_dir_name_

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

