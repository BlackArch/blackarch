pkgname=python-pyppeteer-stealth
_pkgname=pyppeteer_stealth
pkgver=1.0.1
pkgrel=1
pkgdesc='A plugin for pyppeteer to prevent detection.'
arch=('any')
url='https://pypi.org/project/pyppeteer-stealth/'
license=('MIT')
depends=('python' 'python-pyppeteer')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ac/d5/66370ef695cc590a8ea597f564500543d586e1fe8b21b1a59bd9390ad448/pyppeteer_stealth-$pkgver.tar.gz")
sha512sums=('5a8224bdfab13b9d422ae20fd1f5081bfc930db94292735f9507d207f74e032ac6399525d856ca0460b1660534d78e433f730ec9a67b6084fbb6f1cb6e3fbd26')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

