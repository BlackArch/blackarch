pkgname=python-google-api-core
_pkgname=google-api-core
pkgver=2.1.1
pkgrel=1
pkgdesc='Google API client core library.'
arch=('any')
url='https://pypi.org/project/google-api-core/#files'
license=('Apache')
depends=('python' 'python-googleapis-common-protos' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/df/31/048b8f0fe64de4218fd17218676e6b1ea95724a98ed4146c22c0b33acda4/$_pkgname-$pkgver.tar.gz")
sha512sums=('fc54f933c5a8f0fc056e59d04ac9177eb86fd521bc9e252f8e7724e8005244e4b6ae7e0558b14d3b4c4b41730e2b7a185477d54a044d7573e452f7a30cc44d88')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1 \
    --skip-build
}

