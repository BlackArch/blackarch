pkgname=python-google-api-core
_pkgname=google-api-core
pkgver=2.2.2
pkgrel=2
pkgdesc='Google API client core library.'
arch=('any')
url='https://pypi.org/project/google-api-core/#files'
license=('Apache')
depends=('python' 'python-googleapis-common-protos' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/0a/58/bd67f5fc6da38bd0a8d42eeb9d9f109e84b072b98409d1c9c860a0410bfb/$_pkgname-$pkgver.tar.gz")
sha512sums=('217708662027335ee6f41df1651c9cee7bb9aa52199fa0bbef5778ac5bc5f7757c1a7e2fdd7dbcfe085f5e554ca1805b33725e621bd945929cbb41657eb11bc1')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1 \
    --skip-build
}

