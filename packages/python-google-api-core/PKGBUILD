pkgname=python-google-api-core
_pkgname=google-api-core
pkgver=2.28.1
pkgrel=1
pkgdesc='Google API client core library.'
arch=('any')
url='https://pypi.org/project/google-api-core/#files'
license=('Apache')
depends=('python' 'python-googleapis-common-protos' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('e083adecb04de3a59f9e4348f1ce3b2eddd6b84b1271e24979a6f5bddb578e686227347c4b01e1009f7d214ea4b8e6e5bdc813cab8a8f93314fb159d2cc48a8c')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1 \
    --skip-build
}

