pkgname=python-google-api-core
_pkgname=google-api-core
pkgver=1.22.3
pkgrel=1
pkgdesc='Google API client core library.'
arch=('any')
url='https://pypi.org/project/google-api-core/#files'
license=('Apache')
depends=('python' 'python-googleapis-common-protos' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/fb/81/76bd9fafee0a2670b2357129954f7c81879b37b0db94979be36a9494662a/$_pkgname-$pkgver.tar.gz")
sha512sums=('2f884e3f8142fc4b2b094be514d3b18ea84c9ff1d9ed4b971d6085a315e650c0c56a97a2b8337b790281be1d2423a85a25b86959ba93ce1aa8d6b2424869f4ac')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1 \
    --skip-build
}

