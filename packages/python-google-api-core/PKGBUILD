pkgname=python-google-api-core
_pkgname=google-api-core
pkgver=2.0.0
pkgrel=1
pkgdesc='Google API client core library.'
arch=('any')
url='https://pypi.org/project/google-api-core/#files'
license=('Apache')
depends=('python' 'python-googleapis-common-protos' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ae/63/fa452e4eb5b3f2881ab8bb2faab6e5eda3a82c0631cd92560b3a3cabb976/$_pkgname-$pkgver.tar.gz")
sha512sums=('6a84127fdd27ffb8dba93e289bff709b527845eb74b59fd2acd568eec8abc266ee22246fed865043cdaa87dda16d85537b0235b608f7c0b4fc85f7956d13ea03')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1 \
    --skip-build
}

