pkgname=python-google-api-core
_pkgname=google-api-core
pkgver=1.26.2
pkgrel=1
pkgdesc='Google API client core library.'
arch=('any')
url='https://pypi.org/project/google-api-core/#files'
license=('Apache')
depends=('python' 'python-googleapis-common-protos' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/57/22/123d064f7a6f4ce180d22ba088d27618369184c5bb291b1858d5944fd61b/$_pkgname-$pkgver.tar.gz")
sha512sums=('c172a0374905b98593d915a58f494d6003748afde729cc452d3cd5883d713732e5ca7d2bfb0a73308f756d2ac5de36d6661f269eca1d3161734d02286858c36e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1 \
    --skip-build
}

