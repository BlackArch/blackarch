pkgname=python-google-api-core
_pkgname=google-api-core
pkgver=2.7.1
pkgrel=1
pkgdesc='Google API client core library.'
arch=('any')
url='https://pypi.org/project/google-api-core/#files'
license=('Apache')
depends=('python' 'python-googleapis-common-protos' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ca/84/9897af49d91c685674b5d58dfe7ff6c4a0f7c83bd7a64fc429bf6e5c8462/$_pkgname-$pkgver.tar.gz")
sha512sums=('1bfd1e4eb4b02d76806e6acd7a48f66f19233c3757fc05d9f5e780251c237f7a485aa58c7dacb28cad037ebd7047a963f8998640c5bed4fe2dea8580102cfef9')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1 \
    --skip-build
}

