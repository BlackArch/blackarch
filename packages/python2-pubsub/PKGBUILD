pkgname=python2-pubsub
pkgver=0.1.2
pkgrel=3
pkgdesc='Python Publish-Subscribe Package.'
arch=('any')
license=('BSD')
url='https://pypi.python.org/pypi/PyPubSub'
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/1b/6a/587dd0d9ab5e1a9ff0d71be6e251640644e3b692cbf65a8772b787300b58/pubsub-$pkgver.tar.gz")
sha512sums=('cf9f46d8b0bd96f9c4c0a5ec84737394ad57fe7f84c2b0c12b9b866fdb1ae9a13f6ef5cd97807c57a310956989672c5eeae470e46b2088b7f5a6b9060019b703')

build() {
  cd "$srcdir/Pypubsub-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/Pypubsub-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}
