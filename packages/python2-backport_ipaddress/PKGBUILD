pkgname=python2-backport_ipaddress
_pkgname=backport_ipaddress
pkgver=0.1
pkgrel=1
pkgdesc="Backport of Python 3's ipaddress module."
arch=('any')
url='http://code.google.com/p/python-backport_ipaddress'
license=('Python')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/d3/30/54c6dab05a4dec44db25ff309f1fbb6b7a8bde3f2bade38bb9da67bbab8f/$_pkgname-$pkgver.tar.gz")
sha512sums=('8a2534a25bc5a648484ae14030329e1ea34f1c0af4ee9778707dd514070d9192c8604bb9fe1c7c73b0c4bbdb0fef5092440881051864c3518de567897a941359')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

