pkgname=ruby-spider
_gemname=spider
pkgver=0.4.4
pkgrel=2
pkgdesc="A Web spidering library"
arch=('any')
license=('')
makedepends=('ruby')
url='http://spider.rubyforge.org/'
source=("http://rubygems.org/downloads/spider-$pkgver.gem")
md5sums=('2721ec80f548b548dc3c5c9b3f893c60')
noextract=("spider-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
