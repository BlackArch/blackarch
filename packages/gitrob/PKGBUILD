# See COPYING for license details.

pkgname='gitrob'
pkgver='1.1.0'
pkgrel=5
groups=('blackarch' 'blackarch-scanner')
pkgdesc='Scan Github For Sensitive Files.'
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://michenriksen.com/blog/gitrob-putting-the-open-source-in-osint/'
license=('custom:unknown')
depends=('ruby2.3')
makedepends=('ruby2.3' 'postgresql')
options=('!strip')
source=("https://rubygems.org/downloads/gitrob-${pkgver}.gem")
sha1sums=('fff5f5ca7cc89bc71e0d06eb6b18adb597bdfcd8')

package() {
  cd "$srcdir"

  mkdir -p "$pkgdir/usr/bin"

  local _gemdir="$(ruby-2.3 -e'puts Gem.default_dir')"

  gem-2.3 install --no-user-install -n "$pkgdir/usr/bin" -i "$pkgdir/$_gemdir" \
    gitrob*.gem
}
