pkgname=python-halo
_pkgname=halo
pkgver=0.0.27
pkgrel=1
pkgdesc='Beautiful terminal spinners in Python.'
arch=('any')
url='https://pypi.org/project/halo/#files'
license=('MIT')
depends=('python' 'python-backports.shutil-get-terminal-size'
         'python-colorama' 'python-cursor' 'python-log_symbols'
         'python-six' 'python-spinners' 'python-termcolor')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/24/d7/8ae83103754b52440a81f7f4c961da65caef169fba15a8b237463f142583/$_pkgname-$pkgver.tar.gz")
        'requirements.txt.patch')
sha512sums=('26e6a0afef86b3785ff11267b511d96361e52b7651618831ee6f1695d2de677846ab46c5345eacb7659b344eb329c09937ffd8c8a5cd50275ea61814a9ff56ce')
            'ebec28c00f79c4ea449012d55d0491b6b9313b0008b6464f4fe50cb260bd777b2ead26c46437261f5e28f86494e5abb477b5eab658fedeb37c2d388046625b99')

prepare() {
  cd "$_pkgname-$pkgver"

  patch < ../requirements.txt.patch
}

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

