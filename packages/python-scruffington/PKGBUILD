pkgname=python-scruffington
_pkgname=scruffington
pkgver=0.3.8.2
pkgrel=1
pkgdesc='The janitor.'
url='https://pypi.org/project/scruffington/#files'
arch=('any')
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/03/f2/b6c0bb8bf83a8a13260022eb5190c911131223e341fea2e6b25e6c4b08b9/$_pkgname-$pkgver.tar.gz")
sha512sums=('831044359d487b84ab36f30b3693ae3b9eb0ed2f5f4acc3aa5d5f81773be6be6b58f594f2438778249dda23c235295ed51ddcde3a7500ab2d6721347c5e297f0')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

