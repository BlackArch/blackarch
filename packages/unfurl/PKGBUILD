# See COPYING for license details.

pkgname=unfurl
pkgver=16.99ad735
pkgrel=2
pkgdesc='Pull out bits of URLs provided on stdin.'
arch=('x86_64' 'aarch64')
groups=('blackarch' 'blackarch-misc')
url='https://github.com/tomnomnom/unfurl'
license=('MIT')
makedepends=('git' 'go')
source=("git+https://github.com/tomnomnom/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod init go.mod
  GOPATH="$srcdir" go mod tidy
  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 README.mkd "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm 644 CONTRIBUTING.mkd \
    "$pkgdir/usr/share/doc/$pkgname/CONTRIBUTING.md"
}

