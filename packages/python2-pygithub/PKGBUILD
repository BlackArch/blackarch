pkgname=python2-pygithub
_pkgname=PyGithub
pkgver=1.44
pkgrel=1
pkgdesc='Use the full Github API v3.'
arch=('any')
license=('LGPL')
url='https://github.com/PyGithub/PyGithub'
depends=('python2-pyjwt' 'python2-requests' 'python2-deprecated')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/54/62/729c3750f9c42e9485f06476907ee7138a7d91c6ffbbf0f8922791681e1b/$_pkgname-$pkgver.tar.gz")
sha512sums=('e6584adc9a9e0733d363195dc5d79999fb9b4c54a8616456a7f2aafb7e2653762509725036519614928ea1399848cbb90c2c8197c115662f325e61134e457f0d')

build() {
  cd "$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

