# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.
_gemname=oauth2
pkgname=ruby-$_gemname
pkgver=1.2.0
pkgrel=1
pkgdesc=A\ Ruby\ wrapper\ for\ the\ OAuth\ 2.0\ protocol.
arch=(any)
url=http://github.com/intridea/oauth2
license=(MIT)
depends=(ruby ruby-faraday-0.9 ruby-jwt ruby-multi_json ruby-multi_xml ruby-rack)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('5a6d37bfd781b05893a17daff16c7476cc7d0a24'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE.md" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.document,CONTRIBUTING.md,LICENSE.md,README.md,oauth2.gemspec}
}
