pkgname=python2-cybox
pkgver=2.1.0.17
pkgrel=2
epoch=1
pkgdesc='A Python library for parsing and generating CybOX 2.1.0 content.'
url='http://cybox.mitre.org/'
depends=('python2')
makedepends=('python2-distribute')
license=('custom')
arch=('any')
source=("https://files.pythonhosted.org/packages/8f/7e/14db0a8ae5f47d9b066a1f3cb0b6830727f68ecaeed10b9d1548903c4836/cybox-$pkgver-py2.py3-none-any.whl")
sha512sums=('af46dd10027d57267596fa13e6c6fdc83a68792eeba3b56d7b617f4e03395eb6fbd3b701e438a4f7383546f9115ffa7cd565784a0a5ddcdecc5654c38c74d7b1')

build() {
  cd "cybox-$pkgver"

  python2 setup.py build
}

package() {
  cd "cybox-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1

  install -Dm644 LICENSE.txt \
    "$pkgdir/usr/share/licenses/python2-cybox/LICENSE.txt"
}
