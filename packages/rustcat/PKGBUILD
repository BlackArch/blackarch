# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=rustcat
_binname=rc
pkgver=129.15e116a
pkgrel=1
groups=("blackarch", "blackarch-networking")
pkgdesc="Rustcat - Modern Port Listener & Reverse Shell"
url="https://github.com/robiot/rustcat"
license=('MIT')
arch=('x86_64')
makedepends=(
    'rustup'
    'git'
)
md5sums=('SKIP')

source=("$pkgname::git+https://github.com/robiot/rustcat.git")

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
    cd $pkgname
    cargo build --release
}

package() {
    cd $pkgname
    install -dm 755 "$pkgdir/usr/share/$pkgname"
    install -Dm 755 "target/release/$_binname" "$pkgdir/usr/bin/$_binname"
}
