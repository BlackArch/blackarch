# This file is part of BlackArch Linux ( https://www.blackarch.org/ ).
# See COPYING for license details.

pkgname=rustcat
_binname=rc
pkgver=v1.1.2.r0.g2e7879c
pkgrel=1
groups=("blackarch", "blackarch-networking")
pkgdesc="Rustcat - A Modern Port Listener & Reverse Shell"
url="https://github.com/robiot/rustcat"
license=('MIT')
arch=('x86_64')
makedepends=(
    'rustup'
    'git'
)
sha512sums=('SKIP')

source=("$pkgname::git+https://github.com/robiot/rustcat.git")

pkgver() {
  cd $pkgname

  echo $(git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g')
}

build() {
    cd $pkgname

    # Build tag version
    git checkout $(git describe --tags --abbrev=0) &> /dev/null
    cargo build --release
}

package() {
    cd $pkgname
    install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm 755 "target/release/$_binname" "$pkgdir/usr/bin/$_binname"
}
