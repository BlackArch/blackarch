pkgname=python-dnsimple
_pkgname=dnsimple
pkgdesc='DNSimple API service for python.'
pkgver=2.7.0
pkgrel=1
arch=('any')
url='https://pypi.org/project/dnsimple/'
license=('MIT')
depends=('python' 'python-requests' 'python-omitempty')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('8c705c9579e88c36e6e36c89d9833c05ba446821a4563a1035e00c60b1c7f467fee9b2cf477895c5652f43bf0c7a08f4a534bb947ad610e7608db403f3589f2e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

