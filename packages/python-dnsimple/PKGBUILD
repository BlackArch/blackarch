pkgname=python-dnsimple
_pkgname=dnsimple
pkgdesc='DNSimple API service for python.'
pkgver=2.0.1
pkgrel=1
arch=('any')
url='https://pypi.org/project/dnsimple/'
license=('MIT')
depends=('python' 'python-requests' 'python-omitempty')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/84/47/c0156a5d846e65c2edb70c929e25e9fc9d2edbe91ce1f124fed45fc427e4/$_pkgname-$pkgver.tar.gz")
sha512sums=('c0024aa006e0ad03050a6e192464d8ca1b591abf3248452caafd6ec17f6edc5f01efbef8ccd92ba68388190a5fffbfa281a9c5a1d81230bf4a4c37a90bcffa8c')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

