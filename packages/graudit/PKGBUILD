pkgname='graudit'
pkgver=305.6afe845
pkgrel=1
pkgdesc='Grep rough source code auditing tool.'
arch=('any')
makedepends=('git')
url='https://github.com/wireghoul/graudit'
license=('GPL')
source=('git+https://github.com/wireghoul/graudit.git')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/graudit"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/graudit"

  make
}

package() {
  cd "$srcdir/graudit"

  make install
}
