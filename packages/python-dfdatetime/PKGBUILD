pkgname=python-dfdatetime
_pkgname=dfdatetime
pkgver=20200809
pkgrel=1
pkgdesc='Digital Forensics Date and Time.'
arch=('any')
url='https://pypi.org/project/dfdatetime/'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/c0/9c/628312bfba0d596395b75bed4b4cf7f8477e649f320b6b808efeac554b6d/$_pkgname-$pkgver.tar.gz")
sha512sums=('e19cf4d20384cc9d23037a92fe6e60b0175e7edc54a70c5b3e27648b3346851a84f3c8e1d6242270f02c93e8299daa51e1b0d2fe1df27cd88fb86a1a57683852')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

