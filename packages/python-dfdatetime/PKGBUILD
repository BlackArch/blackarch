arch=('any')
url='https://pypi.org/project/dfdatetime/'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ff/04/60c2abd79c0bf959d4985b753cd59add934db5206e4f2a5fe37470546fc5/$_pkgname-$pkgver.tar.gz")
sha512sums=('be8b56f9b40e0fc48517d4ca8ac5a37098e7a97ab4cd7ec9f9f91841a7b4cf800bffa88dc4f706e6fb7cbf81203d450291a0562a1edf7bc781304d73d55fa78f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

