pkgname=python-dfdatetime
_pkgname=dfdatetime
pkgver=20211222
pkgrel=1
pkgdesc='Digital Forensics Date and Time.'
arch=('any')
url='https://pypi.org/project/dfdatetime/'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/2f/c9/226f5bc11384a1639dc1683818b0279356f85a4c574793a538c2f56671d5/$_pkgname-$pkgver.tar.gz")
sha512sums=('3f0e35d118f2488ff56173229c1767da8ae53a1ad84c649c95b8a8c18d7bd46d14ff7872ecd2f3cac322c4028efbba41b1998f2dbb99c064cf5b63f0fc4ef916')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

