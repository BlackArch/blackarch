_pkgname=dfdatetime
pkgver=20220810
pkgrel=1
pkgdesc='Digital Forensics Date and Time.'
arch=('any')
url='https://pypi.org/project/dfdatetime/'
license=('Apache')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ee/a6/cfc390ee671f7cb6aad039ee29e7db17e0c0fa0425eb68109098e601e141/$_pkgname-$pkgver.tar.gz")
sha512sums=('8fe3543f46141a64f6b3158c36338d1e8408c60e40bd1a6ecdb045e449c9b87196a0fc8f1e95a14e884d7686de6fe8da251abb9a94a2868f16b31470811d9012')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

