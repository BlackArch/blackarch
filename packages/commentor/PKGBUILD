# See COPYING for license details.

pkgname=commentor
pkgver=18.548094d
pkgrel=1
pkgdesc='Extract all comments from the specified URL resource.'
groups=('blackarch' 'blackarch-code-audit')
arch=('any')
url='https://github.com/D3vil0p3r/comMENTOR'
license=('GPL3')
depends=('bash')
makedepends=('git')
source=("git+https://github.com/D3vil0p3r/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname
  mkdir -p "$pkgdir/usr/share/commentor"
  mkdir -p "$pkgdir/usr/bin"
  install -Dm 755 -t "$pkgdir/usr/share/commentor/" c_cleanup c_decorate c_filter commentor
  ln -s "$pkgdir/usr/share/commentor/commentor" "$pkgdir/usr/bin/commentor"
}
