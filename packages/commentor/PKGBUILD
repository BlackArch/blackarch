pkgname=commentor
pkgver=18.548094d
pkgrel=1
pkgdesc='Extract all comments from the specified URL resource.'
groups=('blackarch' 'blackarch-code-audit')
arch=('any')
url='https://github.com/D3vil0p3r/comMENTOR'
license=('GPL3')
makedepends=('git')
source=("git+https://github.com/D3vil0p3r/$pkgname.git")
sha512sums=('SKIP')
pkgver() {
  cd $pkgname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  mkdir -p "${pkgdir}/usr/share/$pkgname"
  mkdir -p "${pkgdir}/usr/bin"
  install -Dm 755 -t "${pkgdir}/usr/share/$pkgname/" "${srcdir}/$pkgname/c_cleanup" "${srcdir}/$pkgname/c_decorate" "${srcdir}/$pkgname/c_filter" "${srcdir}/$pkgname/$pkgname"

  cat > "${pkgdir}/usr/bin/$pkgname" << EOF
#!/bin/sh
cd /usr/share/$pkgname
exec ./$pkgname "\$@"
EOF

  chmod a+x "${pkgdir}/usr/bin/$pkgname"
}
