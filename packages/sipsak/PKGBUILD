# See COPYING for license details.

pkgname=sipsak
pkgver=85.1fb1094
pkgrel=1
groups=('blackarch' 'blackarch-voip')
pkgdesc='A small command line tool for developers and administrators of Session Initiation Protocol (SIP) applications.'
arch=('x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://sipsak.org'
license=('GPL')
depends=('gnutls' 'openssl' 'c-ares')
source=('git+https://github.com/sipwise/sipsak.git')
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$pkgname-mr$pkgver"

  aclocal
  autoconf
  automake --add-missing

  ./configure --prefix=/usr

  make
}

package() {
  cd "$pkgname-mr$pkgver"

  make DESTDIR=$pkgdir install
}

