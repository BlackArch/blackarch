# See COPYING for license details.
_gemname=yawast
pkgname=ruby-$_gemname
pkgver=0.4.0
pkgrel=2
pkgdesc=The\ YAWAST\ Antecedent\ Web\ Application\ Security\ Toolkit
arch=(any)
url=https://github.com/adamcaudill/yawast
license=(MIT)
depends=(ruby ruby-colorize ruby-commander ruby-highline ruby-ipaddr_extensions ruby-ipaddress ruby-openssl-extensions ruby-ssllabs)
makedepends=()
groups=(blackarch blackarch-webapp blackarch-scanner blackarch-fuzzer)
replaces=(yawast)
conflicts=(yawast)
provides=(yawast)
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('87f889f2dd59313c972ee05896dcbd3c2a649f2e'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.codeclimate.yml,.gitignore,.rubocop.yml,.ruby-version,.travis.yml,CHANGELOG.md,Gemfile,README.md,Rakefile,test,yawast.gemspec}
}
