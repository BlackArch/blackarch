pkgname=dff-scanner
pkgver=1.1
pkgrel=2
pkgdesc='Tool for finding path of predictable resource locations.'
arch=('any')
groups=('blackarch' 'blackarch-webapp')
url='https://www.security-net.biz/dff-default-files-and-folders-scanner-p77.html'
license=('GPL-3.0-or-later')
depends=('php')
source=("https://security-net.biz/files/dff/DFF.zip")
sha512sums=('ab160f53bc513afbf1a2f6a6fdb9a0c2225e6b039878783ee61d06c23b1364dbe957adfcb69bac0053faed555d5a3895cc63bcd217bc89986d03a3f1489f1960')

package() {
  cd DFF

  install -dm 755 "$pkgdir/usr/share/$pkgname"

  install -Dm 644 dff-scanner-readme.txt "$pkgdir/usr/share/doc/$pkgname/README.txt"
  install -Dm 644 dff.files.class.php "$pkgdir/usr/share/$pkgname/dff.files.class.php"
  install -Dm 644 dff.main.class.php "$pkgdir/usr/share/$pkgname/dff.main.class.php"
}

