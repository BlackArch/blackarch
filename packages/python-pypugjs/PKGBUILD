pkgname=python-pypugjs
_pkgname=pypugjs
pkgver=5.12.0
pkgrel=3
pkgdesc='PugJS syntax template adapter for Django, Jinja2, Mako and Tornado templates - copy of PyJade with the name changed.'
url='https://github.com/kakulukia/pypugjs'
arch=('any')
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://github.com/kakulukia/pypugjs/archive/v$pkgver.tar.gz")
sha512sums=('47460876018349b49fc04cde51cfee48f868b6364c5152dffc35ea3419f32c47ddab6789c442e4425a12d59c082e42d64ea001ef2c2df363d1fb1ec1a4e9f605')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

