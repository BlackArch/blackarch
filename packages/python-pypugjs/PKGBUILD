pkgname=python-pypugjs
pkgver=5.7.2
pkgrel=2
pkgdesc='PugJS syntax template adapter for Django, Jinja2, Mako and Tornado templates - copy of PyJade with the name changed.'
url='https://pypi.python.org/pypi/pypugjs/'
arch=('any')
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/ce/b9/38ce119d4b143d46713eb0138dd5fcb8723082420dc56b200accc6224065/pypugjs-$pkgver-py2.py3-none-any.whl")
sha512sums=('c699b7516f39a0bf06fef4736b100f42f49f0ce71287e29e7d3730065be489588f616888ed8316b4197743675ac2d09a4c48cf8891cdea6c5c91ff063741358a')

build() {
  cd "$srcdir/pypugjs-$pkgver"

  python setup.py build
}

package() {
  cd "$srcdir/pypugjs-$pkgver"

  python setup.py install --root="$pkgdir" --optimize=1
}
