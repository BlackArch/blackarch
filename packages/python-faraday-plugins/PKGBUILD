pkgname=python-faraday-plugins
_pkgname=faraday-plugins
pkgver=1.5.7
pkgrel=2
pkgdesc='Faraday plugins package.'
arch=('any')
url='https://pypi.org/project/faraday-plugins/#files'
license=('GPL3')
depends=('python' 'python-html2text' 'python-click' 'python-simplejson'
         'python-requests' 'python-lxml' 'python-beautifulsoup4' 'python-dateutil'
         'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/1b/5b/4464cd1081a4cc9928b4846b96568d4d0cbe484f590c5d4641be074a4612/$_pkgname-$pkgver.tar.gz")
sha512sums=('6410e85fce4071bd712773ac2ad67f09ec1f0f38611292f59697f880da555efd592877f2240ff1dae51b41b7c63cbebdd7c34795c5abe4edb8b9e185195da56a')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

