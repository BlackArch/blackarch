pkgname=python-faraday-plugins
_pkgname=faraday-plugins
pkgver=1.6.2
pkgrel=1
pkgdesc='Faraday plugins package.'
arch=('any')
url='https://pypi.org/project/faraday-plugins/#files'
license=('GPL3')
depends=('python' 'python-html2text' 'python-click' 'python-simplejson'
         'python-requests' 'python-lxml' 'python-beautifulsoup4' 'python-dateutil'
         'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/85/13/d84facc4fd4d5f0eb3e89121e9e2f58216ddf5d26e3c3b6dd7b54dd70a96/$_pkgname-$pkgver.tar.gz")
sha512sums=('b963d1d57640b8253fcc8ea199d832fbd6467861bd0435d4897eab33eb015e381fdc40eab7646caa6c75b8bcdae5e9ada7db649615a2ec347d1d940cad3b600e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

