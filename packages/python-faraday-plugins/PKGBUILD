pkgname=python-faraday-plugins
_pkgname=faraday-plugins
pkgver=1.4.6
pkgrel=1
pkgdesc='Faraday plugins package.'
arch=('any')
url='https://pypi.org/project/faraday-plugins/#files'
license=('GPL3')
depends=('python' 'python-html2text' 'python-click' 'python-simplejson'
         'python-requests' 'python-lxml' 'python-beautifulsoup4' 'python-dateutil'
         'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/12/5c/16287ea53a6849f64763ba0fb784c9446b15ee26b95fc46cd03178842cc6/$_pkgname-$pkgver.tar.gz")
sha512sums=('a0c223a1d6226b87a1bf7ce63459bff21ce702d6bd2a94ff83bf7f4d5e1d1dfc42a9cb8e8fd11c92a9a0fa73e318c0b6ed51ab9ecd3f9872b94859ffb8a07770')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

