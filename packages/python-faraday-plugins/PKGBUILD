pkgname=python-faraday-plugins
_pkgname=faraday-plugins
pkgver=1.5.8
pkgrel=1
pkgdesc='Faraday plugins package.'
arch=('any')
url='https://pypi.org/project/faraday-plugins/#files'
license=('GPL3')
depends=('python' 'python-html2text' 'python-click' 'python-simplejson'
         'python-requests' 'python-lxml' 'python-beautifulsoup4' 'python-dateutil'
         'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/99/ce/82bc2b2771ff5f3e70bb568f359a0862c77c21c1b299c57db034c0c21e73/$_pkgname-$pkgver.tar.gz")
sha512sums=('20d6fb9d00998dd6b3a7e5802ca16cf570631f78624a1afb678314054916262dcaa65f66f5832aaa9c2d06a08610a284f21cc74e8344b44ca6798f5167ade722')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

