pkgname=python-faraday-plugins
_pkgname=faraday-plugins
pkgver=1.4.3
pkgrel=1
pkgdesc='Faraday plugins package.'
arch=('any')
url='https://pypi.org/project/faraday-plugins/#files'
license=('GPL3')
depends=('python' 'python-html2text' 'python-click' 'python-simplejson'
         'python-requests' 'python-lxml' 'python-beautifulsoup4' 'python-dateutil'
         'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/0f/f2/630f2d3c2e037f95232d4c374e004f1addeb512357d73af813b4bab152c7/$_pkgname-$pkgver.tar.gz")
sha512sums=('4f613b2c9f96b1c38101bf7a7fb7d5e994cda6142d666fd235c9f4d793fd16ab954b5f6d3bed88a3a72c96bffa5101a99d1d81dfcd0a067f4030c8c6ded13cf3')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

