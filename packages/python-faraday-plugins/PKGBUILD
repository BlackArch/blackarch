pkgname=python-faraday-plugins
_pkgname=faraday-plugins
pkgver=1.6.1
pkgrel=1
pkgdesc='Faraday plugins package.'
arch=('any')
url='https://pypi.org/project/faraday-plugins/#files'
license=('GPL3')
depends=('python' 'python-html2text' 'python-click' 'python-simplejson'
         'python-requests' 'python-lxml' 'python-beautifulsoup4' 'python-dateutil'
         'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/d7/fc/a1f42ae24408332dc8e8bf551010c392859bc506428df5795917d1393c5c/$_pkgname-$pkgver.tar.gz")
sha512sums=('e66fba6dde1ea036aafdc3ea57b152ec932abda16d7ec02a434de582fc2d7bbe4dd19f3eb10574e954f49b75337c6170deb773e03200ca2260b7025fd24a3a0c')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

