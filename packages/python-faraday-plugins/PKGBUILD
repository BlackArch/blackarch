pkgname=python-faraday-plugins
_pkgname=faraday-plugins
pkgver=1.5.2
pkgrel=1
pkgdesc='Faraday plugins package.'
arch=('any')
url='https://pypi.org/project/faraday-plugins/#files'
license=('GPL3')
depends=('python' 'python-html2text' 'python-click' 'python-simplejson'
         'python-requests' 'python-lxml' 'python-beautifulsoup4' 'python-dateutil'
         'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/3c/84/cbb0a1db1f102d2103249acadb61ebc4ece5fb975c7602c14b987d6cefd7/$_pkgname-$pkgver.tar.gz")
sha512sums=('031b9c83a017a3ed1695442f5a3d1b6e476731789a3e29c5763fdce5769d3499ffc34c986e69e84fc208bd899e6ebb7e2d83110b2b61a51e5cd10a641d0fe80f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

