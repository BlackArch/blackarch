pkgname=python-faraday-plugins
_pkgname=faraday-plugins
pkgver=1.4.1
pkgrel=1
pkgdesc='Faraday plugins package.'
arch=('any')
url='https://pypi.org/project/faraday-plugins/#files'
license=('GPL3')
depends=('python' 'python-html2text' 'python-click' 'python-simplejson'
         'python-requests' 'python-lxml' 'python-beautifulsoup4' 'python-dateutil'
         'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/68/d6/0b6741406e5dcea2114f7c4a53affb165e53929ed3a37a2a92d8bfabccce/$_pkgname-$pkgver.tar.gz")
sha512sums=('54c13549b8c5f6dc9da9e927d2862f3e772ef3e3a6943135a4d5f5d67b562920d07292a2698c9889bf349e68ee4810bfbeee26280bb03d7be399f5d0933c660f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

