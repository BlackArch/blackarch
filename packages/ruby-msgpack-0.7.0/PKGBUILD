# See COPYING for license details.
_gemname=msgpack
pkgname=ruby-$_gemname-0.7.0
pkgver=0.7.0
pkgrel=1
pkgdesc=MessagePack,\ a\ binary-based\ efficient\ data\ interchange\ format.
arch=(i686 x86_64)
url=http://msgpack.org/
license=(Apache\ 2.0)
depends=(ruby)
makedepends=()
groups=(blackarch)
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('61018d0bd6075d8c85b09d16951630db2599a810'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.rubocop.yml,.travis.yml,ChangeLog,Gemfile,LICENSE,README.rdoc,Rakefile,appveyor.yml,bench,doclib,ext,msgpack.gemspec,msgpack.org.md,spec}
}
