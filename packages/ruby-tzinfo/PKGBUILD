pkgname=ruby-tzinfo
pkgver=0.3.33
pkgrel=3
pkgdesc="A Ruby library for time zone transformations"
arch=('any')
url="http://tzinfo.rubyforge.org/"
license=(MIT)
depends=('ruby')
source=(http://rubygems.org/downloads/${pkgname#*-}-${pkgver}.gem)
md5sums=(789d147e5826abdfe7eeafbd6c7dcdb1)

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
