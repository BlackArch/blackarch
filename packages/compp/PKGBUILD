pkgname=compp
_pkgname=ComPP
pkgver=1.0.2
pkgrel=1
pkgdesc='Company Passwords Profiler helps making a bruteforce wordlist for a targeted company.'
groups=('blackarch' 'blackarch-cracker')
arch=('any')
url='https://github.com/sec-it/ComPP'
license=('MIT')
depends=('python' 'python-colorama')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('39bf702c1a61ae71d76965c47c56c7af6027f495c24ba2f3f3df812a678635476dd4b32e3a5e8561139312e4f240310413ece44003550ca707df55bebdf0d40f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  mv "$pkgdir/usr/bin/$_pkgname" "$pkgdir/usr/bin/$pkgname"
}

