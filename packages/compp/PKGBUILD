pkgname=compp
_pkgname=ComPP
pkgver=1.0.2
pkgrel=1
pkgdesc='Company Passwords Profiler helps making a bruteforce wordlist for a targeted company'
arch=('any')
groups=('blackarch' 'blackarch-cracker')
url='https://github.com/sec-it/ComPP'
license=('MIT')
depends=('python' 'python-colorama' 'python-argparse')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha256sums=('2675cc5d2158115b92bdbdf629430a7cd06537c8a04818ffb6868361959ffd74')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

