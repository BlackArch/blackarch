pkgname=python-artifacts
_pkgname=artifacts
pkgver=20211107
pkgrel=2
pkgdesc='Digital Forensics Artifact Repository.'
url='https://pypi.org/project/artifacts/#files'
arch=('any')
license=('Apache')
depends=('python' 'python-yaml' 'python-pyaml' 'python-mock' 'python-pbr'
         'python-six')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/d9/e5/0d20f03640cd9bc746133026e5014087c70c61b73dfaecee2d31359afecb/$_pkgname-$pkgver.tar.gz")
sha512sums=('fd1fdc9ee857c7ebff21eb3909cbe8181e19e5fb82957fa2eef2c4eff068b659fa0d3d159f1075a9194884b910a9b8fbd5484ac88ff4b601f7e24bf7cefd8d6c')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

