# See COPYING for license details.

pkgname=ldsview
pkgver=47.d8bfcaa
pkgrel=1
groups=('blackarch' 'blackarch-forensic')
pkgdesc='Offline search tool for LDAP directory dumps in LDIF format.'
arch=('x86_64' 'aarch64')
url='https://github.com/kgoins/ldsview'
license=('Apache')
makedepends=('git' 'go')
source=("git+https://github.com/kgoins/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname
}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

