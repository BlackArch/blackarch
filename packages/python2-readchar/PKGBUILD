pkgname=python2-readchar
pkgver=2.0.1
pkgrel=3
pkgdesc='Utilities to read single characters and key-strokes.'
arch=('any')
url='https://pypi.python.org/pypi/readchar/'
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://files.pythonhosted.org/packages/ef/f3/50cc9199733bf91f3c140150752a6430d8b785f9d22a31dcae721edb0b9a/readchar-$pkgver-py3-none-any.whl")
sha512sums=('8c7637993932cd4282d60b23461f4ae07c1ef89fcc8ee346e90b44871ac1c02518683a46380f8890e56fb48e806de70ac305c84e37f0bbe15f0dd1c77ba125f0')

build() {
  cd "$srcdir/readchar-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/readchar-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
