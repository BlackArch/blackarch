pkgname=python-twitter
_pkgname=twitter
pkgver=1.19.4
pkgrel=1
pkgdesc='Python Twitter API.'
arch=('any')
url='https://pypi.org/project/twitter/#files'
license=('MIT')
depends=('python')
makedepends=('python-setuptools' 'python-pip' 'python-wheel')
source=("https://files.pythonhosted.org/packages/20/f5/380bd2a03a3a9e5a4eb1796b9f7ff56dd83c658ddf4e0a7b2e1899764f9a/$_pkgname-$pkgver.tar.gz")
sha512sums=('0d99c613406d70be70359af685c5ed5c77141fd5102d9b79140556c9698cc48f920ed0749ed3e3acac2f9ab604bad4ab16615ab8ffbb02d6f3f04b1cdc7480ad')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

