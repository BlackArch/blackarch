pkgname=python-translate
_pkgname=translate
pkgver=3.8.0
pkgrel=2
pkgdesc='Command line translator with google translate behind it.'
arch=('any')
url='https://pypi.org/project/translate/#files'
license=('MIT')
depends=('python' 'python-click' 'python-lxml' 'python-requests'
         'python-libretranslatepy')
makedepends=('python-build' 'python-pip' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('963cdab3dfbffdb4f983c1f0414e35968d3cd90693e29c854e1a361e8127135a0ae7d031526f17693c0981b715c592c40acb13eaa47fe173e57dfdc4b58f64d2')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --outdir="$startdir/dist"
}

package() {
  cd "$_pkgname-$pkgver"

  pip install \
    --verbose \
    --disable-pip-version-check \
    --no-warn-script-location \
    --ignore-installed \
    --no-compile \
    --no-deps \
    --root="$pkgdir" \
    --prefix=/usr \
    --no-index \
    --find-links="file://$startdir/dist" \
    $_pkgname
}

