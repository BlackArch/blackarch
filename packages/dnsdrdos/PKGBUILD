pkgname=dnsdrdos
pkgver=0.1
pkgrel=4
groups=('blackarch' 'blackarch-dos')
pkgdesc='Proof of concept code for distributed DNS reflection DoS.'
url='http://nullsecurity.net/tools/dos.html'
arch=('x86_64' 'aarch64')
license=('custom:unknown')
source=('https://raw.githubusercontent.com/nullsecuritynet/tools/master/dos/dnsdrdos/source/dnsdrdos.c')
sha512sums=('01ac66c18c5c1078a7a3a9344c0a5ee2df795b4d7bd7178d81b155ed75b3b794463225ed71e60834408ae589fe7c9578be0dc772693ce24923e7090495d69048')

build() {
  gcc -Wall $CFLAGS -o $pkgname "$pkgname.c"
}

package() {
  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

