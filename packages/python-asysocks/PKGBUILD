pkgname=python-asysocks
_pkgname=asysocks
pkgver=0.2.3
pkgrel=1
pkgdesc='Socks5 / Socks4 client and server library.'
arch=('any')
url='https://pypi.org/project/asysocks/#files'
license=('MIT')
depends=('python' 'python-asn1crypto')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('0fc8018c3aec2ca42cf3e232c827cef57dede7cfee94924ee49e989bb6b0ccab451305bd0542dfdf0010c0dd5586dfa4bc46014d2f19f136b4a4b8246506f093')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

