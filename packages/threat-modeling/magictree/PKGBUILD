pkgname=magictree
pkgver=1.3
pkgrel=1
pkgdesc="a penetration tester productivity tool designed to allow easy and straightforward data consolidation, querying, external command execution and report 
generation"
arch=("$CARCH")
groups=('blackarch-threat-model' 'blackarch-all')
url=('http://www.gremwell.com')
license=('EULA')
source=('http://www.gremwell.com/sites/default/files/MagicTree-build1814.jar')
depends=('jre7-openjdk' 'screen')
md5sums=('361ade390be150a59122f247ead5bd90')
noextract=('MagicTree-build1814.jar')

_rootpath=('usr/bin/blackarch')
_category=('threat_modeling')

package() {
  cd "${srcdir}"
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}

