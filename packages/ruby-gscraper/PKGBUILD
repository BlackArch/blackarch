# See COPYING for license details.
_gemname=gscraper
pkgname=ruby-$_gemname
pkgver=0.4.0
pkgrel=7
pkgdesc=Web-scraping\ interface\ to\ various\ Google\ Services.
arch=(any)
url=https://github.com/postmodern/gscraper
license=(GPL-2)
depends=(ruby ruby-json-1 ruby-mechanize ruby-uri-query_params)
makedepends=()
groups=()
replaces=()
conflicts=()
provides=()
optdepends=()
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
    
)
noextract=($_gemname-$pkgver.gem)
sha1sums=('5f2673efe1b3f173d5fc04af8541e22fd48e9b4b'
    
)

prepare() {

  true
}

package() {
  local _gemdir="/usr/lib/ruby/gems/2.3.0"
  gem install --ignore-dependencies --no-document --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir"/usr/bin $_gemname-$pkgver.gem 
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/COPYING.txt" "$pkgdir/usr/share/licenses/$pkgname/COPYING.txt"
  local _extdir="$pkgdir//usr/lib/ruby/gems/2.3.0/extensions/$CARCH/2.3.0/$_gemname-$pkgver"
  if [ -d "$_extdir" ]; then
    rm -rf "$_extdir"/*
    touch "$_extdir/gem.build_complete"
  fi

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver"/{.gitignore,.rspec,.yardopts,COPYING.txt,ChangeLog.md,README.md,Rakefile,gemspec.yml,gscraper.gemspec,spec}
}
