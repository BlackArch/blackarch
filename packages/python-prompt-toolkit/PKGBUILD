pkgname=python-prompt-toolkit
_pkgname=prompt_toolkit
pkgver=3.0.5
pkgrel=1
pkgdesc='Python library for building powerful interactive command line applications.'
arch=('any')
url='https://pypi.org/project/prompt-toolkit/#files' # https://github.com/prompt-toolkit/python-prompt-toolkit
license=('BSD')
depends=('python' 'python-wcwidth')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/69/19/3aa4bf17e1cbbdfe934eb3d5b394ae9a0a7fb23594a2ff27e0fdaf8b4c59/$_pkgname-$pkgver.tar.gz")
sha512sums=('fe6cfc7223529b77bdfa34dbebc8f5690ac6a1d0082cbf3f03f49598408bcff082697df1bd7ee427c796fe0c8d73126a965269e77ed0e6f1519b338b464995a7')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

