pkgname=python-rdap
_pkgname=rdap
pkgver=1.7.0
pkgrel=1
pkgdesc='Registration Data Access Protocol tools.'
arch=('any')
url='https://pypi.org/project/rdap/#files'
license=('Apache')
depends=('python' 'python-six')
makedepends=('python-build' 'python-pip')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('4826f3a135f91d467f64358d9dd07b956241428aa50adb1eb468156b8ceac66a12da508b6e27080af762595619d47715835667f628b808d9e80dabb11ddf7f9a')

build() {
  cd "$_pkgname-$pkgver"

  python -m build --wheel --outdir="$startdir/dist"
}

package() {
  cd "$_pkgname-$pkgver"

  pip install \
    --verbose \
    --disable-pip-version-check \
    --no-warn-script-location \
    --ignore-installed \
    --no-compile \
    --no-deps \
    --root="$pkgdir" \
    --prefix=/usr \
    --no-index \
    --find-links="file://$startdir/dist" \
    $_pkgname
}

