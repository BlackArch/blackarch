pkgname=python-icmplib
_pkgname=icmplib
pkgver=1.2.1
pkgrel=1
pkgdesc='Easily forge ICMP packets and make your own ping and traceroute.'
arch=('any')
url='https://pypi.org/project/icmplib/#files'
license=('LGPL3')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/7e/e0/42623bef05ded05db24b840a5ab9c2a530761ed9c5a45b83a9758cf5dc85/$_pkgname-$pkgver.tar.gz")
sha512sums=('9c0131114111b315691a4135621f912bffc7acfcf25bc1439144982550a9f2c8b4ac122e7bb91d22df15e76deea02f984d286ce367b8a1f3069a7fd258ad897e')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

