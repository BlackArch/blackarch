pkgname=python-icmplib
_pkgname=icmplib
pkgver=3.0.4
pkgrel=1
pkgdesc='Easily forge ICMP packets and make your own ping and traceroute.'
arch=('any')
url='https://pypi.org/project/icmplib/#files'
license=('LGPL3')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha512sums=('a374397bad25fc34a8d83e12b2e3d4a07992c6375dd717706c727c60f462f1293f02b939aad3777e1ea1e97e3f75309661ecf26ea564661a961866b89ae626e0')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

