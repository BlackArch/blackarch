pkgname=python-graphillion
_pkgname=graphillion
pkgver=1.11
pkgrel=1
pkgdesc='Fast, lightweight library for a huge number of graphs.'
arch=('x86_64' 'aarch64')
url='https://pypi.org/project/Graphillion/'
license=('MIT')
depends=('python' 'python-future')
makedepends=('python2-setuptools' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
        'setup.py.patch')
sha512sums=('6508e85e90a622985a827d42ecad61f584a17f469c57593b4bb1daadeb3e216aeae493aa92a0cfeef4e3c1919bdf789a97a6b7afd730cbbb6095205c47495df5'
            '2ed6b9b3a32def4d17bd1a536ea88cfca2c65474b755c66e4dd8d7cfc92894bf776bf9d49bb4fc6d051c3fbc589873e4c691d555d34258e2df5370731b9ae708')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package_python-graphillion() {

  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}

