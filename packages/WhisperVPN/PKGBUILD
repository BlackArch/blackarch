pkgname=WhisperVPN
pkgver=55.2b78708
pkgrel=1
pkgdesc='Provide unlimited, high speed traffic routed through the Tor network.'
groups=('blackarch' 'blackarch-spoof')
arch=('any')
url='https://github.com/WhisperVPN/WhisperVPN'
license=('GPL3')
depends=('openssh' 'toilet' 'tor')
makedepends=('git')
source=("git+https://github.com/WhisperVPN/WhisperVPN.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -Dm 755 -t "$pkgdir/usr/bin/" WhisperVPN
}
