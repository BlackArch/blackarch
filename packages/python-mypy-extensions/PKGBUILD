pkgname=python-mypy-extensions
_pkgname=mypy_extensions
pkgver=0.4.3
pkgrel=1
pkgdesc='Experimental type system extensions for programs checked with the mypy typechecker.'
arch=('any')
url='https://pypi.org/project/mypy-extensions/#files'
license=('MIT')
depends=('python' 'python-typing')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/63/60/0582ce2eaced55f65a4406fc97beba256de4b7a95a0034c6576458c6519f/$_pkgname-$pkgver.tar.gz")
sha512sums=('b64dab28519f9e67b7b6bcb0445451eec07cc699ce1bbc65d56c28bd5dbcd72e9b324c9aed3f134df5645ee4bba6aa5f607fec133b3bfd5a1706186a0112ce6f')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

