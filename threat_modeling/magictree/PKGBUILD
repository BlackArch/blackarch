# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=magictree
pkgver=1.1build1643
pkgrel=1
pkgdesc="a penetration tester productivity tool designed to allow easy and straightforward data consolidation, querying, external command execution and report generation"
arch=('i686' 'x86_64')
url="http://www.gremwell.com"
license=('EULA')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('jre7-openjdk' 'screen')
md5sums=('
	c8cf06c5e0b9c0085b689e6ca4ed56d2
	449c7137976d9f3a6c7f364514845388
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/threat_modeling/magictree
  cp --preserve=mode -r * ${pkgdir}/blackarch/threat_modeling/magictree
}
