# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=sqlpat
_pkgname=sqlbf
pkgver=1.0.1
pkgrel=1
pkgdesc="This tool should be used to audit the strength of Microsoft SQL Server passwords offline."
url="http://www.cqure.net/wp/sqlpat/"
groups=('archpwn' 'archpwn-bruteforce')
license=('GPL')
depends=('openssl')
arch=(i686 x86_64)
source=(http://www.cqure.net/tools/$_pkgname-all-src-$pkgver.zip)
md5sums=('bc0981277e76bacff2daa4b159363de9')

build() {
  cd "$srcdir/$_pkgname"
  gcc bf.c crypto.c sqlbf.c -o sqlbf -I include/ -lpthread -lm -lssl || return 1

  install -d $pkgdir/usr/bin || return 1
  install -d $pkgdir/usr/share/doc/$pkgname || return 1

  install -Dm755 $_pkgname $pkgdir/usr/bin/
  install -Dm644 README.wri $pkgdir/usr/share/doc/$pkgname/
}

# vim:set ts=2 sw=2 et:
