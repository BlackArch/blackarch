# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=sshatter
pkgver=0.6
pkgrel=1
pkgdesc="Password bruteforcer for SSH"
url="http://www.nth-dimension.org.uk/downloads.php?id=34"
groups=('archpwn' 'archpwn-bruteforce')
license=('GPL')
arch=(any)
depends=('perl' 'perl-parallel-forkmanager' 'perl-net-ssh-perl')
source=(${pkgname}-${pkgver}.tar.gz::"http://www.nth-dimension.org.uk/utils/get.php?downloadsid=34")
md5sums=('6df66e2b1e4cdcd719be6dc3a3683887')

build() {
  cd "$srcdir/SSHatter-$pkgver/src"

  install -d $pkgdir/usr/bin || return 1
  install -d $pkgdir/usr/share/$pkgname || return 1

  cp -r * $pkgdir/usr/share/$pkgname || return 1

  cat > $pkgdir/usr/bin/$pkgname << EOF
#!/bin/sh
cd /usr/share/$pkgname
perl SSHatter.pl \$*
EOF
  chmod 0755 $pkgdir/usr/bin/$pkgname || return 1
}

