# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=perl-net-pcap
pkgver=0.16
pkgrel=2
pkgdesc="Interface to pcap(3) LBL packet capture library"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~saper/Net-Pcap/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-carp-clan' 'libpcap')
source=(http://search.cpan.org/CPAN/authors/id/S/SA/SAPER/Net-Pcap-$pkgver.tar.gz)
md5sums=('b150d8e0a40137fad2a7df792d80cab4')

build() {
  cd  $startdir/src/Net-Pcap-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make pure_install doc_install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
