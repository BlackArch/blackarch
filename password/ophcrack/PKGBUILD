# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=ophcrack
pkgver=3.3.1
pkgrel=1
pkgdesc="A Windows password cracker based on the faster time-memory trade-off using rainbow tables"
url="http://ophcrack.sourceforge.net"
arch=('i686' 'x86_64')
license="GPL"
depends=('gtk2' 'openssl' 'bkhive' 'samdump2')
groups=('archpwn' 'archpwn-forensic' 'archpwn-bruteforce' 'archpwn-password')
install=ophcrack.install
source=(http://dl.sourceforge.net/sourceforge/ophcrack/$pkgname-$pkgver.tar.bz2 ophcrack.install ophcrack.desktop)
md5sums=('740eef54e9082f26851e15c1cb4ef55c'
         '47a90addfa725419bf221dad1ebcdbaa'
         '664599c4fd7fd210e6c421459f60e20d')

build() {
  # Change into the build directory
  cd $startdir/src/$pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install

  # Install menu icon
  install -D -m644 $startdir/src/ophcrack.desktop $startdir/pkg/usr/share/applications/ophcrack.desktop || return 1
}
