# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=getsids
pkgver=0.0.1
pkgrel=2
pkgdesc="Getsids tries to enumerate Oracle Sids by sending the services command to the Oracle TNS listener. Like doing ‘lsnrctl service’."
url="http://www.cqure.net/wp/getsids/"
updateurl="http://www.cqure.net/wp/getsids/=>getsids-src-"
groups=('archpwn' 'archpwn-enumeration' 'archpwn-database')
makedepends=('gcc')
depends=('glibc')
arch=(i686 x86_64)
license=(GPL)
source=(http://www.cqure.net/tools/$pkgname-src-$pkgver.tar.gz)
md5sums=('7109ef45c7009e95a3a8c3f81c12d744')

build() {
  cd "$srcdir/$pkgname"
  ./configure --prefix=/usr
  make CC="gcc $CFLAGS" || return 1

  install -d $pkgdir/usr/bin || return 1
  install -d $pkgdir/usr/share/doc/$pkgname/ || return 1
  install -Dm755 bin/$pkgname $pkgdir/usr/bin/ || return 1
  install -Dm644 README $pkgdir/usr/share/doc/$pkgname/ || return 1
}

# vim:set ts=2 sw=2 et:
