pkgname=openvas-client
pkgver=3.0.0
pkgrel=1
pkgdesc="The OpenVAS client"
arch=('i686' 'x86_64')
depends=("gtk2" "openvas-libraries")
url="http://www.openvas.org/"
license=('GPL')
groups=('archpwn' 'archpwn-misc')
source=(http://wald.intevation.org/frs/download.php/685/${pkgname}-${pkgver}.tar.gz)
md5sums=('c5fc0c744865ca2e6c331bab529e11a3')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

