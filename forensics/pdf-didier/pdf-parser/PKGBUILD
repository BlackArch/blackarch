# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=pdf-parser
pkgver=0.3.9
pkgrel=1
pkgdesc="This tool will parse a PDF document to identify the fundamental elements used in the analyzed file"
arch=('i686' 'x86_64')
url="http://blog.didierstevens.com/programs/pdf-tools/"
license=('GPL')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('python2')
md5sums=('
	c114f4b4ce6d911717ba586c87d98975
	63361458b39dbe544930e24737b0b324
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/forensics/pdf-didier
  cp --preserve=mode -r * ${pkgdir}/blackarch/forensics/pdf-didier
}
