# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=pdf-parser
pkgver=0.4.2
pkgrel=1
pkgdesc="This tool will parse a PDF document to identify the fundamental elements used in the analyzed file"
arch=("$CARCH")
url=('http://blog.didierstevens.com/programs/pdf-tools/')
license=('Unknown')
source=("http://didierstevens.com/files/software/${pkgname}_V0_4_2.zip")
depends=('python2')
md5sums=('b0c8f02358b386e7924dacb3059f8161')
conflicts=("${pkgname}")
provides=("${pkgname}")

_rootpath=('blackarch')
_category=('forensics')

package() {
  cd ${srcdir}
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
