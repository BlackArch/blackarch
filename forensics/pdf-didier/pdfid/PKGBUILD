# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=pdfid
pkgver=0.1.2
pkgrel=1
pkgdesc="scan a file to look for certain PDF keywords"
arch=("$CARCH")
url=('http://blog.didierstevens.com/programs/pdf-tools/')
license=('Unknown')
source=("http://didierstevens.com/files/software/${pkgname}_v0_1_2.zip")
depends=('python2')
md5sums=('60fc17757201f014a6ada0744b74a740')

_rootpath=('blackarch')
_category=('forensics')

package() {
  cd "${srcdir}"
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
