# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=pdfid
pkgver=0.1.0
pkgrel=1
pkgdesc="scan a file to look for certain PDF keywords"
arch=('i686' 'x86_64')
url="http://blog.didierstevens.com/programs/pdf-tools/"
license=('Unknown')
source=(
	"http://www.blackarch.org/pub/packages/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/pub/desktops/blackarch-$pkgname.desktop"
)
depends=('python2')
md5sums=('
	b82e7f9b5c5038fa50a339cfba8e5bf5
	d667ce76d6b01827b8644ac9a941ba5e
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/forensics/pdf-didier
  cp --preserve=mode -r * ${pkgdir}/blackarch/forensics/pdf-didier
}
