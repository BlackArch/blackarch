# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=peepdf
pkgver=0.2
pkgrel=1
pkgdesc="peepdf is a Python tool to explore PDF files in order to find out if the file can be harmful or not"
arch=('i686' 'x86_64')
url="http://eternal-todo.com/tools/peepdf-pdf-analysis-tool"
license=('GPL3')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
depends=('python2')
md5sums=('
	bf87b544db348647f96560d35fb39830
	ad7d2a59999d23d8b9b9a710e3bccdb3
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/forensics/peepdf
  cp --preserve=mode -r * ${pkgdir}/blackarch/forensics/peepdf
}
