# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=geoipgen
pkgver=0.4
pkgrel=1
pkgdesc="an IP network tool for generating geotargeted lists of IP addresses"
arch=('i686' 'x86_64')
url="http://code.google.com/p/geoipgen"
license=('BSD 3 clause')
source=(
	"http://www.blackarch.org/pkgs/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/dsktp/blackarch-$pkgname.desktop"
)
md5sums=('
	edae9618c3413be8e380f1e10b5b91dd
	b0f222c73e759c550c619a7595edfd70
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/miscellaneous/geoipgen
  cp --preserve=mode -r * ${pkgdir}/blackarch/miscellaneous/geoipgen
}
