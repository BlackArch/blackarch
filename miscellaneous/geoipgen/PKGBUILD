# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=geoipgen
pkgver=0.4
pkgrel=1
pkgdesc="an IP network tool for generating geotargeted lists of IP addresses"
arch=("$CARCH")
url=('http://code.google.com/p/geoipgen')
license=('BSD 3 clause')
source=("http://geoipgen.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
depends=('ruby')
md5sums=('edae9618c3413be8e380f1e10b5b91dd')
conflicts=("${pkgname}")
provides=("${pkgname}")

_rootpath=('blackarch')
_category=('miscellaneous')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  install -dm755 ${pkgdir}/blackarch/miscellaneous/geoipgen
  cp --preserve=mode -r * ${pkgdir}/blackarch/miscellaneous/geoipgen
}
