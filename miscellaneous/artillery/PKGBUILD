# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=artillery
pkgver=0.7.1
pkgrel=1
pkgdesc="a combination of a honeypot, file-system monitoring, system hardening, and overall health of a server to create a comprehensive way to secure a system"
arch=('i686' 'x86_64')
url="https://www.trustedsec.com/downloads/artillery/"
license=('BSD 3 clause')
source=(
	"http://www.blackarch.org/pub/packages/$pkgname-$pkgver.tar.gz"
	"http://www.blackarch.org/pub/desktops/blackarch-$pkgname.desktop"
)
md5sums=('
	d00dfd0a7adc609658ee90c594be1d84
	3414f5319afe00c66f01c3b8b234a18f
')

package() {
  cd "$srcdir"
  install -Dm644 blackarch-${pkgname}.desktop ${pkgdir}/usr/share/applications/blackarch-${pkgname}.desktop

  cd "$srcdir/$pkgname-$pkgver"
  install -dm755 ${pkgdir}/blackarch/miscellaneous/artillery
  cp --preserve=mode -r * ${pkgdir}/blackarch/miscellaneous/artillery
}

