pkgname=devtools-alarm
_pkgname=devtools
pkgver=20130525
pkgrel=2
pkgdesc='Tools for Wilson package maintainers'
arch=('any')
license=('GPL')
url='http://projects.archlinux.org/devtools.git/'
depends=('devtools-alarm')
source=('pacman-wilson-armv6h.conf' 'pacman-wilson-armv7h.conf')


package() {
	install -d -m 0755 ${pkgdir}/usr/bin
	cd ${pkgdir}/usr/bin
        if [[ "$CARCH" == "armv6h" ]]; then
        ln -s archbuild wilson-armv6h-build
        install -d -m 0755 ${pkgdir}/usr/share/devtools
        install -m 0644 ${srcdir}/pacman-wilson-armv6h.conf ${pkgdir}/usr/share/devtools/
        install -m 0644 ${srcdir}/makepkg-armv6h.conf ${pkgdir}/usr/share/devtools/
        elif [[ "$CARCH" == "armv7h" ]]; then
        ln -s archbuild wilson-armv7h-build
        install -d -m 0755 ${pkgdir}/usr/share/devtools
	install -m 0644 ${srcdir}/pacman-wilson-armv7h.conf ${pkgdir}/usr/share/devtools/
        install -m 0644 ${srcdir}/makepkg-armv6h.conf ${pkgdir}/usr/share/devtools/
        fi
}
