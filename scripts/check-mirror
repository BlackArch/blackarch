#!/bin/sh
#
# check for outdated mirrors

if [ $# != 1 ]
then
  echo 'usage: check-mirror <mirrorlist>'
  exit 1
else
  mirror_list="${1}"
fi

file='lastupdate'
urls=$(cut -d '|' -f 2 $mirror_list | egrep -v 'ftpes|blackarch.org' |
  cut -d '$' -f 1)
epoch=$(curl -sm 10 --connect-timeout 5 https://blackarch.org/blackarch/$file)

echo "epoch: $epoch"
for url in $urls
do
  mirror_epoch=$(curl -ks --connect-timeout 5 -m 10 "${url}${file}" | head -1)

  if [ "$epoch" != "$mirror_epoch" ]
  then
    echo "outdated or broken mirror: $url ($mirror_epoch)"
  fi
done

